---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/Navbar.tsx";
import Footer from "../components/Footer.astro";

// Props individuales (tal como los pasás)
let { title, description, keywords, image } = Astro.props;

// Valores por defecto
title = title || "Codebrand - Grow Your Business with Us";
description =
  description ||
  "Codebrand is a digital creative agency specializing in graphic design, web development, and digital marketing. We create unique experiences that drive your brand and generate results.";
keywords =
  keywords ||
  "graphic design, web development, digital marketing, branding, SEO, UX/UI design, mobile applications, social media";
image = image || "https://solutions.codebrand.es/photos/bannercodebrand.webp";

// URL dinámica
const canonicalUrl = Astro.url?.href || "https://solutions.codebrand.es/";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Meta básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Codebrand" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="./iconcodebrand.svg" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:site" content="@codebrand_es" />
    <meta name="twitter:creator" content="@codebrand_es" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <!-- JSON-LD -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Codebrand",
        "url": "https://solutions.codebrand.es",
        "logo": "https://solutions.codebrand.es/iconcodebrand.svg",
        "sameAs": ["https://www.linkedin.com/company/codebrand"]
      }
    </script>

    <!-- Tipografía -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-PMQNNKWD3Z"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-PMQNNKWD3Z");
    </script>

    <ClientRouter />
  </head>
  <body>
    <Navbar client:visible />
    <main>
      <slot />
    </main>
    <Footer />

    <!-- GSAP -->
    <script>
      import gsap from "gsap";
      window.gsap = gsap;
    </script>
  </body>
</html>

<style>
  body {
    font-family: "Poppins", sans-serif;
  }
</style>
