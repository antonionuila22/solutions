---
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import Whyus from "../../components/whyus.astro";
import Testimonial from "../../components/testimonial.tsx";
import TrustBadges from "../../components/TrustBadges.astro";
import RelatedServices from "../../components/RelatedServices.astro";
import FaqDark from "../../components/FaqDark.tsx";
import { createFAQSchema, createBreadcrumbSchema } from "../../utils/schema";

const title = "E-commerce Development & Online Store Solutions | CodeBrand";
const description =
  "Transform your online store with custom e-commerce solutions. Shopping cart optimization, payment integrations, inventory management, and conversion-optimized design to maximize online sales.";
const keywords =
  "e-commerce development, online store development, shopping cart software, e-commerce platform, Shopify development, WooCommerce development, custom e-commerce, payment gateway integration, online retail platform, e-commerce website design, product catalog management";
const image = "/photos/bannercodebrand.webp";

// Industry-specific colors
const accentColor = "from-emerald-500 to-teal-500";
const accentBg = "bg-emerald-500";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "E-commerce Development",
  "name": "E-commerce Development & Online Store Solutions",
  "description": description,
  "url": "https://codebrand.us/industries/ecommerce",
  "provider": {
    "@type": "Organization",
    "name": "Codebrand",
    "url": "https://codebrand.us",
    "logo": "https://codebrand.us/iconcodebrand.svg"
  },
  "areaServed": { "@type": "Country", "name": "United States" },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "E-commerce Solutions",
    "itemListElement": [
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Custom E-commerce Stores", "description": "Shopify, WooCommerce, and custom online stores" }},
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Payment Integration", "description": "Secure payment gateway integration" }},
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Inventory Management", "description": "Product catalog and inventory systems" }}
    ]
  }
};

// FAQ data for e-commerce industry
const ecommerceFaqs = [
  {
    question: "How much does an e-commerce website cost?",
    answer: "E-commerce websites start at $5,000 for a basic store with essential features. Custom stores with advanced functionality range from $10,000-$25,000+. We provide detailed quotes based on your specific requirements, including product catalog size, payment integrations, and custom features needed."
  },
  {
    question: "Which e-commerce platform do you recommend?",
    answer: "It depends on your needs. For quick launches, Shopify is excellent. For WordPress users, WooCommerce offers flexibility. For high-volume stores, we build custom headless solutions. We'll recommend the best platform after understanding your business goals and budget."
  },
  {
    question: "How long does it take to build an online store?",
    answer: "A standard e-commerce store takes 6-10 weeks. This includes design, development, product upload, payment integration, and testing. Complex custom stores may take 12-16 weeks. We set clear milestones and keep you updated throughout the process."
  },
  {
    question: "Can you integrate with my existing inventory system?",
    answer: "Yes. We integrate with popular inventory management systems, ERPs, and POS systems. Whether you use NetSuite, QuickBooks, Square, or custom software, we can sync your inventory, orders, and customer data seamlessly."
  },
  {
    question: "Do you provide ongoing support after launch?",
    answer: "Absolutely. Every e-commerce project includes 90 days of post-launch support. We also offer monthly maintenance plans that include security updates, performance monitoring, and technical support to keep your store running smoothly."
  },
  {
    question: "Can you help increase my store's conversion rate?",
    answer: "Yes. We build stores optimized for conversions from day one, including streamlined checkout, trust badges, and mobile optimization. We also offer conversion rate optimization (CRO) services with A/B testing and analytics to continuously improve your sales."
  }
];

// Generate FAQ schema
const faqSchema = createFAQSchema(ecommerceFaqs);

// Breadcrumb schema
const breadcrumbSchema = createBreadcrumbSchema([
  { name: "Home", url: "https://codebrand.us" },
  { name: "Industries", url: "https://codebrand.us/industries" },
  { name: "E-commerce", url: "https://codebrand.us/industries/ecommerce" }
]);

// Services data
const services = [
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>`,
    title: "Custom E-commerce Development",
    description: "Build a unique online store tailored to your brand and products. From headless commerce to fully custom platforms.",
    features: ["Custom product catalogs", "Advanced filtering and search", "Mobile-first responsive design"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path></svg>`,
    title: "Payment Gateway Integration",
    description: "Accept payments seamlessly with secure integration of multiple payment gateways and digital wallets.",
    features: ["Stripe, PayPal, Square integration", "PCI-DSS compliant security", "Multi-currency support"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>`,
    title: "Inventory Management",
    description: "Keep track of stock levels, automate reordering, and sync inventory across multiple sales channels.",
    features: ["Real-time stock tracking", "Multi-location warehouse support", "Low stock alerts"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`,
    title: "Conversion Rate Optimization",
    description: "Maximize sales with data-driven optimization strategies and A/B testing to turn browsers into buyers.",
    features: ["Streamlined checkout process", "Cart abandonment recovery", "Personalized recommendations"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path></svg>`,
    title: "Multi-Channel Integration",
    description: "Sell everywhere your customers are. Integrate with Amazon, eBay, and social commerce platforms.",
    features: ["Marketplace integrations", "Facebook/Instagram Shopping", "Centralized order management"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>`,
    title: "Mobile Commerce Apps",
    description: "Reach customers on their favorite devices with cross-platform mobile apps built with Expo React Native.",
    features: ["iOS & Android apps", "Push notification campaigns", "Seamless mobile payments"]
  }
];

// Process steps
const processSteps = [
  { title: "Discovery & Strategy", description: "We analyze your products, target audience, and competitors to develop a comprehensive e-commerce strategy." },
  { title: "UX Design & Prototyping", description: "Our designers create intuitive shopping experiences optimized for conversions." },
  { title: "Development & Integration", description: "We build your store using best-in-class platforms, integrating payments and third-party tools." },
  { title: "Testing & Launch", description: "Comprehensive testing ensures flawless functionality before executing a smooth launch." },
  { title: "Optimization & Growth", description: "Post-launch, we continuously monitor and optimize for better conversions." }
];

// Stats
const stats = [
  { value: "200+", label: "Stores Launched" },
  { value: "87%", label: "Avg. Conversion Boost" },
  { value: "99.9%", label: "Uptime Guarantee" },
  { value: "24/7", label: "Support Available" }
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  image={image}
>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(breadcrumbSchema)} />

  <!-- Hero Section - Dark Theme with Animated Background -->
  <section class="relative min-h-[90vh] flex items-center justify-center bg-slate-950 overflow-hidden font-poppins">
    <!-- Animated gradient orbs -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 -left-20 w-96 h-96 bg-emerald-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-teal-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-cyan-500/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <!-- Floating elements -->
    <div class="absolute top-20 left-10 w-20 h-20 border border-emerald-500/20 rounded-2xl rotate-12 animate-float hidden lg:block"></div>
    <div class="absolute bottom-32 right-16 w-16 h-16 border border-teal-500/20 rounded-full animate-float hidden lg:block" style="animation-delay: 1s;"></div>
    <div class="absolute top-40 right-1/4 w-3 h-3 bg-emerald-500 rounded-full animate-ping hidden lg:block"></div>
    <div class="absolute bottom-40 left-1/4 w-2 h-2 bg-orange-500 rounded-full animate-ping hidden lg:block" style="animation-delay: 0.5s;"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center max-w-5xl mx-auto">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-emerald-500/20 to-teal-500/20 border border-emerald-500/30 rounded-full mb-8 backdrop-blur-sm">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
          </span>
          <span class="text-sm font-medium text-emerald-300">E-commerce Solutions</span>
        </div>

        <!-- Main heading -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-bold mb-8 leading-[1.1]">
          <span class="text-white">Grow Your</span>
          <br />
          <span class="bg-gradient-to-r from-emerald-400 via-teal-400 to-cyan-400 bg-clip-text text-transparent">Online Sales</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-xl sm:text-2xl text-slate-300 mb-12 max-w-3xl mx-auto leading-relaxed">
          Custom e-commerce development and optimization solutions designed to boost conversions, streamline operations, and scale your online business.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
          <a href="/contact" class="group inline-flex items-center justify-center gap-3 px-8 py-4 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white rounded-2xl font-bold text-lg shadow-lg shadow-emerald-500/25 hover:shadow-emerald-500/40 transform hover:-translate-y-1 transition-all duration-300">
            Get Started Today
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/5 hover:bg-white/10 backdrop-blur-sm text-white rounded-2xl font-bold text-lg border border-white/10 hover:border-white/20 transition-all duration-300">
            View Our Services
          </a>
        </div>

        <!-- Stats Bar -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
          {stats.map((stat) => (
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/20 to-teal-500/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:border-emerald-500/30 transition-all duration-300">
                <div class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-emerald-400 to-teal-400 bg-clip-text text-transparent mb-1">{stat.value}</div>
                <div class="text-sm text-slate-400">{stat.label}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-white/20 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white/40 rounded-full mt-2 animate-scroll"></div>
      </div>
    </div>
  </section>

  <Breadcrumbs
    items={[
      { name: "Home", href: "/" },
      { name: "Industries", href: "/industries" },
      { name: "E-commerce", href: "" }
    ]}
    variant="dark"
    class="bg-slate-900 border-y border-slate-800"
  />

  <!-- Trust Badges Section -->
  <TrustBadges />

  <!-- Introduction Section - Modern Split Layout -->
  <section class="py-24 lg:py-32 bg-white font-poppins relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-emerald-50 to-transparent"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-100 text-emerald-700 text-sm font-semibold rounded-full">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
            Trusted by 200+ Businesses
          </div>

          <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight">
            E-commerce Excellence in the <span class="bg-gradient-to-r from-emerald-500 to-teal-500 bg-clip-text text-transparent">Digital Age</span>
          </h2>

          <div class="prose prose-lg text-slate-600 space-y-4">
            <p>
              The e-commerce landscape is more competitive than ever. Success requires more than just putting products online. At CodeBrand, we understand the unique challenges online retailers faceâ€”from optimizing conversion rates to providing seamless checkout experiences.
            </p>
            <p>
              We specialize in creating high-performance e-commerce platforms, custom shopping experiences, and integrated solutions that drive sales and delight customers.
            </p>
          </div>

          <div class="flex flex-wrap gap-4">
            <a href="/contact" class="inline-flex items-center gap-2 px-6 py-3 bg-slate-900 hover:bg-slate-800 text-white rounded-xl font-semibold transition-colors">
              Start Your Project
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
            </a>
          </div>
        </div>

        <!-- Visual Stats Cards -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/20 to-teal-500/20 rounded-3xl blur-2xl"></div>
          <div class="relative grid grid-cols-2 gap-4">
            <div class="bg-white rounded-3xl p-6 shadow-xl border border-slate-100 transform hover:-translate-y-1 transition-transform">
              <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
              </div>
              <div class="text-3xl font-bold text-slate-900 mb-1">87%</div>
              <div class="text-sm text-slate-500">Conversion Rate Boost</div>
            </div>
            <div class="bg-white rounded-3xl p-6 shadow-xl border border-slate-100 transform hover:-translate-y-1 transition-transform mt-8">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20"><path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path></svg>
              </div>
              <div class="text-3xl font-bold text-slate-900 mb-1">99.9%</div>
              <div class="text-sm text-slate-500">Uptime Guarantee</div>
            </div>
            <div class="bg-white rounded-3xl p-6 shadow-xl border border-slate-100 transform hover:-translate-y-1 transition-transform">
              <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-500 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
              </div>
              <div class="text-3xl font-bold text-slate-900 mb-1">200+</div>
              <div class="text-sm text-slate-500">Stores Launched</div>
            </div>
            <div class="bg-gradient-to-br from-emerald-500 to-teal-500 rounded-3xl p-6 shadow-xl transform hover:-translate-y-1 transition-transform mt-8">
              <div class="w-12 h-12 bg-white/20 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20"><path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path></svg>
              </div>
              <div class="text-3xl font-bold text-white mb-1">24/7</div>
              <div class="text-sm text-white/80">Support Available</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section - Modern Cards -->
  <section id="services" class="py-24 lg:py-32 bg-slate-950 font-poppins relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0">
      <div class="absolute top-1/4 -left-40 w-80 h-80 bg-emerald-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 -right-40 w-80 h-80 bg-teal-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-500/10 border border-emerald-500/20 rounded-full mb-6">
          <span class="text-sm font-medium text-emerald-400">Our Services</span>
        </div>
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
          Specialized E-commerce <span class="bg-gradient-to-r from-emerald-400 to-teal-400 bg-clip-text text-transparent">Services</span>
        </h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto">
          Comprehensive solutions designed to help you sell more, serve better, and scale faster
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service, index) => (
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/20 to-teal-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative h-full bg-slate-900/50 backdrop-blur-sm border border-slate-800 hover:border-emerald-500/50 rounded-3xl p-8 transition-all duration-300">
              <div class={`w-14 h-14 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`} set:html={service.icon}></div>
              <h3 class="text-xl font-bold text-white mb-3">{service.title}</h3>
              <p class="text-slate-400 mb-6">{service.description}</p>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-slate-300">
                    <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section - Modern Timeline -->
  <section class="py-24 lg:py-32 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-semibold rounded-full mb-6">
          Our Process
        </div>
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 mb-6">
          Our E-commerce Development <span class="bg-gradient-to-r from-emerald-500 to-teal-500 bg-clip-text text-transparent">Process</span>
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          A proven methodology that delivers high-converting online stores on time and within budget
        </p>
      </div>

