---
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import Whyus from "../../components/whyus.astro";
import Testimonial from "../../components/testimonial.tsx";
import TrustBadges from "../../components/TrustBadges.astro";
import RelatedServices from "../../components/RelatedServices.astro";
import FaqDark from "../../components/FaqDark.tsx";
import { createFAQSchema, createBreadcrumbSchema } from "../../utils/schema";

const title = "Healthcare Software Development & Medical Practice Solutions | CodeBrand";
const description = "Transform your medical practice with HIPAA-compliant healthcare software. Patient portals, telemedicine platforms, EMR/EHR systems, and appointment scheduling designed for hospitals, clinics, and healthcare providers.";
const keywords = "healthcare software development, medical practice management software, HIPAA compliant software, telemedicine platform, patient portal development, EMR software, EHR systems, healthcare app development, medical appointment scheduling, telehealth solutions, hospital management system, healthcare IT solutions";
const image = "/photos/teamcode.webp";

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Healthcare Software Development",
  "name": "Healthcare Software Development & Medical Practice Solutions",
  "description": description,
  "url": "https://codebrand.us/industries/healthcare",
  "provider": {
    "@type": "Organization",
    "name": "Codebrand",
    "url": "https://codebrand.us",
    "logo": "https://codebrand.us/iconcodebrand.svg"
  },
  "areaServed": { "@type": "Country", "name": "United States" },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Healthcare Web Solutions",
    "itemListElement": [
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Patient Portal Development", "description": "HIPAA-compliant patient portals" }},
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Telemedicine Platforms", "description": "Video consultation and telehealth solutions" }},
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Appointment Scheduling", "description": "Medical appointment booking systems" }}
    ]
  }
};

// Healthcare FAQ data
const healthcareFaqs = [
  {
    question: "Are your healthcare solutions HIPAA compliant?",
    answer: "Yes, absolutely. All our healthcare software solutions are built with HIPAA compliance as a core requirement. We implement encryption, access controls, audit logs, and secure data handling practices to protect patient health information (PHI)."
  },
  {
    question: "How much does healthcare software development cost?",
    answer: "Healthcare software projects typically start at $15,000 for basic patient portals. Telemedicine platforms range from $25,000-$75,000. Full EMR/EHR systems are $50,000+. We provide detailed quotes after understanding your specific compliance and feature requirements."
  },
  {
    question: "Can you integrate with existing EMR/EHR systems?",
    answer: "Yes. We specialize in healthcare integrations using HL7, FHIR, and direct API connections. We can integrate with Epic, Cerner, Allscripts, and other major EMR/EHR systems to ensure seamless data flow."
  },
  {
    question: "How long does it take to build a patient portal?",
    answer: "A basic HIPAA-compliant patient portal takes 8-12 weeks. Complex portals with telemedicine, billing, and EMR integration take 16-24 weeks. We prioritize security and compliance without cutting corners on timeline."
  },
  {
    question: "Do you offer telemedicine development?",
    answer: "Yes. We build custom telemedicine platforms with video consultations, secure messaging, e-prescriptions, and payment processing. Our solutions work on web, iOS, and Android devices."
  },
  {
    question: "What about ongoing maintenance and support?",
    answer: "Healthcare software requires continuous maintenance for security and compliance. We offer monthly support plans that include security updates, compliance monitoring, bug fixes, and 24/7 emergency support for critical systems."
  }
];

const faqSchema = createFAQSchema(healthcareFaqs);
const breadcrumbSchema = createBreadcrumbSchema([
  { name: "Home", url: "https://codebrand.us" },
  { name: "Industries", url: "https://codebrand.us/industries" },
  { name: "Healthcare", url: "https://codebrand.us/industries/healthcare" }
]);

// Services data
const services = [
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>`,
    title: "Patient Portal Development",
    description: "Empower patients with secure portals to access medical records, schedule appointments, and communicate with providers.",
    features: ["Secure health record access", "Online appointment scheduling", "Secure messaging with providers"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>`,
    title: "Telemedicine Platforms",
    description: "Expand access to care with secure video consultation platforms and virtual health monitoring solutions.",
    features: ["HD video consultations", "E-prescribing integration", "Mobile and web access"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>`,
    title: "EMR/EHR Systems",
    description: "Streamline clinical workflows with electronic medical records systems that reduce documentation time.",
    features: ["Clinical documentation templates", "ICD-10 and CPT coding support", "Lab and imaging integration"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>`,
    title: "Appointment Scheduling",
    description: "Reduce no-shows and optimize schedule efficiency with intelligent appointment scheduling systems.",
    features: ["24/7 online booking", "Automated SMS/email reminders", "Calendar synchronization"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    title: "Medical Billing Software",
    description: "Accelerate revenue cycle with automated billing and claims management to improve cash flow.",
    features: ["Electronic claims submission", "Insurance verification", "Payment processing"]
  },
  {
    icon: `<svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>`,
    title: "Healthcare Mobile Apps",
    description: "Engage patients with cross-platform mobile apps built with Expo React Native for iOS and Android.",
    features: ["iOS & Android native apps", "Wearable device integration", "Push notification reminders"]
  }
];

// Process steps
const processSteps = [
  { title: "Compliance & Requirements", description: "Thorough assessment of clinical workflows, regulatory requirements, and HIPAA compliance needs." },
  { title: "User-Centered Design", description: "Intuitive interfaces optimized for healthcare professionals and patients with accessibility in mind." },
  { title: "Secure Development", description: "Healthcare-grade security practices with encrypted data and industry-standard integrations." },
  { title: "Testing & Validation", description: "Rigorous testing including penetration testing, HIPAA compliance audits, and usability testing." },
  { title: "Training & Support", description: "Comprehensive training, documentation, and 24/7 support to ensure smooth operations." }
];

// Stats
const stats = [
  { value: "100%", label: "HIPAA Compliant" },
  { value: "45%", label: "Reduced Admin Time" },
  { value: "150+", label: "Healthcare Providers" },
  { value: "24/7", label: "Critical Support" }
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  image={image}
>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(breadcrumbSchema)} />

  <!-- Hero Section - Dark Theme with Animated Background -->
  <section class="relative min-h-[90vh] flex items-center justify-center bg-slate-950 overflow-hidden font-poppins">
    <!-- Animated gradient orbs -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 -left-20 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-indigo-500/10 rounded-full blur-3xl"></div>
    </div>

    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255,255,255,0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.05) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <!-- Floating elements -->
    <div class="absolute top-20 left-10 w-20 h-20 border border-blue-500/20 rounded-2xl rotate-12 animate-float hidden lg:block"></div>
    <div class="absolute bottom-32 right-16 w-16 h-16 border border-cyan-500/20 rounded-full animate-float hidden lg:block" style="animation-delay: 1s;"></div>
    <div class="absolute top-40 right-1/4 w-3 h-3 bg-blue-500 rounded-full animate-ping hidden lg:block"></div>
    <div class="absolute bottom-40 left-1/4 w-2 h-2 bg-orange-500 rounded-full animate-ping hidden lg:block" style="animation-delay: 0.5s;"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center max-w-5xl mx-auto">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 border border-blue-500/30 rounded-full mb-8 backdrop-blur-sm">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
          </span>
          <span class="text-sm font-medium text-blue-300">Healthcare Technology Solutions</span>
        </div>

        <!-- Main heading -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-bold mb-8 leading-[1.1]">
          <span class="text-white">Modernize</span>
          <br />
          <span class="bg-gradient-to-r from-blue-400 via-cyan-400 to-indigo-400 bg-clip-text text-transparent">Healthcare Delivery</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-xl sm:text-2xl text-slate-300 mb-12 max-w-3xl mx-auto leading-relaxed">
          HIPAA-compliant healthcare software solutions designed to improve patient care, streamline operations, and empower medical professionals.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
          <a href="/contact" class="group inline-flex items-center justify-center gap-3 px-8 py-4 bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white rounded-2xl font-bold text-lg shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40 transform hover:-translate-y-1 transition-all duration-300">
            Get Started Today
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/5 hover:bg-white/10 backdrop-blur-sm text-white rounded-2xl font-bold text-lg border border-white/10 hover:border-white/20 transition-all duration-300">
            View Our Services
          </a>
        </div>

        <!-- Stats Bar -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
          {stats.map((stat) => (
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="relative bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:border-blue-500/30 transition-all duration-300">
                <div class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent mb-1">{stat.value}</div>
                <div class="text-sm text-slate-400">{stat.label}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-white/20 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-white/40 rounded-full mt-2 animate-scroll"></div>
      </div>
    </div>
  </section>

  <Breadcrumbs
    items={[
      { name: "Home", href: "/" },
      { name: "Industries", href: "/industries" },
      { name: "Healthcare", href: "" }
    ]}
    variant="dark"
    class="bg-slate-900 border-y border-slate-800"
  />

  <!-- Trust Badges Section -->
  <TrustBadges />

  <!-- Introduction Section - Modern Split Layout -->
  <section class="py-24 lg:py-32 bg-white font-poppins relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-blue-50 to-transparent"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-100 text-blue-700 text-sm font-semibold rounded-full">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path></svg>
            Trusted by 150+ Healthcare Providers
          </div>

          <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight">
            Digital Healthcare Solutions for <span class="bg-gradient-to-r from-blue-500 to-cyan-500 bg-clip-text text-transparent">Modern Practices</span>
          </h2>

          <div class="prose prose-lg text-slate-600 space-y-4">
            <p>
              The healthcare industry is undergoing a digital transformation, and medical practices need technology partners who understand both healthcare workflows and regulatory requirements. At CodeBrand, we specialize in developing HIPAA-compliant software solutions for hospitals, clinics, and healthcare organizations.
            </p>
            <p>
              We create custom healthcare applications, patient portals, telemedicine platforms, and practice management systems that improve patient outcomes while reducing administrative burden.
            </p>
          </div>

          <div class="flex flex-wrap gap-4">
            <a href="/contact" class="inline-flex items-center gap-2 px-6 py-3 bg-slate-900 hover:bg-slate-800 text-white rounded-xl font-semibold transition-colors">
              Start Your Project
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
            </a>
          </div>
        </div>

        <!-- Visual Stats Cards -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-cyan-500/20 rounded-3xl blur-2xl"></div>
          <div class="relative grid grid-cols-2 gap-4">
            <div class="bg-white rounded-3xl p-6 shadow-xl border border-slate-100 transform hover:-translate-y-1 transition-transform">
              <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
              </div>
              <div class="text-3xl font-bold text-slate-900 mb-1">100%</div>
              <div class="text-sm text-slate-500">HIPAA Compliant</div>
            </div>
            <div class="bg-white rounded-3xl p-6 shadow-xl border border-slate-100 transform hover:-translate-y-1 transition-transform mt-8">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20"><path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path></svg>
              </div>
              <div class="text-3xl font-bold text-slate-900 mb-1">45%</div>
              <div class="text-sm text-slate-500">Reduced Admin Time</div>
            </div>
            <div class="bg-white rounded-3xl p-6 shadow-xl border border-slate-100 transform hover:-translate-y-1 transition-transform">
              <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-500 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
              </div>
              <div class="text-3xl font-bold text-slate-900 mb-1">150+</div>
              <div class="text-sm text-slate-500">Healthcare Providers</div>
            </div>
            <div class="bg-gradient-to-br from-blue-500 to-cyan-500 rounded-3xl p-6 shadow-xl transform hover:-translate-y-1 transition-transform mt-8">
              <div class="w-12 h-12 bg-white/20 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20"><path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path></svg>
              </div>
              <div class="text-3xl font-bold text-white mb-1">24/7</div>
              <div class="text-sm text-white/80">Critical Support</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section - Modern Cards -->
  <section id="services" class="py-24 lg:py-32 bg-slate-950 font-poppins relative overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0">
      <div class="absolute top-1/4 -left-40 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 -right-40 w-80 h-80 bg-cyan-500/10 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500/10 border border-blue-500/20 rounded-full mb-6">
          <span class="text-sm font-medium text-blue-400">Our Services</span>
        </div>
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
          Comprehensive Healthcare <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">Solutions</span>
        </h2>
        <p class="text-xl text-slate-400 max-w-3xl mx-auto">
          HIPAA-compliant technology designed to improve patient care and practice efficiency
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service, index) => (
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-cyan-500/20 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative h-full bg-slate-900/50 backdrop-blur-sm border border-slate-800 hover:border-blue-500/50 rounded-3xl p-8 transition-all duration-300">
              <div class={`w-14 h-14 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`} set:html={service.icon}></div>
              <h3 class="text-xl font-bold text-white mb-3">{service.title}</h3>
              <p class="text-slate-400 mb-6">{service.description}</p>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-slate-300">
                    <svg class="w-4 h-4 text-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section - Modern Timeline -->
  <section class="py-24 lg:py-32 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-semibold rounded-full mb-6">
          Our Process
        </div>
        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 mb-6">
          Healthcare Development <span class="bg-gradient-to-r from-blue-500 to-cyan-500 bg-clip-text text-transparent">Process</span>
        </h2>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto">
          A proven, compliant methodology that delivers secure healthcare solutions on time
        </p>
      </div>

      <div class="relative">
        <!-- Timeline line -->
        <div class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-blue-500 via-cyan-500 to-indigo-500"></div>

        <div class="space-y-12">
