---
/**
 * Development Outsourcing Services Page
 * Clean, premium design inspired by arounda.agency & zeedst.netlify.app
 * Principles: Minimal, dark, spacious, typography-focused
 */

import Layout from "../layouts/Layout.astro";
import FaqDark from "../components/FaqDark.tsx";

// SEO
const title =
  "Development Outsourcing | White-Label Partner for Agencies - Codebrand";
const description =
  "White-label development partner for marketing agencies, design studios, and startups. Dedicated teams, staff augmentation, and project-based development.";
const keywords =
  "white label development, development partner for agencies, staff augmentation, dedicated development team, nearshore development";

// Schema
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  name: "Codebrand Development Outsourcing",
  url: "https://codebrand.us/outsourcing-development",
  description: description,
};

// FAQ Data
const faqs = [
  {
    question: "How does white-label partnership work?",
    answer:
      "We work behind the scenes as your development team. NDA protection, branded deliverables, and we can join client calls under your brand. Your clients never know we exist.",
  },
  {
    question: "What engagement models do you offer?",
    answer:
      "Three options: Dedicated Teams (full-time devs on retainer), Staff Augmentation (hourly/part-time), and Project-Based (fixed scope and price).",
  },
  {
    question: "How fast can you start?",
    answer:
      "Staff augmentation: 1-2 weeks. New projects: we begin after a brief discovery call. We're built for speed.",
  },
  {
    question: "What technologies do you work with?",
    answer:
      "React, Next.js, Node.js, TypeScript, Astro, Tailwind, PostgreSQL, MongoDB, Shopify, and more. We adapt to your stack.",
  },
  {
    question: "What about communication and timezone?",
    answer:
      "We work US timezone hours (CST). Daily standups, Slack/Teams integration, and transparent project tracking via your preferred tools.",
  },
  {
    question: "How does pricing work?",
    answer:
      "Dedicated teams from $4,500/mo. Staff augmentation from $45/hr. Projects quoted individually. No hidden fees, transparent estimates.",
  },
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((faq) => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: { "@type": "Answer", text: faq.answer },
  })),
};

// Data
const stats = [
  { value: "100+", label: "Projects Delivered" },
  { value: "98%", label: "Client Satisfaction" },
  { value: "5+", label: "Years Experience" },
  { value: "2 weeks", label: "Average Start Time" },
];

const clients = [
  {
    name: "Marketing Agencies",
    desc: "Landing pages, campaign sites, client projects",
  },
  { name: "Design Studios", desc: "Figma to code, pixel-perfect development" },
  { name: "Software Companies", desc: "Scale your development capacity" },
  { name: "Startups", desc: "MVP development, rapid prototyping" },
  { name: "Consultancies", desc: "Technical implementation partner" },
  { name: "E-commerce Brands", desc: "Shopify, custom platforms" },
];

const services = [
  {
    title: "Web Development",
    items: [
      "React & Next.js",
      "Node.js APIs",
      "E-commerce",
      "Custom Platforms",
      "Performance Optimization",
    ],
  },
  {
    title: "UI/UX Design",
    items: [
      "Interface Design",
      "Prototyping",
      "Design Systems",
      "User Research",
      "Brand Identity",
    ],
  },
];

const process = [
  {
    num: "01",
    title: "Discovery Call",
    desc: "30-min call to understand your needs and match the right team.",
  },
  {
    num: "02",
    title: "Team Setup",
    desc: "Onboarding, tool integration, and communication protocols.",
  },
  {
    num: "03",
    title: "Build & Deliver",
    desc: "Agile sprints with continuous delivery and transparent updates.",
  },
];

const models = [
  {
    title: "Dedicated Teams",
    desc: "Full-time developers working exclusively on your projects.",
    price: "From $4,500/mo",
    features: [
      "Dedicated resources",
      "Long-term partnership",
      "Full team integration",
    ],
    highlighted: true,
  },
  {
    title: "Staff Augmentation",
    desc: "Extend your team with our specialists on flexible hours.",
    price: "From $45/hr",
    features: ["Flexible hours", "Quick onboarding", "Skill gap coverage"],
    highlighted: false,
  },
  {
    title: "Project-Based",
    desc: "Fixed scope, fixed price for defined deliverables.",
    price: "Custom Quote",
    features: ["Clear deliverables", "Fixed budget", "Milestone payments"],
    highlighted: false,
  },
];

const technologies = [
  "React",
  "Next.js",
  "Node.js",
  "TypeScript",
  "Tailwind",
  "PostgreSQL",
  "Shopify",
  "Figma",
  "AWS",
  "Vercel",
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  canonicalOverride="https://codebrand.us/outsourcing-development"
>
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(serviceSchema)}
  />
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(faqSchema)}
  />

  <style>
    /* Base */
    .page-bg {
      background: #0a0a0b;
    }

    /* Gradient accent - subtle */
    .gradient-bg {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 100vh;
      background:
        radial-gradient(
          ellipse 80% 50% at 50% -20%,
          rgba(34, 211, 238, 0.15),
          transparent
        ),
        radial-gradient(
          ellipse 60% 40% at 80% 60%,
          rgba(168, 85, 247, 0.08),
          transparent
        );
      pointer-events: none;
      z-index: 0;
    }

    /* Typography */
    .text-gradient {
      background: linear-gradient(135deg, #22d3ee, #a855f7);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    /* Cards */
    .card {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.06);
      border-radius: 16px;
      transition: all 0.3s ease;
    }
    .card:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .card-highlight {
      background: rgba(34, 211, 238, 0.05);
      border: 1px solid rgba(34, 211, 238, 0.2);
    }
    .card-highlight:hover {
      border-color: rgba(34, 211, 238, 0.4);
    }

    /* Buttons */
    .btn-primary {
      background: #22d3ee;
      color: #0a0a0b;
      font-weight: 600;
      padding: 1rem 2rem;
      border-radius: 9999px;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      background: #06b6d4;
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: transparent;
      color: #fff;
      font-weight: 500;
      padding: 1rem 2rem;
      border-radius: 9999px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: all 0.3s ease;
    }
    .btn-secondary:hover {
      border-color: rgba(255, 255, 255, 0.4);
      background: rgba(255, 255, 255, 0.05);
    }

    /* Animations */
    .fade-in {
      opacity: 0;
      transform: translateY(30px);
      transition:
        opacity 0.8s ease,
        transform 0.8s ease;
    }
    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Divider */
    .divider {
      height: 1px;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.1),
        transparent
      );
    }
  </style>

  <div class="page-bg min-h-screen relative text-white">
    <!-- Subtle gradient background -->
    <div class="gradient-bg"></div>

    <!-- Content -->
    <div class="relative z-10">
      <!-- ==================== HERO ==================== -->
      <section class="min-h-screen flex items-center justify-center px-6">
        <div class="max-w-5xl mx-auto text-center">
          <!-- Badge -->
          <div
            class="fade-in inline-flex items-center gap-2 px-4 py-2 rounded-full border border-cyan-500/30 bg-cyan-500/10 mb-8"
          >
            <span class="w-2 h-2 rounded-full bg-cyan-400"></span>
            <span class="text-cyan-400 text-sm font-medium tracking-wide"
              >Development Partner</span
            >
          </div>

          <!-- Headline -->
          <h1
            class="fade-in text-5xl md:text-7xl lg:text-8xl font-bold text-white leading-[1.1] mb-8"
          >
            Your Extended<br />
            <span class="text-gradient">Dev Team</span>
          </h1>

          <!-- Subtitle -->
          <p
            class="fade-in text-xl md:text-2xl text-neutral-400 max-w-2xl mx-auto mb-12 leading-relaxed"
          >
            White-label development for agencies and startups.<br
              class="hidden md:block"
            />
            Senior talent. Transparent pricing. Fast delivery.
          </p>

          <!-- CTAs -->
          <div
            class="fade-in flex flex-col sm:flex-row gap-4 justify-center mb-20"
          >
            <a href="/contact" class="btn-primary">Start a Project</a>
            <a href="#services" class="btn-secondary">Learn More</a>
          </div>

          <!-- Stats -->
          <div class="fade-in grid grid-cols-2 md:grid-cols-4 gap-6">
            {
              stats.map((stat) => (
                <div class="text-center">
                  <div class="text-3xl md:text-4xl font-bold text-white mb-1">
                    {stat.value}
                  </div>
                  <div class="text-neutral-500 text-sm">{stat.label}</div>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Divider -->
      <div class="divider mx-6"></div>

      <!-- ==================== WHO WE WORK WITH ==================== -->
      <section class="py-32 px-6">
        <div class="max-w-6xl mx-auto">
          <div class="fade-in text-center mb-20">
            <p
              class="text-cyan-400 text-sm font-medium tracking-widest uppercase mb-4"
            >
              Who We Work With
            </p>
            <h2 class="text-4xl md:text-5xl font-bold text-white">
              Built for your business
            </h2>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
              clients.map((client) => (
                <div class="fade-in card p-8">
                  <h3 class="text-xl font-semibold text-white mb-2">
                    {client.name}
                  </h3>
                  <p class="text-neutral-400">{client.desc}</p>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- ==================== ENGAGEMENT MODELS ==================== -->
      <section class="py-32 px-6 bg-white/[0.02]">
        <div class="max-w-6xl mx-auto">
          <div class="fade-in text-center mb-20">
            <p
              class="text-cyan-400 text-sm font-medium tracking-widest uppercase mb-4"
            >
              Engagement Models
            </p>
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
              Flexible options
            </h2>
            <p class="text-xl text-neutral-400 max-w-2xl mx-auto">
              Choose the model that fits your needs. Scale up, down, or engage
              per-project.
            </p>
          </div>

          <div class="grid md:grid-cols-3 gap-8">
            {
              models.map((model) => (
                <div
                  class={`fade-in ${model.highlighted ? "card-highlight" : "card"} p-8 flex flex-col`}
                >
                  {model.highlighted && (
                    <span class="text-xs font-medium text-cyan-400 bg-cyan-500/10 px-3 py-1 rounded-full self-start mb-6">
                      Most Popular
                    </span>
                  )}
                  <h3 class="text-2xl font-bold text-white mb-3">
                    {model.title}
                  </h3>
                  <p class="text-neutral-400 mb-6 flex-grow">{model.desc}</p>

                  <ul class="space-y-3 mb-8">
                    {model.features.map((feature) => (
                      <li class="flex items-center gap-3 text-neutral-300">
                        <svg
                          class="w-5 h-5 text-cyan-400 flex-shrink-0"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 13l4 4L19 7"
                          />
                        </svg>
                        <span>{feature}</span>
                      </li>
                    ))}
                  </ul>

                  <div class="pt-6 border-t border-white/10">
                    <p class="text-2xl font-bold text-white mb-4">
                      {model.price}
                    </p>
                    <a
                      href="/contact"
                      class={
                        model.highlighted
                          ? "btn-primary block text-center"
                          : "btn-secondary block text-center"
                      }
                    >
                      Get Started
                    </a>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- ==================== SERVICES ==================== -->
      <section id="services" class="py-32 px-6">
        <div class="max-w-6xl mx-auto">
          <div class="fade-in mb-20">
            <p
              class="text-cyan-400 text-sm font-medium tracking-widest uppercase mb-4"
            >
              Services
            </p>
            <h2 class="text-4xl md:text-5xl font-bold text-white">
              What we build
            </h2>
          </div>

          <div class="grid md:grid-cols-2 gap-8 mb-20">
            {
              services.map((service) => (
                <div class="fade-in card p-10">
                  <h3 class="text-2xl font-bold text-white mb-8">
                    {service.title}
                  </h3>
                  <ul class="space-y-4">
                    {service.items.map((item) => (
                      <li class="flex items-center gap-4 text-lg text-neutral-300">
                        <span class="w-1.5 h-1.5 rounded-full bg-cyan-400" />
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
              ))
            }
          </div>

          <!-- Technologies -->
          <div class="fade-in">
            <p
              class="text-neutral-600 text-sm uppercase tracking-widest mb-6 text-center"
            >
              Technologies
            </p>
            <div class="flex flex-wrap justify-center gap-3">
              {
                technologies.map((tech) => (
                  <span class="px-5 py-2.5 rounded-full text-neutral-400 text-sm border border-white/10 hover:border-white/20 transition-colors">
                    {tech}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
      </section>

      <!-- ==================== PROCESS ==================== -->
      <section class="py-32 px-6 bg-white/[0.02]">
        <div class="max-w-6xl mx-auto">
          <div class="fade-in text-center mb-20">
            <p
              class="text-cyan-400 text-sm font-medium tracking-widest uppercase mb-4"
            >
              Process
            </p>
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
              How we work
            </h2>
            <p class="text-xl text-neutral-400 max-w-2xl mx-auto">
              Simple, transparent, fast. From first call to first delivery in
              weeks.
            </p>
          </div>

          <div class="grid md:grid-cols-3 gap-8">
            {
              process.map((step, i) => (
                <div class="fade-in relative">
                  <div class="card p-8">
                    <span class="text-6xl font-bold text-white/5 absolute top-4 right-6">
                      {step.num}
                    </span>
                    <div class="relative">
                      <h3 class="text-xl font-semibold text-white mb-3">
                        {step.title}
                      </h3>
                      <p class="text-neutral-400">{step.desc}</p>
                    </div>
                  </div>
                  {i < 2 && (
                    <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-px bg-white/10" />
                  )}
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- ==================== WHY US ==================== -->
      <section class="py-32 px-6">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-16 items-center">
            <!-- Left -->
            <div class="fade-in">
              <p
                class="text-cyan-400 text-sm font-medium tracking-widest uppercase mb-4"
              >
                Why Codebrand
              </p>
              <h2
                class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight"
              >
                Not just vendors.<br />
                <span class="text-gradient">Partners.</span>
              </h2>
              <p class="text-lg text-neutral-400 mb-8">
                We invest in your success. We understand your business. We
                deliver work we're proud of.
              </p>
              <a href="/contact" class="btn-primary inline-block">Let's Talk</a>
            </div>

            <!-- Right -->
            <div class="grid grid-cols-2 gap-4">
              {
                [
                  { title: "Senior Talent", desc: "5+ years avg. experience" },
                  { title: "US Timezone", desc: "Real-time collaboration" },
                  { title: "Transparent", desc: "No hidden fees" },
                  { title: "Quality First", desc: "Code reviews on all PRs" },
                ].map((item) => (
                  <div class="fade-in card p-6">
                    <h3 class="text-white font-semibold mb-1">{item.title}</h3>
                    <p class="text-neutral-500 text-sm">{item.desc}</p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </section>

      <!-- ==================== FAQ ==================== -->
      <section class="py-32 px-6 bg-white/[0.02]">
        <div class="max-w-3xl mx-auto">
          <div class="fade-in text-center mb-16">
            <p
              class="text-cyan-400 text-sm font-medium tracking-widest uppercase mb-4"
            >
              FAQ
            </p>
            <h2 class="text-4xl md:text-5xl font-bold text-white">
              Common questions
            </h2>
          </div>
          <div class="fade-in">
            <FaqDark faqs={faqs} client:visible />
          </div>
        </div>
      </section>

      <!-- ==================== CTA ==================== -->
      <section class="py-32 px-6">
        <div class="max-w-4xl mx-auto text-center">
          <div class="fade-in">
            <h2
              class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight"
            >
              Ready to scale<br />
              <span class="text-gradient">your team?</span>
            </h2>
            <p class="text-xl text-neutral-400 mb-10 max-w-2xl mx-auto">
              Free consultation. No commitment. Let's discuss how we can help.
            </p>
            <a
              href="/contact"
              class="btn-primary inline-block text-lg px-10 py-4"
            >
              Get in Touch
            </a>
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- Simple scroll animations -->
  <script>
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("visible");
        }
      });
    }, observerOptions);

    document.querySelectorAll(".fade-in").forEach((el) => {
      observer.observe(el);
    });
  </script>
</Layout>
