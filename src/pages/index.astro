<script>
  // Accessible form validation
  function initFormValidation() {
    const form = document.querySelector('form[action="/api/contact"]');
    if (!form) return;

    const formStatus = document.getElementById('form-status');

    // Validation patterns (must match server-side validation.ts)
    const patterns = {
      name: /^[a-zA-ZáéíóúÁÉÍÓÚñÑüÜ\s\-']+$/,
      subject: /^[a-zA-Z0-9áéíóúÁÉÍÓÚñÑüÜ\s\-,.!?']+$/,
      message: /^[a-zA-Z0-9áéíóúÁÉÍÓÚñÑüÜ\s\-,.!?;:'"()\n\r]+$/,
      phone: /^[\d\s\-\+\(\)]+$/,
      email: /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z]{2,10})+$/
    };

    // Validation rules
    const validators = {
      name: {
        validate: (value) => {
          const trimmed = value.trim();
          return trimmed.length >= 2 && trimmed.length <= 60 && patterns.name.test(trimmed);
        },
        message: 'Name: only letters, spaces, hyphens and apostrophes (2-60 characters)'
      },
      email: {
        validate: (value) => patterns.email.test(value),
        message: 'Please enter a valid email address'
      },
      phone: {
        validate: (value) => {
          const trimmed = value.trim();
          const digitsOnly = trimmed.replace(/\D/g, '');
          return digitsOnly.length >= 7 && digitsOnly.length <= 15 && patterns.phone.test(trimmed);
        },
        message: 'Please enter a valid phone number (digits, spaces, +, -, parentheses)'
      },
      industry: {
        validate: (value) => value !== '',
        message: 'Please select your industry'
      },
      subject: {
        validate: (value) => {
          const trimmed = value.trim();
          return trimmed.length >= 3 && trimmed.length <= 100 && patterns.subject.test(trimmed);
        },
        message: 'Subject: only letters, numbers and basic punctuation (3-100 characters)'
      },
      message: {
        validate: (value) => {
          const trimmed = value.trim();
          return trimmed.length >= 10 && trimmed.length <= 2000 && patterns.message.test(trimmed);
        },
        message: 'Message: only letters, numbers and common punctuation (10-2000 characters)'
      }
    };

    // Validate single field
    function validateField(field) {
      const name = field.name;
      const value = field.value;
      const validator = validators[name];
      const errorEl = document.getElementById(`${name}-error`);

      if (!validator || !errorEl) return true;

      const isValid = validator.validate(value);

      if (!isValid && value.trim() !== '') {
        field.setAttribute('aria-invalid', 'true');
        errorEl.textContent = validator.message;
      } else {
        field.removeAttribute('aria-invalid');
        errorEl.textContent = '';
      }

      return isValid;
    }

    // Add blur validation for required fields
    const requiredFields = form.querySelectorAll('input[required], select[required], textarea[required]');
    requiredFields.forEach(field => {
      field.addEventListener('blur', () => validateField(field));
      field.addEventListener('input', () => {
        if (field.getAttribute('aria-invalid') === 'true') {
          validateField(field);
        }
      });
    });

    // Form submission
    form.addEventListener('submit', (e) => {
      let isFormValid = true;
      let firstInvalidField = null;

      requiredFields.forEach(field => {
        const isFieldValid = validateField(field);
        if (!isFieldValid) {
          isFormValid = false;
          if (!firstInvalidField) {
            firstInvalidField = field;
          }
        }
      });

      if (!isFormValid) {
        e.preventDefault();
        firstInvalidField?.focus();

        // Announce error to screen readers
        if (formStatus) {
          formStatus.textContent = 'Form has errors. Please correct the highlighted fields.';
        }
      } else {
        // Announce submission to screen readers
        if (formStatus) {
          formStatus.textContent = 'Submitting form, please wait...';
        }
      }
    });
  }

  // Initialize on page load
  initFormValidation();

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:after-swap', initFormValidation);
</script>
