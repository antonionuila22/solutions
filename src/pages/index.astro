---
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";
import CardService from "../components/CardService.astro";
import Whyus from "../components/whyus.astro";
import Pricing from "../components/Pricing.astro";
import Bannersecond from "../components/BannerSecond.astro";
import TabComponent from "../components/TabComp.tsx";
import Faq from "../components/Faq.astro";
import { Globe } from "../components/magicui/globe.tsx";
import Testimonial from "../components/testimonial.tsx";
import Brand from "../components/Brand.tsx";
import Beam from "../components/beam.tsx";
import Button from "@/components/Button.astro";
import TeamMembers from "@/components/TeamSection.tsx";
---

<Layout
  title="Codebrand - Grow Your Business with Us"
  description="Codebrand is a digital creative agency specializing in graphic design, web development, and digital marketing. We create unique experiences that drive your brand and generate results."
  keywords="graphic design, web development, digital marketing, branding, SEO, UX/UI design, mobile applications, social media"
  image="/photos/bannercodebrand.webp"
>
  <Hero />
  <section>
    <Globe client:visible />
  </section>

  <!-- Services Section -->
  <section class="py-30 flex flex-col gap-20">
    <h2 class="text-4xl font-bold text-cyan-900 text-center">
      Smart Solutions, <span class="text-orange-500">Real Impact</span>
    </h2>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-3/4 mx-auto"
    >
      <CardService
        icon="./icons/interfaz-de-usuario.png"
        title="UX/UI Design"
        description="We design intuitive and engaging experiences that boost conversions and build customer loyalty."
        learnMoreUrl="./products"
      />

      <CardService
        icon="./icons/sitio-web.png"
        title="Web Development"
        description="We build fast, SEO-optimized websites that scale across all platforms, plus iOS and Android apps with smooth, high-performance interfaces."
        learnMoreUrl="./products"
      />

      <CardService
        icon="./icons/diseno-grafico.png"
        title="Branding"
        description="We craft visual identities that capture your brand's essence and elevate your market presence."
        learnMoreUrl="./products"
      />

      <CardService
        icon="./icons/seo.png"
        title="SEO"
        description="We boost your Google rankings through strategic technical and content SEO optimization."
        learnMoreUrl="./products"
      />

      <CardService
        icon="./icons/redes-sociales.png"
        title="Social Media"
        description="We create content strategies and ad campaigns that amplify your social media presence and engagement."
        learnMoreUrl="./products"
      />

      <CardService
        icon="./icons/edicion-de-video.png"
        title="Video Production"
        description="We produce and edit professional videos that captivate audiences across advertising and social platforms."
        learnMoreUrl="./products"
      />

      <CardService
        icon="./icons/animacion.png"
        title="2D & 3D Animation"
        description="We create dynamic motion graphics that bring your marketing, presentations, and interactive content to life."
        learnMoreUrl="./products"
      />

      <CardService
        icon="./icons/modelo-3d.png"
        title="3D Rendering"
        description="We deliver photorealistic 3D models and renderings for architectural projects and product visualization."
        learnMoreUrl="./products"
      />

      <CardService
        icon="./icons/camiseta.png"
        title="Promotional Products"
        description="Custom branded merchandise using sublimation, digital printing, and laser engraving techniques."
        learnMoreUrl="./products"
      />
    </div>
  </section>

  <section class="relative bg-white py-20">
    <div
      class="flex flex-col items-center justify-center text-center max-w-5xl mx-auto"
    >
      <h2
        class="text-4xl md:text-5xl font-extrabold text-cyan-900 leading-tight"
      >
        Smart Automations, Real Impact
      </h2>
      <p class="mt-6 text-md md:text-md text-gray-700">
        Tired of wasting time on leads that don't convert? We build intelligent
        systems that deliver results—saving you time, reducing costs, and
        driving real performance. From CRMs to automated marketing workflows,
        we'll connect you with the right tools to help your business run more
        efficiently and grow faster.
      </p>

      <div class="mt-8">
        <Button text="Get a Free Consultation" href="/contact" />
      </div>
    </div>
    <!-- Beam visual component rendered only on client side -->
    <Beam client:visible />
  </section>

  <Bannersecond
    subtitle="We boost your brand"
    title="Transform Your Vision into Reality"
    description="Ready to grow? It's time to take action. We create digital experiences that convert potential into measurable results through strategic design and smart technology. Your brand deserves more than just maintenance—it deserves momentum."
    imgUrl="/photos/bannercodebrand.webp"
  />

  <Banner
    subtitle="More Than Creatives—We're Your Partners"
    title="Your Design and Technology Expert Team"
    description="At Codebrand, we don't just execute ideas—we refine and elevate them. We help your company set new standards in style, performance, and impact through exceptional design, strategic branding, and results-driven digital marketing."
    imgUrl="/photos/section.webp"
  />

  <TabComponent
    tabs={[
      {
        title: "Web Development",
        description:
          "We develop modern, fast, and results-driven websites. Our web design service delivers custom architectures, optimized user experiences (UX/UI), lightning-fast loading speeds, and responsive designs. Perfect for businesses, entrepreneurs, and personal brands seeking an impactful, scalable, and SEO-ready digital presence.",
        image: "./photos/diseñoweb.png",
      },
      {
        title: "Graphic Design",
        description:
          "We build brands with purpose, consistency, and personality. Our comprehensive branding approach covers logo design, color palettes, typography, brand voice, and detailed brand guidelines. We help you develop a powerful, memorable visual identity that creates emotional connections with your audience while authentically reflecting your values.",
        image: "./photos/Branding.png",
      },
      {
        title: "Mobile Application Development",
        description:
          "We push mobile boundaries by creating transformative experiences that solve real business challenges. From Fortune 500 companies to innovative startups, we deliver exceptional results. With deep expertise in native iOS, Android, and cross-platform development, we transform your ideas into high-quality mobile solutions that engage users through intuitive, beautiful design.",
        image: "./photos/diseñoweb.png",
      },
      {
        title: "Social Media",
        description:
          "We develop content strategies and ad campaigns to boost your social media presence. We create engaging posts, manage your community, and analyze results to optimize performance. Our approach includes visual content creation, persuasive copywriting, and ad management on platforms like Facebook, Instagram, and LinkedIn.",
        image: "./photos/socialmedia.png",
      },
      {
        title: "SEO",
        description:
          "We improve your visibility on Google with technical and content SEO strategies. We conduct audits, keyword optimization, link building, and competitor analysis. Our approach includes keyword research, on-page and off-page optimization, and reporting to measure performance.",
        image: "./photos/seo.png",
      },
      {
        title: "Video Editing",
        description:
          "Professional video production and editing for advertising and social media. We create engaging, optimized content to capture your audience’s attention. Our process includes scriptwriting, filming, editing, and post-production for high-impact results.",
        image: "./photos/videoedition.png",
      },
      {
        title: "2D & 3D Animation",
        description:
          "Creative animations for marketing, presentations, and interactive content. We produce animated videos that communicate your message effectively and engagingly. Our approach includes scripting, storyboarding, animation, and post-production for maximum impact.",
        image: "./photos/animation.png",
      },
      {
        title: "3D Rendering",
        description:
          "High-quality 3D modeling and rendering for architecture and products. We create realistic visuals that help you effectively showcase projects and products. Our process includes 3D modeling, texturing, lighting, and rendering for stunning results.",
        image: "./photos/render3d.png",
      },
      {
        title: "Promotional Products",
        description:
          "Customization of items through sublimation, digital printing, and laser engraving. We create unique promotional products that reflect your brand identity. Our approach includes product selection, custom design, and production to deliver outstanding results.",
        image: "./photos/promocionales.png",
      },
      {
        title: "E-commerce",
        description:
          "We develop customized and SEO-optimized online stores. We create attractive, user-friendly shopping experiences. Our process includes catalog creation, payment gateway integration, and user experience optimization.",
        image: "./photos/diseñoweb.png",
      },
    ]}
    client:visible
  />

  <Brand client:visible />

  <Whyus />

  <section class="pt-12 px-4 md:px-8 bg-white">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-cyan-900 mb-6">
        Real Reviews from Our Clients
      </h2>
    </div>
  </section>
  <Testimonial client:visible />

  <TeamMembers client:visible />

  <Pricing />
  <Faq />
</Layout>
