---
import Layout from "../layouts/Layout.astro";

// SEO Metadata
const pageTitle = "Contact Us – Codebrand | Get in Touch";
const pageDescription =
  "Get in touch with Codebrand. We offer web development, SEO, branding, UX/UI design, and more. Contact us for a free consultation in San Pedro Sula, Honduras.";

// Industrias disponibles
const industries = [
  "Automotive",
  "Construction",
  "Content Creators",
  "E-commerce",
  "Fitness",
  "Healthcare",
  "Law Firms",
  "Real Estate",
  "Restaurants",
  "Travel Agency",
  "Other"
];

// Servicios disponibles
const services = [
  "Animation",
  "Data Entry",
  "Web Development",
  "SEO",
  "Promotional Products",
  "Video Editing",
  "Social Media",
  "3D Rendering",
  "UX/UI Design",
  "Graphic Design",
  "Branding",
  "Photography",
];
---

<Layout title={pageTitle}>
  <!-- SEO Meta Tags -->
  <meta name="description" content={pageDescription} slot="head" />
  <meta
    name="keywords"
    content="contact codebrand, web development contact, SEO services Honduras, branding agency contact, UX/UI design consultation"
    slot="head"
  />
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta name="twitter:card" content="summary_large_image" slot="head" />
  <meta name="twitter:title" content={pageTitle} slot="head" />
  <meta name="twitter:description" content={pageDescription} slot="head" />

  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-br from-orange-50 via-white to-blue-50 font-poppins overflow-hidden"
  >
    <!-- Decorative Elements -->
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-orange-200/30 to-transparent rounded-full blur-3xl pointer-events-none"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-blue-200/30 to-transparent rounded-full blur-3xl pointer-events-none"
    >
    </div>

    <!-- Hero Header -->
    <div class="relative max-w-7xl mx-auto px-6 pt-20 pb-12 text-center">
      <div class="inline-block mb-4 px-4 py-2 bg-orange-100 rounded-full">
        <span
          class="text-orange-600 font-semibold text-sm uppercase tracking-wider"
          >Let's Connect</span
        >
      </div>
      <h1
        class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight"
      >
        Get in <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-600"
          >Touch</span
        > with Us
      </h1>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
        Ready to bring your vision to life? We're here to help you every step of
        the way.
      </p>
    </div>

    <!-- Main Content -->
    <div
      class="relative max-w-7xl mx-auto px-6 pb-24 grid grid-cols-1 lg:grid-cols-2 gap-12 items-start"
    >
      <!-- Contact Information -->
      <div class="space-y-6 lg:sticky lg:top-8">
        <!-- Introduction Card -->
        <div
          class="bg-white/80 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-gray-100 hover:shadow-2xl transition-shadow duration-300"
        >
          <h2 class="text-2xl font-bold text-gray-900 mb-4">
            We'd Love to Hear From You
          </h2>
          <p class="text-gray-600 leading-relaxed">
            Whether you have a question, need a quote, or want to discuss your
            next project, our team is ready to assist you. Reach out through the
            form or use any of our contact methods below.
          </p>
        </div>

        <!-- Contact Details -->
        <div class="space-y-4">
          <!-- Location -->
          <div
            class="group bg-white/80 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-gray-100 hover:border-orange-300 hover:shadow-xl transition-all duration-300"
          >
            <div class="flex items-start gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-500 rounded-xl flex items-center justify-center shadow-md group-hover:scale-110 transition-transform duration-300"
              >
                <img
                  src="/icons/map-service-ocean-svgrepo-com.svg"
                  alt="Location"
                  class="w-6 h-6 text-white filter brightness-0 invert"
                />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Our Location</h3>
                <p class="text-gray-600 text-sm leading-relaxed">
                  San Pedro Sula, Cortés, Honduras<br />
                  Calle 4, Avenida 11, Codebrand
                </p>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div
            class="group bg-white/80 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-gray-100 hover:border-orange-300 hover:shadow-xl transition-all duration-300"
          >
            <div class="flex items-start gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-500 rounded-xl flex items-center justify-center shadow-md group-hover:scale-110 transition-transform duration-300"
              >
                <img
                  src="/icons/email-chat-svgrepo-com.svg"
                  alt="Email"
                  class="w-6 h-6 text-white filter brightness-0 invert"
                />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Email Us</h3>
                <a
                  href="mailto:info@codebrand.es"
                  class="text-orange-500 hover:text-orange-600 font-medium transition-colors"
                >
                  info@codebrand.es
                </a>
              </div>
            </div>
          </div>

          <!-- Phone -->
          <div
            class="group bg-white/80 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-gray-100 hover:border-orange-300 hover:shadow-xl transition-all duration-300"
          >
            <div class="flex items-start gap-4">
              <div
                class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-green-400 to-green-500 rounded-xl flex items-center justify-center shadow-md group-hover:scale-110 transition-transform duration-300"
              >
                <img
                  src="/icons/collect-call-call-svgrepo-com.svg"
                  alt="Phone"
                  class="w-6 h-6 text-white filter brightness-0 invert"
                />
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Call Us</h3>
                <a
                  href="tel:+504-3272-2973"
                  class="text-orange-500 hover:text-orange-600 font-medium transition-colors"
                >
                  +504-3272-2973
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Business Hours -->
        <div
          class="bg-gradient-to-br from-orange-500 to-orange-600 p-8 rounded-3xl shadow-xl text-white"
        >
          <div class="flex items-center gap-3 mb-4">
            <svg
              class="w-8 h-8"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-bold">Business Hours</h3>
          </div>
          <div class="space-y-2 text-orange-50">
            <div
              class="flex justify-between items-center py-2 border-b border-orange-400/30"
            >
              <span class="font-medium">Monday - Friday</span>
              <span>9:00 AM – 6:00 PM</span>
            </div>
            <div
              class="flex justify-between items-center py-2 border-b border-orange-400/30"
            >
              <span class="font-medium">Saturday</span>
              <span>10:00 AM – 2:00 PM</span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="font-medium">Sunday</span>
              <span class="italic">Closed</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form with Netlify Forms -->
      <form
        name="contact-netlify"
        method="POST"
        data-netlify="true"
        data-netlify-honeypot="bot-field"
        action="/thank-you"
        class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white/90 backdrop-blur-sm p-8 md:p-10 rounded-3xl shadow-2xl border border-gray-100 hover:shadow-3xl transition-shadow duration-300 relative overflow-hidden"
      >
        <!-- Form Decorative Element -->
        <div
          class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-orange-100/50 to-transparent rounded-full blur-2xl pointer-events-none"
        >
        </div>

        <!-- Hidden field for Netlify Forms -->
        <input type="hidden" name="form-name" value="contact-netlify" />

        <!-- Honeypot anti-spam (Netlify) -->
        <div class="hidden">
          <label>
            Don't fill this out if you're human:
            <input name="bot-field" />
          </label>
        </div>

        <!-- Nombre -->
        <div class="md:col-span-2 flex flex-col gap-2">
          <label for="name" class="text-sm font-medium text-gray-700">
            Name <span class="text-red-500">*</span>
          </label>
          <input
            id="name"
            name="name"
            type="text"
            required
            autocomplete="name"
            placeholder="John Doe"
            minlength="2"
            maxlength="100"
            class="input-style"
          />
        </div>

        <!-- Email -->
        <div class="flex flex-col gap-2">
          <label for="email" class="text-sm font-medium text-gray-700">
            Email <span class="text-red-500">*</span>
          </label>
          <input
            id="email"
            name="email"
            type="email"
            required
            autocomplete="email"
            placeholder="email@example.com"
            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
            class="input-style"
          />
        </div>

        <!-- Phone -->
        <div class="flex flex-col gap-2">
          <label for="phone" class="text-sm font-medium text-gray-700">
            Phone Number <span class="text-red-500">*</span>
          </label>
          <input
            id="phone"
            name="phone"
            type="tel"
            required
            autocomplete="tel"
            placeholder="+504-3272-2973"
            pattern="[\+]?[0-9\s\-\(\)]+"
            class="input-style"
          />
        </div>

        <!-- Industry (NUEVO CAMPO) -->
        <div class="flex flex-col gap-2">
          <label for="industry" class="text-sm font-medium text-gray-700">
            Industry <span class="text-red-500">*</span>
          </label>
          <select
            id="industry"
            name="industry"
            required
            class="input-style cursor-pointer"
          >
            <option value="" disabled selected>Select your industry</option>
            {industries.map((industry) => (
              <option value={industry}>{industry}</option>
            ))}
          </select>
        </div>

        <!-- Asunto -->
        <div class="flex flex-col gap-2">
          <label for="subject" class="text-sm font-medium text-gray-700">
            Subject <span class="text-red-500">*</span>
          </label>
          <input
            id="subject"
            name="subject"
            type="text"
            required
            placeholder="Subject of your message"
            minlength="3"
            maxlength="200"
            class="input-style"
          />
        </div>

        <!-- Mensaje -->
        <div class="md:col-span-2 flex flex-col gap-2">
          <label for="message" class="text-sm font-medium text-gray-700">
            Message <span class="text-red-500">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            placeholder="Write your message here..."
            minlength="10"
            maxlength="2000"
            class="input-style resize-none"
          ></textarea>
          <span class="text-xs text-gray-500" id="char-count">0 / 2000 characters</span>
        </div>

        <!-- Servicios -->
        <div class="md:col-span-2 flex flex-col gap-2">
          <label class="text-sm font-medium text-gray-700">
            Services of Interest <span class="text-red-500">*</span>
          </label>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
            {services.map((service) => (
              <label class="flex items-center gap-2 cursor-pointer hover:text-orange-600 transition-colors">
                <input
                  type="checkbox"
                  name="services"
                  value={service}
                  class="w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500 focus:ring-2 cursor-pointer"
                />
                <span class="text-sm text-gray-700">{service}</span>
              </label>
            ))}
          </div>
          <span class="text-xs text-red-500 hidden" id="services-error">
            Please select at least one service
          </span>
        </div>

        <!-- Botón enviar -->
        <div class="md:col-span-2">
          <button
            type="submit"
            id="submit-btn"
            class="w-full bg-gradient-to-r from-[#f48200] to-[#faa732] text-white font-semibold
            py-[15px] px-[30px] rounded-full shadow-lg
            hover:from-[#007BFF] hover:to-[#00BCD4] hover:shadow-2xl hover:brightness-125
            transition-all duration-300 ease-in-out
            transform hover:scale-105 active:scale-95 hover:-rotate-1 border-none text-sm lg:text-lg
            disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100"
          >
            <span id="submit-text">Send Message</span>
            <span id="submit-loading" class="hidden">Sending...</span>
          </button>

          <!-- Success/Error Messages -->
          <div id="form-message" class="mt-4 p-4 rounded-lg hidden"></div>
        </div>
      </form>
    </div>
  </section>
</Layout>

<style>
  .input-style {
    width: 100%;
    padding: 0.875rem 1.25rem;
    font-size: 0.9375rem;
    font-family: "Poppins", sans-serif;
    border: 2px solid #e5e7eb;
    border-radius: 0.75rem;
    background-color: #ffffff;
    color: #111827;
    transition:
      border-color 0.3s ease,
      box-shadow 0.3s ease,
      transform 0.2s ease;
    outline: none;
  }

  .input-style:focus {
    border-color: #f48200;
    box-shadow: 0 0 0 4px rgba(244, 130, 0, 0.1);
    transform: translateY(-1px);
  }

  .input-style:hover {
    border-color: #faa732;
  }

  .input-style::placeholder {
    color: #9ca3af;
  }

  .input-style:invalid:not(:placeholder-shown) {
    border-color: #ef4444;
  }

  .input-style:valid:not(:placeholder-shown) {
    border-color: #10b981;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Animation for fade-in */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }
</style>

<script>
  // Character counter for message field
  const messageField = document.getElementById('message') as HTMLTextAreaElement;
  const charCount = document.getElementById('char-count');

  if (messageField && charCount) {
    messageField.addEventListener('input', () => {
      const count = messageField.value.length;
      charCount.textContent = `${count} / 2000 characters`;

      if (count > 1900) {
        charCount.classList.add('text-red-500');
      } else {
        charCount.classList.remove('text-red-500');
      }
    });
  }

  // Form validation
  const form = document.querySelector('form[name="contact-netlify"]') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const submitText = document.getElementById('submit-text');
  const submitLoading = document.getElementById('submit-loading');
  const servicesError = document.getElementById('services-error');

  if (form) {
    form.addEventListener('submit', (e) => {
      // Check if at least one service is selected
      const servicesCheckboxes = form.querySelectorAll('input[name="services"]:checked');

      if (servicesCheckboxes.length === 0) {
        e.preventDefault();
        servicesError?.classList.remove('hidden');
        servicesError?.scrollIntoView({ behavior: 'smooth', block: 'center' });
        return;
      } else {
        servicesError?.classList.add('hidden');
      }

      // Show loading state
      if (submitBtn && submitText && submitLoading) {
        submitBtn.disabled = true;
        submitText.classList.add('hidden');
        submitLoading.classList.remove('hidden');
      }
    });

    // Remove error when services are selected
    const serviceCheckboxes = form.querySelectorAll('input[name="services"]');
    serviceCheckboxes.forEach((checkbox) => {
      checkbox.addEventListener('change', () => {
        const checked = form.querySelectorAll('input[name="services"]:checked');
        if (checked.length > 0) {
          servicesError?.classList.add('hidden');
        }
      });
    });
  }

  // Email validation enhancement
  const emailInput = document.getElementById('email') as HTMLInputElement;
  if (emailInput) {
    emailInput.addEventListener('blur', () => {
      const email = emailInput.value;
      const isValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);

      if (email && !isValid) {
        emailInput.setCustomValidity('Please enter a valid email address');
      } else {
        emailInput.setCustomValidity('');
      }
    });
  }
</script>
