        <CardService
          icon="/icons/sitio-web.png"
          title="Website Copywriting"
          description="Transform your website into a conversion machine with compelling copy that engages visitors and guides them toward action. We write homepage copy, about pages, service descriptions, and product pages that showcase value and build trust."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/seo.png"
          title="SEO Content Writing"
          description="Rank higher and attract organic traffic with SEO-optimized content. We create keyword-rich blog posts, articles, and landing pages that satisfy search intent while maintaining readability and engagement for human audiences."
          learnMoreUrl="/seo"
        />

        <CardService
          icon="/icons/login-page-svgrepo-com.svg"
          title="Sales Page Copy"
          description="Maximize conversions with persuasive sales pages that address objections, build desire, and drive purchases. Our long-form sales copy follows proven frameworks to turn prospects into customers through compelling storytelling and clear CTAs."
          learnMoreUrl="/landing-pages"
        />

        <CardService
          icon="/icons/redes-sociales.png"
          title="Email Copywriting"
          description="Boost open rates and click-through rates with email copy that gets read and drives action. From welcome sequences to promotional campaigns and nurture series, we craft emails that build relationships and generate revenue."
          learnMoreUrl="/contact"
        />

