---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Cont√°ctanos ‚Äì Codebrand">
	<section class="relative bg-white font-poppins overflow-hidden">
		<div
			class="max-w-7xl mx-auto px-6 py-24 grid grid-cols-1 lg:grid-cols-2 gap-16 items-start"
		>
			<!-- Informaci√≥n de contacto -->
			<div class="space-y-8 animate-fade-in-up delay-150">
				<div class="space-y-2">
					<h2
						class="text-xl font-bold text-orange-400 uppercase tracking-wide"
					>
						Contact Us
					</h2>
					<p class="text-gray-700">
						You can write to us directly through this form or get in
						touch with us through the following channels. We‚Äôd love
						to hear from you and help bring your ideas to life. If
						you have any questions or need more information, don‚Äôt
						hesitate to contact us. We‚Äôre here to help!
					</p>
				</div>

				<ul class="space-y-4 text-gray-800 text-sm">
					<li class="flex items-start gap-4">
						<span class="text-orange-400 text-xl">üìç</span>
						<span>
							San Pedro Sula, Cort√©s, Honduras<br />
							Calle 4, Avenida 11, Codebrand
						</span>
					</li>
					<li class="flex items-center gap-4">
						<span class="text-orange-400 text-xl">‚úâÔ∏è</span>
						<a
							href="mailto:info@codebrand.es"
							class="hover:underline">info@codebrand.es</a
						>
					</li>
					<li class="flex items-center gap-4">
						<span class="text-orange-400 text-xl">üìû</span>
						<a href="tel:+504-3272-2973" class="hover:underline"
							>+504-3272-2973</a
						>
					</li>
				</ul>

				<div class="pt-6">
					<h3 class="text-sm font-medium text-gray-500 uppercase">
						Hours
					</h3>
					<p class="text-gray-700 mt-1">
						Mon - Fry: 9:00 AM ‚Äì 6:00 PM<br />
						Sat: 10:00 AM ‚Äì 2:00 PM<br />
						Sun: Relax/chill
					</p>
				</div>
			</div>

			<!-- Formulario -->
			<form
				name="contact"
				method="POST"
				action="/api/contact"
				class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white p-8 rounded-2xl shadow-2xl border border-gray-100"
			>
				<input type="hidden" name="form-name" value="contact" />

				<!-- Honeypot -->
				<input
					type="text"
					name="honey"
					style="display:none"
					tabindex="-1"
					autocomplete="off"
					aria-hidden="true"
					class="hidden"
				/>

				<!-- Nombre -->
				<div class="flex flex-col gap-2">
					<label for="name" class="text-sm font-medium text-gray-700"
						>Name</label
					>
					<input
						id="name"
						name="name"
						type="text"
						required
						autocomplete="name"
						placeholder="Name"
						class="input-style"
					/>
				</div>

				<!-- Email -->
				<div class="flex flex-col gap-2">
					<label for="email" class="text-sm font-medium text-gray-700"
						>Email</label
					>
					<input
						id="email"
						name="email"
						type="email"
						required
						autocomplete="email"
						placeholder="email@email.com"
						class="input-style"
					/>
				</div>

				<!-- Asunto -->
				<div class="md:col-span-2 flex flex-col gap-2">
					<label
						for="subject"
						class="text-sm font-medium text-gray-700">Subject</label
					>
					<input
						id="subject"
						name="subject"
						type="text"
						required
						placeholder="Subject of your message"
						class="input-style"
					/>
				</div>

				<!-- Mensaje -->
				<div class="md:col-span-2 flex flex-col gap-2">
					<label
						for="message"
						class="text-sm font-medium text-gray-700"
						>Messenge</label
					>
					<textarea
						id="message"
						name="message"
						rows="6"
						required
						placeholder="Write your message here"
						class="input-style"></textarea>
				</div>

				<!-- Servicios -->
				<div class="md:col-span-2 flex flex-col gap-2">
					<label class="text-sm font-medium text-gray-700"
						>Services</label
					>
					<div
						class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3"
					>
						{
							[
								"Animation",
								"Data Entry",
								"Web Development",
								"SEO",
								"Promotional Products",
								"Video Editing",
								"Social Media",
								"3D Rendering",
								"UX/UI Design",
								"Graphic Design",
								"Branding",
								"Photography",
							].map((service) => (
								<label class="flex items-center gap-2">
									<input
										type="checkbox"
										name="services"
										value={service}
									/>
									<span class="text-sm text-gray-700">
										{service}
									</span>
								</label>
							))
						}
					</div>
				</div>

				<div
					class="g-recaptcha"
					data-sitekey="6Lf6olArAAAAALJssnzah9pMjSczKZQIZYBglamB"
					data-action="LOGIN"
				>
				</div>

				<!-- Bot√≥n enviar -->
				<div class="md:col-span-2">
					<button
						type="submit"
						class="bg-gradient-to-r from-[#f48200] to-[#faa732] text-white font-semibold
				py-[15px] px-[30px] rounded-full shadow-lg
				hover:from-[#007BFF] hover:to-[#00BCD4] hover:shadow-2xl hover:brightness-125
				transition-all duration-300 ease-in-out
				transform hover:scale-105 active:scale-95 hover:-rotate-2 border-none text-sm lg:text-lg"
					>
						Send Message
					</button>

					<script
						src="https://www.google.com/recaptcha/enterprise.js"
						async
						defer
						is:inline></script>
				</div>
			</form>
		</div>
	</section>
</Layout>

<style>
	.input-style {
		width: 100%;
		padding: 0.75rem 1rem;
		font-size: 0.875rem;
		font-family: "Poppins", sans-serif;
		border: 1px solid #d1d5db;
		border-radius: 0.5rem;
		background-color: #ffffff;
		color: #111827;
		transition:
			border-color 0.3s ease,
			box-shadow 0.3s ease;
	}
	.input-style::placeholder {
		color: #9ca3af;
	}
</style>
