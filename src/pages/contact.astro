---
import Layout from "../layouts/Layout.astro";

// Industrias disponibles
const industries = [
  "Automotive",
  "Construction",
  "Content Creators",
  "E-commerce",
  "Fitness",
  "Healthcare",
  "Law Firms",
  "Real Estate",
  "Restaurants",
  "Travel Agency",
  "Other",
];
---

<Layout
  title="Contact Codebrand | Free Consultation - Digital Agency"
  description="Get a free consultation with Codebrand digital agency. Offering web development, UI/UX design, branding, SEO, and marketing services in San Pedro Sula, Honduras. Contact us today!"
  keywords="contact codebrand, free consultation, digital agency contact, web development services Honduras, SEO agency San Pedro Sula, branding consultation, UX/UI design quote, digital marketing contact, agency consultation, get a quote, contact web developer, Honduras digital agency"
  image="/photos/bannercodebrand.webp"
>
  <!-- ContactPoint Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "name": "Contact Codebrand",
    "description": "Get a free consultation with Codebrand digital agency. Offering web development, UI/UX design, branding, SEO, and marketing services.",
    "url": "https://codebrand.us/contact",
    "mainEntity": {
      "@type": "Organization",
      "name": "Codebrand",
      "url": "https://codebrand.us",
      "logo": "https://codebrand.us/photos/bannercodebrand.webp",
      "contactPoint": [
        {
          "@type": "ContactPoint",
          "telephone": "+504-3272-2973",
          "contactType": "customer service",
          "email": "info@codebrand.es",
          "areaServed": ["US", "HN", "GT", "SV", "MX"],
          "availableLanguage": ["English", "Spanish"],
          "hoursAvailable": [
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
              "opens": "09:00",
              "closes": "18:00"
            },
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": "Saturday",
              "opens": "10:00",
              "closes": "14:00"
            }
          ]
        }
      ],
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Calle 4, Avenida 11",
        "addressLocality": "San Pedro Sula",
        "addressRegion": "Cortés",
        "addressCountry": "HN"
      }
    }
  })} />

  <!-- Hero Section -->
  <section class="relative bg-gray-50 font-poppins pt-32 sm:pt-36 lg:pt-28 pb-12">
    <!-- Hero Header -->
    <div class="max-w-7xl mx-auto px-6 py-16">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Contact Us
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Have a question or want to work together? Fill out the form below and
          we'll get back to you shortly. Whether you need <a
            href="/services/web-development"
            class="text-cyan-600 hover:text-cyan-700 font-semibold"
            >web development</a
          >, <a
            href="/digital-marketing"
            class="text-cyan-600 hover:text-cyan-700 font-semibold"
            >digital marketing</a
          >, or <a
            href="/services/branding"
            class="text-cyan-600 hover:text-cyan-700 font-semibold"
            >branding services</a
          >, our team is here to help.
        </p>
      </div>
    </div>

    <!-- Main Content -->
    <div
      class="max-w-7xl mx-auto px-6 pb-24 grid grid-cols-1 lg:grid-cols-3 gap-12"
    >
      <!-- Contact Information -->
      <div class="lg:col-span-1">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Get In Touch</h2>
        <p class="text-gray-600 mb-8 leading-relaxed">
          Whether you have a question or need a quote, our team is ready to
          assist you. Explore our <a
            href="/services"
            class="text-cyan-600 hover:text-cyan-700 font-semibold"
            >complete service offerings</a
          > or learn more about <a
            href="/team"
            class="text-cyan-600 hover:text-cyan-700 font-semibold"
            >our expert team</a
          >.
        </p>

        <!-- Contact Details -->
        <div class="space-y-6">
          <div class="border-l-4 border-orange-500 pl-4">
            <h3 class="font-semibold text-gray-900 mb-1">Location</h3>
            <p class="text-gray-600 text-sm">
              San Pedro Sula, Cortés, Honduras<br />
              Calle 4, Avenida 11, Codebrand
            </p>
          </div>

          <div class="border-l-4 border-orange-500 pl-4">
            <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
            <a
              href="mailto:info@codebrand.es"
              class="text-orange-600 hover:text-orange-700 text-sm"
            >
              info@codebrand.es
            </a>
          </div>

          <div class="border-l-4 border-orange-500 pl-4">
            <h3 class="font-semibold text-gray-900 mb-1">Phone</h3>
            <a
              href="tel:+504-3272-2973"
              class="text-orange-600 hover:text-orange-700 text-sm"
            >
              +504-3272-2973
            </a>
          </div>

          <div class="bg-gray-100 p-6 rounded-lg mt-8">
            <h3 class="font-semibold text-gray-900 mb-3">Business Hours</h3>
            <div class="space-y-2 text-sm text-gray-600">
              <div class="flex justify-between">
                <span>Monday - Friday</span>
                <span>9:00 AM – 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span>10:00 AM – 2:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span>Closed</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <form
        action="/api/contact"
        method="POST"
        class="lg:col-span-2 bg-white p-8 rounded-lg shadow-md border border-gray-200"
      >

        <!-- Honeypot - hidden off-screen -->
        <div aria-hidden="true" style="position:absolute;left:-9999px;top:-9999px;height:0;width:0;overflow:hidden;">
          <label for="contact-website">Leave empty</label>
          <input
            type="text"
            name="honey"
            id="contact-website"
            tabindex="-1"
            autocomplete="new-password"
          />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Name -->
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Name <span aria-hidden="true">*</span>
              <span class="sr-only">(required)</span>
            </label>
            <input
              id="name"
              name="name"
              type="text"
              required
              autocomplete="name"
              placeholder="John Doe"
              class="form-input"
              aria-required="true"
              maxlength="60"
              minlength="2"
              pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑüÜ\s\-']+"
              title="Only letters, spaces, hyphens and apostrophes"
            />
          </div>

          <!-- Email -->
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Email <span aria-hidden="true">*</span>
              <span class="sr-only">(required)</span>
            </label>
            <input
              id="email"
              name="email"
              type="email"
              required
              autocomplete="email"
              placeholder="john@example.com"
              class="form-input"
              aria-required="true"
              maxlength="254"
              pattern="[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z]{2,10})+"
            />
          </div>

          <!-- Phone -->
          <div>
            <label
              for="phone"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Phone <span aria-hidden="true">*</span>
              <span class="sr-only">(required)</span>
            </label>
            <input
              id="phone"
              name="phone"
              type="tel"
              required
              autocomplete="tel"
              placeholder="+1 (555) 000-0000"
              class="form-input"
              aria-required="true"
              maxlength="20"
              minlength="7"
              pattern="[\d\s\-\+\(\)]+"
            />
          </div>

          <!-- Industry -->
          <div>
            <label
              for="industry"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Industry <span aria-hidden="true">*</span>
              <span class="sr-only">(required)</span>
            </label>
            <select id="industry" name="industry" required class="form-input" aria-required="true">
              <option value="" disabled selected>Select your industry</option>
              {
                industries.map((industry) => (
                  <option value={industry}>{industry}</option>
                ))
              }
            </select>
          </div>

          <!-- Subject -->
          <div class="md:col-span-2">
            <label
              for="subject"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Subject <span aria-hidden="true">*</span>
              <span class="sr-only">(required)</span>
            </label>
            <input
              id="subject"
              name="subject"
              type="text"
              required
              placeholder="How can we help you?"
              class="form-input"
              aria-required="true"
              maxlength="100"
              minlength="3"
              pattern="[a-zA-Z0-9áéíóúÁÉÍÓÚñÑüÜ\s\-,.!?']+"
              title="Only letters, numbers and basic punctuation"
            />
          </div>

          <!-- Message -->
          <div class="md:col-span-2">
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Message <span aria-hidden="true">*</span>
              <span class="sr-only">(required)</span>
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              placeholder="Tell us about your project..."
              class="form-input resize-none"
              aria-required="true"
              maxlength="2000"
              minlength="10"></textarea>
          </div>

          <!-- Services -->
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-3">
              Services Interested In
            </label>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
              {
                [
                  "Animation",
                  "Data Entry",
                  "Web Development",
                  "SEO",
                  "Promotional Products",
                  "Video Editing",
                  "Social Media",
                  "3D Rendering",
                  "UX/UI Design",
                  "Graphic Design",
                  "Branding",
                  "Photography",
                ].map((service) => (
                  <label class="flex items-center gap-2 text-sm">
                    <input
                      type="checkbox"
                      name="services"
                      value={service}
                      class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500"
                    />
                    <span class="text-gray-700">{service}</span>
                  </label>
                ))
              }
            </div>
          </div>

          <!-- Terms and Conditions -->
          <div class="md:col-span-2">
            <label class="flex items-start gap-3 text-sm cursor-pointer">
              <input
                type="checkbox"
                name="terms"
                required
                class="w-4 h-4 mt-0.5 text-orange-600 border-gray-300 rounded focus:ring-orange-500"
              />
              <span class="text-gray-600">
                I have read and agree to the <a
                  href="/terms"
                  target="_blank"
                  class="text-orange-600 hover:text-orange-700 underline font-medium"
                  >Terms and Conditions</a
                > and <a
                  href="/privacy"
                  target="_blank"
                  class="text-orange-600 hover:text-orange-700 underline font-medium"
                  >Privacy Policy</a
                >. *
              </span>
            </label>
          </div>

          <!-- Submit Button -->
          <div class="md:col-span-2">
            <button
              type="submit"
              class="w-full bg-orange-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-orange-700 transition-colors duration-200"
            >
              Send Message
            </button>
          </div>
        </div>
      </form>
    </div>

    <!-- Calendly Section -->
    <div class="max-w-4xl mx-auto px-6 pb-24">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Schedule a Free Consultation
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Prefer to talk directly? Book a free consultation call with our team
          to discuss your project and how we can help you achieve your goals.
        </p>
      </div>

      <!-- Calendly Widget -->
      <div
        class="calendly-inline-widget"
        data-url="https://calendly.com/agencycodebrand?hide_landing_page_details=1&hide_gdpr_banner=1"
        style="min-width:320px;height:700px;"
      >
      </div>
      <script
        type="text/javascript"
        src="https://assets.calendly.com/assets/external/widget.js"
        async></script>
    </div>
  </section>
</Layout>

<style>
  .form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.5rem;
    font-size: 0.938rem;
    transition:
      border-color 0.2s,
      box-shadow 0.2s;
    outline: none;
  }

  .form-input:focus {
    border-color: #ea580c;
    box-shadow: 0 0 0 3px rgba(234, 88, 12, 0.1);
  }

  .form-input:focus-visible {
    border-color: #06b6d4;
    box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.2);
  }

  .form-input::placeholder {
    color: #9ca3af;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
