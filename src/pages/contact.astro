---
import Layout from "../layouts/Layout.astro";

// SEO Metadata
const pageTitle = "Contact Us – Codebrand | Get in Touch";
const pageDescription =
  "Get in touch with Codebrand. We offer web development, SEO, branding, UX/UI design, and more. Contact us for a free consultation in San Pedro Sula, Honduras.";

// Industrias disponibles
const industries = [
  "Automotive",
  "Construction",
  "Content Creators",
  "E-commerce",
  "Fitness",
  "Healthcare",
  "Law Firms",
  "Real Estate",
  "Restaurants",
  "Travel Agency",
  "Other",
];
---

<Layout title={pageTitle}>
  <!-- SEO Meta Tags -->
  <meta name="description" content={pageDescription} slot="head" />
  <meta
    name="keywords"
    content="contact codebrand, web development contact, SEO services Honduras, branding agency contact, UX/UI design consultation"
    slot="head"
  />
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta name="twitter:card" content="summary_large_image" slot="head" />
  <meta name="twitter:title" content={pageTitle} slot="head" />
  <meta name="twitter:description" content={pageDescription} slot="head" />

  <!-- Hero Section -->
  <section class="relative bg-gray-50 font-poppins">
    <!-- Hero Header -->
    <div class="max-w-7xl mx-auto px-6 py-16">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Contact Us
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Have a question or want to work together? Fill out the form below and we'll get back to you shortly.
        </p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-6 pb-24 grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Contact Information -->
      <div class="lg:col-span-1">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">
          Get In Touch
        </h2>
        <p class="text-gray-600 mb-8 leading-relaxed">
          Whether you have a question or need a quote, our team is ready to assist you.
        </p>

        <!-- Contact Details -->
        <div class="space-y-6">
          <div class="border-l-4 border-orange-500 pl-4">
            <h3 class="font-semibold text-gray-900 mb-1">Location</h3>
            <p class="text-gray-600 text-sm">
              San Pedro Sula, Cortés, Honduras<br />
              Calle 4, Avenida 11, Codebrand
            </p>
          </div>

          <div class="border-l-4 border-orange-500 pl-4">
            <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
            <a
              href="mailto:info@codebrand.es"
              class="text-orange-600 hover:text-orange-700 text-sm"
            >
              info@codebrand.es
            </a>
          </div>

          <div class="border-l-4 border-orange-500 pl-4">
            <h3 class="font-semibold text-gray-900 mb-1">Phone</h3>
            <a
              href="tel:+504-3272-2973"
              class="text-orange-600 hover:text-orange-700 text-sm"
            >
              +504-3272-2973
            </a>
          </div>

          <div class="bg-gray-100 p-6 rounded-lg mt-8">
            <h3 class="font-semibold text-gray-900 mb-3">Business Hours</h3>
            <div class="space-y-2 text-sm text-gray-600">
              <div class="flex justify-between">
                <span>Monday - Friday</span>
                <span>9:00 AM – 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span>10:00 AM – 2:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span>Closed</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <form
        name="contact"
        method="POST"
        action="/api/contact"
        class="lg:col-span-2 bg-white p-8 rounded-lg shadow-md border border-gray-200"
      >
        <input type="hidden" name="form-name" value="contact" />

        <!-- Honeypot -->
        <input
          type="text"
          name="honey"
          style="display:none"
          tabindex="-1"
          autocomplete="off"
          aria-hidden="true"
          class="hidden"
        />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
              Name *
            </label>
            <input
              id="name"
              name="name"
              type="text"
              required
              autocomplete="name"
              placeholder="John Doe"
              class="form-input"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email *
            </label>
            <input
              id="email"
              name="email"
              type="email"
              required
              autocomplete="email"
              placeholder="john@example.com"
              class="form-input"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
              Phone *
            </label>
            <input
              id="phone"
              name="phone"
              type="tel"
              required
              autocomplete="tel"
              placeholder="+1 (555) 000-0000"
              class="form-input"
            />
          </div>

          <!-- Industry -->
          <div>
            <label for="industry" class="block text-sm font-medium text-gray-700 mb-2">
              Industry *
            </label>
            <select
              id="industry"
              name="industry"
              required
              class="form-input"
            >
              <option value="" disabled selected>Select your industry</option>
              {
                industries.map((industry) => (
                  <option value={industry}>{industry}</option>
                ))
              }
            </select>
          </div>

          <!-- Subject -->
          <div class="md:col-span-2">
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
              Subject *
            </label>
            <input
              id="subject"
              name="subject"
              type="text"
              required
              placeholder="How can we help you?"
              class="form-input"
            />
          </div>

          <!-- Message -->
          <div class="md:col-span-2">
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              placeholder="Tell us about your project..."
              class="form-input resize-none"
            ></textarea>
          </div>

          <!-- Services -->
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-3">
              Services Interested In
            </label>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3">
              {
                [
                  "Animation",
                  "Data Entry",
                  "Web Development",
                  "SEO",
                  "Promotional Products",
                  "Video Editing",
                  "Social Media",
                  "3D Rendering",
                  "UX/UI Design",
                  "Graphic Design",
                  "Branding",
                  "Photography",
                ].map((service) => (
                  <label class="flex items-center gap-2 text-sm">
                    <input
                      type="checkbox"
                      name="services"
                      value={service}
                      class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500"
                    />
                    <span class="text-gray-700">{service}</span>
                  </label>
                ))
              }
            </div>
          </div>

          <!-- ReCAPTCHA -->
          <div class="md:col-span-2">
            <div
              class="g-recaptcha"
              data-sitekey="6Lf6olArAAAAALJssnzah9pMjSczKZQIZYBglamB"
              data-callback="onSubmit"
              data-action="Submit"
            >
            </div>
          </div>

          <!-- Submit Button -->
          <div class="md:col-span-2">
            <button
              type="submit"
              class="w-full bg-orange-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-orange-700 transition-colors duration-200"
            >
              Send Message
            </button>
          </div>
        </div>
      </form>
    </div>
  </section>
</Layout>

<style>
  .form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 0.5rem;
    font-size: 0.938rem;
    transition: border-color 0.2s, box-shadow 0.2s;
    outline: none;
  }

  .form-input:focus {
    border-color: #ea580c;
    box-shadow: 0 0 0 3px rgba(234, 88, 12, 0.1);
  }

  .form-input::placeholder {
    color: #9ca3af;
  }
</style>
