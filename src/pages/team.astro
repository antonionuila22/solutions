---
import Layout from "../layouts/Layout.astro";
import ButtonCustom from "../components/Button.astro";
import Ourteam from "../components/Ourteam.astro";
import Whyus from "../components/whyus.astro";
---

<Layout>
  <!-- Hero Section - Creative Asymmetric Design -->
  <section class="relative min-h-[85vh] overflow-hidden bg-white">
    <!-- Background Geometric Shapes -->
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-orange-400 rounded-full opacity-5 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-80 h-80 bg-cyan-900 rounded-full opacity-5 blur-3xl"
    >
    </div>

    <div class="relative max-w-7xl mx-auto px-6 py-20">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="space-y-8 animate-slide-up">
          <!-- Badge -->
          <div class="flex items-center gap-3">
            <span
              class="inline-flex items-center gap-2 px-5 py-2.5 bg-cyan-900 text-white rounded-full font-bold text-sm shadow-lg"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"
                ></path>
              </svg>
              MEET THE TEAM
            </span>
            <div
              class="h-px flex-1 bg-gradient-to-r from-cyan-900/20 to-transparent max-w-[100px]"
            >
            </div>
          </div>

          <!-- Heading -->
          <div>
            <h1
              class="text-5xl md:text-7xl font-black text-cyan-900 leading-tight mb-6"
            >
              The Minds<br />
              Behind <span class="relative inline-block">
                <span class="text-orange-400">Codebrand</span>
                <svg
                  class="absolute -bottom-2 left-0 w-full"
                  height="12"
                  viewBox="0 0 200 12"
                  fill="none"
                >
                  <path
                    d="M2 10C50 2 150 2 198 10"
                    stroke="#fb923c"
                    stroke-width="4"
                    stroke-linecap="round"></path>
                </svg>
              </span>
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed max-w-lg">
              Six specialists united by passion, expertise, and a relentless
              commitment to delivering excellence in every project.
            </p>
          </div>

          <!-- Inline Stats -->
          <div class="flex flex-wrap gap-6 pt-4">
            <div class="flex items-center gap-3 group">
              <div
                class="w-14 h-14 rounded-2xl bg-orange-400 flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform"
              >
                <span class="text-2xl font-black text-white">6</span>
              </div>
              <div>
                <div class="text-sm font-bold text-cyan-900">Specialists</div>
                <div class="text-xs text-gray-500">Expert Team</div>
              </div>
            </div>

            <div class="flex items-center gap-3 group">
              <div
                class="w-14 h-14 rounded-2xl bg-cyan-900 flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform"
              >
                <span class="text-2xl font-black text-white">50+</span>
              </div>
              <div>
                <div class="text-sm font-bold text-cyan-900">
                  Years Combined
                </div>
                <div class="text-xs text-gray-500">Experience</div>
              </div>
            </div>

            <div class="flex items-center gap-3 group">
              <div
                class="w-14 h-14 rounded-2xl bg-orange-400 flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform"
              >
                <span class="text-xl font-black text-white">100%</span>
              </div>
              <div>
                <div class="text-sm font-bold text-cyan-900">Dedication</div>
                <div class="text-xs text-gray-500">Every Project</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Image Section with Creative Clipping -->
        <div class="relative animate-slide-up delay-100">
          <!-- Main Image Container with Diagonal Clip -->
          <div class="relative">
            <!-- Decorative Orange Shape Behind -->
            <div
              class="absolute -right-6 -top-6 w-72 h-72 bg-orange-400 rounded-[3rem] rotate-12 opacity-20"
            >
            </div>

            <!-- Image with Curved Clipping -->
            <div
              class="relative rounded-[3rem] overflow-hidden shadow-2xl border-8 border-white"
            >
              <img
                src="/photos/teamcode.png"
                alt="Codebrand Team"
                class="w-full h-auto object-cover"
              />

              <!-- Gradient Overlay on Bottom -->
              <div
                class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-cyan-900/80 to-transparent"
              >
              </div>

              <!-- Floating Badge on Image -->
              <div
                class="absolute bottom-6 left-6 right-6 bg-white/95 backdrop-blur-md rounded-2xl p-4 shadow-xl"
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <div
                      class="w-10 h-10 rounded-full bg-orange-400 flex items-center justify-center"
                    >
                      <svg
                        class="w-5 h-5 text-white"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <div>
                      <div class="text-sm font-black text-cyan-900">
                        World-Class Quality
                      </div>
                      <div class="text-xs text-gray-500">
                        Certified Excellence
                      </div>
                    </div>
                  </div>
                  <div class="hidden md:flex gap-1">
                    <div class="w-2 h-2 rounded-full bg-orange-400"></div>
                    <div class="w-2 h-2 rounded-full bg-cyan-900"></div>
                    <div class="w-2 h-2 rounded-full bg-orange-400"></div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Small Decorative Cyan Shape -->
            <div
              class="absolute -left-8 bottom-16 w-32 h-32 bg-cyan-900 rounded-[2rem] -rotate-12 opacity-10"
            >
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <div
        class="w-8 h-12 border-2 border-cyan-900 rounded-full flex items-start justify-center p-2"
      >
        <div class="w-1.5 h-3 bg-orange-400 rounded-full"></div>
      </div>
    </div>
  </section>

  <!-- Team Members Section -->
  <Ourteam />

  <!-- CTA Section -->
  <div class="text-center py-20 px-6 bg-cyan-900">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-5xl font-black text-white mb-6">
        Ready to Work With a <span class="text-orange-400"
          >Passionate Team?</span
        >
      </h2>
      <p class="text-xl text-cyan-100 mb-8 max-w-2xl mx-auto">
        Let's turn your vision into reality. Our team is ready to deliver
        exceptional results.
      </p>
      <ButtonCustom text="Let's Talk" href="/contact" />
    </div>
  </div>

  <Whyus />
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }

  .animate-slide-up {
    animation: slide-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .delay-100 {
    animation-delay: 0.1s;
  }
</style>
