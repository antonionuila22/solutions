          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/mobile-phone-app-svgrepo-com.svg"
          title="CMS Development & Integration"
          description="Empower your team to manage content independently with custom content management systems. We develop headless CMS solutions and integrate platforms like Contentful, Sanity, or WordPress for full content control."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/host-website-se-svgrepo-com.svg"
          title="API Development & Integration"
          description="Connect your website to external services and internal systems with custom API development. We create RESTful and GraphQL APIs, integrate third-party services, and build microservices architectures."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/data-graphics-analysis-svgrepo-com.svg"
          title="Website Migration & Modernization"
          description="Upgrade legacy websites to modern platforms without losing SEO value or data. We handle complex migrations, redesigns, and platform transitions while preserving your search rankings and business continuity."
          learnMoreUrl="/contact"
        />
      </div>
    </div>
  </section>

  <!-- Technology Stack Section -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Built with <span class="text-orange-500">Modern Technologies</span>
        </h2>
        <p class="text-lg text-gray-700">
          We leverage the most powerful and reliable web technologies to ensure
          your project is fast, secure, scalable, and future-proof.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
        <div
          class="flex flex-col items-center gap-4 p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-shadow"
        >
          <img
            src="/icons/react-svgrepo-com.svg"
            alt="React"
            class="w-16 h-16"
          />
          <span class="text-sm font-semibold text-gray-700">React.js</span>
        </div>
