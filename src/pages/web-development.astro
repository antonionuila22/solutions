---
import Layout from "../layouts/Layout.astro";
import Whyus from "../components/whyus.astro";
import Faq from "../components/Faq.astro";
import CardService from "../components/CardService.astro";
import Button from "../components/Button.astro";

const title =
  "Professional Web Development Services | Custom Website Design & Development - Codebrand";
const description =
  "Transform your business with expert web development services. We create fast, responsive, SEO-optimized websites and custom web applications that drive real results. Specializing in modern frameworks, e-commerce solutions, and scalable web platforms.";
const keywords =
  "web development, custom website development, professional web design, responsive web development, e-commerce development, web application development, React development, Next.js development, full stack development, progressive web apps, mobile-friendly websites, SEO web development, website redesign, web development company, scalable web solutions, API development, CMS development";
const image = "/photos/webservice.webp";

// Service Schema for Web Development
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Web Development Services",
  "name": "Professional Web Development & Custom Website Design",
  "description": description,
  "url": "https://codebrand.us/web-development",
  "image": "https://codebrand.us/photos/webservice.webp",
  "provider": {
    "@type": "Organization",
    "name": "Codebrand",
    "url": "https://codebrand.us",
    "logo": "https://codebrand.us/iconcodebrand.svg"
  },
  "areaServed": {
    "@type": "Country",
    "name": "United States"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Web Development Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Custom Web Development",
          "description": "Tailored web applications built with React, Next.js, or Astro"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Responsive Website Design",
          "description": "Mobile-friendly websites that work on all devices"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Full-Stack Development",
          "description": "End-to-end web application development with modern technologies"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "API Development",
          "description": "RESTful and GraphQL API development and integration"
        }
      }
    ]
  },
  "priceRange": "$$$"
};
---

<Layout title={title} description={description} keywords={keywords} image={image}>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} />
  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-br from-cyan-50 via-white to-orange-50 py-16 sm:py-24 lg:py-32 font-poppins overflow-hidden"
  >
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220%200%2060%2060%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"
      >
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center max-w-4xl mx-auto">
        <span
          class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-100 text-cyan-800 text-sm font-semibold rounded-full mb-6"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
            ></path>
          </svg>
          Professional Web Development
        </span>
        <h1
          class="text-4xl sm:text-5xl lg:text-7xl font-bold text-cyan-900 mb-6 leading-tight"
        >
          Build Powerful Web Solutions That <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-600"
            >Drive Results</span
          >
        </h1>
        <p class="text-xl sm:text-2xl text-gray-700 mb-8 leading-relaxed">
          Partner with industry-leading web developers to create exceptional
          digital experiences. We combine cutting-edge technology, creative
          design, and strategic thinking to build websites and web applications
          that transform your business vision into reality.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
          >
            Start Your Project
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a
            href="#services"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white hover:bg-gray-50 text-cyan-900 rounded-xl font-bold text-lg shadow-lg border-2 border-cyan-200 transition-all duration-200"
          >
            View Our Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Section -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
          >
            Transform Your Digital Presence with Expert Web Development
          </h2>
          <div class="prose prose-lg text-gray-700 space-y-4">
            <p>
              In today's digital-first world, your website is often the first
              interaction potential customers have with your <a href="/branding" class="text-cyan-600 hover:text-cyan-700 font-semibold">brand</a>. It needs to
              make a lasting impression while delivering exceptional
              functionality and performance. At Codebrand, we specialize in
              creating custom web solutions that don't just look beautifulâ€”they
              drive measurable business results and provide seamless user
              experiences across all devices.
            </p>
            <p>
              Our web development services combine technical excellence with
              creative design to build fast, secure, and scalable websites.
              Whether you need a simple business website, a complex web
              application, or a full-featured <a href="/e-commerce" class="text-cyan-600 hover:text-cyan-700 font-semibold">e-commerce platform</a>, our team of
              experienced developers uses modern frameworks and best practices
              to deliver solutions that exceed expectations. We focus on
              performance optimization, mobile responsiveness, <a href="/seo" class="text-cyan-600 hover:text-cyan-700 font-semibold">SEO</a> architecture,
              and conversion-focused design.
            </p>
            <p>
              We understand that every business has unique challenges and goals.
              That's why we take a consultative approach to web development,
              working closely with you to understand your requirements, target
              audience, and business objectives. From startups launching their
              first website to enterprises modernizing legacy systems, we have
              the expertise and experience to deliver outstanding results that
              scale with your business growth.
            </p>
            <p>
              Our development process emphasizes collaboration, transparency,
              and quality. We use agile methodologies that allow for regular
              feedback and iterations, ensuring the final product aligns
              perfectly with your vision. With a focus on clean code, security
              best practices, and maintainability, we build websites that stand
              the test of time while remaining flexible enough to evolve with
              your changing needs.
            </p>
          </div>
        </div>
        <div class="relative">
          <div
            class="relative bg-gradient-to-br from-cyan-100 to-orange-100 rounded-3xl p-8 shadow-xl"
          >
            <div class="space-y-4">
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">150+</div>
                    <div class="text-sm text-gray-600">Projects Completed</div>
                  </div>
                </div>
              </div>
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"
                      ></path>
