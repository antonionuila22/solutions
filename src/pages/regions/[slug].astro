---
export const prerender = true;
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { createBreadcrumbSchema } from "../../utils/schema";
import { sanitizeHtml } from "../../lib/sanitize-html";

export async function getStaticPaths() {
  const regions = await getCollection("regions", ({ data }) => !data.draft);
  const locations = await getCollection("locations", ({ data }) => !data.draft);
  const countries = await getCollection("countryareas", ({ data }) => !data.draft);

  return regions.map((region) => {
    // Get cities in this region
    const regionCities = locations.filter(loc => loc.data.region === region.slug);
    // Get country info
    const country = countries.find(c => c.slug === region.data.country);

    return {
      params: { slug: region.slug },
      props: { region, cities: regionCities, country },
    };
  });
}

const { region, cities, country } = Astro.props;
const { data } = region;
const {
  title,
  description,
  name,
  code,
  img,
  imageAlt,
  population,
  capital,
  timezone,
  keywords,
  longDescription,
  industries,
  marketHighlights,
  faqs,
  majorCities,
  regionalStats
} = data;

// Sort cities by featured first, then by population/name
const sortedCities = cities.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.city.localeCompare(b.data.city);
});

// SEO
const baseUrl = "https://codebrand.us";
const seoKeywords = [
  `web development ${name}`,
  `${name} web development company`,
  `web developers ${name}`,
  ...(keywords || []),
  ...cities.map(c => `web development ${c.data.city}`)
].join(", ");

// Breadcrumb schema
const breadcrumbSchema = createBreadcrumbSchema([
  { name: "Home", url: baseUrl },
  { name: "Locations", url: `${baseUrl}/countryareas` },
  { name: country?.data.name || "Country", url: `${baseUrl}/countryareas/${region.data.country}` },
  { name: name, url: `${baseUrl}/regions/${region.slug}` },
]);

// ItemList schema for cities
const citiesListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": `Web Development Cities in ${name}`,
  "description": `Cities served by Codebrand in ${name}`,
  "numberOfItems": cities.length,
  "itemListElement": sortedCities.map((city, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": `Web Development ${city.data.city}, ${code}`,
    "url": `${baseUrl}/locations/${city.slug}`,
  })),
};

// FAQ Schema for SEO
const faqSchema = faqs && faqs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
} : null;
---

<Layout
  title={title}
  description={description}
  keywords={seoKeywords}
  image={img || "/photos/webservice.webp"}
>
  <!-- Structured Data -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(breadcrumbSchema)} />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(citiesListSchema)} />
  {faqSchema && (
    <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} />
  )}

  <!-- Hero Section -->
  <section class="relative bg-white py-16 sm:py-24 font-poppins overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220%200%2060%2060%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center max-w-4xl mx-auto">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-100 text-cyan-800 text-sm font-semibold rounded-full mb-6">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
          {code} Â· {cities.length} {cities.length === 1 ? 'City' : 'Cities'} Served
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-cyan-900 mb-6 leading-tight">
          Web Development in <span class="text-orange-500">{name}</span>
        </h1>
        <p class="text-xl sm:text-2xl text-gray-700 mb-8 leading-relaxed max-w-3xl mx-auto">
          {description}
        </p>

        <!-- Quick Stats -->
        <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-600 mb-8">
          {population && (
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              Population: {population}
            </span>
          )}
          {capital && (
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Capital: {capital}
            </span>
          )}
          {timezone && (
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Timezone: {timezone}
            </span>
          )}
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
            Get Free Quote
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Breadcrumbs
    items={[
      { name: "Home", href: "/" },
      { name: "Service Areas", href: "/countryareas" },
      { name: country?.data.name || "Country", href: `/countryareas/${region.data.country}` },
      { name: name, href: "" }
    ]}
    variant="transparent"
    class="bg-gray-50 border-y border-gray-100"
  />

  <!-- Extended Description Section -->
  {longDescription && (
    <section class="py-12 lg:py-16 bg-white font-poppins">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed" set:html={sanitizeHtml(longDescription || '')} />
      </div>
    </section>
  )}

  <!-- Industries Section -->
  {industries && industries.length > 0 && (
    <section class="py-12 lg:py-16 bg-gray-50 font-poppins">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
          <h2 class="text-3xl sm:text-4xl font-bold text-cyan-900 mb-4">
            Industries We Serve in {name}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Specialized web development for {name}'s key economic sectors.
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {industries.map((industry) => (
            <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
              <h3 class="text-lg font-bold text-cyan-900 mb-2">{industry.name}</h3>
              {industry.description && (
                <p class="text-gray-600 text-sm">{industry.description}</p>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Market Highlights & Stats Section -->
  {(marketHighlights && marketHighlights.length > 0) || regionalStats ? (
    <section class="py-12 lg:py-16 bg-white font-poppins">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          {marketHighlights && marketHighlights.length > 0 && (
            <div>
              <h2 class="text-2xl font-bold text-cyan-900 mb-6">
                {name} Market Highlights
              </h2>
              <ul class="space-y-3">
                {marketHighlights.map((highlight) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-orange-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-700">{highlight}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
          {regionalStats && (
            <div>
              <h2 class="text-2xl font-bold text-cyan-900 mb-6">
                Regional Statistics
              </h2>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                {regionalStats.gdp && (
                  <div class="bg-cyan-50 p-4 rounded-xl text-center">
                    <div class="text-2xl font-bold text-cyan-900">{regionalStats.gdp}</div>
                    <div class="text-sm text-gray-600">State GDP</div>
                  </div>
                )}
                {regionalStats.techCompanies && (
                  <div class="bg-cyan-50 p-4 rounded-xl text-center">
                    <div class="text-2xl font-bold text-cyan-900">{regionalStats.techCompanies}</div>
                    <div class="text-sm text-gray-600">Tech Companies</div>
                  </div>
                )}
                {regionalStats.businessGrowth && (
                  <div class="bg-cyan-50 p-4 rounded-xl text-center">
                    <div class="text-2xl font-bold text-cyan-900">{regionalStats.businessGrowth}</div>
                    <div class="text-sm text-gray-600">Business Growth</div>
                  </div>
                )}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>
  ) : null}

  <!-- Cities Grid -->
  {cities.length > 0 && (
    <section class="py-16 lg:py-24 bg-white font-poppins">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-cyan-900 mb-4">
            Cities We Serve in {name}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Select your city for localized web development services and information.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedCities.map((city) => (
            <a
              href={`/locations/${city.slug}`}
              class="group bg-white p-6 rounded-2xl shadow-md hover:shadow-xl border border-cyan-100 hover:border-orange-300 transition-all duration-300 transform hover:-translate-y-1"
            >
              <div class="flex items-start justify-between mb-3">
                <div class="w-10 h-10 bg-cyan-900 rounded-lg flex items-center justify-center group-hover:bg-orange-500 transition-all duration-300">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                {city.data.featured && (
                  <span class="px-2 py-1 bg-orange-100 text-orange-700 text-xs font-semibold rounded-full">
                    Featured
                  </span>
                )}
              </div>

              <h3 class="text-xl font-bold text-cyan-900 mb-2 group-hover:text-orange-600 transition-colors">
                {city.data.city}
              </h3>

              <p class="text-gray-600 text-sm mb-3 line-clamp-2">
                {city.data.description}
              </p>

              {city.data.population && (
                <p class="text-xs text-gray-500 mb-3">
                  Population: {city.data.population}
                </p>
              )}

              <span class="inline-flex items-center gap-2 text-orange-600 font-semibold text-sm group-hover:gap-3 transition-all">
                View Services
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Why Choose Us -->
  <section class="py-16 lg:py-24 bg-gray-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-cyan-900 mb-4">
          Why {name} Businesses Choose Codebrand
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Nearshore development with all the benefits of a local team.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-2xl shadow-md">
          <div class="w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">Cost-Effective</h3>
          <p class="text-gray-600">
            Competitive rates compared to local {name} agencies.
          </p>
        </div>

        <div class="bg-white p-8 rounded-2xl shadow-md">
          <div class="w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">Timezone Compatible</h3>
          <p class="text-gray-600">
            Honduras CST aligns with {name}'s {timezone} timezone for real-time collaboration.
          </p>
        </div>

        <div class="bg-white p-8 rounded-2xl shadow-md">
          <div class="w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">Bilingual Team</h3>
          <p class="text-gray-600">
            Fluent English communication with no language barriers.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  {faqs && faqs.length > 0 && (
    <section class="py-16 lg:py-24 bg-white font-poppins">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-cyan-900 mb-4">
            Frequently Asked Questions
          </h2>
          <p class="text-xl text-gray-600">
            Common questions about web development services in {name}.
          </p>
        </div>
        <div class="space-y-6">
          {faqs.map((faq) => (
            <div class="bg-gray-50 rounded-xl p-6">
              <h3 class="text-lg font-bold text-cyan-900 mb-3">{faq.question}</h3>
              <p class="text-gray-700 leading-relaxed">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-cyan-900 to-cyan-800 font-poppins">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Ready to Start Your {name} Project?
      </h2>
      <p class="text-xl text-cyan-100 mb-8">
        Get a free consultation and detailed project quote. No commitment required.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white rounded-xl font-bold text-lg shadow-lg transition-all duration-200">
          Get Free Quote
        </a>
        <a href="/projects" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white hover:bg-gray-100 text-cyan-900 rounded-xl font-bold text-lg shadow-lg transition-all duration-200">
          View Our Work
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
