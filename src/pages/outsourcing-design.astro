---
/**
 * Graphic Design Outsourcing Services Page
 * CREATIVE + CLEAN - This page must BE impressive design
 */

import Layout from "../layouts/Layout.astro";
import FaqDark from "../components/FaqDark.tsx";

// SEO
const title = "Graphic Design Outsourcing | White-Label Design Partner - Codebrand";
const description = "White-label graphic design partner for agencies and businesses. Brand identity, social media graphics, marketing materials, and print design.";
const keywords = "white label design, design outsourcing, graphic design partner, brand design agency, social media design";

// Schema
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Codebrand Design Outsourcing",
  "url": "https://codebrand.us/outsourcing-design",
  "description": description
};

// FAQ
const faqs = [
  { question: "How does design outsourcing work?", answer: "Send us your briefs and brand guidelines. We deliver polished designs ready for your clients. White-label, NDA-protected, unlimited revisions." },
  { question: "What file formats do you deliver?", answer: "All source files (AI, PSD, Figma) plus exports (PNG, JPG, PDF, SVG). Print-ready files with bleeds when needed." },
  { question: "How fast is turnaround?", answer: "Social graphics: 24-48h. Brand identities: 1-2 weeks. Rush delivery available." },
  { question: "What about revisions?", answer: "Unlimited revisions until approved. We're not done until you're happy." },
  { question: "How does pricing work?", answer: "Retainers from $2,500/mo. Per-project from $500. Volume discounts available." }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
  }))
};

// Services with icons
const services = [
  { title: "Brand Identity", desc: "Logos, guidelines, visual systems", icon: "◆" },
  { title: "Social Media", desc: "Posts, stories, ads, templates", icon: "◐" },
  { title: "Marketing", desc: "Decks, brochures, one-pagers", icon: "▲" },
  { title: "Print Design", desc: "Cards, packaging, signage", icon: "■" },
  { title: "Web Graphics", desc: "Banners, icons, UI elements", icon: "●" },
  { title: "Illustration", desc: "Custom art, infographics", icon: "✦" }
];

// Work showcase
const showcase = [
  { title: "Brand Systems", color: "from-purple-600 to-pink-600" },
  { title: "Social Campaigns", color: "from-cyan-500 to-blue-600" },
  { title: "Pitch Decks", color: "from-orange-500 to-red-500" },
  { title: "Packaging", color: "from-green-500 to-emerald-600" }
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  canonicalOverride="https://codebrand.us/outsourcing-design"
>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script is:inline type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <style>
    .page-bg { background: #050505; }

    /* Animated gradient mesh */
    .gradient-mesh {
      position: fixed;
      inset: 0;
      background:
        radial-gradient(ellipse 80% 60% at 10% 10%, rgba(139, 92, 246, 0.15), transparent 50%),
        radial-gradient(ellipse 60% 50% at 90% 20%, rgba(236, 72, 153, 0.12), transparent 50%),
        radial-gradient(ellipse 50% 40% at 50% 90%, rgba(6, 182, 212, 0.08), transparent 50%);
      pointer-events: none;
      z-index: 0;
    }

    /* Typography */
    .text-massive {
      font-size: clamp(3.5rem, 15vw, 12rem);
      line-height: 0.85;
      letter-spacing: -0.04em;
    }
    .text-gradient {
      background: linear-gradient(135deg, #a855f7 0%, #ec4899 50%, #f97316 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .text-outline {
      -webkit-text-stroke: 2px rgba(255,255,255,0.5);
      -webkit-text-fill-color: transparent;
      color: transparent;
    }

    /* Cards */
    .card {
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid rgba(255, 255, 255, 0.05);
      border-radius: 24px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .card:hover {
      background: rgba(255, 255, 255, 0.04);
      border-color: rgba(255, 255, 255, 0.1);
      transform: translateY(-4px);
    }

    /* Bento grid */
    .bento-grid {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      gap: 1rem;
    }
    @media (max-width: 768px) {
      .bento-grid { grid-template-columns: 1fr; }
      .bento-grid > * { grid-column: span 1 !important; }
    }

    /* Showcase cards */
    .showcase-card {
      position: relative;
      border-radius: 24px;
      overflow: hidden;
      aspect-ratio: 4/3;
      cursor: pointer;
    }
    .showcase-card::before {
      content: '';
      position: absolute;
      inset: 0;
      opacity: 0.9;
      transition: opacity 0.4s;
    }
    .showcase-card:hover::before {
      opacity: 1;
    }
    .showcase-card:hover {
      transform: scale(1.02);
    }

    /* Service icon */
    .service-icon {
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.25rem;
      background: linear-gradient(135deg, rgba(168,85,247,0.2), rgba(236,72,153,0.2));
      border-radius: 12px;
      color: #e879f9;
    }

    /* Buttons */
    .btn-primary {
      background: linear-gradient(135deg, #a855f7, #ec4899);
      color: #fff;
      font-weight: 600;
      padding: 1.125rem 2.5rem;
      border-radius: 9999px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    .btn-primary::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, #c084fc, #f472b6);
      opacity: 0;
      transition: opacity 0.3s;
    }
    .btn-primary:hover::before { opacity: 1; }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 20px 40px -10px rgba(168, 85, 247, 0.5);
    }
    .btn-primary span { position: relative; z-index: 1; }

    .btn-outline {
      color: #fff;
      font-weight: 500;
      padding: 1.125rem 2.5rem;
      border-radius: 9999px;
      border: 1px solid rgba(255, 255, 255, 0.15);
      transition: all 0.3s ease;
    }
    .btn-outline:hover {
      border-color: rgba(168, 85, 247, 0.5);
      background: rgba(168, 85, 247, 0.1);
    }

    /* Marquee */
    .marquee {
      display: flex;
      overflow: hidden;
      user-select: none;
      gap: 4rem;
      mask-image: linear-gradient(90deg, transparent, white 10%, white 90%, transparent);
    }
    .marquee-content {
      display: flex;
      gap: 4rem;
      animation: scroll 30s linear infinite;
    }
    @keyframes scroll {
      from { transform: translateX(0); }
      to { transform: translateX(-50%); }
    }

    /* Fade animations */
    .fade-up {
      opacity: 0;
      transform: translateY(40px);
      transition: opacity 1s cubic-bezier(0.16, 1, 0.3, 1), transform 1s cubic-bezier(0.16, 1, 0.3, 1);
    }
    .fade-up.visible {
      opacity: 1;
      transform: translateY(0);
    }
    .delay-1 { transition-delay: 0.1s; }
    .delay-2 { transition-delay: 0.2s; }
    .delay-3 { transition-delay: 0.3s; }
    .delay-4 { transition-delay: 0.4s; }

    /* Divider */
    .divider {
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(168,85,247,0.4), rgba(236,72,153,0.4), transparent);
    }

    /* Stats */
    .stat-number {
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 700;
      line-height: 1;
    }

    /* Process line */
    .process-line {
      position: absolute;
      top: 24px;
      left: 24px;
      right: 24px;
      height: 1px;
      background: linear-gradient(90deg, rgba(168,85,247,0.5), rgba(236,72,153,0.5), rgba(6,182,212,0.5));
    }
  </style>

  <div class="page-bg min-h-screen relative overflow-hidden text-white">
    <div class="gradient-mesh"></div>

    <div class="relative z-10">

      <!-- ==================== HERO ==================== -->
      <section class="min-h-screen flex flex-col justify-center px-6 py-20">
        <div class="max-w-7xl mx-auto w-full">
          <!-- Eyebrow -->
          <div class="fade-up mb-8">
            <span class="inline-flex items-center gap-2 text-purple-400 text-sm font-medium tracking-widest uppercase">
              <span class="w-8 h-px bg-purple-400"></span>
              Design Outsourcing
            </span>
          </div>

          <!-- Massive headline -->
          <h1 class="fade-up delay-1 text-massive font-bold text-white mb-4">
            Design
          </h1>
          <h1 class="fade-up delay-2 text-massive font-bold text-outline mb-12">
            On Demand
          </h1>

          <!-- Subtitle -->
          <p class="fade-up delay-3 text-xl md:text-2xl text-neutral-400 max-w-xl mb-12 leading-relaxed">
            White-label design for agencies. Fast turnaround. Unlimited revisions. Your brand, our craft.
          </p>

          <!-- CTAs -->
          <div class="fade-up delay-4 flex flex-wrap gap-4 mb-20">
            <a href="/contact" class="btn-primary"><span>Start Creating</span></a>
            <a href="#work" class="btn-outline">See Our Work</a>
          </div>

          <!-- Stats row -->
          <div class="fade-up grid grid-cols-2 md:grid-cols-4 gap-8 pt-12 border-t border-white/10">
            <div>
              <div class="stat-number text-gradient">500+</div>
              <div class="text-neutral-500 text-sm mt-1">Designs Delivered</div>
            </div>
            <div>
              <div class="stat-number text-white">24h</div>
              <div class="text-neutral-500 text-sm mt-1">Avg. Turnaround</div>
            </div>
            <div>
              <div class="stat-number text-white">∞</div>
              <div class="text-neutral-500 text-sm mt-1">Revisions</div>
            </div>
            <div>
              <div class="stat-number text-white">100%</div>
              <div class="text-neutral-500 text-sm mt-1">Satisfaction</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Marquee -->
      <div class="py-8 border-y border-white/5">
        <div class="marquee">
          <div class="marquee-content">
            {[...Array(2)].map(() => (
              <>
                <span class="text-2xl font-bold text-white/10 whitespace-nowrap">Brand Identity</span>
                <span class="text-purple-500">◆</span>
                <span class="text-2xl font-bold text-white/10 whitespace-nowrap">Social Media</span>
                <span class="text-pink-500">◐</span>
                <span class="text-2xl font-bold text-white/10 whitespace-nowrap">Marketing Materials</span>
                <span class="text-cyan-500">▲</span>
                <span class="text-2xl font-bold text-white/10 whitespace-nowrap">Print Design</span>
                <span class="text-orange-500">■</span>
                <span class="text-2xl font-bold text-white/10 whitespace-nowrap">Illustration</span>
                <span class="text-green-500">✦</span>
              </>
            ))}
          </div>
        </div>
      </div>

      <!-- ==================== WORK SHOWCASE ==================== -->
      <section id="work" class="py-32 px-6">
        <div class="max-w-7xl mx-auto">
          <div class="fade-up flex flex-col md:flex-row md:items-end justify-between gap-6 mb-16">
            <div>
              <p class="text-purple-400 text-sm font-medium tracking-widest uppercase mb-4">What We Create</p>
              <h2 class="text-4xl md:text-6xl font-bold text-white">
                Work that<br/>
                <span class="text-gradient">converts.</span>
              </h2>
            </div>
            <p class="text-neutral-400 max-w-sm">
              From brand identities to campaign assets — design that makes an impact.
            </p>
          </div>

          <!-- Bento showcase -->
          <div class="bento-grid">
            <div class="fade-up col-span-7 showcase-card" style="transition-delay: 0.1s">
              <div class={`absolute inset-0 bg-gradient-to-br ${showcase[0].color}`}></div>
              <div class="absolute inset-0 flex items-end p-8">
                <span class="text-white text-2xl font-bold">{showcase[0].title}</span>
              </div>
            </div>
            <div class="fade-up col-span-5 showcase-card" style="transition-delay: 0.2s">
              <div class={`absolute inset-0 bg-gradient-to-br ${showcase[1].color}`}></div>
              <div class="absolute inset-0 flex items-end p-8">
                <span class="text-white text-2xl font-bold">{showcase[1].title}</span>
              </div>
            </div>
            <div class="fade-up col-span-5 showcase-card" style="transition-delay: 0.3s">
              <div class={`absolute inset-0 bg-gradient-to-br ${showcase[2].color}`}></div>
              <div class="absolute inset-0 flex items-end p-8">
                <span class="text-white text-2xl font-bold">{showcase[2].title}</span>
              </div>
            </div>
            <div class="fade-up col-span-7 showcase-card" style="transition-delay: 0.4s">
              <div class={`absolute inset-0 bg-gradient-to-br ${showcase[3].color}`}></div>
              <div class="absolute inset-0 flex items-end p-8">
                <span class="text-white text-2xl font-bold">{showcase[3].title}</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- ==================== SERVICES ==================== -->
      <section class="py-32 px-6 bg-white/[0.01]">
        <div class="max-w-7xl mx-auto">
          <div class="fade-up text-center mb-20">
            <p class="text-purple-400 text-sm font-medium tracking-widest uppercase mb-4">Services</p>
            <h2 class="text-4xl md:text-5xl font-bold text-white">
              Everything you need
            </h2>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {services.map((service, i) => (
              <div class="fade-up card p-8 group" style={`transition-delay: ${i * 0.1}s`}>
                <div class="service-icon mb-6 group-hover:scale-110 transition-transform">
                  {service.icon}
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">{service.title}</h3>
                <p class="text-neutral-400">{service.desc}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- ==================== PROCESS ==================== -->
      <section class="py-32 px-6">
        <div class="max-w-7xl mx-auto">
          <div class="fade-up text-center mb-20">
            <p class="text-purple-400 text-sm font-medium tracking-widest uppercase mb-4">Process</p>
            <h2 class="text-4xl md:text-5xl font-bold text-white">
              Brief → Design → Done
            </h2>
          </div>

          <div class="relative">
            <div class="process-line hidden md:block"></div>
            <div class="grid md:grid-cols-4 gap-8">
              {[
                { num: "01", title: "Brief", desc: "Share requirements and brand assets" },
                { num: "02", title: "Create", desc: "We design, you review" },
                { num: "03", title: "Refine", desc: "Unlimited revisions" },
                { num: "04", title: "Deliver", desc: "All files, ready to use" }
              ].map((step, i) => (
                <div class="fade-up text-center" style={`transition-delay: ${i * 0.15}s`}>
                  <div class="w-12 h-12 mx-auto mb-6 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold relative z-10">
                    {step.num}
                  </div>
                  <h3 class="text-xl font-semibold text-white mb-2">{step.title}</h3>
                  <p class="text-neutral-400 text-sm">{step.desc}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      <!-- ==================== PRICING ==================== -->
      <section class="py-32 px-6 bg-white/[0.01]">
        <div class="max-w-6xl mx-auto">
          <div class="fade-up text-center mb-20">
            <p class="text-purple-400 text-sm font-medium tracking-widest uppercase mb-4">Pricing</p>
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
              Simple, transparent
            </h2>
          </div>

          <div class="grid md:grid-cols-3 gap-8">
            {[
              {
                title: "Retainer",
                price: "$2,500",
                period: "/month",
                desc: "Ongoing design support",
                features: ["40 design hours", "Dedicated designer", "24h turnaround", "Unlimited revisions", "All source files"],
                highlighted: true
              },
              {
                title: "Project",
                price: "$500",
                period: "+",
                desc: "One-time projects",
                features: ["Fixed deliverables", "Clear timeline", "2 revision rounds", "Source files included"],
                highlighted: false
              },
              {
                title: "Rush",
                price: "+50%",
                period: "",
                desc: "Need it yesterday?",
                features: ["Same-day start", "12h turnaround", "Priority support", "Direct communication"],
                highlighted: false
              }
            ].map((plan, i) => (
              <div class={`fade-up card p-8 ${plan.highlighted ? 'ring-2 ring-purple-500/50 bg-purple-500/5' : ''}`} style={`transition-delay: ${i * 0.15}s`}>
                {plan.highlighted && (
                  <span class="inline-block text-xs font-semibold text-purple-400 bg-purple-500/20 px-3 py-1 rounded-full mb-6">
                    Most Popular
                  </span>
                )}
                <h3 class="text-2xl font-bold text-white mb-2">{plan.title}</h3>
                <p class="text-neutral-400 mb-6">{plan.desc}</p>
                <div class="mb-6">
                  <span class="text-4xl font-bold text-white">{plan.price}</span>
                  <span class="text-neutral-500">{plan.period}</span>
                </div>
                <ul class="space-y-3 mb-8">
                  {plan.features.map((feature) => (
                    <li class="flex items-center gap-3 text-neutral-300 text-sm">
                      <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                <a href="/contact" class={plan.highlighted ? 'btn-primary w-full text-center block' : 'btn-outline w-full text-center block'}>
                  <span>Get Started</span>
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- ==================== FAQ ==================== -->
      <section class="py-32 px-6">
        <div class="max-w-3xl mx-auto">
          <div class="fade-up text-center mb-16">
            <p class="text-purple-400 text-sm font-medium tracking-widest uppercase mb-4">FAQ</p>
            <h2 class="text-4xl md:text-5xl font-bold text-white">
              Questions?
            </h2>
          </div>
          <div class="fade-up">
            <FaqDark faqs={faqs} client:visible />
          </div>
        </div>
      </section>

      <!-- ==================== CTA ==================== -->
      <section class="py-32 px-6 relative overflow-hidden">
        <!-- Decorative gradient -->
        <div class="absolute inset-0 bg-gradient-to-t from-purple-500/10 via-transparent to-transparent pointer-events-none"></div>

        <div class="max-w-4xl mx-auto text-center relative">
          <div class="fade-up">
            <p class="text-purple-400 text-sm font-medium tracking-widest uppercase mb-6">Ready?</p>
            <h2 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
              Let's create<br/>
              <span class="text-gradient">something great.</span>
            </h2>
            <p class="text-xl text-neutral-400 mb-10 max-w-xl mx-auto">
              Send us a brief. Get a quote in 24 hours.
            </p>
            <a href="/contact" class="btn-primary inline-block text-lg px-12 py-5">
              <span>Start a Project</span>
            </a>
          </div>
        </div>
      </section>

    </div>
  </div>

  <!-- Scroll animations -->
  <script>
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

    document.querySelectorAll('.fade-up').forEach((el) => observer.observe(el));
  </script>
</Layout>
