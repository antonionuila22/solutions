---
import Layout from "../layouts/Layout.astro";
import Whyus from "../components/whyus.astro";
import Faq from "../components/Faq.astro";
import CardService from "../components/CardService.astro";
import Button from "../components/Button.astro";

const title = "Digital Marketing Services | SEO, PPC, Social Media & Content Marketing - Codebrand";
const description =
  "Grow your business with comprehensive digital marketing services. Expert SEO, PPC advertising, social media marketing, content strategy, email campaigns, and conversion optimization that drive real ROI and measurable results.";
const keywords =
  "digital marketing, SEO services, PPC advertising, social media marketing, content marketing, email marketing, conversion optimization, Google Ads, Facebook Ads, Instagram marketing, digital marketing agency, online marketing services, marketing strategy, lead generation, brand awareness, marketing automation, influencer marketing, video marketing, analytics and reporting";
const image = "/photos/socialmedia.webp";

// Service Schema for Digital Marketing
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Digital Marketing Services",
  "name": "Comprehensive Digital Marketing Solutions",
  "description": description,
  "url": "https://codebrand.us/digital-marketing",
  "image": "https://codebrand.us/photos/socialmedia.webp",
  "provider": {
    "@type": "Organization",
    "name": "Codebrand",
    "url": "https://codebrand.us",
    "logo": "https://codebrand.us/iconcodebrand.svg"
  },
  "areaServed": {
    "@type": "Country",
    "name": "United States"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Digital Marketing Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "PPC Advertising",
          "description": "Google Ads and paid search campaign management"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Social Media Marketing",
          "description": "Facebook, Instagram, LinkedIn, and TikTok marketing"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Content Marketing",
          "description": "Strategic content creation and distribution"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Email Marketing",
          "description": "Email campaigns, automation, and lead nurturing"
        }
      }
    ]
  },
  "priceRange": "$$$"
};
---

<Layout title={title} description={description} keywords={keywords} image={image}>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} />
  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-br from-cyan-50 via-white to-orange-50 py-16 sm:py-24 lg:py-32 font-poppins overflow-hidden"
  >
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220%200%2060%2060%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"
      >
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center max-w-4xl mx-auto">
        <span
          class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-100 text-cyan-800 text-sm font-semibold rounded-full mb-6"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"
            ></path>
            <path
              d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"
            ></path>
          </svg>
          Digital Marketing Excellence
        </span>
        <h1
          class="text-4xl sm:text-5xl lg:text-7xl font-bold text-cyan-900 mb-6 leading-tight"
        >
          Grow Your Business with <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-600"
            >Data-Driven Marketing</span
          >
        </h1>
        <p class="text-xl sm:text-2xl text-gray-700 mb-8 leading-relaxed">
          Transform your digital presence into a revenue-generating machine. We create comprehensive marketing strategies that combine SEO, paid advertising, social media, and content to drive qualified leads and maximize ROI.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
          >
            Get Free Marketing Audit
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a
            href="#services"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white hover:bg-gray-50 text-cyan-900 rounded-xl font-bold text-lg shadow-lg border-2 border-cyan-200 transition-all duration-200"
          >
            Explore Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Section -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
          >
            Strategic Digital Marketing That Delivers Measurable Results
          </h2>
          <div class="prose prose-lg text-gray-700 space-y-4">
            <p>
              Digital marketing has evolved far beyond simple banner ads and social media posts. In today's competitive landscape, successful marketing requires a sophisticated blend of strategy, creativity, data analysis, and technical execution. At Codebrand, we specialize in creating integrated digital marketing campaigns that drive real business growth, generate qualified leads, and maximize your return on investment. Our <a href="/team" class="text-cyan-600 hover:text-cyan-700 font-semibold">expert marketing team</a> combines <a href="/services/seo" class="text-cyan-600 hover:text-cyan-700 font-semibold">SEO expertise</a> with <a href="/copywriting" class="text-cyan-600 hover:text-cyan-700 font-semibold">conversion copywriting</a> to deliver exceptional results.
            </p>
            <p>
              Our comprehensive approach combines search engine optimization (SEO), pay-per-click advertising (PPC), social media marketing, content creation, email campaigns, and conversion rate optimization into cohesive strategies tailored to your unique business goals. We don't believe in one-size-fits-all solutions. Instead, we take time to understand your industry, target audience, competitive landscape, and business objectives to craft custom marketing plans that deliver exceptional results.
            </p>
            <p>
              What sets us apart is our commitment to transparency and measurable outcomes. Every campaign we run is backed by comprehensive analytics and regular reporting. You'll always know exactly how your marketing budget is being spent and what results it's generating. From increasing website traffic and improving search rankings to boosting conversions and growing revenue, we focus on the metrics that matter most to your business success. Our campaigns integrate seamlessly with <a href="/landing-pages" class="text-cyan-600 hover:text-cyan-700 font-semibold">high-converting landing pages</a> and <a href="/services/web-development" class="text-cyan-600 hover:text-cyan-700 font-semibold">optimized websites</a> for maximum impact.
            </p>
            <p>
              Whether you're a startup looking to establish your digital presence, a growing business seeking to scale your customer acquisition, or an established company aiming to dominate your market, our team has the expertise and experience to help you achieve your goals. We stay ahead of industry trends, algorithm updates, and platform changes to ensure your marketing strategy remains effective and competitive in the ever-evolving digital landscape.
            </p>
          </div>
        </div>
        <div class="relative">
          <div
            class="relative bg-gradient-to-br from-cyan-100 to-orange-100 rounded-3xl p-8 shadow-xl"
          >
            <div class="space-y-4">
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">340%</div>
                    <div class="text-sm text-gray-600">Average ROI Increase</div>
                  </div>
                </div>
              </div>
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">500+</div>
                    <div class="text-sm text-gray-600">Clients Served</div>
                  </div>
                </div>
              </div>
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">250%</div>
                    <div class="text-sm text-gray-600">Lead Growth Average</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-16 lg:py-24 bg-gray-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Complete Digital Marketing <span class="text-orange-500"
            >Services</span
          >
        </h2>
        <p class="text-lg text-gray-700">
          From strategy development to execution and optimization, we offer full-service digital marketing solutions designed to grow your business.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <CardService
          icon="/icons/seo.png"
          title="Search Engine Optimization (SEO)"
          description="Dominate search rankings with comprehensive SEO strategies. We optimize technical elements, create compelling content, build authoritative backlinks, and conduct keyword research to drive organic traffic and qualified leads."
          learnMoreUrl="/seo"
        />

        <CardService
          icon="/icons/target-focus-svgrepo-com.svg"
          title="Pay-Per-Click Advertising (PPC)"
          description="Maximize ROI with expertly managed PPC campaigns on Google Ads, Microsoft Ads, and social platforms. From keyword research to ad creation and bid management, we optimize every dollar of your advertising budget."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/redes-sociales.png"
          title="Social Media Marketing"
          description="Build engaged communities and drive conversions through strategic social media campaigns. We create compelling content, manage communities, run targeted ads, and analyze performance across all major platforms."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/brainstorming-svgrepo-com.svg"
          title="Content Marketing"
          description="Attract and convert your target audience with valuable, relevant content. Our content strategists create blog posts, videos, infographics, ebooks, and case studies that establish thought leadership and drive action."
          learnMoreUrl="/copywriting"
        />

        <CardService
          icon="/icons/email-chat-svgrepo-com.svg"
          title="Email Marketing Campaigns"
          description="Nurture leads and retain customers with personalized email campaigns. We design beautiful templates, segment audiences, create automated workflows, and optimize for maximum open rates and conversions."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/financial-report-svgrepo-com.svg"
          title="Conversion Rate Optimization"
          description="Turn more visitors into customers with data-driven CRO strategies. We conduct A/B testing, analyze user behavior, optimize landing pages, and improve user experience to maximize conversion rates."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/data-graphics-analysis-svgrepo-com.svg"
          title="Marketing Analytics & Reporting"
          description="Make informed decisions with comprehensive marketing analytics. We track KPIs, create custom dashboards, provide detailed reports, and deliver actionable insights to continuously improve campaign performance."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/operating-system-svgrepo-com.svg"
          title="Marketing Automation"
          description="Scale your marketing efforts with intelligent automation. We implement and optimize platforms like HubSpot, Marketo, and ActiveCampaign to automate lead nurturing, scoring, and customer journey management."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/edicion-de-video.png"
          title="Video Marketing"
          description="Engage audiences with compelling video content. From strategy and scripting to production and distribution, we create videos that tell your story, demonstrate products, and drive conversions across all channels."
          learnMoreUrl="/contact"
        />
      </div>
    </div>
  </section>

  <!-- Channels Section -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Multi-Channel <span class="text-orange-500">Marketing Expertise</span>
        </h2>
        <p class="text-lg text-gray-700">
          We leverage the most effective marketing channels to reach your target audience wherever they are online.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
        <div class="flex flex-col items-center gap-3 p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </div>
          <span class="text-sm font-semibold text-gray-700">YouTube</span>
        </div>

        <div class="flex flex-col items-center gap-3 p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </div>
          <span class="text-sm font-semibold text-gray-700">Twitter/X</span>
        </div>

        <div class="flex flex-col items-center gap-3 p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-gradient-to-br from-pink-500 to-pink-600 rounded-xl flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </div>
          <span class="text-sm font-semibold text-gray-700">Instagram</span>
        </div>

        <div class="flex flex-col items-center gap-3 p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.676 0H1.324C.593 0 0 .593 0 1.324v21.352C0 23.408.593 24 1.324 24h11.494v-9.294H9.689v-3.621h3.129V8.41c0-3.099 1.894-4.785 4.659-4.785 1.325 0 2.464.097 2.796.141v3.24h-1.921c-1.5 0-1.792.721-1.792 1.771v2.311h3.584l-.465 3.63H16.56V24h6.115c.733 0 1.325-.592 1.325-1.324V1.324C24 .593 23.408 0 22.676 0"/>
            </svg>
          </div>
          <span class="text-sm font-semibold text-gray-700">Facebook</span>
        </div>

        <div class="flex flex-col items-center gap-3 p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-700 to-blue-800 rounded-xl flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </div>
          <span class="text-sm font-semibold text-gray-700">LinkedIn</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-cyan-50 to-orange-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Our Marketing <span class="text-orange-500">Methodology</span>
        </h2>
        <p class="text-lg text-gray-700">
          We follow a proven framework that delivers consistent results and continuous improvement.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div class="w-12 h-12 bg-gradient-to-br from-cyan-500 to-cyan-600 rounded-xl flex items-center justify-center mb-4">
