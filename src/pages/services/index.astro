---
import Layout from "../../layouts/Layout.astro";
import CardService from "../../components/CardService.astro";
import Whyus from "../../components/whyus.astro";
import Faq from "../../components/Faq.astro";
import Button from "../../components/Button.astro";
---

<Layout
  title="Our Services | Complete Digital Solutions - Codebrand"
  description="Discover all our digital services: web design, development, branding, SEO, digital marketing, 3D animation and more. Professional solutions to boost your business."
  keywords="digital services, web design, web development, branding, SEO, digital marketing, social media, 3D animation, 3D rendering, UX/UI design"
  image="/photos/bannercodebrand.webp"
>
  <!-- Hero Section - Services Overview -->
  <section class="relative min-h-[85vh] md:min-h-[90vh] overflow-hidden bg-gradient-to-b from-white via-slate-50 to-white">
    <!-- Decorative Background -->
    <div
      class="absolute top-0 right-0 w-[400px] md:w-[600px] h-[400px] md:h-[600px] bg-orange-400 rounded-full opacity-5 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[300px] md:w-[500px] h-[300px] md:h-[500px] bg-cyan-900 rounded-full opacity-5 blur-3xl"
    >
    </div>

    <!-- Animated Grid Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: linear-gradient(#0e7490 1px, transparent 1px), linear-gradient(90deg, #0e7490 1px, transparent 1px); background-size: 50px 50px;"
      >
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 md:px-6 py-16 md:py-24">
      <div class="text-center space-y-6 md:space-y-8">
        <!-- Badge -->
        <div class="flex items-center justify-center gap-3 animate-fade-in">
          <div
            class="h-px w-8 md:w-12 bg-gradient-to-r from-transparent via-orange-400 to-transparent"
          >
          </div>
          <span
            class="inline-flex items-center gap-2 px-4 md:px-5 py-2 md:py-2.5 bg-cyan-900 text-white rounded-full font-bold text-xs md:text-sm shadow-lg"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"
              ></path>
            </svg>
            DIGITAL SERVICES
          </span>
          <div
            class="h-px w-8 md:w-12 bg-gradient-to-r from-transparent via-orange-400 to-transparent"
          >
          </div>
        </div>

        <!-- Main Heading -->
        <div class="animate-slide-up space-y-4 md:space-y-6">
          <h1
            class="text-4xl md:text-6xl lg:text-7xl xl:text-8xl font-black text-cyan-900 leading-tight px-4"
          >
            Complete
            <br />
            <span class="relative inline-block">
              <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-orange-600"
              >
                Digital
              </span>
              <svg
                class="absolute -bottom-1 md:-bottom-2 left-0 w-full"
                height="12"
                viewBox="0 0 200 12"
                fill="none"
              >
                <path
                  d="M2 10C50 2 150 2 198 10"
                  stroke="#fb923c"
                  stroke-width="4"
                  stroke-linecap="round"></path>
              </svg>
            </span>
            <br />
            Solutions
          </h1>

          <p class="text-base md:text-xl lg:text-2xl text-gray-600 max-w-4xl mx-auto leading-relaxed px-4">
            We transform ideas into exceptional digital experiences. From
            creative design to technological development, we offer comprehensive
            services to take your brand to the next level.
          </p>
        </div>

        <!-- Stats -->
        <div
          class="flex flex-wrap justify-center gap-4 md:gap-8 pt-6 md:pt-8 animate-fade-in delay-200 px-4"
        >
          <div class="flex items-center gap-2 md:gap-3 group">
            <div
              class="w-16 h-12 md:w-20 md:h-16 rounded-xl md:rounded-2xl bg-gradient-to-br from-cyan-900 to-cyan-700 flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"
            >
              <span class="text-xl md:text-3xl font-black text-white">9+</span>
            </div>
            <div class="text-left">
              <div class="text-sm md:text-lg font-bold text-cyan-900">Services</div>
              <div class="text-xs md:text-sm text-gray-500">Specialized</div>
            </div>
          </div>

          <div class="flex items-center gap-2 md:gap-3 group">
            <div
              class="w-16 h-12 md:w-20 md:h-16 rounded-xl md:rounded-2xl bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"
            >
              <span class="text-xl md:text-3xl font-black text-white">100+</span>
            </div>
            <div class="text-left">
              <div class="text-sm md:text-lg font-bold text-cyan-900">Projects</div>
              <div class="text-xs md:text-sm text-gray-500">Completed</div>
            </div>
          </div>

          <div class="flex items-center gap-2 md:gap-3 group">
            <div
              class="w-16 h-12 md:w-20 md:h-16 rounded-xl md:rounded-2xl bg-gradient-to-br from-cyan-900 to-cyan-700 flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"
            >
              <span class="text-xl md:text-3xl font-black text-white">5+</span>
            </div>
            <div class="text-left">
              <div class="text-sm md:text-lg font-bold text-cyan-900">Years</div>
              <div class="text-xs md:text-sm text-gray-500">Experience</div>
            </div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div
          class="flex flex-wrap justify-center gap-3 md:gap-4 pt-6 md:pt-8 animate-slide-up delay-100 px-4"
        >
          <Button text="Start Your Project" href="/contact" />
          <a
            href="#services"
            class="px-6 md:px-8 py-3 border-2 border-cyan-900 text-cyan-900 rounded-full font-bold hover:bg-cyan-900 hover:text-white transition-all duration-300 text-sm lg:text-lg"
          >
            View Services
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-4 md:bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <div
        class="w-6 h-10 md:w-8 md:h-12 border-2 border-cyan-900 rounded-full flex items-start justify-center p-2"
      >
        <div class="w-1 h-2 md:w-1.5 md:h-3 bg-orange-400 rounded-full animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- Detailed Services Grid -->
  <section class="py-16 md:py-24 px-4 md:px-6 bg-white">
    <div class="max-w-7xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12 md:mb-16">
        <span class="text-orange-400 font-bold text-xs md:text-sm uppercase tracking-widest"
          >Detailed Services</span
        >
        <h2
          class="text-3xl md:text-4xl lg:text-5xl font-bold text-cyan-900 leading-tight mt-3 mb-4 md:mb-6 px-4"
        >
          Everything You <span class="text-orange-400">Need</span> in One Place
        </h2>
        <p class="text-base md:text-lg text-gray-600 max-w-3xl mx-auto px-4">
          We offer a complete range of digital services designed to take your business to the next level.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Design Services -->
        <CardService
          icon="../../icons/interfaz-de-usuario.png"
          title="UX/UI Design"
          description="We design intuitive interfaces and exceptional user experiences that convert visitors into loyal customers. User research, wireframes, prototypes, and testing."
          learnMoreUrl="/services/ux-ui"
        />

        <CardService
          icon="../../icons/diseno-grafico.png"
          title="Branding & Visual Identity"
          description="We create memorable and consistent brand identities. Logo design, color palettes, typography, brand guidelines, and complete visual applications."
          learnMoreUrl="/services/branding"
        />

        <!-- Development Services -->
        <CardService
          icon="../../icons/sitio-web.png"
          title="Web Development"
          description="Modern, fast, and SEO-optimized websites. Development with React, Next.js, Astro, and cutting-edge technologies. Responsive and scalable."
          learnMoreUrl="/services/web-development"
        />

        <CardService
          icon="../../icons/cpu-processor-hardware-chip-microchip-svgrepo-com.svg"
          title="Web Applications"
          description="Complex and robust web applications. SaaS platforms, administrative dashboards, customer portals, and custom systems."
          learnMoreUrl="/contact"
        />

        <!-- Marketing Services -->
        <CardService
          icon="../../icons/seo.png"
          title="SEO & Optimization"
          description="Improve your Google visibility with technical and content SEO strategies. Audits, keyword research, link building, and continuous optimization."
          learnMoreUrl="/services/seo"
        />

        <CardService
          icon="../../icons/redes-sociales.png"
          title="Social Media Marketing"
          description="Content strategies for social media, community management, and advertising campaigns on Facebook, Instagram, LinkedIn, and more."
          learnMoreUrl="/services/social-media"
        />

        <!-- Creative Services -->
        <CardService
          icon="../../icons/edicion-de-video.png"
          title="Video Production"
          description="Professional videos for advertising and social media. From concept to post-production, we create audiovisual content that captivates."
          learnMoreUrl="/services/video-production"
        />

        <CardService
          icon="../../icons/animacion.png"
          title="2D & 3D Animation"
          description="Dynamic motion graphics for marketing, presentations, and interactive content. Animations that effectively communicate your message."
          learnMoreUrl="/services/animation"
        />

        <CardService
          icon="../../icons/modelo-3d.png"
          title="3D Rendering"
          description="Photorealistic visualizations for architecture and products. 3D modeling, texturing, lighting, and high-quality rendering."
          learnMoreUrl="/services/3d-rendering"
        />

        <!-- Production Services -->
        <CardService
          icon="../../icons/camiseta.png"
          title="Promotional Products"
          description="Personalized merchandising with sublimation, digital printing, and laser engraving techniques. Unique products that reflect your brand."
          learnMoreUrl="/services/promotional-products"
        />

        <CardService
          icon="../../icons/sitio-web.png"
          title="E-commerce"
          description="Complete and optimized online stores. Product catalogs, payment gateways, inventory management, and exceptional shopping experiences."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="../../icons/support-svgrepo-com.svg"
          title="Digital Consulting"
          description="Strategic advisory for digital transformation. Needs analysis, technology roadmaps, and digital process optimization."
          learnMoreUrl="/contact"
        />
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <Whyus />

  <!-- CTA Section -->
  <section
    class="relative py-16 md:py-24 px-4 md:px-6 bg-gradient-to-br from-cyan-900 via-cyan-800 to-cyan-900 overflow-hidden"
  >
    <!-- Decorative Elements -->
    <div
      class="absolute top-0 right-0 w-64 md:w-96 h-64 md:h-96 bg-orange-400 rounded-full opacity-10 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-64 md:w-96 h-64 md:h-96 bg-orange-400 rounded-full opacity-10 blur-3xl"
    >
    </div>

    <div class="relative max-w-5xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-white mb-4 md:mb-6 px-4">
        Ready to Transform Your
        <span class="text-orange-400">Digital Presence?</span>
      </h2>
      <p class="text-base md:text-xl text-cyan-100 mb-8 md:mb-10 max-w-3xl mx-auto leading-relaxed px-4">
        Let's work together to create digital experiences that drive your
        business. Our expert team is ready to turn your vision into reality.
      </p>

      <!-- Benefits List -->
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mb-8 md:mb-12 max-w-4xl mx-auto px-4"
      >
        <div class="flex items-center justify-center gap-3">
          <div class="w-10 h-10 md:w-12 md:h-12 bg-orange-400 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-white font-bold text-sm md:text-base">Fast Response</span>
        </div>

        <div class="flex items-center justify-center gap-3">
          <div class="w-10 h-10 md:w-12 md:h-12 bg-orange-400 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-white font-bold text-sm md:text-base">Quality Guaranteed</span>
        </div>

        <div class="flex items-center justify-center gap-3">
          <div class="w-10 h-10 md:w-12 md:h-12 bg-orange-400 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-white font-bold text-sm md:text-base">Dedicated Support</span>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap justify-center gap-3 md:gap-4 px-4">
        <a
          href="/contact"
          class="group inline-flex items-center gap-3 bg-gradient-to-r from-orange-400 to-orange-500 text-white font-bold px-6 md:px-8 py-3 md:py-4 rounded-full hover:from-orange-500 hover:to-orange-600 transition-all duration-300 transform hover:scale-105 shadow-2xl text-sm lg:text-lg"
        >
          <span>Get Free Consultation</span>
          <svg
            class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a
          href="mailto:info@codebrand.es"
          class="px-6 md:px-8 py-3 md:py-4 border-2 border-white text-white rounded-full font-bold hover:bg-white hover:text-cyan-900 transition-all duration-300 text-sm lg:text-lg"
        >
          Send Email
        </a>
      </div>

      <p class="text-cyan-200 text-xs md:text-sm mt-6 md:mt-8 px-4">
        Fast turnaround times | Quality guaranteed | Dedicated support
      </p>
    </div>
  </section>

  <!-- FAQ Section -->
  <Faq />
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }

  .animate-slide-up {
    animation: slide-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .delay-100 {
    animation-delay: 0.1s;
  }

  .delay-200 {
    animation-delay: 0.2s;
  }
</style>
