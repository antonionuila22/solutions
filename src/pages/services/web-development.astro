---
import Layout from "../../layouts/Layout.astro";
import CardService from "../../components/CardService.astro";
import Whyus from "../../components/whyus.astro";
import Faq from "../../components/Faq.astro";
import Button from "../../components/Button.astro";

const schemaData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Web Development Services",
  "provider": {
    "@type": "Organization",
    "name": "Codebrand",
    "url": "https://codebrand.com",
    "logo": "https://codebrand.com/photos/bannercodebrand.webp"
  },
  "areaServed": "Worldwide",
  "description": "Professional web development services including custom website development, responsive web design, e-commerce solutions, web applications, and progressive web apps.",
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "price": "0",
    "priceCurrency": "USD"
  }
};
---

<Layout
  title="Web Development Services | Professional Website Design & Development - Codebrand"
  description="Transform your business with our professional web development services. We create fast, responsive, and SEO-optimized websites tailored to your needs. Custom web applications, e-commerce solutions, and mobile-friendly designs that drive results."
  keywords="web development, website design, custom web applications, responsive web design, e-commerce development, mobile-friendly websites, SEO web development, progressive web apps, front-end development, back-end development, website development services, professional web design, custom website development, web application development, React development, Next.js development, full stack development, website redesign, web development company, modern web development, scalable web solutions"
  image="/photos/bannercodebrand.webp"
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
  <!-- Hero Section - Web Development -->
  <section class="relative min-h-[85vh] overflow-hidden bg-white">
    <!-- Background Geometric Shapes -->
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-orange-400 rounded-full opacity-5 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-80 h-80 bg-cyan-900 rounded-full opacity-5 blur-3xl"
    >
    </div>

    <div class="relative max-w-7xl mx-auto px-6 py-20">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Left Content -->
        <div class="space-y-8 animate-slide-up">
          <!-- Badge -->
          <div class="flex items-center gap-3">
            <span
              class="inline-flex items-center gap-2 px-5 py-2.5 bg-cyan-900 text-white rounded-full font-bold text-sm shadow-lg"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path
                  d="M13 7H7v6h6V7z M13 2H7v3h6V2z M13 15H7v3h6v-3z M2 7v6h3V7H2z M18 7v6h-3V7h3z"
                ></path>
              </svg>
              WEB DEVELOPMENT
            </span>
            <div
              class="h-px flex-1 bg-gradient-to-r from-cyan-900/20 to-transparent max-w-[100px]"
            >
            </div>
          </div>

          <!-- Heading with SEO-optimized content -->
          <div>
            <h1
              class="text-5xl md:text-7xl font-black text-cyan-900 leading-tight mb-6"
            >
              Professional
              <br />
              <span class="relative inline-block">
                <span class="text-orange-400">Web Development</span>
                <svg
                  class="absolute -bottom-2 left-0 w-full"
                  height="12"
                  viewBox="0 0 200 12"
                  fill="none"
                >
                  <path
                    d="M2 10C50 2 150 2 198 10"
                    stroke="#fb923c"
                    stroke-width="4"
                    stroke-linecap="round"></path>
                </svg>
              </span>
              <br />
              Solutions
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed max-w-lg">
              Transform your ideas into powerful digital experiences. We build
              fast, scalable, and SEO-optimized websites that drive business
              growth and deliver exceptional user experiences.
            </p>
          </div>

          <!-- CTA Buttons -->
          <div
            class="flex flex-row flex-content content-start items-center flex-wrap gap-4 pt-4"
          >
            <Button text="Start Your Project" href="/contact" />
            <a
              href="#our-services"
              class="px-8 py-3 border-2 border-cyan-900 text-cyan-900 rounded-full font-bold hover:bg-cyan-900 hover:text-white transition-all duration-300"
            >
              View Services
            </a>
          </div>

          <!-- Inline Stats -->
          <div class="flex flex-wrap gap-6 pt-4">
            <div class="flex items-center gap-3 group">
              <div
                class="w-20 h-14 rounded-2xl bg-orange-400 flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform"
              >
                <span class="text-2xl font-black text-white">100+</span>
              </div>
              <div>
                <div class="text-sm font-bold text-cyan-900">
                  Projects Delivered
                </div>
                <div class="text-xs text-gray-500">Successful Launches</div>
              </div>
            </div>

            <div class="flex items-center gap-3 group">
              <div
                class="w-14 h-14 rounded-2xl bg-cyan-900 flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform"
              >
                <span class="text-2xl font-black text-white">5+</span>
              </div>
              <div>
                <div class="text-sm font-bold text-cyan-900">
                  Years Experience
                </div>
                <div class="text-xs text-gray-500">In Web Development</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Image Section -->
        <div class="relative animate-slide-up delay-100">
          <div class="relative">
            <!-- Decorative Orange Shape Behind -->
            <div
              class="absolute -right-6 -top-6 w-72 h-72 bg-orange-400 rounded-[3rem] rotate-12 opacity-20"
            >
            </div>

            <!-- Placeholder for Hero Image -->
            <div
              class="relative rounded-[3rem] overflow-hidden shadow-2xl border-8 border-white bg-gradient-to-br from-cyan-50 to-orange-50"
            >
              <div
                class="w-full h-[500px] flex items-center justify-center text-gray-400"
              >
                <div class="text-center p-8">
                  <svg
                    class="w-24 h-24 mx-auto mb-4"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
                    ></path>
                  </svg>
                  <p class="text-sm font-semibold">
                    Image: Modern web development workspace with multiple
                    screens showing code, design mockups, and responsive layouts
                  </p>
                  <p class="text-xs mt-2">
                    Alt: Professional web development services showcasing
                    responsive design and modern coding practices
                  </p>
                </div>
              </div>

              <!-- Gradient Overlay -->
              <div
                class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-cyan-900/80 to-transparent"
