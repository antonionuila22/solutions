          <p class="text-xs text-gray-500 text-center mt-2">
            API Query Language
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features/Benefits Section -->
  <section class="py-24 px-6 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <!-- Left: Image Placeholder -->
        <div class="order-2 md:order-1">
          <div
            class="relative rounded-3xl overflow-hidden shadow-2xl bg-gradient-to-br from-cyan-50 to-orange-50"
          >
            <div
              class="w-full h-[600px] flex items-center justify-center text-gray-400"
            >
              <div class="text-center p-8">
                <svg
                  class="w-24 h-24 mx-auto mb-4"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5z"
                  ></path>
