---
import LandingLayout from '../../layouts/LandingLayout.astro';

const pageTitle = "Maya Rivers | Content Creator & Digital Storyteller";
const pageDescription = "Award-winning content creator specializing in lifestyle, tech, and travel. 2.5M+ followers across platforms.";
---

<LandingLayout title={pageTitle} description={pageDescription}>
  <style>
    @keyframes gradientShift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }

    @keyframes sparkle {
      0%, 100% { opacity: 1; transform: scale(1); }
      50% { opacity: 0.5; transform: scale(1.2); }
    }

    .gradient-bg {
      background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
      background-size: 400% 400%;
      animation: gradientShift 15s ease infinite;
    }

    .float-animation {
      animation: float 6s ease-in-out infinite;
    }

    .sparkle {
      animation: sparkle 2s ease-in-out infinite;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
  </style>

  <!-- Hero Section -->
  <section class="relative gradient-bg text-white py-32 overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-40"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto text-center">
        <div class="inline-block mb-6">
          <img
            src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=200&h=200&fit=crop"
            alt="Maya Rivers"
            class="w-32 h-32 rounded-full border-4 border-white shadow-2xl float-animation"
          />
        </div>
        <h1 class="text-6xl md:text-7xl font-bold mb-6 leading-tight">
          Hey, I'm Maya Rivers
        </h1>
        <p class="text-2xl md:text-3xl mb-8 font-light">
          Content Creator • Digital Storyteller • Brand Partner
        </p>
        <p class="text-xl mb-12 max-w-3xl mx-auto leading-relaxed">
          Creating engaging content about lifestyle, tech, and travel for millions of viewers worldwide.
          Let's bring your brand's story to life.
        </p>

        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
          <div class="glass-card p-6 rounded-2xl">
            <div class="text-4xl font-bold mb-2">2.5M+</div>
            <div class="text-sm uppercase tracking-wide opacity-90">Total Followers</div>
          </div>
          <div class="glass-card p-6 rounded-2xl">
            <div class="text-4xl font-bold mb-2">500+</div>
            <div class="text-sm uppercase tracking-wide opacity-90">Videos Created</div>
          </div>
          <div class="glass-card p-6 rounded-2xl">
            <div class="text-4xl font-bold mb-2">50M+</div>
            <div class="text-sm uppercase tracking-wide opacity-90">Total Views</div>
          </div>
          <div class="glass-card p-6 rounded-2xl">
            <div class="text-4xl font-bold mb-2">100+</div>
            <div class="text-sm uppercase tracking-wide opacity-90">Brand Partners</div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#services" class="px-8 py-4 bg-white text-purple-600 rounded-full font-bold text-lg hover:bg-gray-100 transition-all hover:scale-105 shadow-xl">
            Work With Me
          </a>
          <a href="#portfolio" class="px-8 py-4 bg-transparent border-2 border-white text-white rounded-full font-bold text-lg hover:bg-white hover:text-purple-600 transition-all">
            View My Work
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Platform Stats -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Where You Can Find Me
        </h2>
        <p class="text-xl text-gray-600">
          Creating content across multiple platforms
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- YouTube -->
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2">
