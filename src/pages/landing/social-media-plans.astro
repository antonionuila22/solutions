---

<Layout title={pageTitle} description={pageDescription} keywords={pageKeywords}>
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:type" content="website" slot="head" />

  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "name": "Social Media Marketing Plans",
      "description": "Professional social media management and marketing services",
      "provider": {
        "@type": "Organization",
        "name": "Codebrand",
        "url": "https://codebrand.us"
      },
      "offers": [
        {
          "@type": "Offer",
          "name": "Starter Plan",
          "price": "499",
          "priceCurrency": "USD"
        },
        {
          "@type": "Offer",
          "name": "Growth Plan",
          "price": "899",
          "priceCurrency": "USD"
        },
        {
          "@type": "Offer",
          "name": "Pro Plan",
          "price": "1499",
          "priceCurrency": "USD"
        }
      ]
    }
  </script>

  <!-- Hero Section -->
  <section class="py-16 sm:py-20 lg:py-28 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 rounded-full mb-6"
      >
        <svg
          class="w-4 h-4 text-cyan-400"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="text-slate-700 text-sm font-medium"
          >Professional Social Media Management</span
        >
      </div>

      <h1
        class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight mb-6"
      >
        Social Media Marketing
        <span class="block text-orange-500 mt-2">Starting at $499/month</span>
      </h1>

      <p class="text-xl text-slate-600 mb-4 max-w-3xl mx-auto leading-relaxed">
        Stop wasting time on social media. Let us grow your brand while you
        focus on your business.
      </p>
      <p class="text-lg text-slate-500 mb-8 max-w-2xl mx-auto">
        US agencies charge <span class="text-slate-700 line-through"
          >$1,500 - $3,000/mo</span
        > for the same service.
        <span class="text-orange-500 font-semibold"
          >Save 50-60% with Codebrand.</span
        >
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href="#plans"
          class="inline-flex items-center justify-center px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white font-bold rounded-xl shadow-lg shadow-orange-500/25 transform hover:-translate-y-1 transition-all duration-300 text-lg"
        >
          View Plans & Pricing
          <svg
            class="w-5 h-5 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </a>
        <a
          href="#results"
          class="inline-flex items-center justify-center px-8 py-4 bg-white hover:bg-slate-50 text-slate-700 font-semibold rounded-lg border border-slate-200 transition-all duration-300 shadow-sm"
        >
          See Case Studies
        </a>
      </div>

      <!-- Stats - More realistic -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-3xl mx-auto">
        <div class="bg-slate-50 rounded-xl p-4 border border-slate-100">
          <p class="text-3xl font-bold text-slate-900">50+</p>
          <p class="text-slate-500 text-sm">Active Clients</p>
        </div>
        <div class="bg-slate-50 rounded-xl p-4 border border-slate-100">
          <p class="text-3xl font-bold text-slate-900">3+</p>
          <p class="text-slate-500 text-sm">Years Experience</p>
        </div>
        <div class="bg-slate-50 rounded-xl p-4 border border-slate-100">
          <p class="text-3xl font-bold text-slate-900">4</p>
          <p class="text-slate-500 text-sm">Platforms Managed</p>
        </div>
        <div class="bg-slate-50 rounded-xl p-4 border border-slate-100">
          <p class="text-3xl font-bold text-orange-500">60%</p>
          <p class="text-slate-500 text-sm">Cost Savings</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Proof Bar - Platforms -->
  <section class="py-8 bg-white border-y border-slate-100 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-center text-slate-400 text-sm mb-6">Platforms We Manage</p>
      <div class="flex flex-wrap justify-center items-center gap-8">
        {
          platforms.map((platform) => (
            <div class="flex items-center gap-2 text-slate-500 hover:text-orange-500 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d={platform.icon} />
              </svg>
              <span class="font-medium">{platform.name}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Pricing Plans Section -->
  <section class="py-16 sm:py-20 lg:py-28 bg-white font-poppins" id="plans">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span
          class="inline-block px-4 py-1 bg-orange-100 text-orange-500 text-sm font-semibold rounded-full mb-4"
        >
          SIMPLE PRICING
        </span>
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-black text-slate-900 mb-4"
        >
          Choose Your Social Media Plan
        </h2>
        <p class="text-xl text-slate-500 max-w-3xl mx-auto">
          No contracts, cancel anytime. All plans include a dedicated social
          media manager.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          plans.map((plan) => (
            <div
              class={`relative bg-white border-2 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 ${plan.popular ? "border-orange-500 scale-105" : "border-slate-200"}`}
            >
              {plan.popular && (
                <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                  <span class="px-4 py-1 bg-orange-500 text-white text-sm font-bold rounded-full shadow-lg">
                    MOST POPULAR
                  </span>
                </div>
              )}

              <div class="text-center mb-6">
                <h3 class="text-2xl font-bold text-slate-900 mb-2">
                  {plan.name}
                </h3>
                <p class="text-slate-500 text-sm mb-4">{plan.description}</p>
                <div class="flex items-baseline justify-center gap-1">
                  <span class="text-5xl font-black text-slate-900">
                    ${plan.price}
                  </span>
                  <span class="text-slate-500">/month</span>
                </div>
              </div>

              <ul class="space-y-3 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-start gap-3 text-slate-600">
                    <svg
                      class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-sm">{feature}</span>
                  </li>
                ))}
                {plan.notIncluded.map((feature) => (
                  <li class="flex items-start gap-3 text-slate-400">
                    <svg
                      class="w-5 h-5 text-slate-300 flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-sm line-through">{feature}</span>
                  </li>
                ))}
              </ul>

              <a
                href="#contact"
                class={`block w-full py-4 font-bold rounded-lg text-center transition-all duration-300 ${plan.popular ? "bg-orange-500 hover:bg-orange-600 text-white shadow-lg shadow-orange-500/30" : "bg-slate-100 hover:bg-slate-200 text-slate-700"}`}
              >
                Get Started
              </a>
            </div>
          ))
        }
      </div>

      <p class="text-center text-slate-400 mt-8">
        All prices in USD. Billed monthly. Ad spend not included.
      </p>
    </div>
  </section>

  <!-- What's Included Section -->
  <section
    class="py-16 sm:py-20 lg:py-28 bg-slate-50 font-poppins"
    id="platforms"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-black text-slate-900 mb-4"
        >
          What We Do For Your Brand
        </h2>
        <p class="text-xl text-slate-500 max-w-3xl mx-auto">
          A complete social media solution. We handle everything from content
          creation to community management.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          [
            {
              icon: "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z",
              title: "Content Creation",
              description:
                "Eye-catching graphics, photos, and videos designed specifically for your brand and audience.",
            },
            {
