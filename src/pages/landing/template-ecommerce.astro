      }
    }

    @keyframes scaleIn {
      from {
        opacity: 0;
        transform: scale(0.9);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes shimmer {
      0% {
        background-position: -1000px 0;
      }
      100% {
        background-position: 1000px 0;
      }
    }

    @keyframes pulse {
      0%,
      100% {
        opacity: 1;
        transform: scale(1);
      }
      50% {
        opacity: 0.8;
        transform: scale(1.05);
      }
    }

    @keyframes bounce {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    @keyframes cartPop {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.2);
      }
      100% {
        transform: scale(1);
      }
    }

    @keyframes priceGlow {
      0%,
      100% {
        text-shadow: 0 0 10px rgba(167, 139, 250, 0.5);
      }
      50% {
        text-shadow:
          0 0 20px rgba(167, 139, 250, 0.8),
          0 0 30px rgba(167, 139, 250, 0.6);
      }
    }

    /* Animation Classes */
    .animate-slide-in-left {
      animation: slideInLeft 0.8s ease-out forwards;
    }

    .animate-slide-in-right {
      animation: slideInRight 0.8s ease-out forwards;
    }

    .animate-scale-in {
      animation: scaleIn 0.6s ease-out forwards;
    }

    .scroll-animate {
      opacity: 0;
      transform: translateY(30px);
      transition:
        opacity 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275),
        transform 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .scroll-animate.animate-in {
      opacity: 1;
      transform: translateY(0);
    }

    /* Product Card Enhanced Effects */
    .product-card {
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      position: relative;
      overflow: hidden;
    }

    .product-card::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(
        135deg,
        rgba(167, 139, 250, 0.1) 0%,
        rgba(236, 72, 153, 0.1) 100%
      );
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 1;
    }

    .product-card:hover::before {
      opacity: 1;
    }

    .product-card:hover {
      transform: translateY(-12px) scale(1.02);
      box-shadow:
        0 25px 50px -12px rgba(0, 0, 0, 0.25),
        0 0 0 1px rgba(167, 139, 250, 0.1);
    }

    .product-card .product-image-wrapper {
      position: relative;
      overflow: hidden;
    }

    .product-card:hover .product-image-wrapper img {
      transform: scale(1.15);
    }

    /* Badges with Shimmer Effect */
    .badge-new {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      animation: pulse 2s ease-in-out infinite;
      position: relative;
      overflow: hidden;
    }

    .badge-new::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.3),
        transparent
      );
      animation: shimmer 2s infinite;
    }

    .badge-sale {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      animation: bounce 2s ease-in-out infinite;
    }

    /* Add to Cart Button Enhanced */
    .add-to-cart-btn {
      position: relative;
      overflow: hidden;
      transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .add-to-cart-btn::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.5);
      transform: translate(-50%, -50%);
      transition:
        width 0.6s,
        height 0.6s;
    }

    .add-to-cart-btn:active::before {
      width: 300px;
      height: 300px;
    }

    .add-to-cart-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .add-to-cart-btn:active {
      transform: scale(0.95);
    }

    /* Wishlist Heart Animation */
    .wishlist-btn {
      transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .wishlist-btn:hover {
      transform: scale(1.2);
    }

    .wishlist-btn:active {
      animation: cartPop 0.3s ease;
    }

    .wishlist-btn.active svg {
      fill: currentColor;
      color: #ef4444;
    }

    /* Price Animation */
    .price-tag {
      transition: all 0.3s ease;
      display: inline-block;
    }

    .product-card:hover .price-tag {
      animation: priceGlow 1.5s ease-in-out infinite;
      transform: scale(1.05);
    }

    /* Collection Cards 3D Effect */
    .collection-card {
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      transform-style: preserve-3d;
      perspective: 1000px;
    }

    .collection-card:hover {
      transform: translateY(-10px) rotateX(5deg);
      box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.3);
    }

    /* Stats Counter Animation */
    .stat-number {
      transition: all 0.3s ease;
    }

    /* Feature Icons Float */
    .feature-icon {
      transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .feature-icon:hover {
      transform: translateY(-5px) rotate(5deg);
    }

    /* Review Cards Enhanced */
    .review-card {
      transition: all 0.3s ease;
      border: 2px solid transparent;
    }

    .review-card:hover {
      border-color: rgba(167, 139, 250, 0.3);
      transform: translateY(-5px);
      box-shadow: 0 20px 40px -12px rgba(167, 139, 250, 0.2);
    }

    /* Newsletter Input Focus Effect */
    .newsletter-input {
      transition: all 0.3s ease;
    }

    .newsletter-input:focus {
      transform: scale(1.02);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* Announcement Bar Animation */
    .announcement-bar {
      animation: slideInDown 0.5s ease-out;
    }

    @keyframes slideInDown {
      from {
        opacity: 0;
        transform: translateY(-100%);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Quick View Modal */
    .modal-backdrop {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(5px);
      z-index: 50;
      display: none;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .modal-backdrop.show {
      display: flex;
      opacity: 1;
      align-items: center;
      justify-content: center;
    }

    .modal-content {
      background: white;
      border-radius: 1rem;
      max-width: 900px;
      max-height: 90vh;
      overflow-y: auto;
      transform: scale(0.9);
      transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .modal-backdrop.show .modal-content {
      transform: scale(1);
    }

    /* Loading Spinner */
    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    .spinner {
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top-color: white;
      animation: spin 0.6s linear infinite;
