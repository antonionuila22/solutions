    /* Smooth Scrolling */
    html {
      scroll-behavior: smooth;
    }

    /* Advanced Keyframe Animations */
    @keyframes slideInLeft {
      from {
        opacity: 0;
        transform: translateX(-50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes slideInRight {
      from {
        opacity: 0;
