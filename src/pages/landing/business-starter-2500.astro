              <div class="p-4 text-slate-700 font-medium">{row.feature}</div>
              <div class="p-4 text-center text-slate-500">{row.basic}</div>
              <div class="p-4 text-center text-cyan-700 font-medium bg-cyan-50/50 border-x border-cyan-100">
