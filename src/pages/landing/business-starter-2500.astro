  <!-- Stats Bar -->
  <section class="py-8 bg-white border-y border-slate-100 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <p class="text-3xl font-black text-cyan-900">50+</p>
          <p class="text-slate-500 text-sm">Websites Delivered</p>
        </div>
        <div>
          <p class="text-3xl font-black text-cyan-900">3+</p>
          <p class="text-slate-500 text-sm">Years Experience</p>
        </div>
        <div>
          <p class="text-3xl font-black text-cyan-900">2-3</p>
          <p class="text-slate-500 text-sm">Weeks Delivery</p>
        </div>
        <div>
          <p class="text-3xl font-black text-orange-500">60%</p>
          <p class="text-slate-500 text-sm">Cost Savings</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="py-16 sm:py-20 lg:py-28 bg-white font-poppins" id="features">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span
          class="inline-block px-4 py-1 bg-orange-100 text-orange-500 text-sm font-semibold rounded-full mb-4"
        >
          WHAT'S INCLUDED
        </span>
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-black text-slate-900 mb-4"
        >
          Everything You Need to Succeed Online
        </h2>
        <p class="text-xl text-slate-500 max-w-3xl mx-auto">
          A complete website solution designed to convert visitors into
          customers.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          features.map((feature) => (
            <div class="bg-slate-50 border border-slate-200 rounded-xl p-6 hover:border-orange-300 hover:shadow-lg transition-all duration-300">
              <div class="w-12 h-12 bg-cyan-900 rounded-lg flex items-center justify-center mb-4">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={feature.icon}
                  />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">
                {feature.title}
              </h3>
              <p class="text-slate-500">{feature.description}</p>
            </div>
          ))
