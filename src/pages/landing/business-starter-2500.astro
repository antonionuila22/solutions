    description:
      "Fast loading times for better user experience and SEO. Core Web Vitals optimized.",
  },
];

// Comparison
const comparison = [
  {
    feature: "Custom Pages",
    basic: "1 Page",
    starter: "5-7 Pages",
    premium: "10+ Pages",
  },
  {
    feature: "Custom Design",
    basic: "Template",
    starter: "Custom",
    premium: "Premium Custom",
  },
  {
    feature: "CMS (Edit Content)",
    basic: "No",
    starter: "Yes",
    premium: "Yes + Training",
  },
  {
    feature: "SEO Setup",
    basic: "Basic",
    starter: "Complete",
    premium: "Advanced + Strategy",
  },
  {
    feature: "Contact Forms",
    basic: "1 Form",
    starter: "Multiple",
    premium: "Advanced + CRM",
  },
  { feature: "Revisions", basic: "2", starter: "5", premium: "Unlimited" },
  {
    feature: "Support",
    basic: "Email",
    starter: "Email + Chat",
    premium: "Priority + Phone",
  },
  {
    feature: "Delivery",
    basic: "5 days",
    starter: "2-3 weeks",
    premium: "4-6 weeks",
  },
];

// Process Steps
const process = [
  {
    step: "1",
    title: "Discovery Call",
    description:
      "We learn about your business, goals, and vision for your website.",
  },
  {
    step: "2",
    title: "Design & Content",
    description:
      "Custom design mockups and content strategy tailored to your brand.",
  },
  {
    step: "3",
    title: "Development",
    description:
      "We build your website with clean code and modern technologies.",
  },
  {
    step: "4",
    title: "Launch & Train",
    description: "We launch your site and train you on how to manage it.",
  },
];
---

<Layout title={pageTitle} description={pageDescription} keywords={pageKeywords}>
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:type" content="website" slot="head" />

  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Product",
      "name": "Business Starter Website Package",
      "description": "Complete business website with 5-7 pages, custom design, SEO setup, and CMS",
      "offers": {
        "@type": "Offer",
        "price": "2500",
        "priceCurrency": "USD"
      },
      "provider": {
        "@type": "Organization",
        "name": "Codebrand",
        "url": "https://codebrand.us"
      }
    }
  </script>

  <!-- Hero Section -->
  <section
    class="py-16 sm:py-20 lg:py-28 bg-white font-poppins"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div
            class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 rounded-full mb-6"
          >
            <svg
              class="w-4 h-4 text-cyan-400"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zM12 2a1 1 0 01.967.744L14.146 7.2 17.5 9.134a1 1 0 010 1.732l-3.354 1.935-1.18 4.455a1 1 0 01-1.933 0L9.854 12.8 6.5 10.866a1 1 0 010-1.732l3.354-1.935 1.18-4.455A1 1 0 0112 2z"
                clip-rule="evenodd"></path>
            </svg>
            <span class="text-slate-700 text-sm font-medium"
              >Most Popular Package</span
            >
          </div>

          <h1
            class="text-4xl sm:text-5xl lg:text-6xl font-black text-slate-900 leading-tight mb-6"
          >
            Business Starter
            <span
              class="block text-orange-500 mt-2"
              >$2,500</span
            >
          </h1>

          <p class="text-xl text-slate-600 mb-4 leading-relaxed">
            Everything you need to establish a professional online presence.
            Perfect for growing businesses ready to compete online.
          </p>
          <p class="text-lg text-slate-500 mb-8">
            US agencies charge <span class="text-slate-700 line-through"
              >$5,000 - $8,000</span
            > for the same service.
            <span class="text-orange-500 font-semibold"
              >Save 50-70% with Codebrand.</span
            >
          </p>

          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <a
              href="#contact"
              class="inline-flex items-center justify-center px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white font-bold rounded-lg transition-all duration-300 text-lg shadow-lg shadow-orange-500/30"
            >
              Start My Project
              <svg
                class="w-5 h-5 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            <a
              href="#features"
              class="inline-flex items-center justify-center px-8 py-4 bg-white hover:bg-slate-50 text-slate-700 font-semibold rounded-lg border border-slate-200 transition-all duration-300 shadow-sm"
