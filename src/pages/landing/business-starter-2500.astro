          </div>
          <div class="p-4 text-center bg-cyan-50 border-x border-cyan-200">
            <p class="font-bold text-cyan-700">Business Starter</p>
            <p class="text-sm text-cyan-600">$2,500</p>
          </div>
          <div class="p-4 text-center">
            <p class="font-bold text-slate-700">Premium</p>
            <p class="text-sm text-slate-500">$5,000+</p>
          </div>
        </div>

        {
          comparison.map((row, index) => (
            <div
              class={`grid grid-cols-4 ${index % 2 === 0 ? "bg-white" : "bg-slate-50"} border-b border-slate-100 last:border-b-0`}
