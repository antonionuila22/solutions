---
import LandingLayout from "../../layouts/LandingLayout.astro";
import Testimonial from "../../components/testimonial.tsx";
import logoWhite from "../../assets/codebrand-white.svg";

const pageTitle = "Professional 10-Page Business Website $1,500 | Save 70% vs US Agencies";
const pageDescription =
  "Get a professional 10-page business website for $1,500 (WordPress) or $3,500-$5,500 (Custom Astro). US agencies charge $8,000-$18,000. Fast 14-day delivery, bilingual team in your timezone. Free quote today.";
const pageKeywords =
  "affordable business website USA, professional 10-page website, cheap web development, wordpress website design, astro website development, small business website, custom website $1500, web design agency USA";

// SEO structured data
const canonicalUrl = "https://codebrand.us/landing/website-1500";
const ogImage = "https://codebrand.us/og/website-1500.png";

const industries = [
  "Automotive",
  "Construction",
  "Consulting",
  "E-commerce",
  "Fitness & Wellness",
  "Healthcare",
  "Law Firms",
  "Real Estate",
  "Restaurants",
  "Tech Startup",
  "Other",
];

const services = [
  "Web Development", "UX/UI Design", "Branding", "SEO",
  "Social Media", "Video Editing", "3D Rendering", "Animation",
  "Graphic Design", "Photography",
];

const features = [
  {
    title: "10 Custom Pages",
    desc: "Home, About, Services, Contact + 6 more tailored pages",
    icon: "pages",
  },
  {
    title: "Mobile Responsive",
    desc: "Perfect experience on all devices and screens",
    icon: "mobile",
  },
  {
    title: "Lightning Fast",
    desc: "90+ PageSpeed score, optimized Core Web Vitals",
    icon: "bolt",
  },
  {
    title: "SEO Optimized",
    desc: "Meta tags, schema markup, sitemap & Google setup",
    icon: "search",
  },
  {
    title: "Lead Capture",
    desc: "Contact forms that send leads directly to your inbox",
    icon: "mail",
  },
  {
    title: "Analytics Ready",
    desc: "Google Analytics 4 integration included",
    icon: "chart",
  },
];

const getIcon = (name: string) => {
  const icons: Record<string, string> = {
    pages: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>`,
    mobile: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>`,
    bolt: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>`,
    search: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>`,
    mail: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>`,
    chart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>`,
  };
  return icons[name] || icons.pages;
};
---

<LandingLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalUrl} slot="head" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" slot="head" />
  <meta property="og:url" content={canonicalUrl} slot="head" />
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:image" content={ogImage} slot="head" />
  <meta property="og:image:secure_url" content={ogImage} slot="head" />
  <meta property="og:image:type" content="image/png" slot="head" />
  <meta property="og:image:width" content="1200" slot="head" />
  <meta property="og:image:height" content="630" slot="head" />
  <meta property="og:image:alt" content="Professional 10-Page Business Website starting at $1,500 - Codebrand" slot="head" />
  <meta property="og:locale" content="en_US" slot="head" />
  <meta property="og:site_name" content="Codebrand" slot="head" />
  <meta property="og:determiner" content="" slot="head" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" slot="head" />
  <meta name="twitter:site" content="@codebrand_es" slot="head" />
  <meta name="twitter:url" content={canonicalUrl} slot="head" />
  <meta name="twitter:title" content={pageTitle} slot="head" />
  <meta name="twitter:description" content={pageDescription} slot="head" />
  <meta name="twitter:image" content={ogImage} slot="head" />
  <meta name="twitter:image:alt" content="Professional 10-Page Business Website starting at $1,500 - Codebrand" slot="head" />

  <!-- Additional SEO -->
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" slot="head" />
  <meta name="author" content="Codebrand" slot="head" />
  <meta name="geo.region" content="US" slot="head" />
  <meta name="geo.placename" content="United States" slot="head" />

  <!-- JSON-LD Structured Data - Service -->
  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "name": "Professional 10-Page Business Website Development",
      "description": "Complete 10-page business website development service including custom design, mobile responsiveness, SEO optimization, and analytics integration.",
      "provider": {
        "@type": "Organization",
        "name": "Codebrand",
        "url": "https://codebrand.us",
        "logo": "https://codebrand.us/codebrand-logo.png",
        "sameAs": [
          "https://www.facebook.com/p/Codebrand-100087321501519/",
          "https://www.instagram.com/codebrand.us",
          "https://www.linkedin.com/company/codebrand"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "US"
        }
      },
      "serviceType": "Web Development",
      "areaServed": {
        "@type": "Country",
        "name": "United States"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Website Packages",
        "itemListElement": [
          {
            "@type": "Offer",
            "name": "WordPress 10-Page Website",
            "description": "Professional 10-page WordPress website with CMS, mobile responsive, SEO optimized",
            "price": "1500",
            "priceCurrency": "USD",
            "availability": "https://schema.org/InStock",
            "priceValidUntil": "2026-12-31"
          },
          {
            "@type": "Offer",
            "name": "Custom Code 10-Page Website (Astro/Next.js)",
            "description": "High-performance 10-page static website with custom Astro or Next.js code",
            "price": "3500",
            "priceCurrency": "USD",
            "availability": "https://schema.org/InStock",
            "priceValidUntil": "2026-12-31"
          }
        ]
      }
    }
  </script>

  <!-- JSON-LD FAQPage -->
  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What's the difference between WordPress and Custom Code websites?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "WordPress is easier to edit yourself and costs less ($1,500). Custom code (Astro) loads faster, is optimized for SEO performance, and requires no plugin updates ($3,500-$5,500). Choose WordPress if you want to manage content yourself. Choose custom code if speed and SEO are priorities."
          }
        },
        {
          "@type": "Question",
          "name": "Why is Codebrand cheaper than US agencies?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "We're based in Honduras with lower operational costs, but our team is US-trained and works in your timezone. You get the same quality at a better price."
          }
        },
        {
          "@type": "Question",
          "name": "How long until my website is ready?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "WordPress sites are ready in 14 days. Custom code sites take 3-4 weeks. Rush delivery is available for an additional fee."
          }
        },
        {
          "@type": "Question",
          "name": "Do I own the website?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, 100%. All files, code, and content are yours forever. We'll provide everything you need to host it anywhere."
          }
        }
      ]
    }
  </script>

  <div class="landing-wrapper">
    <!-- Animated Background -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none z-0">
      <div class="absolute inset-0 bg-grid-pattern opacity-[0.02]"></div>
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
      <div class="orb orb-3"></div>
    </div>

    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 nav-blur">
      <div class="container-main py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex-shrink-0" aria-label="Codebrand">
            <img src={logoWhite.src} alt="Codebrand" width="110" height="32" />
          </a>
          <div class="hidden md:flex items-center gap-8">
            <a href="#pricing" class="nav-link">Pricing</a>
            <a href="#features" class="nav-link">Features</a>
            <a href="#process" class="nav-link">Process</a>
            <a href="#portfolio" class="nav-link">Portfolio</a>
            <a href="#reviews" class="nav-link">Reviews</a>
          </div>
          <a href="#contact" class="btn-primary text-sm">
            Get Started
            <svg
              class="w-4 h-4 ml-1.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center section-spacing-top"
    >
      <div class="hero-container">
        <div class="hero-grid">
          <!-- Left Content -->
          <div class="hero-content">
            <!-- Badge -->
            <div
              class="inline-flex items-center gap-3 px-4 py-2 rounded-full badge-glow mb-8"
            >
              <span class="relative flex h-2.5 w-2.5">
                <span
                  class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"
                ></span>
                <span
                  class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500"
                ></span>
              </span>
              <span class="text-sm font-medium text-white/80"
                >Limited spots available this month</span
              >
            </div>

            <!-- Main Headline -->
            <h1
              class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold leading-[1.05] tracking-tight mb-6"
            >
              <span class="block text-white">10-Page</span>
              <span class="block text-white">Business Website</span>
              <span class="block text-gradient mt-1">$1,500</span>
            </h1>

            <!-- Subheadline -->
            <p
              class="text-base sm:text-lg lg:text-xl text-white/55 leading-relaxed max-w-lg mb-10"
            >
              US agencies charge <span class="text-white/90 font-medium"
                >$8,000 - $15,000</span
              > for the same quality. Get premium results at <span
                class="text-orange-400 font-semibold">70% less</span
              >.
            </p>

            <!-- Stats -->
            <div class="grid grid-cols-3 gap-3 sm:gap-4 mb-10">
              <div class="stat-card">
                <div class="stat-card-inner">
                  <span class="stat-value" data-count="15">0</span>
                  <span class="stat-unit">days</span>
                </div>
                <p class="stat-desc">Fast Delivery</p>
              </div>
              <div class="stat-card">
                <div class="stat-card-inner">
                  <span class="stat-value" data-count="30">0</span>
                  <span class="stat-unit">days</span>
                </div>
                <p class="stat-desc">Free Support</p>
              </div>
              <div class="stat-card stat-card-highlight">
                <div class="stat-card-inner">
                  <span
                    class="stat-value text-gradient"
                    data-count="70"
                    data-suffix="%">0%</span
                  >
                </div>
                <p class="stat-desc">Cost Savings</p>
              </div>
            </div>

            <!-- Trust Badges -->
            <div class="flex flex-wrap gap-2.5">
              {
                ["US Timezone", "Bilingual Team", "Satisfaction Guaranteed"].map(
                  (badge) => (
                    <span class="trust-badge">
                      <svg
                        class="w-3.5 h-3.5 text-emerald-400"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2.5"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      {badge}
                    </span>
                  )
                )
              }
            </div>
          </div>

          <!-- Right: Form -->
          <div id="contact" class="hero-form-wrapper">
            <contact-form data-endpoint="/api/contact">
              <form action="/api/contact" method="POST" class="bg-white rounded-2xl shadow-2xl shadow-black/20 p-5 sm:p-7">
                <input type="hidden" name="subject" value="10-Page Website $1,500 - New Lead" />
                <input type="hidden" name="services" value="Web Development" />
                <div aria-hidden="true" style="position:absolute;left:-9999px;top:-9999px;height:0;width:0;overflow:hidden;">
                  <label for="w15-honey">Leave empty</label>
                  <input type="text" name="honey" id="w15-honey" tabindex="-1" autocomplete="new-password" />
                </div>
                <div class="space-y-4">
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                      <label for="w15-name" class="w15-form-label">Name *</label>
                      <input id="w15-name" name="name" type="text" required autocomplete="name" placeholder="John Doe" class="w15-form-input" maxlength="60" minlength="2" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑüÜ\s\-']+" />
                    </div>
                    <div>
                      <label for="w15-email" class="w15-form-label">Email *</label>
                      <input id="w15-email" name="email" type="email" required autocomplete="email" placeholder="john@company.com" class="w15-form-input" maxlength="254" />
                    </div>
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                      <label for="w15-phone" class="w15-form-label">Phone *</label>
                      <input id="w15-phone" name="phone" type="tel" required autocomplete="tel" placeholder="+1 (555) 000-0000" class="w15-form-input" maxlength="20" minlength="7" pattern="[\d\s\-\+\(\)]+" />
                    </div>
                    <div>
                      <label for="w15-industry" class="w15-form-label">Industry *</label>
                      <div class="relative">
                        <select id="w15-industry" name="industry" required class="w15-form-input appearance-none pr-8">
                          <option value="" disabled selected>Select</option>
                          {industries.map((i) => <option value={i}>{i}</option>)}
                        </select>
                        <svg class="absolute right-2.5 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                      </div>
                    </div>
                  </div>
                  <div>
                    <label for="w15-message" class="w15-form-label">Tell us about your project *</label>
                    <textarea id="w15-message" name="message" rows="3" required placeholder="What does your business do? What pages do you need?" class="w15-form-input resize-none" maxlength="2000" minlength="10"></textarea>
                  </div>
                  <div>
                    <label class="w15-form-label">Services <span class="text-slate-400 font-normal">(optional)</span></label>
                    <div class="flex flex-wrap gap-1.5">
                      {services.map((s) => (
                        <label class="cursor-pointer inline-block px-2.5 py-1 text-xs rounded-full border border-slate-200 text-slate-500 bg-slate-50/80 transition-all duration-150 select-none has-[:checked]:bg-orange-50 has-[:checked]:border-orange-300 has-[:checked]:text-orange-600 has-[:checked]:font-medium hover:border-slate-300">
                          <input type="checkbox" name="services" value={s} class="sr-only" />
                          {s}
                        </label>
                      ))}
                    </div>
                  </div>
                  <label class="flex items-start gap-2 cursor-pointer">
                    <input type="checkbox" name="terms" required class="mt-0.5 w-3.5 h-3.5 rounded border-slate-300 text-orange-500 focus:ring-orange-500 cursor-pointer" />
                    <span class="text-xs text-slate-400 leading-relaxed">
                      I agree to the <a href="/terms" target="_blank" class="text-orange-500 hover:text-orange-600 underline underline-offset-2">Terms</a>
                      and <a href="/privacy" target="_blank" class="text-orange-500 hover:text-orange-600 underline underline-offset-2">Privacy Policy</a>.
                    </span>
                  </label>
                  <div class="flex flex-col sm:flex-row sm:items-center gap-3 pt-1">
                    <button type="submit" class="flex items-center justify-center gap-2 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white text-sm font-semibold py-2.5 px-6 rounded-lg shadow-md shadow-orange-500/20 hover:shadow-orange-500/30 hover:-translate-y-px active:scale-[0.98] transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed disabled:shadow-none disabled:translate-y-0">
                      <span>Get Free Consultation</span>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                    </button>
                    <span class="flex items-center gap-1 text-[11px] text-slate-400">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                      Secure &middot; Never shared
                    </span>
                  </div>
                  <p data-response class="text-xs font-medium hidden rounded-lg px-3 py-2"></p>
                </div>
              </form>
            </contact-form>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div
        class="absolute bottom-6 left-1/2 -translate-x-1/2 hidden lg:flex flex-col items-center gap-2"
      >
        <span class="text-[10px] uppercase tracking-[0.2em] text-white/25"
          >Scroll</span
        >
        <div
          class="w-5 h-8 rounded-full border border-white/15 flex items-start justify-center p-1.5"
        >
          <div class="w-1 h-1.5 bg-white/30 rounded-full animate-bounce"></div>
        </div>
      </div>
    </section>

    <!-- Pricing Comparison -->
    <section class="section-spacing relative" id="pricing">
      <div class="container-main">
        <div class="section-header" data-animate="fade-up">
          <span class="section-tag">Transparent Pricing</span>
          <h2 class="section-title">
            Compare <span class="text-gradient">&</span> Save
          </h2>
          <p class="section-subtitle">
            See why smart business owners choose Codebrand.
          </p>
        </div>

        <div
          class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4"
          data-animate="fade-up"
          data-delay="150"
        >
          {
            [
              {
                name: "US Agency",
                price: "$8,000 - $15,000",
                time: "4-8 weeks",
                featured: false,
              },
              {
                name: "US Freelancer",
                price: "$3,000 - $6,000",
                time: "3-6 weeks",
                featured: false,
              },
              {
                name: "Fiverr/Upwork",
                price: "$800 - $2,500",
                time: "2-4 weeks",
                featured: false,
                warning: true,
              },
              {
                name: "Codebrand",
                price: "$1,500",
                time: "14 days",
                featured: true,
              },
            ].map((item) => (
              <div
                class={`pricing-card ${item.featured ? "pricing-card-featured" : ""} ${item.warning ? "pricing-card-warning" : ""}`}
              >
                {item.featured && (
                  <div class="absolute -top-2.5 left-1/2 -translate-x-1/2 z-10">
                    <span class="px-3 py-0.5 bg-gradient-to-r from-orange-500 to-amber-500 text-white text-[10px] font-bold rounded-full uppercase tracking-wide">
                      Best Value
                    </span>
                  </div>
                )}
                {item.warning && (
                  <div class="absolute -top-2.5 left-1/2 -translate-x-1/2 z-10">
                    <span class="px-3 py-0.5 bg-red-500/80 text-white text-[10px] font-bold rounded-full uppercase tracking-wide">
                      Risky
                    </span>
                  </div>
                )}
                <p
                  class={`text-sm font-medium mb-2 ${item.featured ? "text-white" : "text-white/45"}`}
                >
                  {item.name}
                </p>
                <p
                  class={`text-xl sm:text-2xl font-bold mb-1.5 ${item.featured ? "text-gradient" : "text-white"}`}
                >
                  {item.price}
                </p>
                <p class="text-white/35 text-xs flex items-center gap-1.5">
                  <svg
                    class="w-3.5 h-3.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  {item.time}
                </p>
                {item.warning && (
                  <p class="text-red-400/70 text-[10px] mt-2 leading-tight">
                    Quality varies, no support after
                  </p>
                )}
              </div>
            ))
          }
        </div>

        <!-- Package Comparison Table -->
        <div
          class="packages-section mt-12 sm:mt-16"
          data-animate="fade-up"
          data-delay="200"
        >
          <h3 class="text-xl sm:text-2xl font-bold text-center text-white mb-8">
            Choose Your <span class="text-gradient">Package</span>
          </h3>

          <div class="grid md:grid-cols-2 gap-4 sm:gap-6 max-w-4xl mx-auto">
            <!-- WordPress Package -->
            <div class="package-card package-card-premium">
              <div class="package-glow"></div>
              <div class="package-header relative z-10">
                <span class="package-badge-premium">Easy to Edit</span>
                <h4 class="text-lg font-bold text-white mt-3">WordPress</h4>
                <div class="flex items-baseline gap-1 mt-2">
                  <span class="text-3xl sm:text-4xl font-bold text-gradient"
                    >$1,500</span
                  >
                </div>
                <p class="text-white/45 text-sm mt-2">One-time payment</p>
              </div>

              <div class="package-features relative z-10">
                <ul class="space-y-3">
                  {
                    [
                      "10 custom pages",
                      "WordPress CMS",
