---
import LandingLayout from "../../layouts/LandingLayout.astro";
import Logo from "../../components/logo.astro";

// SEO Metadata optimized for professional website
const pageTitle = "Professional 10-Page Website for $1500 | Codebrand";
const pageDescription =
  "Get a professional 10-page website, ultra-fast and SEO-optimized for only $1500. Responsive design, Google Analytics, and 90 days of support included. Codebrand - Your web development agency.";
const pageKeywords =
  "professional web development, 10-page website, responsive web design, SEO optimization, business website, web development agency, professional website design, web development services, custom website, Codebrand";

// Available industries
const industries = [
  "Automotive",
  "Construction",
  "Content Creators",
  "E-commerce",
  "Fitness",
  "Healthcare",
  "Law Firms",
  "Real Estate",
  "Restaurants",
  "Travel Agency",
  "Other",
];
---

<LandingLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <!-- Additional SEO Meta Tags -->
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta name="twitter:card" content="summary_large_image" slot="head" />
  <meta name="twitter:title" content={pageTitle} slot="head" />
  <meta name="twitter:description" content={pageDescription} slot="head" />

  <!-- Structured Data for Service Offer -->
  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Offer",
      "name": "Professional 10-Page Website",
      "description": "Complete 10-page website with responsive design, SEO optimization and 90 days of support",
      "price": "1500",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Organization",
        "name": "Codebrand",
        "url": "https://solutions.codebrand.es"
      },
      "itemOffered": {
        "@type": "Service",
        "name": "Professional Web Development",
        "provider": {
          "@type": "Organization",
          "name": "Codebrand"
        }
      }
    }
  </script>

  <div class="relative w-full overflow-x-hidden bg-white">
    <!-- Hero Section -->
