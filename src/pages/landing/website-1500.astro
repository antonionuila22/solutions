---
import LandingLayout from "../../layouts/LandingLayout.astro";
import Logo from "../../components/logo.astro";
import Testimonial from "../../components/testimonial.tsx";

// SEO Metadata optimized for US market
const pageTitle =
  "Professional 10-Page Website $1,500 | Save 70% vs US Agencies | Codebrand";
const pageDescription =
  "Get a professional 10-page business website for only $1,500. US agencies charge $8,000-$15,000 for the same quality. SEO-optimized, mobile-responsive, 14-day delivery. Bilingual team in your timezone.";
const pageKeywords =
  "affordable web development USA, professional business website, 10-page website design, cheap web design US, small business website, custom website development, nearshore web development, web development agency USA";
const pageImage = "/photos/bannercodebrand.webp";

// Available industries
const industries = [
  "Automotive",
  "Construction",
  "Consulting",
  "E-commerce",
  "Fitness & Wellness",
  "Healthcare",
  "Law Firms",
  "Real Estate",
  "Restaurants",
  "Tech Startup",
  "Other",
];
---

<LandingLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  image={pageImage}
>
  <!-- Additional SEO Meta Tags -->
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta name="twitter:card" content="summary_large_image" slot="head" />
  <meta name="twitter:title" content={pageTitle} slot="head" />
  <meta name="twitter:description" content={pageDescription} slot="head" />

  <!-- Structured Data for Service Offer -->
  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Offer",
      "name": "Professional 10-Page Business Website",
      "description": "Complete 10-page custom website with responsive design, SEO optimization and 90 days of support",
      "price": "1500",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Organization",
        "name": "Codebrand",
        "url": "https://codebrand.us"
      },
      "itemOffered": {
        "@type": "Service",
        "name": "Professional Web Development",
        "provider": {
          "@type": "Organization",
          "name": "Codebrand"
        }
      }
    }
  </script>

  <div class="relative w-full overflow-x-hidden bg-slate-950">
