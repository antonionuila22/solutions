---
import LandingLayout from "../../layouts/LandingLayout.astro";
import Logo from "../../components/logo.astro";

// SEO Metadata optimized for WordPress $450 landing page
const pageTitle = "Professional WordPress Landing Page for $450 | Codebrand";
const pageDescription =
  "Get a professional WordPress landing page for only $450. Responsive design, SEO optimization, ultra-fast loading, and support included. Codebrand - Your trusted web development agency.";
const pageKeywords =
  "wordpress landing page $450, affordable landing page, professional wordpress design, landing page development, conversion-focused design, wordpress website, web design agency, landing page service, Codebrand";

// Available industries
const industries = [
  "Automotive",
  "Construction",
  "Content Creators",
  "E-commerce",
  "Fitness",
  "Healthcare",
  "Law Firms",
  "Real Estate",
  "Restaurants",
  "Travel Agency",
  "Other",
];
