      "@type": "Offer",
      "name": "Professional WordPress Landing Page",
      "description": "Complete WordPress landing page with responsive design, SEO optimization, and 30 days of support",
      "price": "450",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Organization",
        "name": "Codebrand",
        "url": "https://codebrand.us"
      },
