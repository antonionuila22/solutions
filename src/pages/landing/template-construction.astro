---
import LandingLayout from "../../layouts/LandingLayout.astro";
import Logo from "../../components/logo.astro";

const pageTitle = "BuildCo Construction | Expert Builders & Contractors";
const pageDescription =
  "Professional construction services. Residential & commercial building, renovations, and remodeling. Quality craftsmanship. Free quotes.";
const pageKeywords =
  "construction company, building contractor, home builder, commercial construction, renovations, remodeling";
---

<LandingLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />

  <div class="relative w-full overflow-hidden bg-black">
    <!-- Hero Section -->
    <header
      class="relative min-h-screen bg-cover bg-center"
      style='background: linear-gradient(135deg, rgba(0,0,0,0.85) 0%, rgba(220,38,38,0.4) 50%, rgba(0,0,0,0.85) 100%), url("https://images.unsplash.com/photo-1541888946425-d81bb19240f5?w=1920&q=80") center/cover;'
    >
      <!-- Warning Stripes Animation -->
      <div class="warning-stripes"></div>

      <!-- Navbar -->
      <div
        class="absolute top-0 left-0 w-full z-20 bg-black/60 backdrop-blur-sm border-b-4 border-red-600"
      >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center py-6">
            <div class="text-white">
              <div class="text-3xl font-black tracking-tight">
                BUILD<span class="text-red-600">CO</span>
              </div>
              <div class="text-xs uppercase tracking-widest text-gray-400">
                Construction & Contracting
              </div>
            </div>
            <nav class="hidden md:flex space-x-8">
              <a
                class="text-base font-bold text-red-500 hover:text-red-400 transition-colors uppercase"
                href="#services">Services</a
              >
              <a
                class="text-base font-bold text-white hover:text-red-400 transition-colors uppercase"
                href="#projects">Projects</a
              >
              <a
                class="text-base font-bold text-white hover:text-red-400 transition-colors uppercase"
                href="#about">About</a
              >
              <a
                class="text-base font-bold text-white hover:text-red-400 transition-colors uppercase"
                href="#contact">Contact</a
              >
            </nav>
            <a
              class="hidden md:inline-flex items-center px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white font-black clip-corner hover:from-red-700 hover:to-red-800 transition-all duration-300 shadow-lg shadow-red-900/50 uppercase text-sm"
              href="#contact"
            >
              Free Quote
            </a>
          </div>
        </div>
      </div>

      <!-- Hero Content -->
      <div
        class="relative flex flex-col items-center justify-center min-h-screen px-4 py-20 text-center"
      >
        <div class="max-w-6xl mx-auto">
          <div
            class="mb-8 inline-flex items-center gap-2 px-6 py-3 bg-red-600/20 border-2 border-red-600 backdrop-blur-sm"
          >
            <div class="w-2 h-2 bg-red-600 animate-pulse"></div>
            <span
              class="text-red-500 font-black uppercase tracking-wider text-sm"
              >25+ Years Experience</span
            >
          </div>

          <h1
            class="text-white text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-black tracking-tighter leading-none mb-8 build-text"
          >
            <span class="block text-red-600">BUILDING</span>
            <span class="block">THE FUTURE</span>
          </h1>

          <p
            class="text-xl md:text-2xl text-gray-300 font-bold mb-12 max-w-4xl mx-auto uppercase tracking-wide"
          >
            Expert Construction & <span class="text-red-500">Contracting</span> Services
          </p>

          <div
            class="flex flex-col sm:flex-row items-center justify-center gap-6"
          >
            <a
              class="group inline-flex items-center px-10 py-5 bg-gradient-to-r from-red-600 to-red-700 text-white text-xl font-black clip-corner hover:from-red-700 hover:to-red-800 transition-all duration-300 shadow-2xl shadow-red-900/50 hover:scale-105 uppercase"
              href="#contact"
            >
              Get Free Quote
              <svg
                class="ml-3 w-6 h-6 group-hover:translate-x-2 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="3"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a
              class="inline-flex items-center px-10 py-5 bg-transparent border-4 border-white text-white text-xl font-black clip-corner hover:bg-white hover:text-black transition-all duration-300 uppercase"
              href="#projects"
            >
              View Projects
            </a>
          </div>

          <!-- Stats Bar -->
          <div class="mt-20 grid grid-cols-3 gap-8 max-w-4xl mx-auto">
            <div class="text-center construction-stat">
              <div class="text-5xl font-black text-red-500 mb-2">500+</div>
              <div
                class="text-sm text-gray-400 uppercase tracking-widest font-bold"
              >
                Projects Built
              </div>
            </div>
            <div
              class="text-center border-x-4 border-red-600/30 construction-stat"
            >
              <div class="text-5xl font-black text-white mb-2">25+</div>
              <div
                class="text-sm text-gray-400 uppercase tracking-widest font-bold"
              >
                Years Experience
              </div>
            </div>
            <div class="text-center construction-stat">
              <div class="text-5xl font-black text-red-500 mb-2">100%</div>
              <div
                class="text-sm text-gray-400 uppercase tracking-widest font-bold"
              >
                Licensed & Insured
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Services Section -->
    <section
      class="bg-gradient-to-b from-black via-zinc-900 to-black py-24"
      id="services"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2
            class="text-5xl md:text-7xl font-black text-white mb-6 tracking-tight uppercase"
          >
            Our <span class="text-red-600">Services</span>
          </h2>
          <div
            class="w-32 h-2 bg-gradient-to-r from-red-600 to-red-800 mx-auto"
          >
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Service Card 1 -->
          <div
            class="group relative bg-zinc-900 border-4 border-zinc-800 p-8 clip-corner hover:border-red-600 transition-all duration-300 overflow-hidden"
          >
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-red-600/10 blur-3xl group-hover:scale-150 transition-transform duration-500"
            >
            </div>
            <div class="relative">
              <div
                class="w-16 h-16 bg-gradient-to-br from-red-600 to-red-800 flex items-center justify-center mb-6 clip-corner"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                  ></path>
                </svg>
              </div>
              <h3 class="text-2xl font-black text-white mb-4 uppercase">
                Residential
              </h3>
              <p class="text-gray-400 leading-relaxed mb-4">
                Custom homes, additions, renovations. Turn your dream home into
                reality.
              </p>
              <ul class="space-y-2">
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>New Home Construction</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>Home Additions</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>Kitchen & Bath Remodel</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Service Card 2 -->
          <div
            class="group relative bg-zinc-900 border-4 border-zinc-800 p-8 clip-corner hover:border-red-600 transition-all duration-300 overflow-hidden"
          >
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-red-600/10 blur-3xl group-hover:scale-150 transition-transform duration-500"
            >
            </div>
            <div class="relative">
              <div
                class="w-16 h-16 bg-gradient-to-br from-red-600 to-red-800 flex items-center justify-center mb-6 clip-corner"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                  ></path>
                </svg>
              </div>
              <h3 class="text-2xl font-black text-white mb-4 uppercase">
                Commercial
              </h3>
              <p class="text-gray-400 leading-relaxed mb-4">
                Office buildings, retail spaces, warehouses. Built to last.
              </p>
              <ul class="space-y-2">
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>Office Buildings</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>Retail Spaces</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>Industrial Facilities</span>
                </li>
              </ul>
            </div>
          </div>

          <!-- Service Card 3 -->
          <div
            class="group relative bg-zinc-900 border-4 border-zinc-800 p-8 clip-corner hover:border-red-600 transition-all duration-300 overflow-hidden"
          >
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-red-600/10 blur-3xl group-hover:scale-150 transition-transform duration-500"
            >
            </div>
            <div class="relative">
              <div
                class="w-16 h-16 bg-gradient-to-br from-red-600 to-red-800 flex items-center justify-center mb-6 clip-corner"
              >
                <svg
                  class="w-8 h-8 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-black text-white mb-4 uppercase">
                Renovations
              </h3>
              <p class="text-gray-400 leading-relaxed mb-4">
                Transform your existing space. Complete remodels and upgrades.
              </p>
              <ul class="space-y-2">
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>Complete Remodeling</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>Structural Repairs</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400">
                  <div class="w-1 h-1 bg-red-600"></div>
                  <span>Interior Upgrades</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="bg-black py-24 relative" id="projects">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2
            class="text-5xl md:text-7xl font-black text-white mb-6 tracking-tight uppercase"
          >
            Featured <span class="text-red-600">Projects</span>
          </h2>
          <p class="text-xl text-gray-400 max-w-3xl mx-auto">
            Quality craftsmanship in every build
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Project 1 -->
          <div
            class="group relative overflow-hidden clip-corner border-4 border-zinc-800 hover:border-red-600 transition-all"
          >
            <img
              src="https://images.unsplash.com/photo-1503387762-592deb58ef4e?w=800&q=80"
              alt="Commercial Building"
              class="w-full h-96 object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <div
                class="inline-block px-4 py-1 bg-red-600 text-white text-xs font-black uppercase mb-4"
              >
                Commercial
              </div>
              <h3 class="text-3xl font-black text-white mb-2 uppercase">
                Downtown Office Complex
              </h3>
              <p class="text-gray-300">
                50,000 sq ft | 12 month build | $8.5M project
              </p>
            </div>
          </div>

          <!-- Project 2 -->
          <div
            class="group relative overflow-hidden clip-corner border-4 border-zinc-800 hover:border-red-600 transition-all"
          >
            <img
              src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=800&q=80"
              alt="Luxury Home"
              class="w-full h-96 object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <div
                class="inline-block px-4 py-1 bg-red-600 text-white text-xs font-black uppercase mb-4"
              >
                Residential
              </div>
              <h3 class="text-3xl font-black text-white mb-2 uppercase">
                Modern Luxury Home
              </h3>
              <p class="text-gray-300">
                6,500 sq ft | 8 month build | Custom design
              </p>
            </div>
          </div>

          <!-- Project 3 -->
          <div
            class="group relative overflow-hidden clip-corner border-4 border-zinc-800 hover:border-red-600 transition-all"
          >
            <img
              src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=800&q=80"
              alt="Warehouse"
              class="w-full h-96 object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <div
                class="inline-block px-4 py-1 bg-red-600 text-white text-xs font-black uppercase mb-4"
              >
                Industrial
              </div>
              <h3 class="text-3xl font-black text-white mb-2 uppercase">
                Logistics Warehouse
              </h3>
              <p class="text-gray-300">
                80,000 sq ft | 10 month build | Steel construction
              </p>
            </div>
          </div>

          <!-- Project 4 -->
          <div
            class="group relative overflow-hidden clip-corner border-4 border-zinc-800 hover:border-red-600 transition-all"
          >
            <img
              src="https://images.unsplash.com/photo-1484154218962-a197022b5858?w=800&q=80"
              alt="Kitchen Remodel"
              class="w-full h-96 object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-8">
              <div
                class="inline-block px-4 py-1 bg-red-600 text-white text-xs font-black uppercase mb-4"
              >
                Renovation
              </div>
              <h3 class="text-3xl font-black text-white mb-2 uppercase">
                Complete Home Remodel
              </h3>
              <p class="text-gray-300">
                Full renovation | 4 month project | Modern finishes
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section
      class="bg-gradient-to-br from-red-900 via-red-700 to-red-900 py-20"
    >
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2
          class="text-4xl md:text-6xl font-black text-white mb-6 uppercase tracking-tight"
        >
          Ready to Build <span class="text-black">Your Project?</span>
        </h2>
        <p class="text-xl text-white/90 mb-8 font-bold">
          Get a free quote today. Licensed, bonded, and insured.
        </p>
        <a
          class="inline-flex items-center px-10 py-4 bg-black text-white text-xl font-black clip-corner hover:bg-zinc-900 transition-all duration-300 shadow-2xl uppercase"
          href="#contact"
        >
          Get Free Quote
        </a>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="bg-black py-24" id="contact">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-5xl md:text-6xl font-black text-white mb-6 uppercase">
            <span class="text-red-600">Contact</span> Us
          </h2>
          <p class="text-xl text-gray-400">
            Let's discuss your construction project
          </p>
        </div>

        <div class="bg-zinc-900 border-4 border-zinc-800 p-8 lg:p-12">
          <form method="POST" action="/api/contact" class="space-y-6">
            <input
              type="hidden"
              name="form-name"
              value="construction-template"
            />
            <input
              type="text"
              name="honey"
              style="display:none"
              tabindex="-1"
              autocomplete="off"
              aria-hidden="true"
              class="hidden"
            />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="name"
                  class="block text-sm font-black text-white uppercase tracking-wider mb-2"
                  >Name *</label
                >
                <input
                  id="name"
                  name="name"
                  type="text"
                  required
                  class="w-full px-4 py-3 bg-black border-2 border-zinc-700 text-white focus:border-red-600 focus:ring-0 transition-colors clip-corner"
                  placeholder="Your Name"
                />
              </div>
              <div>
                <label
                  for="email"
                  class="block text-sm font-black text-white uppercase tracking-wider mb-2"
                  >Email *</label
                >
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  class="w-full px-4 py-3 bg-black border-2 border-zinc-700 text-white focus:border-red-600 focus:ring-0 transition-colors clip-corner"
                  placeholder="your@email.com"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="phone"
                  class="block text-sm font-black text-white uppercase tracking-wider mb-2"
                  >Phone *</label
                >
                <input
                  id="phone"
                  name="phone"
                  type="tel"
                  required
                  class="w-full px-4 py-3 bg-black border-2 border-zinc-700 text-white focus:border-red-600 focus:ring-0 transition-colors clip-corner"
                  placeholder="+1 (555) 000-0000"
                />
              </div>
              <div>
                <label
                  for="project"
                  class="block text-sm font-black text-white uppercase tracking-wider mb-2"
                  >Project Type *</label
                >
                <select
                  id="project"
                  name="project"
                  required
                  class="w-full px-4 py-3 bg-black border-2 border-zinc-700 text-white focus:border-red-600 focus:ring-0 transition-colors clip-corner"
                >
                  <option value="">Select...</option>
                  <option value="residential">Residential Construction</option>
                  <option value="commercial">Commercial Building</option>
                  <option value="renovation">Renovation/Remodel</option>
                  <option value="addition">Home Addition</option>
                  <option value="other">Other</option>
                </select>
              </div>
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-black text-white uppercase tracking-wider mb-2"
                >Project Details *</label
              >
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 bg-black border-2 border-zinc-700 text-white focus:border-red-600 focus:ring-0 transition-colors resize-none clip-corner"
                placeholder="Tell us about your project..."></textarea>
            </div>

            <button
              type="submit"
              class="w-full py-5 bg-gradient-to-r from-red-600 to-red-700 text-white text-xl font-black uppercase clip-corner hover:from-red-700 hover:to-red-800 transition-all duration-300 shadow-xl hover:scale-[1.02]"
            >
              Request Free Quote
            </button>
          </form>

          <div class="mt-12 pt-8 border-t border-zinc-800">
            <div class="grid md:grid-cols-3 gap-6 text-center">
              <div>
                <div class="text-red-600 font-black uppercase text-sm mb-2">
                  Location
                </div>
                <div class="text-white">456 Builder's Lane</div>
                <div class="text-gray-400 text-sm">Denver, CO 80202</div>
              </div>
              <div>
                <div class="text-red-600 font-black uppercase text-sm mb-2">
                  Hours
                </div>
                <div class="text-white">Mon-Fri: 7AM-6PM</div>
                <div class="text-gray-400 text-sm">Sat: 8AM-4PM</div>
              </div>
              <div>
                <div class="text-red-600 font-black uppercase text-sm mb-2">
                  Contact
                </div>
                <div class="text-white">(555) 987-6543</div>
                <div class="text-gray-400 text-sm">info@buildco.com</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</LandingLayout>

<style>
  .warning-stripes {
