---
import LandingLayout from "../../layouts/LandingLayout.astro";
import Logo from "../../components/logo.astro";

const pageTitle = "PrimeCare Medical Center | Compassionate Healthcare in Boston";
const pageDescription =
  "Comprehensive primary care and specialty services in Boston. Board-certified physicians, same-day appointments, and patient-centered care.";
const pageKeywords =
  "medical center Boston, primary care, family doctor, healthcare clinic, medical services, urgent care, pediatrics";
---

<LandingLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />

  <div class="relative w-full overflow-hidden bg-white">
    <!-- Fixed Navigation -->
    <nav
      class="fixed top-0 left-0 right-0 z-50 bg-white/98 backdrop-blur-sm border-b border-blue-100 shadow-sm"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <Logo sizeW={160} sizeH={48} />
          <div class="hidden md:flex items-center space-x-8">
            <a
              href="#services"
              class="text-gray-700 hover:text-blue-600 font-medium transition-colors"
              >Services</a
            >
            <a
              href="#team"
              class="text-gray-700 hover:text-blue-600 font-medium transition-colors"
              >Our Team</a
            >
            <a
              href="#insurance"
              class="text-gray-700 hover:text-blue-600 font-medium transition-colors"
              >Insurance</a
            >
            <a
              href="#contact"
              class="px-6 py-2.5 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-all shadow-sm"
              >Book Appointment</a
            >
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section
      class="relative pt-32 pb-20 lg:pt-40 lg:pb-28 bg-gradient-to-br from-blue-50 via-white to-sky-50"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="space-y-8">
            <span
              class="inline-block px-4 py-2 bg-blue-100 text-blue-700 text-sm font-semibold rounded-full animate-fade-in"
            >
              ACCEPTING NEW PATIENTS
            </span>
            <h1
              class="text-5xl lg:text-6xl xl:text-7xl font-bold text-gray-900 leading-tight animate-slide-up"
            >
              Your Health, <span class="text-blue-600">Our Priority</span>
            </h1>
            <p class="text-xl text-gray-600 leading-relaxed animate-fade-in-delay">
              Comprehensive medical care from board-certified physicians.
              Serving Boston families with compassion and excellence for over
              20 years.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 animate-fade-in-delay-2">
              <a
                href="#contact"
                class="inline-flex items-center justify-center px-8 py-4 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-all shadow-lg hover:shadow-xl"
              >
                Schedule Appointment
                <svg
                  class="ml-2 w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
              <a
                href="tel:617-555-0123"
                class="inline-flex items-center justify-center px-8 py-4 bg-white text-gray-900 rounded-lg font-semibold border-2 border-gray-300 hover:border-blue-600 transition-all"
              >
                <svg
                  class="w-5 h-5 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                (617) 555-0123
              </a>
            </div>

            <!-- Trust Indicators -->
            <div class="grid grid-cols-3 gap-6 pt-8 border-t border-gray-200">
              <div class="text-center">
                <div class="text-3xl font-bold text-blue-600 mb-1">20+</div>
                <div class="text-sm text-gray-600">Years of Service</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-blue-600 mb-1">15</div>
                <div class="text-sm text-gray-600">Board-Certified MDs</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-blue-600 mb-1">24/7</div>
                <div class="text-sm text-gray-600">Urgent Care</div>
              </div>
            </div>
          </div>

          <!-- Right Image -->
          <div class="relative">
            <div
              class="absolute -inset-4 bg-gradient-to-r from-blue-100 to-sky-200 rounded-2xl blur-2xl opacity-30"
            >
            </div>
            <div
              class="relative bg-white rounded-2xl shadow-2xl overflow-hidden border border-blue-100"
            >
              <img
                src="https://images.unsplash.com/photo-1631815588090-d4bfec5b1ccb?w=800&q=80"
                alt="PrimeCare Medical Center"
                class="w-full h-[500px] object-cover"
              />
              <div
                class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-white via-white/95 to-transparent p-8"
              >
                <div class="flex items-center gap-3 mb-3">
                  <div
                    class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">
                      HIPAA Compliant
                    </div>
                    <div class="text-sm text-gray-600">
                      Your privacy is protected
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 lg:py-28 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Comprehensive Medical Services
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            From preventive care to specialized treatment, we provide complete
            healthcare for you and your family
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Service Card 1 -->
          <div
            class="group p-8 bg-white rounded-xl border-2 border-gray-100 hover:border-blue-200 hover:shadow-xl transition-all duration-300"
          >
            <div
              class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition-all"
            >
              <svg
                class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Primary Care</h3>
            <p class="text-gray-600 leading-relaxed mb-4">
              Annual physicals, chronic disease management, preventive care, and
              routine health screenings.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Annual wellness exams
              </li>
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Diabetes & hypertension care
              </li>
            </ul>
          </div>

          <!-- Service Card 2 -->
          <div
            class="group p-8 bg-white rounded-xl border-2 border-gray-100 hover:border-blue-200 hover:shadow-xl transition-all duration-300"
          >
            <div
              class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition-all"
            >
              <svg
                class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Pediatrics</h3>
            <p class="text-gray-600 leading-relaxed mb-4">
              Complete pediatric care from newborn to adolescent, including
              well-child visits and vaccinations.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Well-child checkups
              </li>
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Immunizations & development
              </li>
            </ul>
          </div>

          <!-- Service Card 3 -->
          <div
            class="group p-8 bg-white rounded-xl border-2 border-gray-100 hover:border-blue-200 hover:shadow-xl transition-all duration-300"
          >
            <div
              class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition-all"
            >
              <svg
                class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Urgent Care</h3>
            <p class="text-gray-600 leading-relaxed mb-4">
              Walk-in urgent care for non-life-threatening conditions. No
              appointment needed.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Open 7 days a week
              </li>
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                X-rays & lab tests on-site
              </li>
            </ul>
          </div>

          <!-- Service Card 4 -->
          <div
            class="group p-8 bg-white rounded-xl border-2 border-gray-100 hover:border-blue-200 hover:shadow-xl transition-all duration-300"
          >
            <div
              class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition-all"
            >
              <svg
                class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Women's Health</h3>
            <p class="text-gray-600 leading-relaxed mb-4">
              Comprehensive gynecological care, prenatal services, and women's
              wellness programs.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Annual GYN exams
              </li>
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Prenatal & postnatal care
              </li>
            </ul>
          </div>

          <!-- Service Card 5 -->
          <div
            class="group p-8 bg-white rounded-xl border-2 border-gray-100 hover:border-blue-200 hover:shadow-xl transition-all duration-300"
          >
            <div
              class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition-all"
            >
              <svg
                class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">
              Mental Health
            </h3>
            <p class="text-gray-600 leading-relaxed mb-4">
              Behavioral health services including counseling, therapy, and
              psychiatric care.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Individual therapy
              </li>
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Medication management
              </li>
            </ul>
          </div>

          <!-- Service Card 6 -->
          <div
            class="group p-8 bg-white rounded-xl border-2 border-gray-100 hover:border-blue-200 hover:shadow-xl transition-all duration-300"
          >
            <div
              class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 transition-all"
            >
              <svg
                class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">
              Diagnostic Testing
            </h3>
            <p class="text-gray-600 leading-relaxed mb-4">
              Full-service laboratory and imaging center on-site for fast,
              accurate results.
            </p>
            <ul class="space-y-2 text-sm text-gray-600">
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                Blood work & urinalysis
              </li>
              <li class="flex items-center">
                <svg
                  class="w-4 h-4 text-blue-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                X-rays & ultrasounds
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section id="team" class="py-20 lg:py-28 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Meet Our Physicians
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Board-certified doctors committed to providing exceptional,
            personalized care
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Doctor 1 -->
          <div
            class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all"
          >
            <img
              src="https://images.unsplash.com/photo-1559839734-2b71ea197ec2?w=400&q=80"
              alt="Dr. Sarah Johnson"
              class="w-full h-64 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-1">
                Dr. Sarah Johnson, MD
              </h3>
              <p class="text-blue-600 font-semibold mb-3">
                Internal Medicine
              </p>
              <p class="text-gray-600 text-sm mb-4">
                Harvard Medical School • 15 years experience
              </p>
              <div class="flex flex-wrap gap-2">
                <span
                  class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full"
                  >Primary Care</span
                >
                <span
                  class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full"
                  >Diabetes</span
                >
              </div>
            </div>
          </div>

          <!-- Doctor 2 -->
          <div
            class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all"
          >
            <img
              src="https://images.unsplash.com/photo-1612349317150-e413f6a5b16d?w=400&q=80"
              alt="Dr. Michael Chen"
              class="w-full h-64 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-1">
                Dr. Michael Chen, MD
              </h3>
