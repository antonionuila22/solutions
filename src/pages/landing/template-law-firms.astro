---
import LandingLayout from "../../layouts/LandingLayout.astro";
import Logo from "../../components/logo.astro";

const pageTitle = "Sterling & Associates | Trusted Legal Counsel Since 1985";
const pageDescription =
  "Experienced attorneys providing comprehensive legal services in New York. Corporate law, litigation, family law, and estate planning. Schedule a consultation today.";
const pageKeywords =
  "law firm New York, attorneys, lawyers, legal services, corporate law, family law, litigation, estate planning";
---

<LandingLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />

  <div class="relative w-full overflow-hidden bg-white">
    <!-- Fixed Navigation -->
    <nav
      class="fixed top-0 left-0 right-0 z-50 bg-white/98 backdrop-blur-sm border-b border-slate-200 shadow-sm"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <Logo sizeW={160} sizeH={48} />
          <div class="hidden md:flex items-center space-x-8">
            <a
              href="#practice"
              class="text-slate-700 hover:text-slate-900 font-medium transition-colors"
              >Practice Areas</a
            >
            <a
              href="#attorneys"
              class="text-slate-700 hover:text-slate-900 font-medium transition-colors"
              >Attorneys</a
            >
            <a
              href="#results"
              class="text-slate-700 hover:text-slate-900 font-medium transition-colors"
              >Results</a
            >
            <a
              href="#contact"
              class="px-6 py-2.5 bg-slate-900 text-white rounded-lg font-semibold hover:bg-slate-800 transition-all shadow-sm"
              >Free Consultation</a
            >
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section
      class="relative pt-32 pb-20 lg:pt-40 lg:pb-28 bg-gradient-to-br from-slate-50 via-white to-slate-100"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="space-y-8">
            <span
              class="inline-block px-4 py-2 bg-slate-100 text-slate-700 text-sm font-semibold rounded-full animate-fade-in"
            >
              TRUSTED LEGAL COUNSEL SINCE 1985
            </span>
            <h1
              class="text-5xl lg:text-6xl xl:text-7xl font-bold text-slate-900 leading-tight animate-slide-up"
            >
              Excellence in <span class="text-slate-700">Legal</span> Representation
            </h1>
            <p class="text-xl text-slate-600 leading-relaxed animate-fade-in-delay">
              Sterling & Associates provides comprehensive legal services with
              integrity, dedication, and proven results. Our experienced
              attorneys are committed to protecting your rights and interests.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 animate-fade-in-delay-2">
              <a
                href="#contact"
                class="inline-flex items-center justify-center px-8 py-4 bg-slate-900 text-white rounded-lg font-semibold hover:bg-slate-800 transition-all shadow-lg hover:shadow-xl"
              >
                Schedule Consultation
                <svg
                  class="ml-2 w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
              <a
                href="tel:212-555-0100"
                class="inline-flex items-center justify-center px-8 py-4 bg-white text-slate-900 rounded-lg font-semibold border-2 border-slate-300 hover:border-slate-900 transition-all"
              >
                <svg
                  class="w-5 h-5 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                (212) 555-0100
              </a>
            </div>

            <!-- Trust Indicators -->
            <div class="grid grid-cols-3 gap-6 pt-8 border-t border-slate-200">
              <div class="text-center">
                <div class="text-3xl font-bold text-slate-900 mb-1">38+</div>
                <div class="text-sm text-slate-600">Years of Service</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-slate-900 mb-1">25</div>
                <div class="text-sm text-slate-600">Expert Attorneys</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-slate-900 mb-1">98%</div>
                <div class="text-sm text-slate-600">Success Rate</div>
              </div>
            </div>
          </div>

          <!-- Right Image -->
          <div class="relative">
            <div
              class="absolute -inset-4 bg-gradient-to-r from-slate-200 to-slate-300 rounded-2xl blur-2xl opacity-30"
            >
            </div>
            <div
              class="relative bg-white rounded-2xl shadow-2xl overflow-hidden border border-slate-200"
            >
              <img
                src="https://images.unsplash.com/photo-1589829545856-d10d557cf95f?w=800&q=80"
                alt="Sterling & Associates Law Office"
                class="w-full h-[500px] object-cover"
              />
              <div
                class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-slate-900 via-slate-900/90 to-transparent p-8"
              >
                <div class="text-white">
                  <div class="text-sm font-semibold text-slate-300 mb-2">
                    AWARD-WINNING FIRM
                  </div>
                  <div class="text-2xl font-bold">
                    Super Lawyers® 2024
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Practice Areas Section -->
    <section id="practice" class="py-20 lg:py-28 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
            Practice Areas
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto">
            Comprehensive legal services across multiple practice areas to serve
            all your legal needs
