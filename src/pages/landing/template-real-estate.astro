---
import LandingLayout from "../../layouts/LandingLayout.astro";
import Logo from "../../components/logo.astro";

const pageTitle = "Premier Realty Group | Luxury Real Estate in Miami";
const pageDescription =
  "Leading real estate agency in Miami specializing in luxury homes, waterfront properties, and commercial real estate. Expert agents, exceptional service.";
const pageKeywords =
  "Miami real estate, luxury homes Miami, waterfront property, real estate agent, buy sell home Miami, commercial real estate";
---

<LandingLayout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />

  <div class="relative w-full overflow-hidden bg-white">
    <!-- Fixed Navigation -->
    <nav
      class="fixed top-0 left-0 right-0 z-50 bg-white/98 backdrop-blur-sm border-b border-gray-200 shadow-sm"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <Logo sizeW={160} sizeH={48} />
          <div class="hidden md:flex items-center space-x-8">
            <a
              href="#listings"
              class="text-gray-700 hover:text-cyan-600 font-medium transition-colors"
              >Listings</a
            >
            <a
              href="#agents"
              class="text-gray-700 hover:text-cyan-600 font-medium transition-colors"
              >Agents</a
            >
            <a
              href="#services"
              class="text-gray-700 hover:text-cyan-600 font-medium transition-colors"
              >Services</a
            >
            <a
              href="#contact"
              class="px-6 py-2.5 bg-cyan-600 text-white rounded-lg font-semibold hover:bg-cyan-700 transition-all shadow-sm"
              >Get Started</a
            >
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section
      class="relative pt-32 pb-20 lg:pt-40 lg:pb-28 bg-gradient-to-br from-cyan-50 via-white to-sky-50"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="space-y-8">
            <span
              class="inline-block px-4 py-2 bg-cyan-100 text-cyan-700 text-sm font-semibold rounded-full animate-fade-in"
            >
              MIAMI'S PREMIER REAL ESTATE AGENCY
            </span>
            <h1
              class="text-5xl lg:text-6xl xl:text-7xl font-bold text-gray-900 leading-tight animate-slide-up"
            >
              Find Your <span class="text-cyan-600">Dream Home</span> in Miami
            </h1>
            <p
              class="text-xl text-gray-600 leading-relaxed animate-fade-in-delay"
            >
              Discover luxury properties, waterfront estates, and exclusive
              listings with Premier Realty Group. Your trusted partner in Miami
              real estate since 1998.
            </p>
            <div
              class="flex flex-col sm:flex-row gap-4 animate-fade-in-delay-2"
            >
              <a
                href="#listings"
                class="inline-flex items-center justify-center px-8 py-4 bg-cyan-600 text-white rounded-lg font-semibold hover:bg-cyan-700 transition-all shadow-lg hover:shadow-xl"
              >
                Browse Properties
                <svg
                  class="ml-2 w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
              <a
                href="#contact"
                class="inline-flex items-center justify-center px-8 py-4 bg-white text-gray-900 rounded-lg font-semibold border-2 border-gray-300 hover:border-cyan-600 transition-all"
              >
                Schedule Showing
              </a>
            </div>

            <!-- Trust Indicators -->
            <div class="grid grid-cols-3 gap-6 pt-8 border-t border-gray-200">
              <div class="text-center">
                <div class="text-3xl font-bold text-cyan-600 mb-1">2,500+</div>
                <div class="text-sm text-gray-600">Homes Sold</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-cyan-600 mb-1">25+</div>
                <div class="text-sm text-gray-600">Expert Agents</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-cyan-600 mb-1">$2.5B</div>
                <div class="text-sm text-gray-600">Sales Volume</div>
              </div>
            </div>
          </div>

          <!-- Right Image -->
          <div class="relative">
            <div
              class="absolute -inset-4 bg-gradient-to-r from-cyan-100 to-sky-200 rounded-2xl blur-2xl opacity-30"
            >
            </div>
            <div
              class="relative bg-white rounded-2xl shadow-2xl overflow-hidden border border-cyan-100"
            >
              <img
                src="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=800&q=80"
                alt="Luxury Miami Home"
                class="w-full h-[500px] object-cover"
              />
              <div
                class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-white via-white/95 to-transparent p-8"
              >
                <div>
                  <div class="text-sm font-semibold text-cyan-600 mb-2">
                    FEATURED LISTING
                  </div>
                  <div class="text-2xl font-bold text-gray-900 mb-1">
                    $12.5M | 8,500 SQ FT
                  </div>
                  <div class="text-gray-600">
                    Waterfront Estate • Miami Beach
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Listings Section -->
    <section id="listings" class="py-20 lg:py-28 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Featured Properties
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Explore our exclusive collection of luxury homes and prime real
            estate in Miami's most desirable neighborhoods
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Listing 1 -->
          <div
            class="group bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100"
          >
            <div class="relative overflow-hidden">
              <img
                src="https://images.unsplash.com/photo-1613490493576-7fde63acd811?w=600&q=80"
                alt="Modern Waterfront Villa"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div
                class="absolute top-4 right-4 px-3 py-1 bg-cyan-600 text-white text-sm font-bold rounded-lg"
              >
                FOR SALE
              </div>
            </div>
            <div class="p-6">
              <div class="text-2xl font-bold text-gray-900 mb-2">
                $8,950,000
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                Modern Waterfront Villa
              </h3>
              <p class="text-gray-600 mb-4">1234 Ocean Drive, Miami Beach</p>
              <div class="flex items-center gap-4 text-gray-600 text-sm mb-4">
                <span class="flex items-center">
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                    ></path>
                  </svg>
                  6 Beds
                </span>
                <span class="flex items-center">
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"></path>
                  </svg>
                  7 Baths
                </span>
                <span>7,200 SQ FT</span>
              </div>
              <a
                href="#contact"
                class="block w-full py-3 bg-cyan-50 text-cyan-700 rounded-lg font-semibold hover:bg-cyan-600 hover:text-white transition-all text-center"
              >
                Schedule Showing
              </a>
            </div>
          </div>

          <!-- Listing 2 -->
          <div
            class="group bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100"
          >
            <div class="relative overflow-hidden">
              <img
                src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=600&q=80"
                alt="Contemporary Penthouse"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div
                class="absolute top-4 right-4 px-3 py-1 bg-cyan-600 text-white text-sm font-bold rounded-lg"
              >
                FOR SALE
              </div>
            </div>
            <div class="p-6">
              <div class="text-2xl font-bold text-gray-900 mb-2">
                $5,750,000
              </div>
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                Contemporary Penthouse
              </h3>
              <p class="text-gray-600 mb-4">900 Brickell Avenue, Brickell</p>
              <div class="flex items-center gap-4 text-gray-600 text-sm mb-4">
                <span class="flex items-center">
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                    ></path>
                  </svg>
                  4 Beds
                </span>
                <span class="flex items-center">
                  <svg
                    class="w-4 h-4 mr-1"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                      clip-rule="evenodd"></path>
                  </svg>
                  5 Baths
                </span>
                <span>4,800 SQ FT</span>
              </div>
              <a
                href="#contact"
                class="block w-full py-3 bg-cyan-50 text-cyan-700 rounded-lg font-semibold hover:bg-cyan-600 hover:text-white transition-all text-center"
              >
                Schedule Showing
              </a>
            </div>
          </div>

          <!-- Listing 3 -->
          <div
            class="group bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100"
          >
            <div class="relative overflow-hidden">
              <img
                src="https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=600&q=80"
                alt="Coral Gables Estate"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div
                class="absolute top-4 right-4 px-3 py-1 bg-amber-600 text-white text-sm font-bold rounded-lg"
