        </div>
      </div>
    </section>

    <!-- Agents Section -->
    <section id="agents" class="py-20 lg:py-28 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Meet Our Agents
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Award-winning real estate professionals committed to your success
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Agent 1 -->
          <div
            class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all"
          >
            <img
              src="https://images.unsplash.com/photo-1560250097-0b93528c311a?w=400&q=80"
              alt="Michael Torres"
              class="w-full h-64 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-1">
                Michael Torres
              </h3>
              <p class="text-cyan-600 font-semibold mb-3">
                Senior Broker | Luxury Specialist
              </p>
              <p class="text-gray-600 text-sm mb-4">
