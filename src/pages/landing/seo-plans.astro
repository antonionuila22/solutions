---
import Layout from "../../layouts/Layout.astro";

// SEO Metadata
const pageTitle =
  "SEO Services from $400/mo | Rank Higher on Google | Codebrand";
const pageDescription =
  "Professional SEO services starting at $400/month. Keyword research, on-page optimization, link building, and monthly reporting. US agencies charge $1,500-$5,000/mo for the same service.";
const pageKeywords =
  "SEO services, search engine optimization, local SEO, keyword research, link building, Google ranking, affordable SEO, small business SEO";

// SEO Plans
const plans = [
  {
    name: "Local",
    price: 400,
    description: "Perfect for local businesses targeting their city",
    popular: false,
    features: [
      "10 target keywords",
      "Google Business Profile optimization",
      "Local citation building (20/mo)",
      "On-page SEO optimization",
      "Technical SEO audit",
      "Monthly ranking report",
      "Competitor analysis",
      "Email support",
    ],
    notIncluded: ["Content creation", "Link building", "National targeting"],
  },
  {
    name: "Growth",
    price: 750,
    description: "For businesses ready to dominate their market",
    popular: true,
    features: [
      "25 target keywords",
      "Google Business Profile management",
      "Local citation building (40/mo)",
      "Advanced on-page SEO",
      "Technical SEO optimization",
      "2 SEO blog posts/month",
      "Link building (5 links/mo)",
      "Bi-weekly ranking reports",
      "Detailed competitor tracking",
      "Priority email & chat support",
    ],
    notIncluded: ["E-commerce SEO", "International targeting"],
  },
  {
    name: "Enterprise",
    price: 1200,
    description: "Full-scale SEO for maximum visibility",
    popular: false,
    features: [
      "50+ target keywords",
      "Complete GBP management",
      "Unlimited local citations",
      "Advanced technical SEO",
      "4 SEO blog posts/month",
      "Premium link building (15 links/mo)",
      "Weekly ranking reports",
      "Advanced competitor analysis",
      "Content strategy & planning",
      "E-commerce SEO support",
      "Dedicated SEO manager",
      "Monthly strategy calls",
    ],
    notIncluded: [],
  },
];

// What we do
const services = [
  {
    icon: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z",
    title: "Keyword Research",
    description:
      "We find the exact keywords your customers are searching for and target them strategically.",
  },
  {
    icon: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z",
    title: "On-Page Optimization",
    description:
      "We optimize your pages' titles, meta descriptions, content, and structure for maximum visibility.",
  },
  {
    icon: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
    title: "Technical SEO",
    description:
      "Site speed, mobile optimization, schema markup, and crawlability - we fix all technical issues.",
  },
  {
    icon: "M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1",
    title: "Link Building",
    description:
      "Quality backlinks from relevant websites to boost your domain authority and rankings.",
  },
  {
    icon: "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z",
    title: "Local SEO",
    description:
      "Dominate local search results with Google Business Profile optimization and local citations.",
  },
  {
    icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    title: "Reporting & Analytics",
    description:
      "Transparent monthly reports showing your rankings, traffic growth, and ROI.",
  },
];

const industries = [
  "Automotive", "Construction", "Content Creators", "E-commerce",
  "Fitness", "Healthcare", "Law Firms", "Real Estate",
  "Restaurants", "Travel Agency", "Other",
];

const formServices = [
  "Web Development", "UX/UI Design", "Branding", "SEO",
  "Social Media", "Video Editing", "3D Rendering", "Animation",
  "Graphic Design", "Photography",
];
---

<Layout title={pageTitle} description={pageDescription} keywords={pageKeywords}>
  <meta property="og:title" content={pageTitle} slot="head" />
  <meta property="og:description" content={pageDescription} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta property="og:image" content="https://codebrand.us/photos/bannercodebrand.webp" slot="head" />
  <meta property="og:url" content="https://codebrand.us/landing/seo-plans" slot="head" />
  <link rel="canonical" href="https://codebrand.us/landing/seo-plans" slot="head" />

  <!-- Service Schema -->
  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "serviceType": "Search Engine Optimization",
      "name": "Professional SEO Services",
      "description": "Professional search engine optimization services including keyword research, on-page optimization, link building, and monthly reporting. Starting at $400/month.",
      "url": "https://codebrand.us/landing/seo-plans",
      "provider": {
        "@type": "Organization",
        "name": "Codebrand",
        "url": "https://codebrand.us",
        "logo": "https://codebrand.us/iconcodebrand.svg"
      },
      "areaServed": [
        {
          "@type": "Country",
          "name": "United States"
        },
        {
          "@type": "Country",
          "name": "Honduras"
        }
      ],
      "offers": [
        {
          "@type": "Offer",
          "name": "Local SEO Plan",
          "description": "Perfect for local businesses targeting their city. Includes 10 target keywords, Google Business Profile optimization, and monthly reporting.",
          "price": "400",
          "priceCurrency": "USD",
          "priceValidUntil": "2026-12-31",
          "availability": "https://schema.org/InStock"
        },
        {
          "@type": "Offer",
          "name": "Growth SEO Plan",
          "description": "For businesses ready to dominate their market. Includes 25 keywords, content creation, and link building.",
          "price": "750",
          "priceCurrency": "USD",
          "priceValidUntil": "2026-12-31",
          "availability": "https://schema.org/InStock"
        },
        {
          "@type": "Offer",
          "name": "Enterprise SEO Plan",
          "description": "Full-scale SEO for maximum visibility. Includes 50+ keywords, dedicated SEO manager, and monthly strategy calls.",
          "price": "1200",
          "priceCurrency": "USD",
          "priceValidUntil": "2026-12-31",
          "availability": "https://schema.org/InStock"
        }
      ]
    }
  </script>

  <!-- FAQPage Schema for Rich Results -->
  <script type="application/ld+json" is:inline slot="head">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "How long does SEO take to show results?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "SEO is a long-term strategy. Most clients see initial improvements in 2-3 months, with significant results in 4-6 months. The exact timeline depends on your competition, website age, and current SEO status."
          }
        },
        {
          "@type": "Question",
          "name": "Do you guarantee first page rankings?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "No ethical SEO company can guarantee specific rankings - Google's algorithm changes constantly. What we guarantee is a data-driven approach, transparent reporting, and continuous improvement of your organic visibility."
          }
        },
        {
          "@type": "Question",
          "name": "What's the difference between local and national SEO?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Local SEO focuses on ranking in your geographic area (city/region) and Google Maps. It's ideal for businesses serving local customers. National SEO targets broader keywords and requires more content and link building."
          }
        },
        {
          "@type": "Question",
          "name": "Will I own my SEO work if I cancel?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Absolutely. All on-page optimizations, content, and improvements made to your site remain yours. We'll also provide a complete handover document with recommendations for maintaining your rankings."
          }
        },
        {
          "@type": "Question",
          "name": "How do you report on progress?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You'll receive detailed monthly reports showing keyword rankings, organic traffic, leads/conversions, and work completed. We also include actionable recommendations and strategy updates."
          }
        }
      ]
    }
  </script>

  <!-- Hero Section -->
  <section class="py-16 sm:py-20 lg:py-28 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 rounded-full mb-6"
      >
        <svg
          class="w-4 h-4 text-green-500"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="text-slate-700 text-sm font-medium"
          >Professional SEO Services</span
        >
      </div>

      <h1
        class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight mb-6"
      >
        Get Found on Google
        <span class="block text-orange-500 mt-2">SEO from $400/month</span>
      </h1>

      <p class="text-xl text-slate-600 mb-4 max-w-3xl mx-auto leading-relaxed">
        Stop losing customers to competitors. Get your business on the first
        page of Google and watch your leads grow. Our SEO services complement your <a href="/web-development" class="text-cyan-600 hover:text-cyan-700 font-semibold">web development</a> and <a href="/digital-marketing" class="text-cyan-600 hover:text-cyan-700 font-semibold">digital marketing</a> strategy.
      </p>
      <p class="text-lg text-slate-500 mb-8 max-w-2xl mx-auto">
        US agencies charge <span class="text-slate-700 line-through"
          >$1,500 - $5,000/mo</span
        > for the same service.
        <span class="text-orange-500 font-semibold"
          >Save 60-70% with Codebrand.</span
        >
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href="#plans"
          class="inline-flex items-center justify-center px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white font-bold rounded-lg transition-all duration-300 text-lg shadow-lg"
        >
          View SEO Plans
          <svg
            class="w-5 h-5 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </a>
        <a
          href="#results"
          class="inline-flex items-center justify-center px-8 py-4 bg-white hover:bg-slate-50 text-slate-700 font-semibold rounded-lg border border-slate-200 transition-all duration-300 shadow-sm"
        >
          See Client Results
        </a>
      </div>

      <!-- Stats - Realistic -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-3xl mx-auto">
        <div class="bg-slate-50 rounded-xl p-4 border border-slate-100">
          <p class="text-3xl font-bold text-slate-900">30+</p>
          <p class="text-slate-500 text-sm">Active Clients</p>
        </div>
        <div class="bg-slate-50 rounded-xl p-4 border border-slate-100">
          <p class="text-3xl font-bold text-slate-900">3+</p>
          <p class="text-slate-500 text-sm">Years Experience</p>
        </div>
        <div class="bg-slate-50 rounded-xl p-4 border border-slate-100">
          <p class="text-3xl font-bold text-slate-900">85%</p>
          <p class="text-slate-500 text-sm">Client Retention</p>
        </div>
        <div class="bg-slate-50 rounded-xl p-4 border border-slate-100">
          <p class="text-3xl font-bold text-orange-500">60%</p>
          <p class="text-slate-500 text-sm">Cost Savings</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why SEO Matters -->
  <section class="py-12 bg-white border-y border-slate-100 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8 text-center">
        <div>
          <p class="text-4xl font-black text-cyan-900 mb-2">93%</p>
          <p class="text-slate-600">
            of online experiences begin with a search engine
          </p>
        </div>
        <div>
          <p class="text-4xl font-black text-orange-500 mb-2">75%</p>
          <p class="text-slate-600">
            of users never scroll past the first page
          </p>
        </div>
        <div>
          <p class="text-4xl font-black text-cyan-900 mb-2">14.6%</p>
          <p class="text-slate-600">
            SEO leads close rate vs 1.7% for outbound
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Plans Section -->
  <section class="py-16 sm:py-20 lg:py-28 bg-white font-poppins" id="plans">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span
          class="inline-block px-4 py-1 bg-orange-100 text-orange-600 text-sm font-semibold rounded-full mb-4"
        >
          TRANSPARENT PRICING
        </span>
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-black text-slate-900 mb-4"
        >
          Choose Your SEO Plan
        </h2>
        <p class="text-xl text-slate-500 max-w-3xl mx-auto">
          No contracts, cancel anytime. Results-focused SEO that actually works.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          plans.map((plan) => (
            <div
              class={`relative bg-white border-2 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 ${plan.popular ? "border-orange-500 scale-105" : "border-slate-200"}`}
            >
              {plan.popular && (
                <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                  <span class="px-4 py-1 bg-orange-500 text-white text-sm font-bold rounded-full shadow-lg">
                    BEST VALUE
                  </span>
                </div>
              )}

              <div class="text-center mb-6">
                <h3 class="text-2xl font-bold text-slate-900 mb-2">
                  {plan.name}
                </h3>
                <p class="text-slate-500 text-sm mb-4">{plan.description}</p>
                <div class="flex items-baseline justify-center gap-1">
                  <span class="text-5xl font-black text-slate-900">
                    ${plan.price}
                  </span>
                  <span class="text-slate-500">/month</span>
                </div>
              </div>

              <ul class="space-y-3 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-start gap-3 text-slate-600">
                    <svg
                      class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-sm">{feature}</span>
                  </li>
                ))}
                {plan.notIncluded.map((feature) => (
                  <li class="flex items-start gap-3 text-slate-400">
                    <svg
                      class="w-5 h-5 text-slate-300 flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="text-sm line-through">{feature}</span>
                  </li>
                ))}
              </ul>

              <a
                href="#contact"
                class={`block w-full py-4 font-bold rounded-lg text-center transition-all duration-300 ${plan.popular ? "bg-orange-500 hover:bg-orange-600 text-white shadow-lg" : "bg-slate-100 hover:bg-slate-200 text-slate-700"}`}
              >
                Get Started
              </a>
            </div>
          ))
        }
      </div>

      <p class="text-center text-slate-400 mt-8">
        All prices in USD. Billed monthly. 3-month minimum recommended for best
        results.
      </p>
    </div>
  </section>

  <!-- What's Included Section -->
  <section
    class="py-16 sm:py-20 lg:py-28 bg-slate-50 font-poppins"
    id="services"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-black text-slate-900 mb-4"
        >
          Our SEO Services
        </h2>
        <p class="text-xl text-slate-500 max-w-3xl mx-auto">
          Comprehensive SEO strategies that drive real, measurable results for
          your business.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          services.map((service) => (
            <div class="bg-white border border-slate-200 rounded-xl p-6 hover:border-cyan-400 hover:shadow-lg transition-all duration-300">
              <div class="w-12 h-12 bg-cyan-900 rounded-lg flex items-center justify-center mb-4">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={service.icon}
                  />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">
                {service.title}
              </h3>
              <p class="text-slate-500">{service.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Results Section -->
  <section class="py-16 sm:py-20 lg:py-28 bg-white font-poppins" id="results">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span
          class="inline-block px-4 py-1 bg-orange-100 text-orange-500 text-sm font-semibold rounded-full mb-4"
        >
          PROVEN RESULTS
        </span>
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-black text-slate-900 mb-4"
        >
          Real Client Results
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          [
            {
              business: "Plumbing Company",
              location: "Denver, CO",
              stats: [
                { label: "Organic Traffic", value: "+340%" },
                { label: "Keywords on Page 1", value: "45" },
                { label: "Monthly Leads", value: "120+" },
              ],
              quote:
                "We went from invisible on Google to dominating our local market.",
            },
            {
              business: "Dental Practice",
              location: "Houston, TX",
              stats: [
                { label: "Organic Traffic", value: "+280%" },
                { label: "Keywords on Page 1", value: "32" },
                { label: "New Patients/mo", value: "35+" },
              ],
              quote:
                "Our appointment bookings doubled within 6 months of starting SEO.",
            },
            {
              business: "E-commerce Store",
              location: "Los Angeles, CA",
              stats: [
                { label: "Organic Traffic", value: "+450%" },
                { label: "Keywords on Page 1", value: "120+" },
                { label: "Revenue Increase", value: "+180%" },
              ],
              quote: "SEO became our #1 source of sales, beating paid ads.",
            },
          ].map((result) => (
            <div class="bg-slate-50 border border-slate-200 rounded-2xl p-8 hover:shadow-lg transition-all duration-300">
              <div class="mb-6">
                <p class="text-slate-900 font-bold text-lg">
                  {result.business}
                </p>
                <p class="text-cyan-900 text-sm font-medium">
                  {result.location}
                </p>
              </div>
              <div class="space-y-4 mb-6">
                {result.stats.map((stat) => (
                  <div class="flex justify-between items-center">
                    <span class="text-slate-500 text-sm">{stat.label}</span>
                    <span class="text-slate-900 font-bold">{stat.value}</span>
                  </div>
                ))}
              </div>
              <p class="text-slate-600 italic text-sm border-t border-slate-200 pt-6">
                "{result.quote}"
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 sm:py-20 lg:py-28 bg-slate-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-black text-slate-900 mb-4"
        >
          Our SEO Process
        </h2>
        <p class="text-xl text-slate-500 max-w-3xl mx-auto">
          A proven methodology that delivers consistent results.
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-8">
        {
          [
            {
              step: "1",
              title: "Audit & Analysis",
              description:
                "We analyze your site, competitors, and target keywords to create a winning strategy.",
            },
            {
              step: "2",
              title: "Optimization",
              description:
                "Fix technical issues and optimize your pages for search engines.",
            },
            {
              step: "3",
              title: "Content & Links",
              description:
                "Create optimized content and build quality backlinks to boost authority.",
            },
            {
              step: "4",
              title: "Monitor & Improve",
              description:
                "Track rankings, analyze data, and continuously improve your results.",
            },
          ].map((item) => (
            <div class="text-center">
              <div class="w-16 h-16 bg-cyan-900 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                <span class="text-2xl font-black text-white">{item.step}</span>
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">
                {item.title}
              </h3>
              <p class="text-slate-500">{item.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 sm:py-20 lg:py-28 bg-white font-poppins" id="faq">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-black text-slate-900 mb-4">
          Frequently Asked Questions
        </h2>
      </div>

      <div class="space-y-4">
        {
          [
            {
