---
export const prerender = true;
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { createArticleSchema, createBreadcrumbSchema } from "../../utils/schema";

export async function getStaticPaths() {
  const blog = await getCollection("blog", ({ data }) => !data.draft);

  return blog.map((post) => ({
    params: { id: post.slug },
    props: { post, blog },
  }));
}

const { post, blog } = Astro.props;
const { data, body } = post;
const {
  title,
  description,
  img,
  imageAlt,
  date,
  readtime,
  author,
  categories,
  tags,
} = data;

const { Content } = await render(post);

// Calculate word count for SEO
const wordCount = body ? body.split(/\s+/).filter(Boolean).length : 0;

// Formato de fecha legible
let formattedDate = "";

if (date instanceof Date && !isNaN(date.getTime())) {
  formattedDate = date.toLocaleDateString("es-ES", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
  });
} else if (typeof date === "string") {
  const dateObj = new Date(date);
  if (!isNaN(dateObj.getTime())) {
    formattedDate = dateObj.toLocaleDateString("es-ES", {
      weekday: "long",
      year: "numeric",
      month: "long",
      day: "numeric",
    });
  }
} else {
  formattedDate = "Fecha no válida";
}

// SEO optimization
const seoTitle = `${title} | Codebrand Blog`;
const seoDescription =
  description ||
  `Read about ${title} on Codebrand's blog. ${author ? `Written by ${author}.` : ""} ${readtime ? `${readtime} min read.` : ""}`;
const seoKeywords = [
  title.toLowerCase(),
  "codebrand blog",
  "web development",
  "digital marketing",
  "design tips",
  ...(categories || []),
  ...(tags || []),
].join(", ");

// Ensure absolute URL for images (required for Open Graph)
const baseUrl = "https://codebrand.us";
const absoluteImage = img ? (img.startsWith('http') ? img : `${baseUrl}${img}`) : `${baseUrl}/photos/bannercodebrand.webp`;

// Format ISO date for structured data
const isoDate = date instanceof Date ? date.toISOString() : (typeof date === "string" ? new Date(date).toISOString() : new Date().toISOString());

// Article URL
const articleUrl = `${baseUrl}/blog/${post.slug}`;

// Enhanced Structured Data using schema utility
const structuredData = createArticleSchema({
  headline: title,
  description: description || "",
  image: absoluteImage,
  datePublished: isoDate,
  dateModified: isoDate, // Could be different if you track modifications
  author: author,
  url: articleUrl,
  keywords: [...(categories || []), ...(tags || [])],
  articleSection: categories?.[0],
  wordCount: wordCount,
  readingTime: readtime || Math.ceil(wordCount / 200), // Estimate if not provided
});

// Breadcrumb schema for blog post
const breadcrumbData = createBreadcrumbSchema([
  { name: "Home", url: baseUrl },
  { name: "Blog", url: `${baseUrl}/blog` },
  { name: title, url: articleUrl },
]);
---

<Layout
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  image={absoluteImage}
  article={true}
  author={author}
  publishedTime={date}
  tags={tags}
  categories={categories}
>
  <!-- Article Structured Data -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)} />
  <!-- Article Breadcrumb Schema -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(breadcrumbData)} />
  <article class="font-poppins text-black">
    <!-- Hero Section -->
    <section class="relative w-full">
      <!-- Imagen de fondo sin opacidad -->
      {
        img && (
          <img
            src={`${img}`}
            alt={imageAlt || title}
            class="absolute inset-0 w-full h-full object-cover object-center z-0"
          />
        )
      }

      <!-- Degradado más suave -->
      <div
        class="absolute inset-0 bg-gradient-to-b from-white/100 via-white/80 to-white z-10"
      >
      </div>

      <!-- Contenido centrado -->
      <div
        class="relative z-20 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20 text-center space-y-6"
      >
        <span
          class="text-sm font-semibold uppercase tracking-widest text-orange-500"
        >
          Blog
        </span>

        <h1 class="text-4xl font-bold text-gray-900 leading-tight">
          {title}
        </h1>

        <div class="text-sm text-gray-600 flex flex-wrap justify-center gap-2">
          {author && <span>Por {author}</span>}
          {formattedDate && <span>{formattedDate}</span>}
          {readtime && <span>· {readtime} min de lectura</span>}
        </div>

        {
          description && (
            <p class="text-base text-gray-700 max-w-2xl mx-auto">
              {description}
            </p>
          )
        }
      </div>
    </section>

    <!-- Contenido principal -->
    <section class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16 space-y-12">
      <div class="markdown-content">
        <Content />
      </div>
    </section>

    <!-- CTA -->
    <section
      class="bg-orange-50 rounded-2xl mx-4 sm:mx-6 lg:mx-auto max-w-5xl p-10 flex flex-col md:flex-row items-center justify-between gap-6 shadow-inner mb-20"
    >
      <div class="space-y-2 text-center md:text-left">
        <h2 class="text-2xl font-bold text-orange-700">
          Do you want to read more articles?
        </h2>
        <p class="text-gray-700">
          Visit our blog to explore more content on web development, design, and
          digital marketing.
        </p>
      </div>
      <a
        href="/blog"
        class="bg-orange-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-orange-700 transition"
      >
        Read More Articles
      </a>
    </section>
  </article>
</Layout>
