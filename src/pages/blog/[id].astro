---
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const blog = await getCollection("blog");

    return blog.map((post) => ({
        params: { id: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { data } = post;
const { title, description, img, imageAlt, date, readtime, author } = data;

const { Content } = await render(post);
---

<Layout title={title}>
    <section class="max-w-5xl mx-auto py-20 px-6 text-black flex flex-col">
        <aside class="md:col-span-1">
            <div class="overflow-hidden rounded-2xl shadow-xl">
                <img
                    src={`/${img}`}
                    alt={imageAlt}
                    class="w-full object-cover max-h-150 bg-top"
                />
            </div>
        </aside>
        <div class="flex flex-col gap-4">
            <h1 class="text-4xl font-bold text-orange-400">{title}</h1>

            <div class="text-sm text-gray-600">
                {author && <span class="mr-4">Por {author}</span>}
                {date?.toString()} Â· {readtime} min de lectura
            </div>

            <p class="text-lg text-cyan-900 mb-8">{description}</p>
        </div>
        <section
            class="prose prose-xl max-w-none mt-16 text-gray-800 leading-loose
          prose-headings:font-bold prose-headings:tracking-tight
          prose-h2:text-3xl prose-h2:mt-12 prose-h2:text-orange-500
          prose-h3:text-2xl prose-h3:mt-8 prose-h3:text-orange-400
          prose-p:my-5 prose-ul:my-5 prose-ol:my-5 prose-li:ml-5 prose-li:marker:text-orange-400
          prose-blockquote:my-6 prose-blockquote:pl-6 prose-blockquote:italic prose-blockquote:border-l-4 prose-blockquote:border-orange-400
          prose-img:rounded-xl prose-img:shadow-md prose-img:my-8
          prose-a:text-orange-500 hover:prose-a:underline"
        >
            <Content />
        </section>
    </section>
</Layout>
