---
export const prerender = true;
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Whyus from "../../components/whyus.astro";

export async function getStaticPaths() {
  const products = await getCollection("products", ({ data }) => !data.draft);

  return products.map((product) => ({
    params: { id: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const { data } = product;
const { title, description, img, readtime, author, price, inStock } = data;

const { Content } = await render(product);

// SEO optimization
const seoTitle = `${title} | Codebrand Digital Services`;
const seoDescription =
  description ||
  `Discover ${title} from Codebrand. Professional digital services with ${price}. ${inStock ? "Available now" : "Contact us for availability"}.`;
const seoKeywords = `${title.toLowerCase()}, codebrand services, digital services, ${title.toLowerCase()} service, professional ${title.toLowerCase()}, ${title.toLowerCase()} agency`;
---

<Layout
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  image={img || "/photos/bannercodebrand.webp"}
>
  <!-- Hero section con gradient de fondo -->
  <div class="relative bg-gradient-to-b from-cyan-50/50 via-white to-white">
    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-30 sm:py-40 lg:py-40 font-poppins"
    >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-start">
        <!-- Columna izquierda - Imagen sticky -->
        <aside class="order-2 lg:order-1">
          <div class="lg:sticky lg:top-24 space-y-6">
            <!-- Imagen principal con efectos -->
            <div class="relative group">
              <div
                class="absolute -inset-1 bg-gradient-to-r from-cyan-600 to-orange-500 rounded-3xl blur opacity-25 group-hover:opacity-40 transition duration-500"
              >
              </div>
              <div class="relative bg-white p-2 rounded-3xl shadow-xl">
                <img
                  src={`${img}`}
                  alt={title}
                  class="w-full h-auto object-cover rounded-2xl"
                  loading="eager"
                />
              </div>
            </div>

            <!-- Info rápida en card -->
            <div
              class="hidden lg:block bg-white rounded-2xl p-6 shadow-lg border border-gray-100"
            >
              <div class="flex items-start gap-4">
                <div
                  class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-cyan-500 to-cyan-600 rounded-xl flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="text-sm font-semibold text-gray-900 mb-2">
                    Product information
                  </h3>
                  <div class="space-y-2 text-sm text-gray-600">
                    {
                      author && (
                        <div class="flex items-center gap-2">
                          <svg
                            class="w-4 h-4 text-cyan-600"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                              clip-rule="evenodd"
                            />
                          </svg>
                          <span>{author}</span>
                        </div>
                      )
                    }
                    {
                      readtime && (
                        <div class="flex items-center gap-2">
                          <svg
                            class="w-4 h-4 text-cyan-600"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                              clip-rule="evenodd"
                            />
                          </svg>
                          <span>{readtime} min read</span>
                        </div>
                      )
                    }
                  </div>
                </div>
              </div>
            </div>
          </div>
        </aside>

        <!-- Columna derecha - Contenido -->
        <main class="order-1 lg:order-2 space-y-8">
          <!-- Header del producto -->
          <div class="space-y-6">
            <!-- Badge de categoría o estado -->
            {
              inStock ? (
                <span class="inline-flex items-center gap-2 px-4 py-2 bg-green-50 text-green-700 text-sm font-semibold rounded-full border-2 border-green-200">
                  <span class="relative flex h-2 w-2">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75" />
                    <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500" />
                  </span>
                  Available now
                </span>
              ) : (
                <span class="inline-flex items-center gap-2 px-4 py-2 bg-red-50 text-red-700 text-sm font-semibold rounded-full border-2 border-red-200">
                  <span class="relative flex h-2 w-2 bg-red-500 rounded-full" />
                  Out of stock
                </span>
              )
            }

            <!-- Título principal -->
            <h1
              class="text-4xl sm:text-5xl lg:text-6xl font-bold text-cyan-900 leading-[1.1] tracking-tight"
            >
              {title}
            </h1>

            <!-- Descripción -->
            <p class="text-lg sm:text-xl text-gray-700 leading-relaxed">
              {description}
            </p>

            <!-- Metadata en móvil -->
            {
              (author || readtime) && (
                <div class="lg:hidden flex flex-wrap items-center gap-4 pt-2 text-sm text-gray-600 border-t border-gray-200">
                  {author && (
                    <div class="flex items-center gap-2">
                      <svg
                        class="w-4 h-4 text-cyan-600"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      <span>{author}</span>
                    </div>
                  )}
                  {readtime && (
                    <div class="flex items-center gap-2">
                      <svg
                        class="w-4 h-4 text-cyan-600"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      <span>{readtime} min</span>
                    </div>
                  )}
                </div>
              )
            }
          </div>

          <!-- Card de compra premium -->
          <div class="relative">
            <div
              class="absolute -inset-0.5 bg-gradient-to-r from-cyan-600 to-orange-500 rounded-3xl opacity-20 blur"
            >
            </div>
            <div
              class="relative bg-white rounded-3xl shadow-2xl border border-gray-100 overflow-hidden"
            >
              <div class="p-8 space-y-6">
                <!-- Precio destacado -->
                <div class="space-y-3">
                  <div class="flex items-baseline gap-3">
                    <span
                      class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-600 to-cyan-800"
                    >
                      {price}
                    </span>
                  </div>
                  <p class="text-sm text-gray-600">
                    One-time investment to transform your business
                  </p>
                </div>

                <div
                  class="h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"
                >
                </div>

                <!-- Características rápidas -->
                <ul class="space-y-3">
                  <li class="flex items-start gap-3">
                    <svg
                      class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-sm text-gray-700"
                      >Professional support included</span
                    >
                  </li>
                  <li class="flex items-start gap-3">
                    <svg
                      class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-sm text-gray-700"
                      >Fast and guaranteed delivery</span
                    >
                  </li>
                  <li class="flex items-start gap-3">
                    <svg
                      class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-sm text-gray-700"
                      >Personalized consulting</span
                    >
                  </li>
                </ul>

                <!-- CTA principal -->
                <div class="pt-4 space-y-3">
                  <a
                    href="/contact"
                    class="group relative w-full inline-flex items-center justify-center gap-3 px-8 py-4 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white rounded-xl font-bold text-base shadow-lg hover:shadow-2xl transform hover:-translate-y-0.5 transition-all duration-200"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      ></path>
                    </svg>
                    <span>Book a call</span>
                    <svg
                      class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </a>
                  <p class="text-center text-xs text-gray-500">
                    Response within 24 hours
                  </p>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>

      <!-- Contenido detallado - Full width -->
      <div class="mt-16 lg:mt-24">
        <div class="max-w-4xl mx-auto">
          <div class="mb-8">
            <h2 class="text-3xl font-bold text-cyan-900 mb-3">
              Product Details
            </h2>
            <div
              class="h-1 w-20 bg-gradient-to-r from-orange-500 to-orange-600 rounded-full"
            >
            </div>
          </div>
          <div class="markdown-content prose prose-lg prose-cyan max-w-none">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </div>

  <Whyus />
</Layout>
