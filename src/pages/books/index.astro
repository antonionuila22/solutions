---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Button from "../../components/Button.astro";

const books = await getCollection("books");

const title = "Best Books for Developers & Marketers | Codebrand";
const description = "Discover our curated selection of the best books for developers and digital marketers. Expert recommendations to level up your skills in web development, SEO, branding, and digital marketing.";
const keywords = "books for developers, marketing books, web development books, SEO books, digital marketing books, programming books, best tech books, professional development";

// Book categories for filtering
const categories = [
  { name: "All", icon: "üìö" },
  { name: "Development", icon: "üíª" },
  { name: "Marketing", icon: "üìà" },
  { name: "Design", icon: "üé®" },
  { name: "Business", icon: "üíº" },
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  image="/photos/bannercodebrand.webp"
>
  <!-- Hero Section -->
  <section class="relative bg-cyan-900 pt-32 sm:pt-36 lg:pt-28 pb-20 overflow-hidden">
    <!-- Animated Background Elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-orange-400 rounded-full opacity-10 blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-orange-500 rounded-full opacity-10 blur-3xl animate-pulse"></div>

    <!-- Grid Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(251, 146, 60, 0.3) 1px, transparent 1px), linear-gradient(90deg, rgba(251, 146, 60, 0.3) 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>

    <div class="relative max-w-6xl mx-auto px-6 text-center z-10">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full mb-8 border border-white/20">
        <span class="text-2xl">üìñ</span>
        <span class="text-white text-sm font-semibold uppercase tracking-wider">
          Curated Library
        </span>
      </div>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white leading-tight mb-6">
        Books That Will
        <span class="block mt-2 text-orange-400">Level Up Your Skills</span>
      </h1>

      <p class="text-lg md:text-xl text-cyan-100 max-w-3xl mx-auto leading-relaxed mb-10">
        Handpicked recommendations from our team of developers, designers, and marketers.
        These are the books that shaped our expertise and continue to guide our work.
      </p>

      <!-- Stats -->
      <div class="flex flex-wrap justify-center gap-8 mt-12">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-black text-orange-400">{books.length}+</div>
          <div class="text-sm text-cyan-100">Curated Books</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-black text-orange-400">5</div>
          <div class="text-sm text-cyan-100">Categories</div>
        </div>
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-black text-orange-400">100%</div>
          <div class="text-sm text-cyan-100">Expert Reviewed</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Read Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-cyan-900 mb-4">
          Why These Books?
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Every book in our collection has been read, tested, and recommended by our team.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-orange-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üéØ</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">Practical Knowledge</h3>
          <p class="text-gray-600">
            We focus on books with actionable insights you can apply immediately to your projects.
          </p>
        </div>

        <div class="text-center p-6">
          <div class="w-16 h-16 bg-orange-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">‚≠ê</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">Expert Curated</h3>
          <p class="text-gray-600">
            Each book is vetted by professionals with years of experience in their respective fields.
          </p>
        </div>

        <div class="text-center p-6">
          <div class="w-16 h-16 bg-orange-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">üöÄ</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">Career Growth</h3>
          <p class="text-gray-600">
            These resources helped us grow our careers and can do the same for you.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Books Grid Section -->
  <section
    aria-label="Books for your professional development"
    class="bg-gradient-to-b from-slate-50 to-white py-20"
  >
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-cyan-900 mb-4">
          Our Book Collection
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Explore our carefully selected books covering development, marketing, design, and business.
        </p>
      </div>

      <!-- Books Grid -->
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          books.map((book) => {
            const { slug, data } = book;
            const { title, author, img, readtime, description } = data;

            return (
              <article class="bg-white rounded-2xl border border-gray-200 shadow-sm hover:shadow-xl transition-all duration-300 group overflow-hidden">
                <a href={`/books/${slug}`} class="block h-full">
                  <div class="relative overflow-hidden">
                    <img
                      loading="lazy"
                      src={`/${img}`}
                      alt={`Book cover: ${title}`}
                      class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                    <div class="absolute top-4 right-4">
                      <span class="bg-orange-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                        Recommended
                      </span>
                    </div>
                  </div>

                  <div class="p-6 flex flex-col gap-3">
                    <h3 class="text-xl font-bold text-cyan-900 group-hover:text-orange-500 transition-colors line-clamp-2">
                      {title}
                    </h3>
                    <p class="text-sm text-gray-500 flex items-center gap-2">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" />
                      </svg>
                      by {author}
                    </p>
                    <p class="text-gray-600 text-sm line-clamp-3 leading-relaxed">
                      {description}
                    </p>

                    <div class="mt-auto pt-4 flex justify-between items-center border-t border-gray-100">
                      <span class="inline-flex items-center gap-1 bg-cyan-50 text-cyan-700 px-3 py-1.5 rounded-full text-xs font-medium">
                        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                        </svg>
                        {readtime} min read
                      </span>
                      <span class="text-sm font-semibold text-orange-500 group-hover:translate-x-1 transition-transform inline-flex items-center gap-1">
                        Read more
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </span>
                    </div>
                  </div>
                </a>
              </article>
            );
          })
        }
      </div>

      <!-- Coming Soon Placeholder -->
      {books.length < 6 && (
        <div class="mt-12 text-center">
          <div class="inline-flex items-center gap-3 px-6 py-4 bg-slate-100 rounded-2xl border border-gray-200">
            <span class="text-2xl">üìö</span>
            <div class="text-left">
              <p class="font-semibold text-cyan-900">More books coming soon!</p>
              <p class="text-sm text-gray-600">We're always adding new recommendations.</p>
            </div>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter / CTA Section -->
  <section class="py-20 bg-cyan-900">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 rounded-full mb-6">
        <span class="text-xl">üí°</span>
        <span class="text-white text-sm font-medium">Keep Learning</span>
      </div>

      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Want More Recommendations?
      </h2>
      <p class="text-cyan-100 text-lg mb-8 max-w-2xl mx-auto">
        Check out our blog for in-depth articles on web development, digital marketing,
        and design best practices.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/blog"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white rounded-xl font-bold text-lg transition-all duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M5 3a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V5a2 2 0 00-2-2H5zm0 2h10v7h-2l-1 2H8l-1-2H5V5z" />
          </svg>
          Read Our Blog
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 hover:bg-white/20 text-white rounded-xl font-bold text-lg transition-all duration-200 border border-white/30"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
          </svg>
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</Layout>
