---
export const prerender = true;
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("books"); // ← aquí es donde corregimos

  return posts.map((post) => ({
    params: { id: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { data } = post;
const { title, description, img, readtime, author, date } = data;

const { Content } = await render(post);

// SEO optimization
const baseUrl = "https://codebrand.us";
const seoTitle = `${title} | Codebrand Books`;
const seoDescription = description || `Read ${title} by ${author || 'Codebrand'}. Discover insights on web development, design, and digital marketing.`;
const seoKeywords = `${title.toLowerCase()}, ${author ? author.toLowerCase() : ''}, codebrand books, web development books, digital marketing books, design books`;
const absoluteImage = img ? `${baseUrl}/${img}` : `${baseUrl}/photos/bannercodebrand.webp`;

// Format date for schema
const formattedDate = date ? new Date(date).toISOString() : new Date().toISOString();

// Book Schema for rich snippets
const bookSchema = {
  "@context": "https://schema.org",
  "@type": "Book",
  "name": title,
  "description": description,
  "image": absoluteImage,
  "url": `${baseUrl}/books/${post.slug}`,
  "author": author ? {
    "@type": "Person",
    "name": author
  } : {
    "@type": "Organization",
    "name": "Codebrand"
  },
  "datePublished": formattedDate,
  "publisher": {
    "@type": "Organization",
    "name": "Codebrand",
    "logo": {
      "@type": "ImageObject",
      "url": `${baseUrl}/iconcodebrand.svg`
    }
  },
  "inLanguage": "en",
  "genre": "Business & Technology",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "45",
    "bestRating": "5",
    "worstRating": "1"
  }
};
---

<Layout
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  image={absoluteImage}
>
  <!-- Book Schema for rich snippets -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(bookSchema)} />

  <div
    class="max-w-6xl mx-auto py-12 grid grid-cols-1 md:grid-cols-3 gap-13 text-black"
  >
    <aside class="md:col-span-1">
      <div class="overflow-hidden rounded-2xl shadow-xl sticky">
        <img src={`/${img}`} alt={title} class="w-full object-cover" loading="lazy" />
      </div>
    </aside>

    <main class="md:col-span-2">
      <h1 class="text-4xl font-extrabold text-orange-400 mb-4">
        {title}
      </h1>

      <div class="text-sm text-gray-600 mb-4">
        {author && <span class="mr-4">Por {author}</span>}
        {date} · {readtime ?? 5} min de lectura
      </div>

      <p class="text-cyan-900 mb-6 text-lg leading-relaxed">
        {description}
      </p>

      <section class="markdown-content">
        <Content />
      </section>
    </main>
  </div>
</Layout>
