        </div>
      </section>

      <!-- Marquee -->
      <div class="py-8 border-y border-white/5">
        <div class="marquee">
          <div class="marquee-content">
            {[...Array(2)].map(() => (
              <>
                {technologies.map((tech, i) => (
                  <>
                    <span class="text-2xl font-bold text-white/10 whitespace-nowrap">{tech}</span>
