---
import Layout from "../layouts/Layout.astro";
import Whyus from "../components/whyus.astro";
import Faq from "../components/Faq.astro";
import CardService from "../components/CardService.astro";
import Button from "../components/Button.astro";

const title = "Landing Page Design & Development | Codebrand";
const description =
  "Create landing pages that convert visitors into customers. We design and develop custom, high-performing landing pages optimized for conversions, mobile devices, and fast loading. Specializing in A/B testing, lead generation, and campaign-focused pages.";
const keywords =
  "landing page design, landing page development, high converting landing pages, custom landing pages, lead generation pages, sales funnel pages, squeeze pages, campaign landing pages, mobile landing pages, responsive landing pages, A/B testing landing pages, conversion rate optimization, landing page optimization, professional landing pages, landing page templates, landing page services";
const image = "/photos/uxservice.webp";

// Service Schema for Landing Pages
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Landing Page Development",
  "name": "High-Converting Landing Page Design & Development",
  "description": description,
  "url": "https://codebrand.us/landing-pages",
  "image": "https://codebrand.us/photos/uxservice.webp",
  "provider": {
    "@type": "Organization",
    "name": "Codebrand",
    "url": "https://codebrand.us",
    "logo": "https://codebrand.us/iconcodebrand.svg"
  },
  "areaServed": {
    "@type": "Country",
    "name": "United States"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Landing Page Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Lead Generation Pages",
          "description": "Optimized landing pages for capturing leads"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Sales Funnel Pages",
          "description": "Conversion-focused pages for sales funnels"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "A/B Testing",
          "description": "Split testing to maximize conversion rates"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Campaign Landing Pages",
          "description": "Custom pages for marketing campaigns"
        }
      }
    ]
  },
  "priceRange": "$$$"
};
---

<Layout title={title} description={description} keywords={keywords} image={image}>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} />
  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-br from-cyan-50 via-white to-orange-50 pt-32 sm:pt-36 lg:pt-28 pb-16 sm:pb-24 lg:pb-32 font-poppins overflow-hidden"
  >
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0%2060%2060%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"
