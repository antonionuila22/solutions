---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";
import PartnershipBanner from "../../components/PartnershipBanner.astro";
import { getCollection } from "astro:content";

// Get all projects from the collection (exclude drafts)
const allProjects = await getCollection("projects", ({ data }) => !data.draft);

// Sort by date (newest first)
const projects = allProjects
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .map((project) => ({
    title: project.data.title,
    description: project.data.description,
    category: project.data.category,
    image: project.data.img,
    tags: project.data.tags,
    link: `/projects/${project.slug}`,
    featured: project.data.featured || false,
  }));

// Get unique categories from projects
const allCategories = [...new Set(projects.map((p) => p.category))];
const categories = ["All", ...allCategories.sort()];
---

<Layout
  title="Web Design Portfolio | Web Development Projects | Codebrand"
  description="View our web design portfolio featuring 100+ successful projects. Custom websites, e-commerce stores, branding, and digital marketing case studies that drive real business results."
  keywords="web design portfolio, web development projects, website design examples, digital agency portfolio, custom website projects, e-commerce development portfolio, branding case studies, web development case studies, website redesign projects, business website examples"
  image="/photos/bannercodebrand.webp"
>
  <!-- Hero Section -->
  <section
    class="relative min-h-[85vh] md:min-h-[90vh] overflow-hidden bg-gradient-to-b from-white via-slate-50 to-white pt-28 sm:pt-24 lg:pt-20"
  >
    <!-- Decorative Background -->
    <div
      class="absolute top-0 right-0 w-[400px] md:w-[600px] h-[400px] md:h-[600px] bg-orange-400 rounded-full opacity-5 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[300px] md:w-[500px] h-[300px] md:h-[500px] bg-cyan-900 rounded-full opacity-5 blur-3xl"
    >
    </div>

    <!-- Animated Grid Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: linear-gradient(#0e7490 1px, transparent 1px), linear-gradient(90deg, #0e7490 1px, transparent 1px); background-size: 50px 50px;"
      >
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 md:px-6 py-16 md:py-24">
      <div class="text-center space-y-6 md:space-y-8">
        <!-- Badge -->
        <div class="flex items-center justify-center gap-3 animate-fade-in">
          <div
            class="h-px w-8 md:w-12 bg-gradient-to-r from-transparent via-orange-400 to-transparent"
          >
          </div>
          <span
            class="inline-flex items-center gap-2 px-4 md:px-5 py-2 md:py-2.5 bg-cyan-900 text-white rounded-full font-bold text-xs md:text-sm shadow-lg"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
              ></path>
            </svg>
            OUR PORTFOLIO
          </span>
          <div
            class="h-px w-8 md:w-12 bg-gradient-to-r from-transparent via-orange-400 to-transparent"
          >
          </div>
        </div>

        <!-- Main Heading -->
        <div class="animate-slide-up space-y-4 md:space-y-6">
          <h1
            class="text-4xl md:text-6xl lg:text-7xl xl:text-8xl font-black text-cyan-900 leading-tight px-4"
          >
            Web Design
            <br />
            <span class="relative inline-block">
              <span class="text-orange-500">
                Portfolio
              </span>
              <svg
                class="absolute -bottom-1 md:-bottom-2 left-0 w-full"
                height="12"
                viewBox="0 0 200 12"
                fill="none"
              >
                <path
                  d="M2 10C50 2 150 2 198 10"
                  stroke="#fb923c"
                  stroke-width="4"
                  stroke-linecap="round"></path>
              </svg>
            </span>
            <br />
            & Case Studies
          </h1>

          <p
            class="text-base md:text-xl lg:text-2xl text-gray-600 max-w-4xl mx-auto leading-relaxed px-4"
          >
            Browse 100+ web development projects we have delivered. From custom
            websites to e-commerce stores, see real results from our web design
            work.
          </p>
        </div>

        <!-- Stats -->
        <div
          class="flex flex-wrap justify-center gap-4 md:gap-8 pt-6 md:pt-8 animate-fade-in delay-200 px-4"
        >
          <div class="flex items-center gap-2 md:gap-3 group">
            <div
              class="w-16 h-12 md:w-20 md:h-16 rounded-xl md:rounded-2xl bg-cyan-900 flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"
            >
              <span class="text-xl md:text-3xl font-black text-white">100+</span
              >
            </div>
            <div class="text-left">
              <div class="text-sm md:text-lg font-bold text-cyan-900">
                Projects
              </div>
              <div class="text-xs md:text-sm text-gray-500">Completed</div>
            </div>
          </div>

          <div class="flex items-center gap-2 md:gap-3 group">
            <div
              class="w-16 h-12 md:w-20 md:h-16 rounded-xl md:rounded-2xl bg-orange-500 flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"
            >
              <span class="text-xl md:text-3xl font-black text-white">50+</span>
            </div>
            <div class="text-left">
              <div class="text-sm md:text-lg font-bold text-cyan-900">
                Clients
              </div>
              <div class="text-xs md:text-sm text-gray-500">Satisfied</div>
            </div>
          </div>

          <div class="flex items-center gap-2 md:gap-3 group">
            <div
              class="w-16 h-12 md:w-20 md:h-16 rounded-xl md:rounded-2xl bg-cyan-900 flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"
            >
              <span class="text-xl md:text-3xl font-black text-white">5+</span>
            </div>
            <div class="text-left">
              <div class="text-sm md:text-lg font-bold text-cyan-900">
                Years
              </div>
              <div class="text-xs md:text-sm text-gray-500">Experience</div>
            </div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div
          class="flex flex-wrap justify-center gap-3 md:gap-4 pt-6 md:pt-8 animate-slide-up delay-100 px-4"
        >
          <Button text="Start Your Project" href="/contact" />
          <a
            href="#projects"
            class="px-6 md:px-8 py-3 border-2 border-cyan-900 text-cyan-900 rounded-full font-bold hover:bg-cyan-900 hover:text-white transition-all duration-300 text-sm lg:text-lg"
          >
            View Projects
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-16 md:py-24 px-4 md:px-6 bg-white">
    <div class="max-w-7xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12 md:mb-16">
        <span
          class="text-orange-400 font-bold text-xs md:text-sm uppercase tracking-widest"
        >
          Web Development Projects
        </span>
        <h2
          class="text-3xl md:text-4xl lg:text-5xl font-bold text-cyan-900 leading-tight mt-3 mb-4 md:mb-6 px-4"
        >
          Featured <span class="text-orange-400">Website Projects</span>
        </h2>
        <p class="text-base md:text-lg text-gray-600 max-w-3xl mx-auto px-4">
          We build websites that grow businesses. Each project shows our focus
          on clean design, fast loading, and real results.
        </p>
      </div>

      <!-- Category Filters -->
      <div
        class="flex flex-wrap justify-center gap-3 mb-12 md:mb-16 px-4"
        id="category-filters"
      >
        {
          categories.map((category) => (
            <button
              data-category={category}
              class={`px-4 md:px-6 py-2 md:py-3 rounded-full font-bold text-xs md:text-sm transition-all duration-300 ${
                category === "All"
                  ? "bg-orange-500 text-white shadow-lg"
                  : "bg-gray-100 text-gray-700 hover:bg-gray-200"
              } filter-btn`}
            >
              {category}
            </button>
          ))
        }
      </div>

      <!-- Projects Grid -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
        id="projects-grid"
      >
        {
          projects.map((project, index) => (
            <div
              data-category={project.category}
              class="project-card group relative bg-white rounded-2xl overflow-hidden border border-gray-200 hover:border-orange-400 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 animate-fade-in"
              style={`animation-delay: ${index * 0.1}s`}
            >
              {/* Project Image */}
              <div class="relative h-64 overflow-hidden bg-slate-50">
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  loading="lazy"
                />
                {/* Category Badge */}
                <div class="absolute top-4 right-4 bg-orange-500 text-white px-4 py-2 rounded-full text-xs font-bold shadow-lg">
                  {project.category}
                </div>
              </div>

              {/* Project Content */}
              <div class="p-6 space-y-4">
                <h3 class="text-xl md:text-2xl font-bold text-cyan-900 group-hover:text-orange-500 transition-colors duration-300">
                  {project.title}
                </h3>

                <p class="text-sm md:text-base text-gray-600 leading-relaxed">
                  {project.description}
                </p>

                {/* Tags */}
                <div class="flex flex-wrap gap-2 pt-2">
                  {project.tags.map((tag) => (
                    <span class="px-3 py-1 bg-cyan-50 text-cyan-900 rounded-full text-xs font-semibold">
                      {tag}
                    </span>
                  ))}
                </div>

                {/* View Project Button */}
                <a
                  href={project.link}
                  class="inline-flex items-center gap-2 text-orange-500 font-bold text-sm hover:gap-4 transition-all duration-300 group/link"
                >
                  <span>View Project</span>
                  <svg
                    class="w-4 h-4 group-hover/link:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 7l5 5m0 0l-5 5m5-5H6"
                    />
                  </svg>
                </a>
              </div>

              {/* Hover Overlay Effect */}
              <div class="absolute inset-0 bg-orange-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none" />
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Partnership Banner -->
  <PartnershipBanner />

  <!-- CTA Section -->
  <section
    class="relative py-16 md:py-24 px-4 md:px-6 bg-cyan-900 overflow-hidden"
  >
    <!-- Decorative Elements -->
    <div
      class="absolute top-0 right-0 w-64 md:w-96 h-64 md:h-96 bg-orange-400 rounded-full opacity-10 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-64 md:w-96 h-64 md:h-96 bg-orange-400 rounded-full opacity-10 blur-3xl"
    >
    </div>

    <div class="relative max-w-5xl mx-auto text-center">
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-black text-white mb-4 md:mb-6 px-4"
      >
        Start Your <span class="text-orange-400">Web Design Project</span>
      </h2>
      <p
        class="text-base md:text-xl text-cyan-100 mb-8 md:mb-10 max-w-3xl mx-auto leading-relaxed px-4"
      >
        Ready for a new website? We turn ideas into fast, modern sites that
        bring in customers. Get a free quote today.
      </p>

      <!-- Benefits List -->
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mb-8 md:mb-12 max-w-4xl mx-auto px-4"
      >
        <div class="flex items-center justify-center gap-3">
          <div
            class="w-10 h-10 md:w-12 md:h-12 bg-orange-400 rounded-full flex items-center justify-center flex-shrink-0"
          >
            <svg
              class="w-5 h-5 md:w-6 md:h-6 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-white font-bold text-sm md:text-base"
            >Free Consultation</span
          >
        </div>

        <div class="flex items-center justify-center gap-3">
          <div
            class="w-10 h-10 md:w-12 md:h-12 bg-orange-400 rounded-full flex items-center justify-center flex-shrink-0"
          >
            <svg
              class="w-5 h-5 md:w-6 md:h-6 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-white font-bold text-sm md:text-base"
            >Fast Turnaround</span
          >
        </div>

        <div class="flex items-center justify-center gap-3">
          <div
            class="w-10 h-10 md:w-12 md:h-12 bg-orange-400 rounded-full flex items-center justify-center flex-shrink-0"
          >
            <svg
              class="w-5 h-5 md:w-6 md:h-6 text-white"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-white font-bold text-sm md:text-base"
            >Quality Guaranteed</span
          >
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-wrap justify-center gap-3 md:gap-4 px-4">
        <a
          href="/contact"
          class="group inline-flex items-center gap-3 bg-orange-500 text-white font-bold px-6 md:px-8 py-3 md:py-4 rounded-full hover:bg-orange-600 transition-all duration-300 transform hover:scale-105 shadow-2xl text-sm lg:text-lg"
        >
          <span>Get Started Now</span>
          <svg
            class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a
          href="/services"
          class="px-6 md:px-8 py-3 md:py-4 border-2 border-white text-white rounded-full font-bold hover:bg-white hover:text-cyan-900 transition-all duration-300 text-sm lg:text-lg"
        >
          View Services
        </a>
      </div>

      <p class="text-cyan-200 text-xs md:text-sm mt-6 md:mt-8 px-4">
        Join 50+ satisfied clients who trust us with their digital presence
      </p>
    </div>
  </section>
</Layout>

<script is:inline>
  // Category Filter Functionality
  (function () {
    function initProjectFilters() {
      const filterButtons = document.querySelectorAll(".filter-btn");
      const projectCards = document.querySelectorAll(".project-card");

      if (!filterButtons.length || !projectCards.length) {
        return;
      }

      filterButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const category = button.getAttribute("data-category");

          // Update active button
          filterButtons.forEach((btn) => {
            btn.classList.remove(
              "bg-gradient-to-r",
              "from-orange-400",
              "to-orange-600",
              "text-white",
              "shadow-lg"
            );
            btn.classList.add(
              "bg-gray-100",
              "text-gray-700",
              "hover:bg-gray-200"
            );
          });

          button.classList.remove(
            "bg-gray-100",
            "text-gray-700",
            "hover:bg-gray-200"
          );
          button.classList.add(
            "bg-gradient-to-r",
            "from-orange-400",
            "to-orange-600",
            "text-white",
            "shadow-lg"
          );

          // Filter projects with animation
          projectCards.forEach((card, index) => {
            const cardCategory = card.getAttribute("data-category");

            if (category === "All" || cardCategory === category) {
              card.style.display = "block";
              card.style.animation = "none";
              setTimeout(() => {
                card.style.animation =
                  "fade-in 0.6s ease-out forwards " + index * 0.1 + "s";
              }, 10);
            } else {
              card.style.display = "none";
            }
          });
        });
      });
    }

    // Initialize when DOM is ready
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initProjectFilters);
    } else {
      initProjectFilters();
    }
  })();
</script>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-up {
    animation: slide-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .delay-100 {
    animation-delay: 0.1s;
  }

  .delay-200 {
    animation-delay: 0.2s;
  }

  .project-card {
    animation-fill-mode: forwards;
  }
</style>
