---
export const prerender = true;
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  console.log("Building project pages for:", projects.length, "projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;

// Safety check
if (!project) {
  throw new Error("Project not found");
}

const { Content } = await render(project);

// Format date
const formattedDate = new Intl.DateTimeFormat("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(project.data.date);
---

<Layout
  title={`${project.data.title} | Projects - Codebrand`}
  description={project.data.description}
  keywords={project.data.tags.join(", ")}
  image={project.data.img}
  article={true}
>
  <!-- Hero Section -->
  <article
    class="relative min-h-[40vh] md:min-h-[50vh] overflow-hidden bg-gradient-to-b from-cyan-900 to-cyan-800"
  >
    <!-- Decorative Background -->
    <div
      class="absolute top-0 right-0 w-96 h-96 bg-orange-400 rounded-full opacity-10 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-96 h-96 bg-orange-400 rounded-full opacity-10 blur-3xl"
    >
    </div>

    <div class="relative max-w-7xl mx-auto px-4 md:px-6 py-16 md:py-24">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-cyan-100 mb-8">
        <a href="/" class="hover:text-white transition-colors">Home</a>
        <span>/</span>
        <a href="/projects" class="hover:text-white transition-colors"
          >Projects</a
        >
        <span>/</span>
        <span class="text-orange-400">{project.data.title}</span>
      </nav>

      <!-- Project Header -->
      <div class="max-w-4xl">
        <!-- Category Badge -->
        <div class="flex items-center gap-4 mb-6">
          <span
            class="inline-flex items-center gap-2 px-4 py-2 bg-orange-400 text-white rounded-full font-bold text-sm shadow-lg"
          >
            {project.data.category}
          </span>
          {
            project.data.featured && (
              <span class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 text-white rounded-full font-bold text-sm">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                Featured
              </span>
            )
          }
        </div>

        <!-- Title -->
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-black text-white leading-tight mb-6"
        >
          {project.data.title}
        </h1>

        <!-- Description -->
        <p class="text-xl md:text-2xl text-cyan-100 leading-relaxed mb-8">
          {project.data.description}
        </p>

        <!-- Meta Info -->
        <div class="flex flex-wrap items-center gap-6 text-cyan-100">
          {
            project.data.client && (
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                </svg>
                <span class="font-semibold">Client:</span>
                <span>{project.data.client}</span>
              </div>
            )
          }

          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                clip-rule="evenodd"></path>
            </svg>
            <span class="font-semibold">Completed:</span>
            <span>{formattedDate}</span>
          </div>

          {
            project.data.author && (
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span>{project.data.author}</span>
              </div>
            )
          }
        </div>
      </div>
    </div>
  </article>

  <!-- Project Image -->
  <section class="relative -mt-20 md:-mt-32 mb-12 md:mb-16 px-4 md:px-6">
    <div class="max-w-7xl mx-auto">
      <div
        class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-white"
      >
        <img
          src={project.data.img}
          alt={project.data.title}
          class="w-full h-auto object-cover"
        />
        {
          project.data.link && (
            <a
              href={project.data.link}
              target="_blank"
              rel="noopener noreferrer"
              class="absolute top-4 right-4 bg-orange-400 hover:bg-orange-500 text-white px-6 py-3 rounded-full font-bold text-sm shadow-lg transition-all duration-300 hover:scale-105 flex items-center gap-2"
            >
              <span>View Live Project</span>
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                />
              </svg>
            </a>
          )
        }
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-8 md:py-12 px-4 md:px-6">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 md:gap-12">
        <!-- Main Content Column -->
        <div class="lg:col-span-2">
          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mb-8">
            {
              project.data.tags.map((tag) => (
                <span class="px-4 py-2 bg-cyan-50 text-cyan-900 rounded-full text-sm font-semibold border border-cyan-100">
                  #{tag}
                </span>
              ))
            }
          </div>

          <!-- Project Content (Markdown) -->
          <div
            class="prose prose-lg max-w-none
                      prose-headings:font-bold prose-headings:text-cyan-900
                      prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6
                      prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4
                      prose-h4:text-xl prose-h4:mt-6 prose-h4:mb-3
                      prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-4
                      prose-a:text-orange-500 prose-a:no-underline hover:prose-a:underline
                      prose-strong:text-cyan-900 prose-strong:font-bold
                      prose-ul:my-6 prose-ul:space-y-2
                      prose-li:text-gray-700 prose-li:marker:text-orange-400
                      prose-blockquote:border-l-4 prose-blockquote:border-orange-400
                      prose-blockquote:pl-6 prose-blockquote:italic
                      prose-blockquote:text-gray-600 prose-blockquote:bg-orange-50
                      prose-blockquote:py-4 prose-blockquote:rounded-r-lg
                      prose-code:text-cyan-900 prose-code:bg-cyan-50
                      prose-code:px-2 prose-code:py-1 prose-code:rounded
                      prose-code:before:content-none prose-code:after:content-none
                      prose-pre:bg-gray-900 prose-pre:text-white"
          >
            <Content />
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-8">
            <!-- Results Card -->
            {
              project.data.results && (
                <div class="bg-gradient-to-br from-cyan-900 to-cyan-800 rounded-2xl p-6 md:p-8 text-white shadow-xl">
                  <h3 class="text-2xl font-bold mb-6 flex items-center gap-2">
                    <svg
                      class="w-6 h-6"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" />
                    </svg>
                    Key Results
                  </h3>
                  <div class="space-y-4">
                    {project.data.results.metric1 && (
                      <div class="flex items-start gap-3">
                        <svg
                          class="w-5 h-5 text-orange-400 mt-1 flex-shrink-0"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <p class="leading-relaxed">
                          {project.data.results.metric1}
                        </p>
                      </div>
                    )}
                    {project.data.results.metric2 && (
                      <div class="flex items-start gap-3">
                        <svg
                          class="w-5 h-5 text-orange-400 mt-1 flex-shrink-0"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <p class="leading-relaxed">
                          {project.data.results.metric2}
                        </p>
                      </div>
                    )}
                    {project.data.results.metric3 && (
                      <div class="flex items-start gap-3">
                        <svg
                          class="w-5 h-5 text-orange-400 mt-1 flex-shrink-0"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <p class="leading-relaxed">
                          {project.data.results.metric3}
                        </p>
                      </div>
                    )}
                  </div>
                </div>
              )
            }

            <!-- Project Info Card -->
            <div class="bg-white rounded-2xl p-6 md:p-8 shadow-lg border">
              <h3 class="text-xl font-bold text-cyan-900 mb-6">
                Project Details
              </h3>
              <div class="space-y-4">
                <div>
                  <p class="text-sm font-semibold text-gray-500 mb-1">
                    Category
                  </p>
                  <p class="text-gray-900 font-medium">
                    {project.data.category}
                  </p>
                </div>
                {
                  project.data.client && (
                    <div>
                      <p class="text-sm font-semibold text-gray-500 mb-1">
                        Client
                      </p>
                      <p class="text-gray-900 font-medium">
                        {project.data.client}
                      </p>
                    </div>
                  )
                }
                <div>
                  <p class="text-sm font-semibold text-gray-500 mb-1">Date</p>
                  <p class="text-gray-900 font-medium">{formattedDate}</p>
                </div>
              </div>
            </div>

            <!-- CTA Card -->
            <div
              class="bg-gradient-to-br from-orange-400 to-orange-600 rounded-2xl p-6 md:p-8 text-white shadow-xl"
            >
              <h3 class="text-2xl font-bold mb-4">
                Ready for Similar Results?
              </h3>
              <p class="mb-6 leading-relaxed">
                Let's discuss how we can help your business achieve success like
                this project.
              </p>
              <Button text="Start Your Project" href="/contact" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Projects -->
  <section class="py-12 md:py-16 px-4 md:px-6 bg-slate-50">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h2
          class="text-3xl md:text-4xl font-bold text-cyan-900 mb-4"
        >
          More Projects
        </h2>
        <p class="text-lg text-gray-600">
          Explore other successful projects from our portfolio
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/projects"
          class="px-8 py-4 bg-gradient-to-r from-orange-400 to-orange-600 text-white rounded-full font-bold hover:from-orange-500 hover:to-orange-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
        >
          View All Projects
        </a>
        <a
          href="/contact"
          class="px-8 py-4 border-2 border-cyan-900 text-cyan-900 rounded-full font-bold hover:bg-cyan-900 hover:text-white transition-all duration-300"
        >
          Start Your Project
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Ensure proper spacing for markdown content */
  article img {
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  article table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  article th,
  article td {
    padding: 0.75rem;
    border: 1px solid #e5e7eb;
  }

  article th {
    background-color: #f3f4f6;
    font-weight: 600;
  }
</style>
