---
export const prerender = true;
import type { GetStaticPaths } from "astro";
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  console.log("Building project pages for:", projects.length, "projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;

// Safety check
if (!project) {
  throw new Error("Project not found");
}

const { Content } = await render(project);

// Format date
const formattedDate = new Intl.DateTimeFormat("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(project.data.date);
---

<Layout
  title={`${project.data.title} | Projects - Codebrand`}
  description={project.data.description}
  keywords={project.data.tags.join(", ")}
  image={project.data.img}
  article={true}
>
  <!-- Hero Section -->
  <article class="relative bg-white border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 md:px-6 py-8 md:py-12">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-gray-600 mb-8">
        <a href="/" class="hover:text-cyan-900 transition-colors">Home</a>
        <span>/</span>
        <a href="/projects" class="hover:text-cyan-900 transition-colors"
          >Projects</a
        >
        <span>/</span>
        <span class="text-cyan-900 font-medium">{project.data.title}</span>
      </nav>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center">
        <!-- Left Column - Project Info -->
        <div class="space-y-6">
          <!-- Category Badge -->
          <div class="flex items-center gap-3 flex-wrap">
            <span
              class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-orange-400 to-orange-500 text-white rounded-full font-bold text-sm shadow-lg"
            >
              {project.data.category}
            </span>
            {
              project.data.featured && (
                <span class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-50 text-cyan-900 rounded-full font-bold text-sm border border-cyan-100">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  Featured
                </span>
              )
            }
          </div>

          <!-- Title -->
          <h1
            class="text-3xl md:text-4xl lg:text-5xl font-black text-cyan-900 leading-tight"
          >
            {project.data.title}
          </h1>

          <!-- Description -->
          <p class="text-base md:text-lg text-gray-700 leading-relaxed">
            {project.data.description}
          </p>

          <!-- Meta Info -->
          <div class="flex flex-wrap gap-4 pt-2">
            {
              project.data.client && (
                <div class="flex items-center gap-2 text-gray-600">
                  <svg class="w-5 h-5 text-cyan-900" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                  </svg>
                  <span class="text-sm">
                    <span class="font-semibold text-cyan-900">Client:</span>
                    {" "}{project.data.client}
                  </span>
                </div>
              )
            }

            <div class="flex items-center gap-2 text-gray-600">
              <svg class="w-5 h-5 text-cyan-900" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm">
                <span class="font-semibold text-cyan-900">Date:</span>
                {" "}{formattedDate}
              </span>
            </div>

            {
              project.data.author && (
                <div class="flex items-center gap-2 text-gray-600">
                  <svg class="w-5 h-5 text-cyan-900" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-sm">{project.data.author}</span>
                </div>
              )
            }
          </div>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2 pt-2">
            {
              project.data.tags.map((tag) => (
                <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-xs font-medium border border-gray-200">
                  #{tag}
                </span>
              ))
            }
          </div>

          <!-- CTA Button -->
          {
            project.data.link && (
              <div class="pt-2">
                <a
                  href={project.data.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 bg-gradient-to-r from-orange-400 to-orange-500 hover:from-orange-500 hover:to-orange-600 text-white px-6 py-3 rounded-full font-bold text-sm shadow-lg transition-all duration-300 hover:scale-105"
                >
                  <span>View Live Project</span>
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                </a>
              </div>
            )
          }
        </div>

        <!-- Right Column - Project Image -->
        <div class="relative">
          <div class="relative rounded-2xl overflow-hidden shadow-xl border-2 border-gray-200 bg-white">
            <img
              src={project.data.img}
              alt={project.data.title}
              class="w-full h-auto object-contain max-h-[500px]"
            />
          </div>
        </div>
      </div>
    </div>
  </article>

  <!-- Main Content -->
  <section class="py-12 md:py-16 px-4 md:px-6 bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 md:gap-12">
        <!-- Main Content Column -->
        <div class="lg:col-span-2">
          <!-- Project Content (Markdown) -->
          <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 md:p-8">
            <div
              class="prose prose-base max-w-none
                        prose-headings:font-bold prose-headings:text-cyan-900
                        prose-h2:text-2xl prose-h2:mt-8 prose-h2:mb-4 prose-h2:first:mt-0
                        prose-h3:text-xl prose-h3:mt-6 prose-h3:mb-3
                        prose-h4:text-lg prose-h4:mt-4 prose-h4:mb-2
                        prose-p:text-base prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-4
                        prose-a:text-orange-500 prose-a:no-underline hover:prose-a:underline
                        prose-strong:text-cyan-900 prose-strong:font-bold
                        prose-ul:my-4 prose-ul:space-y-2
                        prose-li:text-base prose-li:text-gray-700 prose-li:marker:text-orange-400
                        prose-blockquote:border-l-4 prose-blockquote:border-orange-400
                        prose-blockquote:pl-6 prose-blockquote:italic
                        prose-blockquote:text-gray-600 prose-blockquote:bg-orange-50
                        prose-blockquote:py-4 prose-blockquote:rounded-r-lg
                        prose-code:text-cyan-900 prose-code:bg-cyan-50
                        prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm
                        prose-code:before:content-none prose-code:after:content-none
                        prose-pre:bg-gray-900 prose-pre:text-white"
            >
              <Content />
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-8">
            <!-- Results Card -->
            {
              project.data.results && (
                <div class="bg-gradient-to-br from-cyan-900 to-cyan-800 rounded-2xl p-6 text-white shadow-xl border-2 border-cyan-700">
                  <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
                    <svg
                      class="w-6 h-6"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" />
                    </svg>
                    Key Results
                  </h3>
                  <div class="space-y-4">
                    {project.data.results.metric1 && (
                      <div class="flex items-start gap-3">
                        <svg
                          class="w-5 h-5 text-orange-400 mt-1 flex-shrink-0"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <p class="text-sm leading-relaxed">
                          {project.data.results.metric1}
                        </p>
                      </div>
                    )}
                    {project.data.results.metric2 && (
                      <div class="flex items-start gap-3">
                        <svg
                          class="w-5 h-5 text-orange-400 mt-1 flex-shrink-0"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <p class="text-sm leading-relaxed">
                          {project.data.results.metric2}
                        </p>
                      </div>
                    )}
                    {project.data.results.metric3 && (
                      <div class="flex items-start gap-3">
                        <svg
                          class="w-5 h-5 text-orange-400 mt-1 flex-shrink-0"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        <p class="text-sm leading-relaxed">
                          {project.data.results.metric3}
                        </p>
                      </div>
                    )}
                  </div>
                </div>
              )
            }

            <!-- Project Info Card -->
            <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-200">
              <h3 class="text-lg font-bold text-cyan-900 mb-4">
                Project Details
              </h3>
              <div class="space-y-4">
                <div>
                  <p class="text-sm font-semibold text-gray-500 mb-1">
                    Category
                  </p>
                  <p class="text-gray-900 font-medium">
                    {project.data.category}
                  </p>
                </div>
                {
                  project.data.client && (
                    <div>
                      <p class="text-sm font-semibold text-gray-500 mb-1">
                        Client
                      </p>
                      <p class="text-gray-900 font-medium">
                        {project.data.client}
                      </p>
                    </div>
                  )
                }
                <div>
                  <p class="text-sm font-semibold text-gray-500 mb-1">Date</p>
                  <p class="text-gray-900 font-medium">{formattedDate}</p>
                </div>
              </div>
            </div>

            <!-- CTA Card -->
            <div
              class="bg-gradient-to-br from-orange-400 to-orange-600 rounded-2xl p-6 text-white shadow-xl border-2 border-orange-500"
            >
              <h3 class="text-lg font-bold mb-3">
                Ready for Similar Results?
              </h3>
              <p class="text-sm mb-4 leading-relaxed">
                Let's discuss how we can help your business achieve success like
                this project.
              </p>
              <Button text="Start Your Project" href="/contact" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Projects -->
  <section class="py-12 md:py-16 px-4 md:px-6 bg-white border-t border-gray-200">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-cyan-900 mb-3">
          More Projects
        </h2>
        <p class="text-base text-gray-600">
          Explore other successful projects from our portfolio
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/projects"
          class="px-6 md:px-8 py-3 bg-gradient-to-r from-orange-400 to-orange-500 text-white rounded-full font-bold hover:from-orange-500 hover:to-orange-600 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 text-sm md:text-base"
        >
          View All Projects
        </a>
        <a
          href="/contact"
          class="px-6 md:px-8 py-3 border-2 border-cyan-900 text-cyan-900 rounded-full font-bold hover:bg-cyan-900 hover:text-white transition-all duration-300 text-sm md:text-base"
        >
          Start Your Project
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Ensure proper spacing for markdown content */
  article img {
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  article table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  article th,
  article td {
    padding: 0.75rem;
    border: 1px solid #e5e7eb;
  }

  article th {
    background-color: #f3f4f6;
    font-weight: 600;
  }
</style>
