---
import Layout from "../layouts/Layout.astro";
import Whyus from "../components/whyus.astro";
import Faq from "../components/Faq.astro";
import CardService from "../components/CardService.astro";
import Button from "../components/Button.astro";
import Testimonial from "../components/testimonial.tsx";
import RelatedServices from "../components/RelatedServices.astro";
import TrustBadges from "../components/TrustBadges.astro";

const title =
  "Branding Services | Logo & Identity | Codebrand";
const description =
  "Build a powerful brand that stands out. Expert logo design, brand identity, strategy, and visual guidelines that elevate your business.";
const keywords =
  "branding services, brand identity, logo design, brand strategy, corporate identity, visual identity, brand guidelines, brand development, rebranding, brand design, brand positioning, brand messaging, brand refresh, graphic design, company branding";
const image = "/photos/Branding.webp";

// Service Schema for Branding
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "Branding Services",
  name: "Professional Branding & Logo Design Services",
  description: description,
  url: "https://codebrand.us/branding",
  image: "https://codebrand.us/photos/Branding.webp",
  provider: {
    "@type": "Organization",
    name: "Codebrand",
    url: "https://codebrand.us",
    logo: "https://codebrand.us/iconcodebrand.svg",
  },
  areaServed: {
    "@type": "Country",
    name: "United States",
  },
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Branding Services",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Logo Design",
          description: "Custom logo design that captures your brand essence",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Brand Identity",
          description:
            "Complete visual identity system including colors, typography, and guidelines",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Brand Strategy",
          description: "Strategic brand positioning and messaging framework",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Brand Guidelines",
          description:
            "Comprehensive brand style guide for consistent application",
        },
      },
    ],
  },
  priceRange: "$$$",
};
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  image={image}
>
  <script
    type="application/ld+json"
    is:inline
    set:html={JSON.stringify(serviceSchema)}
  />
  <!-- Hero Section -->
  <section
    class="relative bg-white pt-32 sm:pt-36 lg:pt-28 pb-16 sm:pb-24 lg:pb-32 font-poppins overflow-hidden"
  >
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220%200%2060%2060%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"
      >
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center max-w-4xl mx-auto">
        <span
          class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-100 text-cyan-800 text-sm font-semibold rounded-full mb-6"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z"
              clip-rule="evenodd"></path>
          </svg>
          Strategic Branding
        </span>
        <h1
          class="text-4xl sm:text-5xl lg:text-7xl font-bold text-cyan-900 mb-6 leading-tight"
        >
          Build a Brand That <span
            class="text-orange-500"
            >Inspires & Connects</span
          >
        </h1>
        <p class="text-xl sm:text-2xl text-gray-700 mb-8 leading-relaxed">
          Create a memorable brand identity that differentiates your business,
          builds emotional connections with customers, and drives long-term
          growth. We develop comprehensive branding solutions that capture your
          essence and resonate with your target audience.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
          >
            Build Your Brand
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a
            href="#services"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white hover:bg-gray-50 text-cyan-900 rounded-xl font-bold text-lg shadow-lg border-2 border-cyan-200 transition-all duration-200"
          >
            Explore Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Badges Section -->
  <TrustBadges />

  <!-- Introduction Section -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
          >
            Strategic Branding That Builds Recognition and Trust
          </h2>
          <div class="prose prose-lg text-gray-700 space-y-4">
            <p>
              Your brand is far more than just a logo or color scheme—it's the
              complete perception customers have of your business, encompassing
              your values, personality, promise, and position in the
              marketplace. Strong branding creates instant recognition, builds
              emotional connections, communicates professionalism, and
              differentiates you from competitors. At Codebrand, we create
              comprehensive brand identities that capture your unique essence
              and resonate deeply with your target audience through strategic <a
                href="/digital-marketing"
                class="text-cyan-600 hover:text-cyan-700 font-semibold"
                >digital marketing</a
              >, turning casual observers into loyal advocates.
            </p>
            <p>
              Our branding process begins with deep discovery and strategic
              thinking. We research your industry landscape, analyze competitor
              positioning, interview stakeholders, and study your target
              customers to understand what will make your brand stand out and
              connect. This foundation informs every creative decision—from logo
              concepts and color palettes to typography choices and brand
              messaging. We don't just make things look pretty; we create
              strategic visual identities that communicate specific messages and
              elicit desired emotional responses.
            </p>
            <p>
              Consistency is crucial for building brand recognition and trust.
              That's why we develop comprehensive brand guidelines that ensure
              every touchpoint—whether it's your <a
                href="/web-development"
                class="text-cyan-600 hover:text-cyan-700 font-semibold"
                >website</a
              >, <a
                href="/services/social-media"
                class="text-cyan-600 hover:text-cyan-700 font-semibold"
                >social media</a
              >, packaging, signage, or marketing materials—maintains visual and
              tonal consistency. Our brand books include detailed specifications
              for logo usage, color systems, typography, imagery style,
              iconography, patterns, and voice guidelines, empowering your team
              to maintain brand integrity as your business scales.
            </p>
            <p>
              Whether you're a startup establishing your first brand identity, a
              growing business ready for a professional rebrand, or an
              established company seeking to modernize and refresh your image,
              we bring the strategic thinking and creative execution needed to
              build brands that endure. Our portfolio spans industries from
              technology and healthcare to retail and hospitality, demonstrating
              our ability to craft distinctive identities that work across
              diverse markets and audiences while maintaining authenticity and
              strategic alignment.
            </p>
          </div>
        </div>
        <div class="relative">
          <div
            class="relative bg-slate-100 rounded-3xl p-8 shadow-xl"
          >
            <div class="space-y-4">
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">400+</div>
                    <div class="text-sm text-gray-600">Brands Created</div>
                  </div>
                </div>
              </div>
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">15+</div>
                    <div class="text-sm text-gray-600">Years Experience</div>
                  </div>
                </div>
              </div>
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">98%</div>
                    <div class="text-sm text-gray-600">Client Satisfaction</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-16 lg:py-24 bg-gray-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Complete Branding <span class="text-orange-500">Services</span>
        </h2>
        <p class="text-lg text-gray-700">
          From strategy to execution, we provide end-to-end branding solutions
          that create powerful, memorable brand identities.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <CardService
          icon="/icons/diseno-grafico.webp"
          title="Logo Design"
          description="Create distinctive, memorable logos that capture your brand essence and work across all applications. We design versatile marks that look perfect whether displayed on business cards, billboards, or digital screens."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/interfaz-de-usuario.webp"
          title="Brand Identity Development"
          description="Build complete visual identity systems including color palettes, typography, imagery style, patterns, and graphic elements that work together with UX/UI design principles to create cohesive, recognizable brand experiences across all touchpoints."
          learnMoreUrl="/services/ux-ui"
        />

        <CardService
          icon="/icons/diseno-grafico.webp"
          title="Brand Strategy & Positioning"
          description="Define your brand purpose, values, personality, and market position. We develop strategic foundations that differentiate you from competitors and resonate with target audiences through authentic, compelling messaging."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/sitio-web.webp"
          title="Brand Guidelines & Standards"
          description="Create comprehensive brand books with detailed specifications for logo usage, color systems, typography, imagery, tone of voice, and application examples that ensure consistent brand expression across all channels."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/diseno-grafico.webp"
          title="Rebranding Services"
          description="Refresh or completely reinvent your brand identity to better align with evolved business goals, reach new markets, or modernize outdated images while maintaining brand equity and customer recognition."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/interfaz-de-usuario.webp"
          title="Brand Naming"
          description="Develop memorable, meaningful brand names that capture your essence, differentiate from competitors, and resonate with audiences. Includes domain availability research and trademark screening for legal protection."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/diseno-grafico.webp"
          title="Packaging Design"
          description="Design packaging that stands out on shelves, communicates brand values, and enhances product perception. We create functional, beautiful packaging that protects products while attracting customers and building brand recognition."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/sitio-web.webp"
          title="Brand Messaging"
          description="Craft compelling taglines, mission statements, value propositions, and key messages with expert copywriting that communicate what you stand for and why customers should choose you. Strategic messaging that differentiates and persuades."
          learnMoreUrl="/copywriting"
        />

        <CardService
          icon="/icons/interfaz-de-usuario.webp"
          title="Marketing Collateral Design"
          description="Design business cards, letterheads, brochures, presentations, and other materials that reinforce brand identity. Professional collateral that makes positive impressions and maintains visual consistency across all touchpoints."
          learnMoreUrl="/contact"
        />
      </div>
    </div>
  </section>

  <!-- Brand Elements Section -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          What We <span class="text-orange-500">Create</span>
        </h2>
        <p class="text-lg text-gray-700">
          Every brand identity we develop includes comprehensive visual and
          strategic elements.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div
          class="bg-slate-50 rounded-xl p-6 shadow-md border border-cyan-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Primary Logo</h4>
          <p class="text-sm text-gray-600">
            Main brand mark in multiple formats and variations
          </p>
        </div>
        <div
          class="bg-slate-50 rounded-xl p-6 shadow-md border border-orange-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Secondary Logos</h4>
          <p class="text-sm text-gray-600">
            Alternative versions for different applications and contexts
          </p>
        </div>
        <div
          class="bg-gradient-to-br from-blue-50 to-white rounded-xl p-6 shadow-md border border-blue-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Color Palette</h4>
          <p class="text-sm text-gray-600">
            Primary, secondary, and accent colors with specifications
          </p>
        </div>
        <div
          class="bg-gradient-to-br from-green-50 to-white rounded-xl p-6 shadow-md border border-green-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Typography System</h4>
          <p class="text-sm text-gray-600">
            Headline and body fonts with usage guidelines
          </p>
        </div>
        <div
          class="bg-gradient-to-br from-purple-50 to-white rounded-xl p-6 shadow-md border border-purple-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Imagery Style</h4>
          <p class="text-sm text-gray-600">
            Photography and illustration direction and examples
          </p>
        </div>
        <div
          class="bg-gradient-to-br from-pink-50 to-white rounded-xl p-6 shadow-md border border-pink-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Icon Set</h4>
          <p class="text-sm text-gray-600">
            Custom icons that complement your brand identity
          </p>
        </div>
        <div
          class="bg-slate-50 rounded-xl p-6 shadow-md border border-cyan-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Patterns & Textures</h4>
          <p class="text-sm text-gray-600">
            Supporting visual elements for backgrounds and accents
          </p>
        </div>
        <div
          class="bg-slate-50 rounded-xl p-6 shadow-md border border-orange-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Brand Voice</h4>
          <p class="text-sm text-gray-600">
            Tone, personality, and messaging guidelines
          </p>
        </div>
        <div
          class="bg-gradient-to-br from-blue-50 to-white rounded-xl p-6 shadow-md border border-blue-100"
        >
          <h4 class="font-bold text-cyan-900 mb-2">Application Examples</h4>
          <p class="text-sm text-gray-600">
            Mockups showing brand across various touchpoints
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section
    class="py-16 lg:py-24 bg-slate-50 font-poppins"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Our Branding <span class="text-orange-500">Process</span>
        </h2>
        <p class="text-lg text-gray-700">
          A collaborative approach that ensures your brand authentically
          represents your business and resonates with audiences.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div
            class="w-12 h-12 bg-cyan-900 rounded-xl flex items-center justify-center mb-4"
          >
            <span class="text-2xl font-bold text-white">1</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-3">Discovery</h3>
          <p class="text-gray-700">
            Research your business, audience, competitors, and market to inform
            strategic creative decisions.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div
            class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mb-4"
          >
            <span class="text-2xl font-bold text-white">2</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-3">Strategy</h3>
          <p class="text-gray-700">
            Define positioning, personality, values, and messaging that
            differentiate and resonate.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div
            class="w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center mb-4"
          >
            <span class="text-2xl font-bold text-white">3</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-3">Design</h3>
          <p class="text-gray-700">
            Create logo concepts and identity systems that bring your brand
            strategy to visual life.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div
            class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center mb-4"
          >
            <span class="text-2xl font-bold text-white">4</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-3">Refinement</h3>
          <p class="text-gray-700">
            Refine selected concepts based on feedback until achieving perfect
            brand expression.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div
            class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mb-4"
          >
            <span class="text-2xl font-bold text-white">5</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-3">Delivery</h3>
          <p class="text-gray-700">
            Provide complete brand guidelines, assets, and support for
            successful implementation.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <Whyus />

  <!-- Testimonials Section -->
  <section class="py-16 lg:py-24 bg-slate-900 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
          What Our <span class="text-orange-500">Clients Say</span>
        </h2>
        <p class="text-lg text-slate-300">
          Real reviews from real clients on Google. See why businesses trust Codebrand for their branding needs.
        </p>
      </div>
      <Testimonial client:visible />
    </div>
  </section>

  <!-- Case Studies Section -->
  <section class="py-16 lg:py-24 bg-gray-50 font-poppins">
