---
import Layout from "../layouts/Layout.astro";
import Quoter from "../components/Quoter";

const title = "Project Quoter | Codebrand - Get Your Custom Quote";
const description = "Get an instant estimate for your digital project. Choose from one-time services or monthly plans. Web development, branding, SEO, video, photography, and more.";
const keywords = "project quote, web development pricing, branding cost, digital services pricing, monthly development plans, codebrand quoter";
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
>
  <main class="min-h-screen bg-gradient-to-b from-white via-gray-50 to-white">
    <!-- Hero Section -->
    <section class="pt-32 pb-12 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-[#f48200]/20 rounded-full mb-6 shadow-sm">
          <svg class="w-4 h-4 text-[#f48200]" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"></path>
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-sm font-semibold text-cyan-900 uppercase tracking-wider">Project Quoter</span>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-gray-900 mb-6 leading-tight">
          Get Your
          <span class="bg-gradient-to-r from-[#f48200] to-[#faa732] bg-clip-text text-transparent"> Custom Quote</span>
        </h1>

        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed mb-4">
          Select the services you need and get an instant estimate. Choose between one-time projects or monthly development plans.
        </p>

        <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-500">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Transparent Pricing</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>ISR Included</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>No Commitment</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Quoter Component -->
    <section class="pb-20 px-4 sm:px-6">
      <Quoter client:load />
    </section>

    <!-- Info Section -->
    <section class="py-16 px-4 sm:px-6 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-14 h-14 bg-[#f48200]/10 rounded-2xl mb-4">
              <svg class="w-7 h-7 text-[#f48200]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Payment Structure</h3>
            <p class="text-sm text-gray-600">50% upfront, 30% midway, 10% on delivery, 10% held 15 days as guarantee.</p>
          </div>
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-14 h-14 bg-[#007BFF]/10 rounded-2xl mb-4">
              <svg class="w-7 h-7 text-[#007BFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">Monthly Plans</h3>
            <p class="text-sm text-gray-600">6-month initial commitment. Cancellation requires 2 months written notice.</p>
          </div>
          <div class="text-center">
            <div class="inline-flex items-center justify-center w-14 h-14 bg-[#00BCD4]/10 rounded-2xl mb-4">
              <svg class="w-7 h-7 text-[#00BCD4]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">30-Day Warranty</h3>
            <p class="text-sm text-gray-600">Limited warranty for bugs and errors specified in the project scope.</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
