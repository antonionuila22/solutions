---
import Layout from "../layouts/Layout.astro";
import Whyus from "../components/whyus.astro";
import Faq from "../components/Faq.astro";
import CardService from "../components/CardService.astro";
import Button from "../components/Button.astro";

const title = "E-commerce Development | Online Store Design | Codebrand";
const description =
  "Launch and grow your online store with expert e-commerce development. Custom online shops, Shopify development, WooCommerce solutions, payment integrations, and conversion-optimized designs that drive sales and maximize revenue.";
const keywords =
  "e-commerce development, online store development, e-commerce website design, Shopify development, WooCommerce development, online shop, e-commerce solutions, shopping cart development, payment gateway integration, product catalog, e-commerce platform, online retail, digital commerce, e-commerce SEO, conversion optimization";
const image = "/photos/diseñoweb.webp";

// Service Schema for E-commerce
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "E-commerce Development",
  "name": "E-commerce Development & Online Store Design",
  "description": description,
  "url": "https://codebrand.us/e-commerce",
  "image": "https://codebrand.us/photos/diseñoweb.webp",
  "provider": {
    "@type": "Organization",
    "name": "Codebrand",
    "url": "https://codebrand.us",
    "logo": "https://codebrand.us/iconcodebrand.svg"
  },
  "areaServed": {
    "@type": "Country",
    "name": "United States"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "E-commerce Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Shopify Development",
          "description": "Custom Shopify stores with premium themes and apps"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "WooCommerce Development",
          "description": "WordPress-based e-commerce solutions"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Payment Gateway Integration",
          "description": "Secure payment processing with Stripe, PayPal, and more"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Custom E-commerce Platforms",
          "description": "Tailored online stores for unique business needs"
        }
      }
    ]
  },
  "priceRange": "$$$"
};
---

<Layout title={title} description={description} keywords={keywords} image={image}>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} />
  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-br from-cyan-50 via-white to-orange-50 py-16 sm:py-24 lg:py-32 font-poppins overflow-hidden"
  >
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220%200%2060%2060%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"
      >
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center max-w-4xl mx-auto">
        <span
          class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-100 text-cyan-800 text-sm font-semibold rounded-full mb-6"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"
            ></path>
          </svg>
          E-commerce Development
        </span>
        <h1
          class="text-4xl sm:text-5xl lg:text-7xl font-bold text-cyan-900 mb-6 leading-tight"
        >
          Build an Online Store That <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-orange-600"
            >Drives Sales</span
          >
        </h1>
        <p class="text-xl sm:text-2xl text-gray-700 mb-8 leading-relaxed">
          Transform your retail business with powerful e-commerce solutions that convert browsers into buyers. We create fast, secure, and conversion-optimized online stores that scale with your business and maximize revenue.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
          >
            Launch Your Store
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a
            href="#services"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white hover:bg-gray-50 text-cyan-900 rounded-xl font-bold text-lg shadow-lg border-2 border-cyan-200 transition-all duration-200"
          >
            View Solutions
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Section -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
          >
            E-commerce Solutions That Scale Your Business
          </h2>
          <div class="prose prose-lg text-gray-700 space-y-4">
            <p>
              The e-commerce landscape has never been more competitive or more opportunity-rich. Consumers increasingly prefer the convenience of online shopping, creating massive potential for businesses that deliver exceptional digital commerce experiences. At Codebrand, we specialize in building high-performing online stores that not only look beautiful but convert visitors into customers and generate sustainable revenue growth. Our <a href="/services/web-development" class="text-cyan-600 hover:text-cyan-700 font-semibold">web development team</a> creates custom solutions powered by <a href="/services/ux-ui" class="text-cyan-600 hover:text-cyan-700 font-semibold">conversion-focused UX/UI design</a>.
            </p>
            <p>
              Our e-commerce development services go far beyond basic online catalogs. We create comprehensive digital storefronts with advanced features including intelligent product recommendations, one-click checkout, abandoned cart recovery, inventory management, customer accounts, wishlist functionality, and seamless integration with shipping carriers and payment processors. Every element is optimized for conversions, from product page layouts to checkout flows.
            </p>
            <p>
              We understand that successful e-commerce requires more than just technical development—it demands strategic thinking about user experience, conversion psychology, and business operations. Our team analyzes your target audience, competitive landscape, and business model to design shopping experiences that reduce friction, build trust, overcome objections, and guide customers smoothly from browsing to purchase. We implement proven strategies like social proof, scarcity messaging, security badges, and streamlined checkouts that dramatically improve conversion rates. Combined with our <a href="/digital-marketing" class="text-cyan-600 hover:text-cyan-700 font-semibold">digital marketing expertise</a> and <a href="/copywriting" class="text-cyan-600 hover:text-cyan-700 font-semibold">persuasive copywriting</a>, we create stores that truly sell.
            </p>
            <p>
              Whether you're launching your first online store, migrating from an existing platform, or scaling an established e-commerce business, we have the expertise to deliver results. Our solutions support businesses of all sizes—from boutique retailers selling curated collections to large-scale merchants managing thousands of SKUs. We build on robust platforms like Shopify, WooCommerce, Magento, and custom solutions tailored to your specific needs, ensuring your store can handle current demands while scaling effortlessly as your business grows.
            </p>
          </div>
        </div>
        <div class="relative">
          <div
            class="relative bg-gradient-to-br from-cyan-100 to-orange-100 rounded-3xl p-8 shadow-xl"
          >
            <div class="space-y-4">
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">+245%</div>
                    <div class="text-sm text-gray-600">Avg. Sales Increase</div>
                  </div>
                </div>
              </div>
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">320+</div>
                    <div class="text-sm text-gray-600">Stores Launched</div>
                  </div>
                </div>
              </div>
              <div
                class="bg-white rounded-2xl p-6 shadow-lg transform hover:scale-105 transition-transform"
              >
                <div class="flex items-center gap-4">
                  <div
                    class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"
                      ></path>
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-cyan-900">4.8%</div>
                    <div class="text-sm text-gray-600">Avg. Conversion Rate</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-16 lg:py-24 bg-gray-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Complete E-commerce <span class="text-orange-500"
            >Solutions</span
          >
        </h2>
        <p class="text-lg text-gray-700">
          From initial setup to ongoing optimization, we provide end-to-end e-commerce services that drive sales and business growth.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <CardService
          icon="/icons/ecommerce-website-commerce-and-shopping-2-svgrepo-com.svg"
          title="Custom E-commerce Development"
          description="Build fully customized online stores tailored to your unique business requirements. We create bespoke e-commerce solutions with custom features, integrations, and workflows that standard platforms can't provide."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/sitio-web.png"
          title="Shopify Development"
          description="Launch beautiful, high-converting Shopify stores with custom themes and functionality. We design, develop, and optimize Shopify sites that maximize sales while providing exceptional user experiences."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/website-program-svgrepo-com.svg"
          title="WooCommerce Development"
          description="Create powerful WordPress-based online stores with WooCommerce. We build flexible, SEO-friendly e-commerce sites that integrate seamlessly with existing WordPress content and marketing."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/login-page-svgrepo-com.svg"
          title="Payment Gateway Integration"
          description="Accept payments securely through multiple processors including Stripe, PayPal, Square, and more. We implement PCI-compliant payment solutions with fraud protection and international payment support."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/host-website-se-svgrepo-com.svg"
          title="Inventory Management"
          description="Track stock levels, manage variants, automate reordering, and sync inventory across multiple sales channels. We build robust inventory systems that prevent overselling and streamline operations."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/mobile-phone-app-svgrepo-com.svg"
          title="Mobile Commerce"
          description="Optimize shopping experiences for mobile devices with responsive designs and progressive web app technology. Mobile-first development ensures perfect functionality on smartphones and tablets."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/data-graphics-analysis-svgrepo-com.svg"
          title="Conversion Rate Optimization"
          description="Maximize revenue per visitor through strategic CRO. We optimize product pages, checkout flows, CTAs, and user journeys based on data analysis and A/B testing to increase conversions."
          learnMoreUrl="/contact"
        />

        <CardService
          icon="/icons/seo.png"
          title="E-commerce SEO"
          description="Rank higher in search results and attract ready-to-buy shoppers. We optimize product pages, implement structured data, improve site architecture, and create content strategies that drive organic traffic."
          learnMoreUrl="/seo"
        />

        <CardService
          icon="/icons/redes-sociales.png"
          title="Marketing Automation"
          description="Recover abandoned carts, nurture customers, and increase lifetime value with automated email campaigns, personalized recommendations, and targeted promotions based on user behavior."
          learnMoreUrl="/digital-marketing"
        />
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Essential E-commerce <span class="text-orange-500">Features</span>
        </h2>
        <p class="text-lg text-gray-700">
          We build online stores with all the features needed to compete and win in today's digital marketplace.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-gradient-to-br from-cyan-50 to-white rounded-xl p-6 shadow-md border border-cyan-100">
          <h4 class="font-bold text-cyan-900 mb-2">Product Management</h4>
          <p class="text-sm text-gray-600">Unlimited products, variants, categories, and flexible pricing options</p>
        </div>
        <div class="bg-gradient-to-br from-orange-50 to-white rounded-xl p-6 shadow-md border border-orange-100">
          <h4 class="font-bold text-cyan-900 mb-2">Shopping Cart</h4>
          <p class="text-sm text-gray-600">Intuitive cart with saved items, quantity updates, and coupon codes</p>
        </div>
        <div class="bg-gradient-to-br from-blue-50 to-white rounded-xl p-6 shadow-md border border-blue-100">
          <h4 class="font-bold text-cyan-900 mb-2">Secure Checkout</h4>
          <p class="text-sm text-gray-600">SSL encrypted, PCI compliant checkout with guest and account options</p>
        </div>
        <div class="bg-gradient-to-br from-green-50 to-white rounded-xl p-6 shadow-md border border-green-100">
          <h4 class="font-bold text-cyan-900 mb-2">Multi-Currency</h4>
          <p class="text-sm text-gray-600">Sell globally with automatic currency conversion and localized pricing</p>
        </div>
        <div class="bg-gradient-to-br from-purple-50 to-white rounded-xl p-6 shadow-md border border-purple-100">
          <h4 class="font-bold text-cyan-900 mb-2">Shipping Integration</h4>
          <p class="text-sm text-gray-600">Real-time rates from carriers, label printing, and tracking</p>
        </div>
        <div class="bg-gradient-to-br from-pink-50 to-white rounded-xl p-6 shadow-md border border-pink-100">
          <h4 class="font-bold text-cyan-900 mb-2">Customer Accounts</h4>
          <p class="text-sm text-gray-600">Order history, wishlists, saved addresses, and loyalty programs</p>
        </div>
        <div class="bg-gradient-to-br from-cyan-50 to-white rounded-xl p-6 shadow-md border border-cyan-100">
          <h4 class="font-bold text-cyan-900 mb-2">Reviews & Ratings</h4>
          <p class="text-sm text-gray-600">Customer reviews, star ratings, and user-generated content</p>
        </div>
        <div class="bg-gradient-to-br from-orange-50 to-white rounded-xl p-6 shadow-md border border-orange-100">
          <h4 class="font-bold text-cyan-900 mb-2">Analytics Dashboard</h4>
          <p class="text-sm text-gray-600">Sales reports, traffic analysis, and customer insights</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-cyan-50 to-orange-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6"
        >
          Our E-commerce <span class="text-orange-500">Process</span>
        </h2>
        <p class="text-lg text-gray-700">
          A structured approach that ensures successful store launches and sustainable growth.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div class="w-12 h-12 bg-gradient-to-br from-cyan-500 to-cyan-600 rounded-xl flex items-center justify-center mb-4">
            <span class="text-2xl font-bold text-white">1</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-3">Strategy & Planning</h3>
          <p class="text-gray-700">
            Define goals, select platforms, plan features, and create detailed specifications aligned with business objectives.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mb-4">
            <span class="text-2xl font-bold text-white">2</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-3">Design & Development</h3>
          <p class="text-gray-700">
            Create conversion-focused designs and build robust, scalable stores with all necessary features and integrations.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mb-4">
            <span class="text-2xl font-bold text-white">3</span>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-3">Testing & Launch</h3>
          <p class="text-gray-700">
            Thoroughly test checkout flows, payments, and functionality before launching with proper SEO and marketing setup.
          </p>
