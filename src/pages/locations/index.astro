---
export const prerender = true;
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { createBreadcrumbSchema } from "../../utils/schema";

// Get all collections (exclude drafts)
const locations = await getCollection("locations", ({ data }) => !data.draft);
const countries = await getCollection("countryareas", ({ data }) => !data.draft);

// Group locations by country
const locationsByCountry = locations.reduce((acc, loc) => {
  const countrySlug = loc.data.country;
  if (!acc[countrySlug]) acc[countrySlug] = [];
  acc[countrySlug].push(loc);
  return acc;
}, {} as Record<string, typeof locations>);

// Sort locations within each country
Object.keys(locationsByCountry).forEach(countrySlug => {
  locationsByCountry[countrySlug].sort((a, b) => {
    if (a.data.featured && !b.data.featured) return -1;
    if (!a.data.featured && b.data.featured) return 1;
    return a.data.city.localeCompare(b.data.city);
  });
});

// For backward compatibility, also keep a flat sorted list
const sortedLocations = locations.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.city.localeCompare(b.data.city);
});

// SEO
const title = "Web Development Services by City | Codebrand Locations";
const description = "Find professional web development services in your city. Codebrand serves businesses across the United States with custom websites, e-commerce, and web applications. 60% cost savings with nearshore development.";
const keywords = [
  "web development by city",
  "web development services near me",
  "local web development company",
  "web developers United States",
  ...locations.map(loc => `web development ${loc.data.city}`),
].join(", ");

const baseUrl = "https://codebrand.us";

// Breadcrumb schema
const breadcrumbSchema = createBreadcrumbSchema([
  { name: "Home", url: baseUrl },
  { name: "Locations", url: `${baseUrl}/locations` },
]);

// ItemList schema for SEO
const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Codebrand Web Development Locations",
  "description": "Cities served by Codebrand web development services",
  "numberOfItems": locations.length,
  "itemListElement": sortedLocations.map((location, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": `Web Development ${location.data.city}, ${location.data.stateCode}`,
    "url": `${baseUrl}/locations/${location.slug}`,
  })),
};
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  image="/photos/webservice.webp"
  breadcrumbNames={{ "locations": "Locations" }}
>
  <!-- Structured Data -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(breadcrumbSchema)} />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(itemListSchema)} />

  <!-- Hero Section -->
  <section class="relative bg-white py-16 sm:py-24 font-poppins overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220%200%2060%2060%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center max-w-4xl mx-auto">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-100 text-cyan-800 text-sm font-semibold rounded-full mb-6">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
          {locations.length} Cities Served
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-cyan-900 mb-6 leading-tight">
          Web Development Services <span class="text-orange-500">Across the USA</span>
        </h1>
        <p class="text-xl sm:text-2xl text-gray-700 mb-8 leading-relaxed max-w-3xl mx-auto">
          Professional web development for businesses in major US cities. Get premium quality at 60% less than local agencies with our nearshore development team.
        </p>
      </div>
    </div>
  </section>

  <Breadcrumbs
    items={[
      { name: "Home", href: "/" },
      { name: "Locations", href: "" }
    ]}
    variant="transparent"
    class="bg-gray-50 border-y border-gray-100"
  />

  <!-- Locations Grid by Country -->
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {Object.entries(locationsByCountry).map(([countrySlug, countryLocations]) => {
        const country = countries.find(c => c.slug === countrySlug);
        return (
          <div class="mb-16">
            <div class="flex items-center gap-4 mb-8">
              <a href={`/countryareas/${countrySlug}`} class="flex items-center gap-3 group">
                <div class="w-10 h-10 bg-cyan-100 rounded-lg flex items-center justify-center group-hover:bg-orange-100 transition-colors">
                  <span class="text-cyan-800 font-bold group-hover:text-orange-600">{country?.data.code}</span>
                </div>
                <h2 class="text-2xl font-bold text-cyan-900 group-hover:text-orange-600 transition-colors">
                  {country?.data.name || countrySlug}
                </h2>
              </a>
              <div class="flex-grow h-px bg-gradient-to-r from-cyan-200 to-transparent"></div>
              <span class="text-sm text-gray-500">{countryLocations.length} cities</span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {countryLocations.map((location) => (
          <a
            href={`/locations/${location.slug}`}
            class="group bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl border border-cyan-100 hover:border-orange-300 transition-all duration-300 transform hover:-translate-y-1"
          >
            <div class="flex items-start justify-between mb-4">
              <div class="w-12 h-12 bg-cyan-900 rounded-xl flex items-center justify-center group-hover:bg-orange-500 transition-all duration-300">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              {location.data.featured && (
                <span class="px-3 py-1 bg-orange-100 text-orange-700 text-xs font-semibold rounded-full">
                  Featured
                </span>
              )}
            </div>

            <h2 class="text-2xl font-bold text-cyan-900 mb-2 group-hover:text-orange-600 transition-colors">
              {location.data.city}, {location.data.stateCode}
            </h2>

            <p class="text-gray-600 mb-4 line-clamp-2">
              {location.data.description}
            </p>

            <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
              {location.data.population && (
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  {location.data.population}
                </span>
              )}
              {location.data.timezone && (
                <span class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  {location.data.timezone.split(' ')[0]}
                </span>
              )}
            </div>

            <span class="inline-flex items-center gap-2 text-orange-600 font-semibold group-hover:gap-3 transition-all">
              View Services
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </a>
              ))}
            </div>
          </div>
        );
      })}
    </div>
  </section>

  <!-- Why Choose Nearshore -->
  <section class="py-16 lg:py-24 bg-gray-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-cyan-900 mb-6">
          Why US Businesses Choose Codebrand
        </h2>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          Honduras-based nearshore development with all the benefits of working locally.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">60% Cost Savings</h3>
          <p class="text-gray-600">Same quality, fraction of the price</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">Same Timezone</h3>
          <p class="text-gray-600">Real-time collaboration (CST)</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">Bilingual Team</h3>
          <p class="text-gray-600">Fluent English & Spanish</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-cyan-900 mb-2">500+ Projects</h3>
          <p class="text-gray-600">Proven track record</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-cyan-900 font-poppins">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Don't See Your City?
      </h2>
      <p class="text-xl text-cyan-100 mb-8">
        We serve businesses across all 50 states. Contact us for a free consultation regardless of your location.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
          Get Free Quote
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a href="/projects" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white hover:bg-gray-100 text-cyan-900 rounded-xl font-bold text-lg shadow-lg transition-all duration-200">
          View Our Work
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
