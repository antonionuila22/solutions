    github: "#",
  },
];

const bgGrad = (i: number) =>
  i % 2 === 0 ? "from-cyan-50 to-orange-50" : "from-orange-50 to-cyan-50";

const badgeBg = (i: number) => (i % 2 === 0 ? "bg-cyan-100 text-cyan-900" : "bg-orange-100 text-orange-900");

const circleBg = (i: number) => (i % 2 === 0 ? "bg-orange-400" : "bg-cyan-900");

const iconWrap = (i: number) => (i % 2 === 0 ? "bg-orange-100 group-hover:bg-orange-400" : "bg-cyan-100 group-hover:bg-cyan-900");

const iconColor = (i: number) => (i % 2 === 0 ? "text-orange-400 group-hover:text-white" : "text-cyan-900 group-hover:text-white");
---

<!-- Team Members Section -->
<section class="py-24 px-6 max-w-7xl mx-auto">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {members.map((m, i) => (
      <div class="group flex relative" aria-label={`Team member: ${m.name}`}>
        <div class="relative overflow-hidden rounded-3xl bg-white shadow-lg hover:shadow-2xl transition-all duration-500">
          <!-- Image Container -->
          <div class={`relative h-80 overflow-hidden bg-gradient-to-br ${bgGrad(i)}`}>
            <img
              src={m.image}
              alt={m.name}
              class="w-full h-full object-cover object-top transition-transform duration-700 group-hover:scale-110"
              loading="lazy"
              decoding="async"
            />
            <!-- Overlay on Hover -->
            <div class="absolute inset-0 bg-gradient-to-t from-cyan-400/50 via-cyan-900/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

            <!-- Social Links (appear on hover) -->
            {( (m.linkedin && m.linkedin !== '#') || (m.github && m.github !== '#') ) && (
              <div class="absolute bottom-4 left-0 right-0 flex justify-center gap-3 opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0 transition-all duration-500">
                {m.linkedin && m.linkedin !== '#' && (
                  <a
                    href={m.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-orange-400 hover:scale-110 transition-all"
                    aria-label={`${m.name} LinkedIn`}
                  >
                    <!-- LinkedIn -->
                    <svg class="w-5 h-5 text-cyan-900" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M4.98 3.5C4.98 4.88 3.86 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5zM0 8h5v16H0zM8 8h4.8v2.2h.07C13.6 8.9 15.5 8 17.8 8 22.4 8 24 10.7 24 15.2V24h-5v-7.6c0-1.8-.03-4.1-2.5-4.1-2.5 0-2.88 2-2.88 4v7.7H8z"/>
                    </svg>
                  </a>
                )}
                {m.github && m.github !== '#' && (
                  <a
                    href={m.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 bg-white rounded-full flex items-center justify-center hover:bg-orange-400 hover:scale-110 transition-all"
                    aria-label={`${m.name} GitHub`}
                  >
                    <!-- GitHub -->
                    <svg class="w-5 h-5 text-cyan-900" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                      <path d="M12 .5A11.5 11.5 0 0 0 .5 12c0 5.08 3.29 9.38 7.86 10.9.58.1.79-.25.79-.56v-2c-3.2.69-3.88-1.37-3.88-1.37-.53-1.36-1.29-1.72-1.29-1.72-1.05-.72.08-.7.08-.7 1.16.08 1.78 1.2 1.78 1.2 1.04 1.78 2.73 1.26 3.4.96.1-.76.4-1.26.73-1.55-2.56-.29-5.26-1.28-5.26-5.67 0-1.25.45-2.28 1.2-3.08-.12-.29-.52-1.46.12-3.04 0 0 .98-.31 3.2 1.18.91-.25 1.88-.37 2.85-.38.97.01 1.94.13 2.86.38 2.21-1.5 3.19-1.18 3.19-1.18.65 1.58.25 2.75.13 3.04.75.8 1.2 1.83 1.2 3.08 0 4.4-2.71 5.38-5.3 5.66.41.35.79 1.05.79 2.13v3.15c0 .31.21.67.8.56A11.5 11.5 0 0 0 23.5 12 11.5 11.5 0 0 0 12 .5z"/>
                    </svg>
                  </a>
                )}
              </div>
            )}
          </div>

          <!-- Content -->
          <div class="p-6">
            <div class="flex items-start justify-between mb-2">
              <div>
                <h3 class="text-2xl font-black text-cyan-900 group-hover:text-orange-400 transition-colors">
                  {m.name}
                </h3>
                <p class="text-sm font-bold text-orange-400 uppercase tracking-wider">
                  {m.role}
                </p>
              </div>

              <div class={`w-12 h-12 rounded-full ${iconWrap(i)} flex items-center justify-center transition-colors`}>
                <!-- Icon placeholder (checkmark / edit / tasks seg√∫n index) -->
                <svg class={`w-6 h-6 ${iconColor(i)}`} fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-7.5 7.5a1 1 0 01-1.414 0l-3-3A1 1 0 016.207 10.293L8.5 12.586l6.793-6.793a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>

            <p class="text-gray-600 text-sm leading-relaxed mb-4">
              {m.description}
            </p>

            <!-- Skills Tags -->
            <div class="flex flex-wrap gap-2">
              {m.skills.map((s) => (
                <span class={`px-3 py-1 rounded-full text-xs font-semibold ${badgeBg(i)}`}>{s}</span>
              ))}
            </div>
          </div>

          <!-- Decorative Element -->
          <div class={`absolute top-4 right-4 w-16 h-16 ${circleBg(i)} rounded-full opacity-10 group-hover:opacity-20 transition-opacity blur-2xl`}></div>
        </div>
      </div>
    ))}
  </div>

  <!-- Team Culture Section (sin cambios) -->
  <div class="mt-24 bg-gradient-to-br from-slate-50 to-white rounded-3xl p-12 border-2 border-slate-200">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-black text-cyan-900 mb-6">
