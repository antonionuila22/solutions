---
import SplitText from "../components/SplitText.tsx";
import Button from "../components/Button.astro";

const handleAnimationComplete = () => {
    console.log("¡Todas las letras han terminado de animarse!");
};
---

<section class="flex items-center justify-center flex-col mt-8">
    <div class="container px-8 py-8 flex items-center justify-center w-full">
        <article
            class="relative flex w-full text-center bg-cover bg-center rounded-[20px] px-[6vh] py-[9vw] gap-4 items-center justify-center flex-col"
            style="background-image: url('./photos/hero.webp')"
        >
            <div
                class="absolute w-full h-full inset-0 bg-black/80 rounded-[20px]"
            >
            </div>

            <h1
                class="relative max-w-6xl text-2xl lg:text-2xl sm:text-sm text-white animate-fade-in"
            >
                Hola! Somos Code Brand
            </h1>

            <SplitText
                text="Expertos en diseño, desarrollo web y publicidad."
                className="text-white font-bold max-w-6xl text-4xl lg:text-6xl md:text-5xl sm:text-4xl max-h-[630px]"
                delay={25}
                animationFrom={{
                    opacity: 0,
                    transform: "translateY(40px)",
                }}
                animationTo={{ opacity: 1, transform: "translateY(0)" }}
                threshold={0.2}
                rootMargin="35px"
                onLetterAnimationComplete={handleAnimationComplete}
                client:visible
            />

            <p
                class="relative text-lg text-white max-w-5xl animate-fade-in opacity-0 transition-opacity duration-700 delay-200"
            >
                Hacemos destacar tu marca con un equipo de expertos. En Code
                Brand combinamos diseño, desarrollo y marketing digital para
                aumentar tus ventas, mejorar tu posicionamiento en buscadores y
                conectar con tu audiencia.
            </p>

            <div
                class="relative flex flex-col md:flex-row gap-7 flex-wrap justify-center"
            >
                <Button text="Hablemos!" href="#" />
            </div>
        </article>
    </div>
</section>
