---
/**
 * Case Studies Section Component for Service Pages
 * Displays success stories with metrics and results
 * Includes structured data for rich snippets
 */

interface CaseStudy {
  category: string;
  categoryColor: string;
  title: string;
  description: string;
  metrics: {
    value: string;
    label: string;
  }[];
  gradientFrom: string;
  gradientTo: string;
}

interface Props {
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  caseStudies: CaseStudy[];
}

const {
  title = "Success",
  titleHighlight = "Stories",
  subtitle = "Real results from real projects. See how we've helped businesses achieve their goals.",
  caseStudies = [],
} = Astro.props;
---

{caseStudies.length > 0 && (
  <section class="py-16 lg:py-24 bg-gray-50 font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6">
          {title} <span class="text-orange-500">{titleHighlight}</span>
        </h2>
        <p class="text-lg text-gray-700">{subtitle}</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {caseStudies.map((study) => (
          <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
            <div
              class={`h-48 bg-gradient-to-br ${study.gradientFrom} ${study.gradientTo} flex items-center justify-center`}
            >
              <svg
                class="w-20 h-20 text-white/30"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
            </div>
            <div class="p-6">
              <span
                class={`text-xs font-semibold ${study.categoryColor} uppercase tracking-wide`}
              >
                {study.category}
              </span>
              <h3 class="text-xl font-bold text-cyan-900 mt-2 mb-3">
                {study.title}
              </h3>
              <p class="text-gray-600 mb-4">{study.description}</p>
              <div class="flex flex-wrap gap-4 text-sm">
                {study.metrics.map((metric) => (
                  <div>
                    <div class="font-bold text-orange-500">{metric.value}</div>
                    <div class="text-gray-500">{metric.label}</div>
                  </div>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
)}
