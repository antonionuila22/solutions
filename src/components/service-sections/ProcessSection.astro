---
/**
 * Process Section Component for Service Pages
 * Displays step-by-step workflow with numbered steps
 */

interface ProcessStep {
  number: number;
  title: string;
  description: string;
  color?: string;
}

interface Props {
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  steps: ProcessStep[];
}

const {
  title = "Our Proven",
  titleHighlight = "Process",
  subtitle = "A systematic approach that delivers measurable results.",
  steps = [],
} = Astro.props;

// Default colors for steps
const defaultColors = [
  "bg-cyan-900",
  "bg-gradient-to-br from-blue-500 to-blue-600",
  "bg-orange-500",
  "bg-gradient-to-br from-green-500 to-green-600",
  "bg-gradient-to-br from-purple-500 to-purple-600",
];

const borderColors = [
  "border-cyan-100",
  "border-blue-100",
  "border-orange-100",
  "border-green-100",
  "border-purple-100",
];
---

{steps.length > 0 && (
  <section class="py-16 lg:py-24 bg-white font-poppins">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-cyan-900 mb-6">
          {title} <span class="text-orange-500">{titleHighlight}</span>
        </h2>
        <p class="text-lg text-gray-700">{subtitle}</p>
      </div>

      <div
        class={`grid grid-cols-1 md:grid-cols-2 ${steps.length >= 4 ? "lg:grid-cols-4" : steps.length === 3 ? "lg:grid-cols-3" : ""} gap-8`}
      >
        {steps.map((step, index) => (
          <div
            class={`bg-white rounded-2xl p-8 shadow-lg border-2 ${borderColors[index % borderColors.length]} hover:shadow-xl transition-shadow`}
          >
            <div
              class={`w-12 h-12 ${step.color || defaultColors[index % defaultColors.length]} rounded-xl flex items-center justify-center mb-4`}
            >
              <span class="text-2xl font-bold text-white">{step.number}</span>
            </div>
            <h3 class="text-xl font-bold text-cyan-900 mb-3">{step.title}</h3>
            <p class="text-gray-700">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
)}
