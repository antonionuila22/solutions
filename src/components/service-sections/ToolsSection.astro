---
/**
 * Tools & Technologies Section
 * Displays tools/technologies used for the service
 */

interface Tool {
  name: string;
  icon: string; // emoji or image path
}

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  tools: Tool[];
  columns?: "2" | "3" | "4" | "6" | "8";
  className?: string;
}

const {
  title = "Professional Tools",
  subtitle = "Technologies We Use",
  description = "We use industry-standard tools and technologies to deliver exceptional results.",
  tools,
  columns = "4",
  className = "",
} = Astro.props;

const gridCols = {
  "2": "md:grid-cols-2",
  "3": "md:grid-cols-3",
  "4": "md:grid-cols-4",
  "6": "md:grid-cols-3 lg:grid-cols-6",
  "8": "md:grid-cols-4 lg:grid-cols-8",
};
---

<section class={`py-16 md:py-20 px-4 md:px-6 bg-white ${className}`}>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <span
        class="text-orange-400 font-bold text-xs md:text-sm uppercase tracking-widest"
      >
        {subtitle}
      </span>
      <h2
        class="text-3xl md:text-4xl font-bold text-cyan-900 mb-4 mt-3 leading-tight"
      >
        {title}
      </h2>
      <p class="text-base md:text-lg text-gray-600 max-w-2xl mx-auto">
        {description}
      </p>
    </div>

    <div class={`grid grid-cols-2 ${gridCols[columns]} gap-4 md:gap-6`}>
      {
        tools.map((tool) => (
          <div class="bg-gradient-to-br from-slate-50 to-white border border-gray-200 rounded-2xl p-6 hover:shadow-xl hover:scale-105 transition-all duration-300 text-center group">
            <div class="text-4xl mb-3 group-hover:scale-110 transition-transform duration-300">
              {tool.icon.startsWith("/") || tool.icon.startsWith("http") ? (
                <img
                  src={tool.icon}
                  alt={tool.name}
                  class="w-12 h-12 mx-auto object-contain"
                  loading="lazy"
                />
              ) : (
                tool.icon
              )}
            </div>
            <h3 class="text-sm md:text-base font-bold text-cyan-900">
              {tool.name}
            </h3>
          </div>
        ))
      }
    </div>
  </div>
</section>
