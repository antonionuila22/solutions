---
// Optimized BannerSecond - Pure CSS animations, no GSAP dependency
interface Props {
  title: string;
  subtitle: string;
  description: string;
  imgUrl: string;
}

const { title, subtitle, description, imgUrl } = Astro.props;
---

<section class="w-full px-6 py-20 lg:py-32 bg-gradient-to-br from-[#0d0f1a] to-[#1a1d2e] overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 items-center gap-12 lg:gap-16">
    <div class="z-10 space-y-6 text-center lg:text-left banner-content">
      <span class="text-orange-400 font-medium text-lg uppercase block animate-item" style="--delay: 0">
        {subtitle}
      </span>
      <h2 class="text-white text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight animate-item" style="--delay: 1">
        {title}
      </h2>
      <p class="text-white/90 text-base sm:text-lg max-w-xl mx-auto lg:mx-0 animate-item" style="--delay: 2">
        {description}
      </p>
      <div class="animate-item" style="--delay: 3">
        <a
          href="/contact"
          class="inline-block bg-gradient-to-r from-orange-500 to-orange-600 text-white font-semibold
          py-3 px-6 lg:py-4 lg:px-8 rounded-xl shadow-lg shadow-orange-500/25
          hover:from-orange-400 hover:to-orange-500 hover:shadow-orange-500/40
          transition-all duration-300 transform hover:scale-105 hover:-translate-y-1"
        >
          Get Started
        </a>
      </div>
    </div>

    <div class="relative w-full flex justify-center items-center banner-image">
      <img
        src={imgUrl}
        alt="Professional web development services"
        width="512"
        height="512"
        class="w-full max-w-sm sm:max-w-md lg:max-w-lg rounded-3xl shadow-2xl object-cover animate-item"
        style="--delay: 2"
        loading="lazy"
        decoding="async"
      />

      <div
        class="absolute -top-4 -left-4 lg:-top-6 lg:-left-6 bg-white/10 backdrop-blur-md border border-white/20 text-white p-3 lg:p-4 rounded-xl shadow-md animate-item hidden sm:block"
        style="--delay: 4"
      >
        <p class="text-sm">Dashboard</p>
        <div class="h-1 w-32 lg:w-40 bg-orange-400 mt-2 rounded-full"></div>
      </div>

      <div
        class="absolute -bottom-4 -right-4 lg:-bottom-6 lg:-right-6 bg-white/10 backdrop-blur-md border border-white/20 text-white p-3 lg:p-4 rounded-xl shadow-md animate-item hidden sm:block"
        style="--delay: 5"
      >
        <p class="text-sm">Performance +100%</p>
        <div class="h-1 w-32 lg:w-40 bg-cyan-400 mt-2 rounded-full"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-item {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeSlideUp 0.6s ease-out forwards;
    animation-delay: calc(var(--delay, 0) * 0.15s);
  }

  @keyframes fadeSlideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate-item {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }
</style>
