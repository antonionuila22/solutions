<section class="py-12 sm:py-16 lg:py-24 bg-gradient-to-b from-slate-50 to-white font-poppins" id="website-vs-webapp">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header - Optimizado para móvil -->
    <div class="text-center mb-8 sm:mb-12 lg:mb-16">
      <span class="inline-block px-3 py-1.5 sm:px-4 sm:py-2 bg-white border border-cyan-500/30 rounded-full shadow-sm text-xs sm:text-sm font-medium text-cyan-600 mb-4 sm:mb-6">
        Choose the Right Solution
      </span>
