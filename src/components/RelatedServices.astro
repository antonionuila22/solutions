    { title: "UX/UI Design", description: "Optimize your store's user experience for higher conversions.", href: "/web-design", icon: "/icons/interfaz-de-usuario.webp" },
    { title: "SEO Services", description: "Drive organic traffic to your products with e-commerce SEO.", href: "/seo", icon: "/icons/seo.webp" },
  ],
