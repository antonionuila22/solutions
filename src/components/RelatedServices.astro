    { title: "Digital Marketing", description: "Comprehensive marketing strategies to amplify your online presence.", href: "/digital-marketing", icon: "/icons/marketing-advertising-svgrepo-com.svg" },
    { title: "Landing Pages", description: "Conversion-optimized pages that turn traffic into leads.", href: "/landing-pages", icon: "/icons/login-page-svgrepo-com.svg" },
  ],
