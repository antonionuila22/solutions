---
import Logo from "./logo.astro";
interface SubItem {
  name: string;
  link: string;
}

interface MenuItem {
  name: string;
  link: string;
  hasDropdown: boolean;
  subItems?: SubItem[];
}

const menuItems: MenuItem[] = [
  {
    name: "Services",
    link: "/services",
    hasDropdown: true,
    subItems: [
      { name: "UX/UI Design", link: "/services/ux-ui" },
      { name: "Branding", link: "/services/branding" },
      { name: "Web Development", link: "/services/web-development" },
      { name: "SEO", link: "/services/seo" },
      { name: "Social Media", link: "/services/social-media" },
      { name: "3D Rendering", link: "/services/3d-rendering" },
      { name: "Animation", link: "/services/animation" },
      { name: "Video Production", link: "/services/video-production" },
      { name: "Promotional Products", link: "/services/promotional-products" },
    ],
  },
  {
    name: "Industries",
    link: "#",
    hasDropdown: true,
    subItems: [
      { name: "Construction", link: "/industries/construction" },
      { name: "Travel", link: "/industries/travel-agency" },
      { name: "E-Commerce", link: "/industries/ecommerce" },
      { name: "Healt Care", link: "/industries/healthcare" },
      { name: "Real State", link: "/industries/real-estate" },
      { name: "Restaurants", link: "/industries/restaurants" },
      { name: "Law Firms", link: "/industries/law-firms" },
      { name: "Automotive", link: "/industries/automotive" },
      { name: "Fitness", link: "/industries/fitness" },
      { name: "Content Creators", link: "/industries/content-creators" },
    ],
  },
  {
    name: "About Us",
    link: "#",
    hasDropdown: true,
    subItems: [
      { name: "History", link: "/history" },
      { name: "Our Specialist", link: "/team" },
      { name: "Projects", link: "/projects" },
      { name: "Blog", link: "/blog" },
      { name: "Countries We Serve", link: "/countryareas" },
    ],
  },
  { name: "Products", link: "/products", hasDropdown: false },
  { name: "Contact", link: "/contact", hasDropdown: false },
];
---

<header
  class="navbar-header sticky top-0 z-50 transition-all bg-white"
  role="banner"
>
  <nav
    class="max-w-7xl mx-auto flex justify-between items-center px-6 py-4"
    role="navigation"
    aria-label="Main navigation"
  >
    <Logo />

    <!-- Desktop Menu -->
    <ul
      class="hidden md:flex items-center gap-8 font-medium mx-auto"
      role="menubar"
    >
      {
        menuItems.map((item) => (
          <li class="relative group" role="none">
            <a
              href={item.link}
              class="flex items-center py-4 gap-1 text-gray-800 hover:text-orange-400 transition"
              role="menuitem"
              aria-haspopup={item.hasDropdown ? "true" : undefined}
            >
              {item.name}
              {item.hasDropdown && (
                <svg
                  class="w-3 h-3 transition-transform group-hover:rotate-180"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    d="M19 9l-7 7-7-7"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              )}
            </a>

            {item.hasDropdown && item.subItems && (
              <ul
                class="absolute left-1/2 -translate-x-1/2 top-7 bg-white shadow-md rounded-lg py-4 px-4 mt-2 space-y-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 min-w-[220px] border border-zinc-100 z-50"
                role="menu"
                aria-label={`${item.name} submenu`}
              >
                {item.subItems.map((sub) => (
                  <li role="none">
                    <a
                      href={sub.link}
                      class="block text-sm text-gray-700 hover:text-orange-400 whitespace-nowrap py-1"
                      role="menuitem"
                    >
                      {sub.name}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))
      }
    </ul>

    <!-- Desktop CTA -->
    <div class="hidden md:block">
      <a
        href="/contact"
        class="bg-gradient-to-r from-[#f48200] to-[#faa732] text-white font-semibold py-3 px-6 rounded-full shadow-md hover:from-[#007BFF] hover:to-[#00BCD4] hover:shadow-lg transition ease-in-out transform hover:scale-105 active:scale-95 text-sm lg:text-base"
        aria-label="Contact us for a free consultation"
      >
        Talk to us!
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      type="button"
      class="md:hidden mobile-menu-btn"
      aria-label="Open mobile menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg
        class="h-6 w-6 text-gray-800 hamburger-icon"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <svg
        class="h-6 w-6 text-gray-800 close-icon hidden"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="mobile-menu md:hidden"
    role="menu"
    aria-label="Mobile navigation menu"
  >
    <div
      class="flex flex-col gap-3 px-6 pb-6 pt-2 bg-white border-t border-zinc-100 shadow-inner"
    >
      {
        menuItems.map((item, index) => (
          <div role="none">
            {item.hasDropdown ? (
              <div class="mobile-dropdown">
                <button
                  type="button"
                  class="mobile-dropdown-btn w-full flex justify-between items-center text-left font-semibold py-2 text-gray-800 hover:text-orange-400"
                  aria-expanded="false"
                  aria-controls={`mobile-submenu-${index}`}
                >
                  {item.name}
                  <svg
                    class="w-4 h-4 transition-transform dropdown-arrow"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      d="M19 9l-7 7-7-7"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </button>
                <div
                  id={`mobile-submenu-${index}`}
                  class="mobile-submenu pl-4"
                  role="menu"
                  aria-label={`${item.name} submenu`}
                >
                  {item.subItems?.map((subItem) => (
                    <a
                      href={subItem.link}
                      class="block text-sm text-gray-600 py-1 hover:text-orange-400"
                      role="menuitem"
                    >
                      {subItem.name}
                    </a>
                  ))}
                </div>
              </div>
            ) : (
              <a
                href={item.link}
                class="block text-base text-gray-800 hover:text-orange-400 py-2 font-semibold"
                role="menuitem"
              >
                {item.name}
              </a>
            )}
          </div>
        ))
      }
      <div class="mt-4">
        <a
          href="/contact"
          class="inline-block bg-gradient-to-r from-[#f48200] to-[#faa732] text-white font-semibold py-3 px-6 rounded-full shadow-md hover:from-[#007BFF] hover:to-[#00BCD4] hover:shadow-lg transition ease-in-out transform hover:scale-105 active:scale-95 text-sm lg:text-base"
          aria-label="Contact us for a free consultation"
        >
          Talk to us!
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  /* Scroll shadow - usando CSS puro */
  .navbar-header.scrolled {
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    border-bottom: 1px solid rgb(244 244 245);
  }

  /* Mobile menu - cerrado por defecto */
  .mobile-menu {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition:
      max-height 0.3s ease-out,
      opacity 0.2s ease-out;
  }

  .mobile-menu.open {
    max-height: 100vh;
    opacity: 1;
  }

  /* Mobile submenu - cerrado por defecto */
  .mobile-submenu {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition:
      max-height 0.25s ease-out,
      opacity 0.2s ease-out;
  }

  .mobile-dropdown.open .mobile-submenu {
    max-height: 500px;
    opacity: 1;
  }

  .mobile-dropdown.open .dropdown-arrow {
    transform: rotate(180deg);
  }

  /* Icon toggle */
  .mobile-menu-btn .close-icon {
    display: none;
  }

  .mobile-menu-btn.open .hamburger-icon {
    display: none;
  }

  .mobile-menu-btn.open .close-icon {
    display: block;
  }
</style>

<script>
  function initNavbar(): void {
    const menuBtn =
      document.querySelector<HTMLButtonElement>(".mobile-menu-btn");
    const mobileMenu = document.querySelector<HTMLDivElement>("#mobile-menu");
    const header = document.querySelector<HTMLElement>(".navbar-header");
    const dropdownBtns = document.querySelectorAll<HTMLButtonElement>(
      ".mobile-dropdown-btn"
    );

    // Toggle mobile menu
    menuBtn?.addEventListener("click", () => {
      const isOpen = mobileMenu?.classList.toggle("open");
      menuBtn.classList.toggle("open", isOpen);
      menuBtn.setAttribute("aria-expanded", String(isOpen));
      menuBtn.setAttribute(
        "aria-label",
        isOpen ? "Close mobile menu" : "Open mobile menu"
      );
    });

    // Toggle mobile submenus
    dropdownBtns.forEach((btn) => {
      btn.addEventListener("click", () => {
        const dropdown = btn.closest<HTMLDivElement>(".mobile-dropdown");
        const isOpen = dropdown?.classList.toggle("open");
        btn.setAttribute("aria-expanded", String(isOpen));
      });
    });

    // Scroll shadow
    const handleScroll = (): void => {
      header?.classList.toggle("scrolled", window.scrollY > 10);
    };

    window.addEventListener("scroll", handleScroll, { passive: true });
    handleScroll(); // Check initial state
  }

  // Run on initial load
  initNavbar();

  // Re-run on Astro page transitions
  document.addEventListener("astro:after-swap", initNavbar);
</script>
