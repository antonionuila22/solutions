---
interface Props {
  profileUrl?: string;
}

const { profileUrl = "https://www.designrush.com/agency/profile/codebrand" } = Astro.props;
---

<section class="py-12 sm:py-16 bg-gradient-to-br from-slate-50 to-white">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <p class="text-xs uppercase tracking-widest text-slate-400 font-medium">
        Recognized Excellence
      </p>
      <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 mt-4">
        We're on <span class="text-blue-600">DesignRush</span>
      </h3>
      <p class="text-slate-600 mt-2 max-w-xl mx-auto">
        Proud to be recognized among the Best Interactive Design Companies.
        Your feedback helps us grow â€” leave us a review!
      </p>
    </div>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-10 lg:gap-16">
      <!-- Badge: Best Interactive Design Companies -->
      <a
        href={profileUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="group transition-transform duration-300 hover:scale-105"
        title="View Codebrand on DesignRush - Best Interactive Design Companies 2025"
      >
        <img
          src="/photos/designrush.png"
          alt="DesignRush Best Interactive Design Companies 2025"
          class="h-32 sm:h-36 lg:h-40 w-auto drop-shadow-lg group-hover:drop-shadow-xl transition-all duration-300"
          loading="lazy"
        />
      </a>

      <!-- Banner: Read Our Reviews -->
      <a
        href={profileUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="group transition-transform duration-300 hover:scale-105"
        title="Read our reviews on DesignRush"
      >
        <img
          src="/photos/Read_our_review_v2.png"
          alt="Read our reviews at DesignRush.com"
          class="h-16 sm:h-18 lg:h-20 w-auto drop-shadow-md group-hover:drop-shadow-lg transition-all duration-300"
          loading="lazy"
        />
      </a>
    </div>

    <!-- Call to action for leaving a review -->
    <div class="text-center mt-8">
      <p class="text-slate-500 text-sm mb-3">
        Had a great experience working with us?
      </p>
      <a
        href={profileUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-300"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        Leave Us a Review
      </a>
    </div>
  </div>
</section>
