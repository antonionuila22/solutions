---
/**
 * Service Page Template V2
 * Clean, focused template with better UX
 *
 * Structure:
 * 1. Hero (compact)
 * 2. Breadcrumbs
 * 3. Services (4-5 max)
 * 4. Process (4 steps)
 * 5. Why Us (3 benefits)
 * 6. CTA
 * 7. FAQ
 */

import Layout from "../layouts/Layout.astro";
import Breadcrumbs from "./Breadcrumbs.astro";
import Faq from "./Faq.astro";

interface Service {
    title: string;
    description: string;
    icon?: string;
}

interface ProcessStep {
    title: string;
    description: string;
}

interface Benefit {
    title: string;
    description: string;
}

interface Props {
    // SEO
    title: string;
    description: string;
    keywords: string;

    // Hero
    serviceName: string;
    tagline: string;
    heroDescription: string;
    price?: string;

    // Content
    services: Service[];
    process: ProcessStep[];
    benefits: Benefit[];

    // CTA
    ctaTitle?: string;
    ctaDescription?: string;
}

const {
    title,
    description,
    keywords,
    serviceName,
    tagline,
    heroDescription,
    price,
    services,
    process,
    benefits,
    ctaTitle = "Ready to get started?",
    ctaDescription = "Let's discuss your project and find the best solution for your needs."
} = Astro.props;
---

<Layout
    title={title}
    description={description}
    keywords={keywords}
    image="/photos/bannercodebrand.webp"
>
    <!-- Hero Section - Compact -->
    <section class="bg-slate-950 pt-28 pb-12">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <span class="inline-block px-3 py-1 bg-cyan-500/10 border border-cyan-500/20 text-cyan-400 text-sm font-medium rounded-full mb-4">
                {serviceName}
            </span>

            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
                {tagline}
            </h1>

            <p class="text-lg text-slate-300 max-w-2xl mx-auto mb-6">
                {heroDescription}
            </p>

            <div class="flex flex-wrap items-center justify-center gap-4">
                <a
                    href="/contact"
                    class="inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-semibold px-6 py-3 rounded-full transition-colors"
                >
                    Get a Quote
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
                {price && (
                    <span class="text-slate-400">
                        Starting from <span class="text-white font-semibold">{price}</span>
                    </span>
                )}
            </div>
        </div>
    </section>

    <!-- Breadcrumbs -->
    <Breadcrumbs
        items={[
            { name: "Home", href: "/" },
            { name: "Services", href: "/services" },
            { name: serviceName, href: "" }
        ]}
        variant="transparent"
        class="bg-slate-50 border-y border-slate-100"
    />

    <!-- What We Offer -->
    <section class="py-16 px-4 bg-white">
        <div class="max-w-5xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-bold text-slate-900 text-center mb-10">
                What We Offer
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {services.map((service) => (
                    <div class="p-6 rounded-xl border border-slate-200 hover:border-cyan-300 transition-colors">
                        <h3 class="text-lg font-semibold text-slate-900 mb-2">
                            {service.title}
                        </h3>
                        <p class="text-slate-600 text-sm leading-relaxed">
                            {service.description}
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Our Process -->
    <section class="py-16 px-4 bg-slate-50">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-bold text-slate-900 text-center mb-10">
                How We Work
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {process.map((step, index) => (
                    <div class="relative">
                        <div class="text-4xl font-black text-cyan-100 mb-2">
                            0{index + 1}
                        </div>
                        <h3 class="text-lg font-semibold text-slate-900 mb-2">
                            {step.title}
                        </h3>
                        <p class="text-slate-600 text-sm">
                            {step.description}
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Why Codebrand -->
    <section class="py-16 px-4 bg-white">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-bold text-slate-900 text-center mb-10">
                Why Work With Us
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {benefits.map((benefit) => (
                    <div class="text-center">
                        <h3 class="text-lg font-semibold text-slate-900 mb-2">
                            {benefit.title}
                        </h3>
                        <p class="text-slate-600 text-sm">
                            {benefit.description}
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="py-16 px-4 bg-cyan-900">
        <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
                {ctaTitle}
            </h2>
            <p class="text-cyan-100 mb-6">
                {ctaDescription}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/contact"
                    class="inline-flex items-center justify-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-semibold px-6 py-3 rounded-full transition-colors"
                >
                    Contact Us
                </a>
                <a
                    href="tel:+16893169102"
                    class="inline-flex items-center justify-center gap-2 bg-white/10 hover:bg-white/20 text-white font-semibold px-6 py-3 rounded-full transition-colors border border-white/20"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    Call Us
                </a>
            </div>
        </div>
    </section>

    <!-- FAQ -->
    <Faq />
</Layout>
