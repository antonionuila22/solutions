---
interface Props {
    icon: string;
    title: string;
    description: string;
    learnMoreUrl?: string;
}

const { icon, title, description, learnMoreUrl } = Astro.props;
---

<div
    class="container-card-service w-full max-w-screen-xl p-4 sm:p-6 rounded-xl border border-gray-300
          cursor-pointer transition-all duration-300
         bg-white hover:bg-gradient-to-r from-[#f48200] to-[#faa732] hover:shadow-sm hover:scale-105 active:scale-[1.02] flex flex-col items-start gap-3 sm:gap-4 group"
>
    <!-- Ícono -->
    <div
        class="flex items-center justify-center w-15 h-15 rounded-full bg-gray-100 mb-4"
    >
        <img loading="lazy" src={icon} alt={title} class="w-10 h-10" />
    </div>

    <!-- Título -->
    <h3 class="text-base sm:text-lg font-bold text-black group-hover:text-white">{title}</h3>

    <!-- Descripción -->
    <p class="text-black text-xs sm:text-sm mt-1 sm:mt-2 group-hover:text-white leading-relaxed">{description}</p>

    <!-- Botón dinámico - visible siempre en mobile, hover en desktop -->
    <div
        class="learn-more-btn opacity-100 sm:opacity-0 transition-opacity duration-300 sm:group-hover:opacity-100 mt-auto pt-2"
    >
        <a
            href={learnMoreUrl}
            class="inline-flex items-center gap-1 text-sm font-semibold text-black group-hover:text-white hover:underline py-2"
        >
            Learn More
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </a>
    </div>
</div>
