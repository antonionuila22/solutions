---
interface Props {
    icon: string;
    title: string;
    description: string;
    learnMoreUrl?: string;
}

const { icon, title, description, learnMoreUrl } = Astro.props;
---

<article
    class="service-card group relative overflow-hidden rounded-2xl bg-white border border-slate-200/80 p-5 sm:p-6 lg:p-7 transition-all duration-500 hover:border-transparent hover:shadow-2xl hover:shadow-orange-500/10"
>
    <!-- Gradient overlay on hover -->
    <div class="absolute inset-0 bg-gradient-to-br from-orange-500 via-orange-500 to-amber-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

    <!-- Decorative corner accent -->
    <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-bl from-orange-100 to-transparent opacity-50 group-hover:opacity-0 transition-opacity duration-500 rounded-bl-full"></div>

    <!-- Content container -->
    <div class="relative z-10">
        <!-- Icon with modern styling -->
        <div class="relative mb-5">
            <div class="icon-wrapper flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 rounded-2xl bg-gradient-to-br from-slate-50 to-slate-100 border border-slate-200/50 shadow-sm group-hover:bg-white/20 group-hover:border-white/30 group-hover:shadow-lg group-hover:shadow-white/10 transition-all duration-500">
                <img
                    loading="lazy"
                    src={icon}
                    alt=""
                    class="w-8 h-8 sm:w-9 sm:h-9 transition-transform duration-500 group-hover:scale-110"
                />
            </div>
            <!-- Subtle glow effect -->
            <div class="absolute -inset-1 bg-orange-500/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-60 transition-opacity duration-500"></div>
        </div>

        <!-- Title with underline accent -->
        <div class="mb-3">
            <h3 class="text-lg sm:text-xl font-bold text-slate-900 group-hover:text-white transition-colors duration-500 leading-tight">
                {title}
            </h3>
            <div class="h-0.5 w-8 bg-gradient-to-r from-orange-500 to-amber-400 mt-2 rounded-full group-hover:w-12 group-hover:bg-white transition-all duration-500"></div>
        </div>

        <!-- Description -->
        <p class="text-slate-600 text-sm leading-relaxed mb-5 group-hover:text-white/90 transition-colors duration-500">
            {description}
        </p>

        <!-- CTA Link -->
        <a
            href={learnMoreUrl}
            class="inline-flex items-center gap-2 text-sm font-semibold text-orange-600 group-hover:text-white transition-all duration-500 py-2 -my-2"
        >
            <span>Explore Service</span>
            <span class="flex items-center justify-center w-7 h-7 sm:w-6 sm:h-6 rounded-full bg-orange-100 group-hover:bg-white/20 transition-all duration-500">
                <svg class="w-4 h-4 sm:w-3.5 sm:h-3.5 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7" />
                </svg>
            </span>
        </a>
    </div>

    <!-- Bottom border accent (visible on hover) -->
    <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-white/0 via-white/50 to-white/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
</article>

<style>
    .service-card {
        /* Ensure smooth performance */
        will-change: transform, box-shadow;
        transform: translateZ(0);
    }

    .service-card:hover {
        transform: translateY(-4px);
    }

    /* Mobile: subtle hover effect */
    @media (max-width: 640px) {
        .service-card:hover {
            transform: translateY(-2px);
        }
    }

    /* Respect reduced motion */
    @media (prefers-reduced-motion: reduce) {
        .service-card,
        .service-card * {
            transition-duration: 0.01ms !important;
        }

        .service-card:hover {
            transform: none;
        }
    }
</style>
