---
/**
 * Featured Services Section
 * Highlights main services with large, impactful cards
 */

interface FeaturedService {
    icon: string;
    title: string;
    description: string;
    features: string[];
    href: string;
    gradient: string;
    popular?: boolean;
}

const featuredServices: FeaturedService[] = [
    {
        icon: "/icons/sitio-web.webp",
        title: "Web Development",
        description: "Custom websites and web applications built with React, Next.js, and Astro. Fast, SEO-optimized, and scalable.",
        features: ["Custom Design", "SEO Optimized", "Mobile First", "Fast Loading"],
        href: "/services/web-development",
        gradient: "from-cyan-600 to-cyan-800",
        popular: true
    },
    {
        icon: "/icons/interfaz-de-usuario.webp",
        title: "UX/UI Design",
        description: "User-centered design that converts. Research-driven interfaces that delight users and drive business results.",
        features: ["User Research", "Wireframing", "Prototyping", "Design Systems"],
        href: "/services/ux-ui",
        gradient: "from-purple-600 to-purple-800"
    },
    {
        icon: "/icons/seo.webp",
        title: "SEO Optimization",
        description: "Dominate search rankings with technical SEO, content strategy, and link building that delivers measurable results.",
        features: ["Technical Audit", "Keyword Research", "Content Strategy", "Analytics"],
        href: "/services/seo",
        gradient: "from-green-600 to-green-800"
    },
    {
        icon: "/icons/diseno-grafico.webp",
        title: "Branding",
        description: "Build a memorable brand identity. Logo design, brand guidelines, and visual systems that stand out.",
        features: ["Logo Design", "Brand Guidelines", "Visual Identity", "Brand Strategy"],
        href: "/services/branding",
        gradient: "from-orange-500 to-orange-700"
    }
];
---

<section class="py-20 px-4 md:px-6 bg-slate-950">
    <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <span class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-500/10 border border-cyan-500/20 rounded-full mb-6">
                <span class="w-2 h-2 bg-cyan-400 rounded-full animate-pulse"></span>
                <span class="text-cyan-400 text-sm font-medium">Most Requested</span>
            </span>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
                Featured <span class="text-orange-400">Services</span>
            </h2>
            <p class="text-slate-400 text-lg max-w-2xl mx-auto">
                Our most popular services that help businesses grow and succeed online
            </p>
        </div>

        <!-- Featured Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
            {featuredServices.map((service, index) => (
                <a
                    href={service.href}
                    class="group relative bg-slate-900 rounded-3xl overflow-hidden border border-slate-800 hover:border-slate-700 transition-all duration-500 hover:-translate-y-2"
                >
                    <!-- Gradient Overlay on Hover -->
                    <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-0 group-hover:opacity-10 transition-opacity duration-500`}></div>

                    <!-- Popular Badge -->
                    {service.popular && (
                        <div class="absolute top-4 right-4 z-10">
                            <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-orange-500 text-white text-xs font-bold rounded-full">
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                </svg>
                                Popular
                            </span>
                        </div>
                    )}

                    <div class="relative p-8 lg:p-10">
                        <!-- Icon -->
                        <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${service.gradient} flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
                            <img
                                src={service.icon}
                                alt=""
                                class="w-8 h-8 brightness-0 invert"
                                aria-hidden="true"
                            />
                        </div>

                        <!-- Content -->
                        <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-orange-400 transition-colors">
                            {service.title}
                        </h3>

                        <p class="text-slate-400 mb-6 leading-relaxed">
                            {service.description}
                        </p>

                        <!-- Features -->
                        <div class="flex flex-wrap gap-2 mb-8">
                            {service.features.map((feature) => (
                                <span class="px-3 py-1 bg-slate-800 text-slate-300 text-sm rounded-full border border-slate-700">
                                    {feature}
                                </span>
                            ))}
                        </div>

                        <!-- CTA -->
                        <div class="flex items-center text-cyan-400 font-semibold group-hover:text-orange-400 transition-colors">
                            <span>Explore Service</span>
                            <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                            </svg>
                        </div>
                    </div>
                </a>
            ))}
        </div>

        <!-- View All Services CTA -->
        <div class="text-center mt-12">
            <a
                href="#all-services"
                class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors"
            >
                <span>View all services</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
            </a>
        </div>
    </div>
</section>
