---
/**
 * Service Page Template V3
 * Comprehensive, detailed service pages with excellent UX/UI
 *
 * Structure:
 * 1. Hero - Impactful with key value proposition
 * 2. Breadcrumbs
 * 3. Service Overview - What is this service and why it matters
 * 4. What's Included - Detailed breakdown of deliverables
 * 5. Our Approach - How we think about this service
 * 6. Process - Step by step with details
 * 7. Why Codebrand - Specific advantages for this service
 * 8. Pricing/Packages (optional)
 * 9. FAQ - Service-specific questions
 * 10. CTA
 */

import Layout from "../layouts/Layout.astro";
import Breadcrumbs from "./Breadcrumbs.astro";

interface ServiceItem {
    title: string;
    description: string;
    icon?: string;
}

interface ProcessStep {
    title: string;
    description: string;
    details?: string[];
}

interface Benefit {
    title: string;
    description: string;
    icon?: string;
}

interface Package {
    name: string;
    price: string;
    description: string;
    features: string[];
    popular?: boolean;
}

interface FaqItem {
    question: string;
    answer: string;
}

interface Props {
    // SEO
    title: string;
    description: string;
    keywords: string;

    // Hero
    serviceName: string;
    tagline: string;
    heroDescription: string;
    heroFeatures?: string[];
    price?: string;
    priceNote?: string;

    // Service Overview
    overviewTitle?: string;
    overviewDescription: string;
    overviewPoints?: string[];

    // What's Included
    services: ServiceItem[];

    // Our Approach
    approachTitle?: string;
    approachDescription?: string;
    approachPoints?: { title: string; description: string }[];

    // Process
    process: ProcessStep[];

    // Why Codebrand
    benefits: Benefit[];

    // Packages (optional)
    packages?: Package[];

    // FAQ
    faqs?: FaqItem[];

    // CTA
    ctaTitle?: string;
    ctaDescription?: string;
}

const {
    title,
    description,
    keywords,
    serviceName,
    tagline,
    heroDescription,
    heroFeatures = [],
    price,
    priceNote,
    overviewTitle,
    overviewDescription,
    overviewPoints = [],
    services,
    approachTitle = "Nuestro Enfoque",
    approachDescription,
    approachPoints = [],
    process,
    benefits,
    packages = [],
    faqs = [],
    ctaTitle = "Ready to get started?",
    ctaDescription = "Let's discuss your project and find the best solution for your needs."
} = Astro.props;
---

<Layout
    title={title}
    description={description}
    keywords={keywords}
    image="/photos/bannercodebrand.webp"
>
    <!-- Hero Section - Impactful -->
    <section class="relative bg-gradient-to-br from-slate-950 via-slate-900 to-cyan-950 pt-28 pb-16 overflow-hidden">
        <!-- Background Effects -->
        <div class="absolute inset-0">
            <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-cyan-500/10 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-orange-500/10 rounded-full blur-3xl"></div>
            <div class="absolute inset-0 bg-[url('/patterns/grid.svg')] opacity-5"></div>
        </div>

        <div class="relative max-w-6xl mx-auto px-4">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <!-- Left Content -->
                <div>
                    <span class="inline-block px-4 py-1.5 bg-cyan-500/10 border border-cyan-500/20 text-cyan-400 text-sm font-medium rounded-full mb-6">
                        {serviceName}
                    </span>

                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white leading-tight mb-6">
                        {tagline}
                    </h1>

                    <p class="text-lg md:text-xl text-slate-300 leading-relaxed mb-8">
                        {heroDescription}
                    </p>

                    {heroFeatures.length > 0 && (
                        <ul class="space-y-3 mb-8">
                            {heroFeatures.map((feature) => (
                                <li class="flex items-center gap-3 text-slate-300">
                                    <svg class="w-5 h-5 text-cyan-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                    </svg>
                                    <span>{feature}</span>
                                </li>
                            ))}
                        </ul>
                    )}

                    <div class="flex flex-wrap items-center gap-4">
                        <a
                            href="/contact"
                            class="inline-flex items-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-bold px-8 py-4 rounded-full transition-all duration-300 shadow-lg shadow-orange-500/25 hover:shadow-orange-500/40 hover:-translate-y-0.5"
                        >
                            Get a Quote
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                            </svg>
                        </a>
                        <a
                            href="#overview"
                            class="inline-flex items-center gap-2 text-slate-300 hover:text-white font-semibold transition-colors"
                        >
                            Learn More
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Right - Price Card -->
                <div class="lg:justify-self-end">
                    <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-3xl p-8 max-w-sm">
                        <div class="text-center mb-6">
                            <p class="text-slate-400 text-sm mb-2">Starting from</p>
                            <div class="text-5xl font-black text-white mb-2">{price}</div>
                            {priceNote && <p class="text-slate-400 text-sm">{priceNote}</p>}
                        </div>

                        <div class="space-y-4 mb-6">
                            <div class="flex items-center gap-3 text-slate-300">
                                <div class="w-10 h-10 rounded-full bg-cyan-500/20 flex items-center justify-center">
                                    <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                </div>
                                <span>Free consultation</span>
                            </div>
                            <div class="flex items-center gap-3 text-slate-300">
                                <div class="w-10 h-10 rounded-full bg-cyan-500/20 flex items-center justify-center">
                                    <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                </div>
                                <span>Quote within 24 hours</span>
                            </div>
                            <div class="flex items-center gap-3 text-slate-300">
                                <div class="w-10 h-10 rounded-full bg-cyan-500/20 flex items-center justify-center">
                                    <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                    </svg>
                                </div>
                                <span>Dedicated team</span>
                            </div>
                        </div>

                        <a
                            href="tel:+16893169102"
                            class="flex items-center justify-center gap-2 w-full py-3 bg-white/10 hover:bg-white/20 text-white font-semibold rounded-xl transition-colors border border-white/10"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            Call Us Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Breadcrumbs -->
    <Breadcrumbs
        items={[
            { name: "Home", href: "/" },
            { name: "Services", href: "/services" },
            { name: serviceName, href: "" }
        ]}
        variant="transparent"
        class="bg-slate-50 border-y border-slate-100"
    />

    <!-- Service Overview -->
    <section id="overview" class="py-16 md:py-24 px-4 bg-white">
        <div class="max-w-5xl mx-auto">
            <div class="max-w-3xl mx-auto text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">
                    {overviewTitle || `What is ${serviceName}?`}
                </h2>
                <p class="text-lg text-slate-600 leading-relaxed">
                    {overviewDescription}
                </p>
            </div>

            {overviewPoints.length > 0 && (
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
                    {overviewPoints.map((point, index) => (
                        <div class="flex gap-4 p-6 bg-slate-50 rounded-2xl">
                            <div class="flex-shrink-0 w-10 h-10 bg-cyan-100 text-cyan-700 rounded-xl flex items-center justify-center font-bold">
                                {index + 1}
                            </div>
                            <p class="text-slate-700">{point}</p>
                        </div>
                    ))}
                </div>
            )}
        </div>
    </section>

    <!-- What's Included -->
    <section class="py-16 md:py-24 px-4 bg-slate-50">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-12">
                <span class="inline-block px-3 py-1 bg-cyan-100 text-cyan-700 text-sm font-medium rounded-full mb-4">
                    Our Services
                </span>
                <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
                    What's Included
                </h2>
                <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                    Everything you get when you work with us on {serviceName.toLowerCase()}
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
                {services.map((service, index) => (
                    <div class="group bg-white p-8 rounded-2xl border border-slate-200 hover:border-cyan-300 hover:shadow-lg transition-all duration-300">
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-cyan-500 to-cyan-700 rounded-xl flex items-center justify-center text-white font-bold text-lg">
                                {String(index + 1).padStart(2, '0')}
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-cyan-700 transition-colors">
                                    {service.title}
                                </h3>
                                <p class="text-slate-600 leading-relaxed">
                                    {service.description}
                                </p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Our Approach -->
    {approachPoints.length > 0 && (
        <section class="py-16 md:py-24 px-4 bg-white">
            <div class="max-w-6xl mx-auto">
                <div class="grid lg:grid-cols-2 gap-12 items-center">
                    <div>
                        <span class="inline-block px-3 py-1 bg-orange-100 text-orange-700 text-sm font-medium rounded-full mb-4">
                            Our Approach
                        </span>
                        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">
                            {approachTitle}
                        </h2>
                        {approachDescription && (
                            <p class="text-lg text-slate-600 leading-relaxed mb-8">
                                {approachDescription}
                            </p>
                        )}
                    </div>

                    <div class="space-y-6">
                        {approachPoints.map((point, index) => (
                            <div class="flex gap-4 p-6 bg-slate-50 rounded-2xl border-l-4 border-cyan-500">
                                <div class="flex-shrink-0 w-8 h-8 bg-cyan-500 text-white rounded-full flex items-center justify-center font-bold text-sm">
                                    {index + 1}
                                </div>
                                <div>
                                    <h4 class="font-bold text-slate-900 mb-1">{point.title}</h4>
                                    <p class="text-slate-600 text-sm">{point.description}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </section>
    )}

    <!-- Process -->
    <section class="py-16 md:py-24 px-4 bg-gradient-to-br from-slate-900 to-cyan-950 text-white">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-16">
                <span class="inline-block px-3 py-1 bg-white/10 text-cyan-300 text-sm font-medium rounded-full mb-4">
                    Our Process
                </span>
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    How We Work
                </h2>
                <p class="text-lg text-slate-300 max-w-2xl mx-auto">
                    A proven process that delivers results consistently
                </p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                {process.map((step, index) => (
                    <div class="relative">
                        {/* Connector Line */}
                        {index < process.length - 1 && (
                            <div class="hidden lg:block absolute top-8 left-full w-full h-0.5 bg-gradient-to-r from-cyan-500 to-transparent z-0"></div>
                        )}

                        <div class="relative z-10">
                            <div class="w-16 h-16 bg-gradient-to-br from-cyan-500 to-cyan-700 rounded-2xl flex items-center justify-center text-2xl font-black mb-6 shadow-lg shadow-cyan-500/30">
                                {String(index + 1).padStart(2, '0')}
                            </div>
                            <h3 class="text-xl font-bold mb-3">{step.title}</h3>
                            <p class="text-slate-300 leading-relaxed mb-4">{step.description}</p>

                            {step.details && step.details.length > 0 && (
                                <ul class="space-y-2">
                                    {step.details.map((detail) => (
                                        <li class="flex items-start gap-2 text-sm text-slate-400">
                                            <svg class="w-4 h-4 text-cyan-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                            </svg>
                                            <span>{detail}</span>
                                        </li>
                                    ))}
                                </ul>
                            )}
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Why Codebrand -->
    <section class="py-16 md:py-24 px-4 bg-white">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-12">
                <span class="inline-block px-3 py-1 bg-orange-100 text-orange-700 text-sm font-medium rounded-full mb-4">
                    Why Us
                </span>
                <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
                    Why Choose Codebrand
                </h2>
                <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                    What makes us different for {serviceName.toLowerCase()}
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {benefits.map((benefit) => (
                    <div class="text-center p-8 bg-slate-50 rounded-2xl hover:bg-slate-100 transition-colors">
                        <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg shadow-orange-500/20">
                            <span class="text-2xl">{benefit.icon || 'âœ“'}</span>
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-3">{benefit.title}</h3>
                        <p class="text-slate-600 leading-relaxed">{benefit.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Packages (if provided) -->
    {packages.length > 0 && (
        <section class="py-16 md:py-24 px-4 bg-slate-50">
            <div class="max-w-5xl mx-auto">
                <div class="text-center mb-12">
                    <span class="inline-block px-3 py-1 bg-cyan-100 text-cyan-700 text-sm font-medium rounded-full mb-4">
                        Pricing
                    </span>
                    <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
                        {serviceName} Packages
                    </h2>
                    <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                        Transparent pricing with no hidden fees
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-6">
                    {packages.map((pkg) => (
                        <div class:list={[
                            "rounded-2xl p-8 transition-all duration-300",
                            pkg.popular
                                ? "bg-cyan-800 text-white shadow-xl scale-105 relative"
                                : "bg-white border border-slate-200 hover:border-cyan-300"
                        ]}>
                            {pkg.popular && (
                                <span class="absolute -top-3 left-1/2 -translate-x-1/2 bg-orange-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                                    Most Popular
                                </span>
                            )}

                            <h3 class:list={[
                                "text-xl font-bold mb-2",
                                pkg.popular ? "text-white" : "text-slate-900"
                            ]}>
                                {pkg.name}
                            </h3>

                            <p class:list={[
                                "text-sm mb-4",
                                pkg.popular ? "text-cyan-100" : "text-slate-600"
                            ]}>
                                {pkg.description}
                            </p>

                            <div class:list={[
                                "text-4xl font-black mb-6",
                                pkg.popular ? "text-white" : "text-cyan-800"
                            ]}>
                                {pkg.price}
                            </div>

                            <ul class="space-y-3 mb-8">
                                {pkg.features.map((feature) => (
                                    <li class="flex items-start gap-2 text-sm">
                                        <svg class:list={[
                                            "w-5 h-5 flex-shrink-0",
                                            pkg.popular ? "text-green-400" : "text-green-500"
                                        ]} fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                        </svg>
                                        <span class={pkg.popular ? "text-cyan-100" : "text-slate-700"}>
                                            {feature}
                                        </span>
                                    </li>
                                ))}
                            </ul>

                            <a
                                href={`/contact?service=${serviceName.toLowerCase().replace(/\s+/g, '-')}&package=${pkg.name.toLowerCase().replace(/\s+/g, '-')}`}
                                class:list={[
                                    "block w-full py-3 text-center font-semibold rounded-xl transition-colors",
                                    pkg.popular
                                        ? "bg-white text-cyan-800 hover:bg-orange-500 hover:text-white"
                                        : "bg-slate-900 text-white hover:bg-cyan-700"
                                ]}
                            >
                                Get Started
                            </a>
                        </div>
                    ))}
                </div>
            </div>
        </section>
    )}

    <!-- FAQ -->
    {faqs.length > 0 && (
        <section class="py-16 md:py-24 px-4 bg-white">
            <div class="max-w-3xl mx-auto">
                <div class="text-center mb-12">
                    <span class="inline-block px-3 py-1 bg-slate-100 text-slate-700 text-sm font-medium rounded-full mb-4">
                        FAQ
                    </span>
                    <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
                        Common Questions
                    </h2>
                    <p class="text-lg text-slate-600">
                        Everything you need to know about our {serviceName.toLowerCase()} services
                    </p>
                </div>

                <div class="space-y-4">
                    {faqs.map((faq, index) => (
                        <details class="group bg-slate-50 rounded-2xl overflow-hidden">
                            <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
                                <h3 class="font-semibold text-slate-900 pr-4">{faq.question}</h3>
                                <svg class="w-5 h-5 text-slate-500 group-open:rotate-180 transition-transform flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                </svg>
                            </summary>
                            <div class="px-6 pb-6 text-slate-600 leading-relaxed">
                                {faq.answer}
                            </div>
                        </details>
                    ))}
                </div>
            </div>
        </section>
    )}

    <!-- CTA -->
    <section class="py-16 md:py-24 px-4 bg-gradient-to-br from-cyan-900 to-slate-900">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
                {ctaTitle}
            </h2>
            <p class="text-lg text-cyan-100 mb-8 max-w-2xl mx-auto">
                {ctaDescription}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/contact"
                    class="inline-flex items-center justify-center gap-2 bg-orange-500 hover:bg-orange-600 text-white font-bold px-8 py-4 rounded-full transition-all duration-300 shadow-lg"
                >
                    Start Your Project
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
                <a
                    href="tel:+16893169102"
                    class="inline-flex items-center justify-center gap-2 bg-white/10 hover:bg-white/20 text-white font-semibold px-8 py-4 rounded-full transition-all border border-white/20"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    Call Us
                </a>
            </div>
        </div>
    </section>
</Layout>
