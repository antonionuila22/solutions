---
type Plan = {
  name: string;
  priceMonthly: number;
  desc: string;
  highlight?: boolean;
  features: string[];
  ctaHref: string;
  ctaText?: string;
  icon: string;
  color: string;
};

const plans: Plan[] = [
  {
    name: "Essential",
    priceMonthly: 1800,
    desc: "Launch your digital presence",
    icon: "rocket",
    color: "cyan",
    features: [
      "20 productive hours/week",
      "Professional website (3-5 pages)",
      "UX/UI design in Figma",
      "React/Astro development",
      "Mobile-first responsive",
      "Contact forms",
      "1 revision round/month",
      "Email support (48h)",
    ],
    ctaHref: "/contact",
    ctaText: "Get Started",
  },
  {
    name: "Growth",
    priceMonthly: 4200,
    desc: "Scale with custom solutions",
    highlight: true,
    icon: "chart",
    color: "orange",
    features: [
      "40 productive hours/week",
      "Custom website (5-10 pages)",
      "Advanced UX/UI + prototype",
      "Next.js/React + Headless CMS",
      "API integrations",
      "Backend + database setup",
      "Performance optimization",
      "Priority support (24h)",
    ],
    ctaHref: "/contact",
    ctaText: "Most Popular",
  },
  {
    name: "Enterprise",
    priceMonthly: 7500,
    desc: "Full web apps & e-commerce",
    icon: "building",
    color: "violet",
    features: [
      "40 productive hours/week",
      "Full web app (10-15+ pages)",
      "Complete design system",
      "Full-stack Next.js + Supabase",
      "E-commerce & payments",
      "Custom admin dashboard",
      "Dedicated team",
      "Same-day support",
    ],
    ctaHref: "/contact",
    ctaText: "Contact Sales",
  },
];
---

<section id="pricing" class="py-20 sm:py-28 lg:py-36 bg-slate-950 relative overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-orange-500/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-r from-cyan-500/5 to-orange-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16 sm:mb-20">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-slate-800/80 border border-cyan-500/30 rounded-full mb-6 backdrop-blur-sm">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-cyan-500"></span>
        </span>
        <span class="text-sm font-medium text-cyan-400">Simple, Transparent Pricing</span>
      </div>

      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
        Invest in Your
        <span class="bg-gradient-to-r from-cyan-400 via-orange-400 to-orange-500 bg-clip-text text-transparent"> Digital Growth</span>
      </h2>

      <p class="text-lg sm:text-xl text-slate-300 max-w-2xl mx-auto">
        Monthly partnerships designed for businesses ready to build something great.
        No hidden fees. Cancel anytime.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-4 xl:gap-6 mb-16">
      {plans.map((plan, index) => (
        <div
          class={`relative group ${plan.highlight ? 'lg:-mt-4 lg:mb-4' : ''}`}
          style={`--delay: ${index * 0.1}s`}
        >
          {/* Popular Badge */}
          {plan.highlight && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-20">
              <div class="flex items-center gap-1.5 px-4 py-1.5 bg-gradient-to-r from-orange-500 to-orange-600 text-white text-xs font-bold rounded-full shadow-lg shadow-orange-500/30">
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                MOST POPULAR
              </div>
            </div>
          )}

          {/* Card */}
          <div class={`relative h-full rounded-2xl sm:rounded-3xl p-6 sm:p-8 transition-all duration-300
            ${plan.highlight
              ? 'bg-gradient-to-b from-slate-800 to-slate-900 border-2 border-orange-500/50 shadow-2xl shadow-orange-500/20'
              : 'bg-slate-900/80 border border-slate-700/50 hover:border-slate-600'
            }
            hover:transform hover:-translate-y-1`}
          >
            {/* Plan Icon & Name */}
            <div class="flex items-center gap-4 mb-6">
              <div class={`flex items-center justify-center w-12 h-12 rounded-xl
                ${plan.color === 'cyan' ? 'bg-cyan-500/20 text-cyan-400' : ''}
                ${plan.color === 'orange' ? 'bg-orange-500/20 text-orange-400' : ''}
                ${plan.color === 'violet' ? 'bg-violet-500/20 text-violet-400' : ''}
              `}>
                {plan.icon === 'rocket' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
                {plan.icon === 'chart' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                )}
                {plan.icon === 'building' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                )}
              </div>
              <div>
                <h3 class="text-xl font-bold text-white">{plan.name}</h3>
                <p class="text-sm text-slate-400">{plan.desc}</p>
              </div>
            </div>

            {/* Price */}
            <div class="mb-6 pb-6 border-b border-slate-700/50">
              <div class="flex items-baseline gap-1">
                <span class="text-4xl sm:text-5xl font-bold text-white">
                  ${(plan.priceMonthly / 1000).toFixed(plan.priceMonthly % 1000 === 0 ? 0 : 1)}k
                </span>
                <span class="text-slate-400 text-sm">/month</span>
              </div>
              <p class="text-xs text-slate-500 mt-2">
                6-month minimum partnership
              </p>
            </div>

            {/* Features */}
            <ul class="space-y-3 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-3">
                  <svg class={`w-5 h-5 flex-shrink-0 mt-0.5
                    ${plan.color === 'cyan' ? 'text-cyan-400' : ''}
                    ${plan.color === 'orange' ? 'text-orange-400' : ''}
                    ${plan.color === 'violet' ? 'text-violet-400' : ''}
                  `} fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-sm text-slate-300">{feature}</span>
                </li>
              ))}
            </ul>

            {/* CTA Button */}
            <a
              href={plan.ctaHref}
              class={`block w-full py-3.5 px-6 text-center font-semibold rounded-xl transition-all duration-200
                ${plan.highlight
                  ? 'bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-400 hover:to-orange-500 text-white shadow-lg shadow-orange-500/30 hover:shadow-orange-500/50 hover:-translate-y-0.5'
                  : 'bg-slate-800 hover:bg-slate-700 text-white border border-slate-600 hover:border-slate-500'
                }
              `}
            >
              {plan.ctaText}
              <svg class="inline-block w-4 h-4 ml-2 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    {/* Bottom Section - Guarantees */}
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-emerald-500/20 rounded-xl mb-4">
          <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <h4 class="text-white font-semibold mb-1">100% Satisfaction</h4>
        <p class="text-sm text-slate-400">We work until you're happy</p>
      </div>

      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-cyan-500/20 rounded-xl mb-4">
          <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h4 class="text-white font-semibold mb-1">Fast Delivery</h4>
        <p class="text-sm text-slate-400">On-time, every time</p>
      </div>

      <div class="text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 bg-orange-500/20 rounded-xl mb-4">
          <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
          </svg>
        </div>
        <h4 class="text-white font-semibold mb-1">Bilingual Support</h4>
        <p class="text-sm text-slate-400">English & Spanish</p>
      </div>
    </div>

    {/* CTA Section */}
    <div class="mt-16 sm:mt-20 text-center">
      <div class="inline-flex flex-col sm:flex-row items-center gap-4 p-6 sm:p-8 bg-slate-900/50 border border-slate-700/50 rounded-2xl backdrop-blur-sm">
        <div class="text-center sm:text-left">
          <h4 class="text-lg font-semibold text-white mb-1">Not sure which plan is right?</h4>
          <p class="text-sm text-slate-400">Book a free 30-minute consultation call</p>
        </div>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 px-6 py-3 bg-white hover:bg-slate-100 text-slate-900 font-semibold rounded-xl transition-all duration-200 hover:-translate-y-0.5"
        >
          Schedule a Call
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
