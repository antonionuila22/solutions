---
/**
 * Service Categories Section
 * Clean, organized display of all services by category
 */

interface Service {
    icon: string;
    title: string;
    description: string;
    href: string;
    price?: string;
}

interface Category {
    id: string;
    name: string;
    services: Service[];
}

const categories: Category[] = [
    {
        id: "development",
        name: "Development",
        services: [
            {
                icon: "/icons/sitio-web.webp",
                title: "Web Development",
                description: "Custom websites with React, Next.js, and Astro. Fast, SEO-optimized, and responsive.",
                href: "/services/web-development",
                price: "From $2,500"
            },
            {
                icon: "/icons/cpu-processor-hardware-chip-microchip-svgrepo-com.svg",
                title: "Web Applications",
                description: "SaaS platforms, dashboards, and custom business applications.",
                href: "/contact",
                price: "From $5,000"
            },
            {
                icon: "/icons/ecommerce-website-commerce-and-shopping-2-svgrepo-com.svg",
                title: "E-commerce",
                description: "Online stores with payments, inventory, and order management.",
                href: "/e-commerce",
                price: "From $5,000"
            }
        ]
    },
    {
        id: "design",
        name: "Design & Branding",
        services: [
            {
                icon: "/icons/interfaz-de-usuario.webp",
                title: "UX/UI Design",
                description: "User research, wireframes, prototypes, and design systems.",
                href: "/services/ux-ui",
                price: "From $1,500"
            },
            {
                icon: "/icons/diseno-grafico.webp",
                title: "Branding",
                description: "Logo design, brand guidelines, and visual identity systems.",
                href: "/services/branding",
                price: "From $800"
            }
        ]
    },
    {
        id: "marketing",
        name: "Marketing",
        services: [
            {
                icon: "/icons/seo.webp",
                title: "SEO",
                description: "Technical audits, keyword research, and content optimization.",
                href: "/services/seo",
                price: "From $500/mo"
            },
            {
                icon: "/icons/redes-sociales.webp",
                title: "Social Media",
                description: "Content creation, community management, and paid advertising.",
                href: "/services/social-media",
                price: "From $400/mo"
            }
        ]
    },
    {
        id: "creative",
        name: "Creative Production",
        services: [
            {
                icon: "/icons/edicion-de-video.webp",
                title: "Video Production",
                description: "Promotional videos, editing, and motion graphics.",
                href: "/services/video-production",
                price: "From $500"
            },
            {
                icon: "/icons/animacion.webp",
                title: "Animation",
                description: "2D/3D animations, explainer videos, and motion design.",
                href: "/services/animation",
                price: "From $800"
            },
            {
                icon: "/icons/modelo-3d.webp",
                title: "3D Rendering",
                description: "Product visualization and architectural renders.",
                href: "/services/3d-rendering",
                price: "From $300"
            }
        ]
    }
];
---

<section id="all-services" class="py-16 md:py-20 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-3">
                All Services
            </h2>
            <p class="text-slate-600 max-w-xl mx-auto">
                Browse our complete range of digital services
            </p>
        </div>

        <!-- Categories -->
        <div class="space-y-12">
            {categories.map((category) => (
                <div>
                    <!-- Category Header -->
                    <h3 class="text-lg font-bold text-slate-800 mb-4 pb-2 border-b border-slate-200">
                        {category.name}
                    </h3>

                    <!-- Services Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {category.services.map((service) => (
                            <a
                                href={service.href}
                                class="group flex gap-4 p-4 rounded-xl border border-slate-200 hover:border-cyan-300 hover:bg-slate-50 transition-all duration-200"
                            >
                                <!-- Icon -->
                                <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-slate-100 group-hover:bg-cyan-100 flex items-center justify-center transition-colors">
                                    <img
                                        src={service.icon}
                                        alt=""
                                        class="w-6 h-6"
                                        loading="lazy"
                                    />
                                </div>

                                <!-- Content -->
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-start justify-between gap-2 mb-1">
                                        <h4 class="font-semibold text-slate-900 group-hover:text-cyan-700 transition-colors">
                                            {service.title}
                                        </h4>
                                        <svg class="w-4 h-4 text-slate-400 group-hover:text-cyan-600 flex-shrink-0 mt-1 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </div>
                                    <p class="text-sm text-slate-600 mb-2 line-clamp-2">
                                        {service.description}
                                    </p>
                                    {service.price && (
                                        <span class="text-xs font-medium text-cyan-700 bg-cyan-50 px-2 py-0.5 rounded-full">
                                            {service.price}
                                        </span>
                                    )}
                                </div>
                            </a>
                        ))}
                    </div>
                </div>
            ))}
        </div>

        <!-- More Services Note -->
        <div class="mt-12 text-center">
            <p class="text-slate-600 mb-4">
                Don't see what you need?
            </p>
            <a
                href="/contact"
                class="inline-flex items-center gap-2 text-cyan-700 font-semibold hover:text-orange-500 transition-colors"
            >
                Contact us for custom solutions
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
